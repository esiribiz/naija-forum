<%= form_with(
  model: [@post, comment],
  class: "comment-form space-y-4 #{comment.parent_id.present? ? 'reply-form bg-gradient-to-r from-green-50 to-green-100 p-4 rounded-xl border border-green-200' : 'bg-white p-4 rounded-xl shadow-sm border border-gray-200'}",
  local: false,
  data: {
    controller: "reset-form comments",
    action: "turbo:submit-end->reset-form#reset turbo:submit-end->comments#formSuccess turbo:submit-error->comments#formError",
    comments_target: "form",
    turbo_stream: true
  }
) do |f| %>

  <% if comment.errors.any? %>
    <div class="error-messages bg-red-50 text-red-700 p-4 rounded-lg mb-4 border-l-4 border-red-500 shadow-sm">
      <h2 class="font-semibold">
        <%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:
      </h2>
      <ul class="list-disc ml-5 mt-2">
        <% comment.errors.full_messages.each do |message| %>
          <li class="text-sm"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="relative">
    <%= f.text_area :content, 
      rows: comment.parent_id.present? ? 3 : 4,
      class: "w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 resize-y",
      placeholder: comment.parent_id.present? ? "ðŸ’¬ Write a thoughtful reply..." : "ðŸ’¬ Share your thoughts or ask a question..." %>
    
    <div class="absolute bottom-3 right-3 text-xs text-gray-400 bg-white/80 px-2 py-1 rounded-full" 
         data-controller="character-count" 
         data-character-count-target="counter"></div>
  </div>

  <%# Ensure hidden parent_id field is present for replies %>
  <%= f.hidden_field :parent_id if comment.parent_id.present? %>

  <div class="flex justify-end space-x-3 mt-4 pt-3 border-t border-gray-200">
    <% if comment.parent_id.present? %>
      <button type="button"
              class="inline-flex items-center px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-xl hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200 text-sm font-medium shadow-sm"
              data-controller="comments"
              data-action="click->comments#toggleReplyForm"
              data-comments-comment-id-param="<%= comment.parent_id %>">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
        Cancel
      </button>
    <% end %>

    <%= f.submit comment.parent_id.present? ? "ðŸ’¬ Reply" : "ðŸš€ Post Comment", 
      class: "inline-flex items-center px-5 py-2 border border-transparent rounded-xl text-white font-medium bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200 shadow-sm hover:shadow-md text-sm" %>
  </div>

<% end %>
