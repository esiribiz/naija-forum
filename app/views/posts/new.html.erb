<% content_for :title, "New Post" %>
<div class="flex items-center justify-center min-h-screen bg-gray-100 p-6">
  <div class="md:w-2/3 w-full bg-white shadow-lg p-8 rounded-lg">
    <h1 class="font-semibold text-3xl md:text-4xl text-gray-800 mb-6">
      Create a New Post
    </h1>
    <!-- Post Form -->
    <%= render "form", post: @post %>
    <!-- Back to Posts Link -->
    <div class="mt-6">
      <%= link_to "Back to Posts", posts_path, class: "inline-block bg-gray-800 text-white hover:bg-gray-700 px-4 py-2 rounded-lg font-medium transition-all duration-200" %>
    </div>
  </div>
</div>
