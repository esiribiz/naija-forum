<% content_for :page_title, "User Management" %>
<% content_for :page_subtitle, "Manage user accounts, roles, and permissions across your forum" %>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="admin-stat-card">
    <div class="admin-stat-icon" style="background: linear-gradient(135deg, var(--admin-secondary) 0%, var(--admin-secondary-light) 100%);">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
      </svg>
    </div>
    <div class="admin-stat-number"><%= number_with_delimiter(@total_users) %></div>
    <div class="admin-stat-label">Total Users</div>
  </div>

  <div class="admin-stat-card">
    <div class="admin-stat-icon" style="background: linear-gradient(135deg, var(--admin-accent) 0%, var(--admin-accent-light) 100%);">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
      </svg>
    </div>
    <div class="admin-stat-number"><%= number_with_delimiter(@admin_users) %></div>
    <div class="admin-stat-label">Administrators</div>
  </div>

  <div class="admin-stat-card">
    <div class="admin-stat-icon" style="background: linear-gradient(135deg, var(--admin-success) 0%, var(--admin-success-light) 100%);">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div class="admin-stat-number"><%= number_with_delimiter(@users_today) %></div>
    <div class="admin-stat-label">New Today</div>
  </div>
</div>

<!-- Users Table -->
<div class="admin-table">
  <div class="px-6 py-4 border-b border-gray-200">
    <h3 class="text-lg font-medium text-gray-900">All Users</h3>
  </div>
  
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Email</th>
        <th>Role</th>
        <th>Posts</th>
        <th>Comments</th>
        <th>Joined</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <div class="flex items-center">
              <div class="flex-shrink-0 h-10 w-10">
                <% if user.avatar.attached? %>
                  <%= image_tag user.avatar, class: "h-10 w-10 rounded-full object-cover" %>
                <% else %>
                  <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
                    <span class="text-sm font-medium text-white"><%= user.username&.first&.upcase %></span>
                  </div>
                <% end %>
              </div>
              <div class="ml-4">
                <div class="text-sm font-medium text-gray-900"><%= user.display_name %></div>
                <div class="text-sm text-gray-500">@<%= user.username %></div>
              </div>
            </div>
          </td>
          <td>
            <div class="text-sm text-gray-900"><%= user.email %></div>
          </td>
          <td>
            <% case user.role %>
            <% when 'admin' %>
              <span class="admin-badge admin-badge-error">Admin</span>
            <% when 'moderator' %>
              <span class="admin-badge admin-badge-warning">Moderator</span>
            <% else %>
              <span class="admin-badge admin-badge-info">User</span>
            <% end %>
          </td>
          <td>
            <div class="text-sm text-gray-900"><%= user.posts.count %></div>
          </td>
          <td>
            <div class="text-sm text-gray-900"><%= user.comments.count %></div>
          </td>
          <td>
            <div class="text-sm text-gray-500"><%= time_ago_in_words(user.created_at) %> ago</div>
          </td>
          <td>
            <div class="flex items-center space-x-2">
              <%= link_to edit_admin_user_path(user), class: "text-blue-600 hover:text-blue-900 transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              <% end %>
              <% unless user == current_user %>
                <%= link_to admin_user_path(user), method: :delete,
                      class: "text-red-600 hover:text-red-900 transition-colors",
                      data: { confirm: "Are you sure you want to delete this user?" } do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
