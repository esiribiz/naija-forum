<% content_for :page_title, "Posts Management" %>
<% content_for :page_subtitle, "Manage forum posts, publications, and content moderation" %>

<!-- Enhanced Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Posts -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #1e40af);">
      <i class="fas fa-newspaper"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@total_posts) %></div>
    <div class="stat-label">Total Posts</div>
    <div class="stat-change positive mt-2">
      <i class="fas fa-arrow-up mr-1"></i>
      +<%= @posts_today %> today
    </div>
    <div class="stat-trend mt-2">
      <div class="w-full bg-gray-200 rounded-full h-1.5">
        <div class="bg-blue-500 h-1.5 rounded-full transition-all duration-1000" style="width: <%= (@posts_today.to_f / [@total_posts, 1].max * 100).round(1) %>%"></div>
      </div>
    </div>
    <div class="mt-3">
      <%= link_to new_admin_post_path, class: "btn btn-primary btn-sm group-hover:shadow-lg transition-all" do %>
        <i class="fas fa-plus mr-1"></i> New Post
      <% end %>
    </div>
  </div>

  <!-- Published Posts -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
      <i class="fas fa-check-circle"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@published_posts) %></div>
    <div class="stat-label">Published</div>
    <div class="stat-change positive mt-2">
      <i class="fas fa-eye mr-1"></i>
      <%= ((@published_posts.to_f / [@total_posts, 1].max) * 100).round(1) %>% of total
    </div>
    <div class="stat-trend mt-2">
      <div class="w-full bg-gray-200 rounded-full h-1.5">
        <div class="bg-green-500 h-1.5 rounded-full transition-all duration-1000" style="width: <%= (@published_posts.to_f / [@total_posts, 1].max * 100).round(1) %>%"></div>
      </div>
    </div>
  </div>

  <!-- Draft Posts -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
      <i class="fas fa-edit"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@draft_posts) %></div>
    <div class="stat-label">Drafts</div>
    <div class="stat-change mt-2" style="color: #6b7280;">
      <i class="fas fa-clock mr-1"></i>
      Need review
    </div>
    <div class="stat-trend mt-2">
      <div class="w-full bg-gray-200 rounded-full h-1.5">
        <div class="bg-yellow-500 h-1.5 rounded-full transition-all duration-1000" style="width: <%= (@draft_posts.to_f / [@total_posts, 1].max * 100).round(1) %>%"></div>
      </div>
    </div>
  </div>

  <!-- Today's Posts -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
      <i class="fas fa-calendar-day"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@posts_today) %></div>
    <div class="stat-label">Today</div>
    <div class="stat-change positive mt-2">
      <i class="fas fa-today mr-1"></i>
      Last 24 hours
    </div>
  </div>
</div>

<!-- Filters and Search -->
<div class="card mb-8">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-filter mr-2" style="color: #3b82f6;"></i>
      Filter Posts
    </h3>
    <p class="card-subtitle">Search and filter posts by various criteria</p>
  </div>
  <div class="card-body">
    <%= form_with url: admin_posts_path, method: :get, local: true, class: "space-y-6" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Search -->
        <div>
          <label class="form-label">Search Posts</label>
          <%= form.text_field :search, 
                placeholder: "Search by author, title, or content...", 
                value: params[:search],
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" %>
        </div>
        
        <!-- Category Filter -->
        <div>
          <label class="form-label">Category</label>
          <%= form.select :category_id, 
                options_from_collection_for_select(@categories, :id, :name, params[:category_id]),
                { prompt: "All Categories" },
                { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" } %>
        </div>
        
        <!-- Status Filter -->
        <div>
          <label class="form-label">Status</label>
          <%= form.select :published, 
                options_for_select([["All Posts", ""], ["Published", "true"], ["Drafts", "false"]], params[:published]),
                {},
                { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" } %>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="flex items-center space-x-3 pt-6 border-t border-gray-200">
        <%= form.submit "Apply Filters", class: "btn btn-primary" %>
        <%= link_to "Clear All", admin_posts_path, class: "btn btn-secondary" %>
        <div class="flex-1"></div>
        <span class="text-sm text-gray-500">Showing <%= @posts.count %> posts</span>
      </div>
    <% end %>
  </div>
</div>

  <!-- Include Enhanced Table Styles (if not already included) -->
  <%= render 'shared/enhanced_table_styles' unless @enhanced_styles_included %>
  <% @enhanced_styles_included = true %>

<!-- Enhanced Posts Table -->
<div class="enhanced-table-container mb-8 enhanced-fade-in">
  <div class="enhanced-table-header">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="enhanced-table-title">
          <i class="fas fa-newspaper" style="color: #3b82f6;"></i>
          Posts & Content Management
        </h2>
        <p class="enhanced-table-subtitle">Manage forum posts, publications, and content moderation - track engagement, status, and author activity</p>
      </div>
      <div class="flex items-center space-x-4">
        <div class="enhanced-stats-group">
          <div class="enhanced-stat-item">
            <i class="fas fa-newspaper"></i>
            <span><%= @total_posts %> Total Posts</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-check-circle text-green-500"></i>
            <span><%= @published_posts %> Published</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-edit text-yellow-500"></i>
            <span><%= @draft_posts %> Drafts</span>
          </div>
        </div>
        <%= link_to new_admin_post_path, class: "btn btn-primary hover:scale-105 transition-transform" do %>
          <i class="fas fa-plus mr-2"></i> New Post
        <% end %>
      </div>
    </div>
  </div>
    
    <div class="overflow-x-auto">
      <table class="enhanced-table">
        <thead>
          <tr>
            <th><i class="fas fa-newspaper mr-2"></i>Post Details & Content</th>
            <th><i class="fas fa-user mr-2"></i>Author & Info</th>
            <th class="hidden lg:table-cell"><i class="fas fa-chart-bar mr-2"></i>Engagement & Stats</th>
            <th class="text-right"><i class="fas fa-cogs mr-2"></i>Management</th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
          <tr class="enhanced-fade-in">
            <td>
              <div class="enhanced-content-preview">
                <div class="enhanced-content-title">
                  <%= link_to post.title, admin_post_path(post), class: "hover:text-blue-600 transition-colors" %>
                </div>
                <div class="enhanced-content-excerpt">
                  <%= truncate(strip_tags(post.body), length: 120) %>
                </div>
                <div class="enhanced-content-meta">
                  <span class="enhanced-badge <%= post.published? ? 'enhanced-badge-success' : 'enhanced-badge-warning' %>">
                    <i class="fas fa-<%= post.published? ? 'check-circle' : 'edit' %> mr-1"></i>
                    <%= post.published? ? 'Published' : 'Draft' %>
                  </span>
                  <span class="enhanced-badge enhanced-badge-info">
                    <i class="fas fa-layer-group mr-1"></i>
                    <%= post.category.name %>
                  </span>
                  <span class="enhanced-stat-item">
                    <i class="fas fa-calendar-alt"></i>
                    <span><%= time_ago_in_words(post.created_at) %> ago</span>
                  </span>
                  <span class="enhanced-stat-item">
                    <i class="fas fa-comments"></i>
                    <span><%= post.comments.count %> comments</span>
                  </span>
                </div>
              </div>
            </td>
            <td>
              <div class="enhanced-user-info">
                <div class="flex-shrink-0">
                  <% if post.user.avatar.attached? %>
                    <%= image_tag post.user.avatar, class: "enhanced-avatar", alt: post.user.username %>
                  <% else %>
                    <div class="enhanced-avatar-placeholder bg-gradient-to-br from-blue-500 to-purple-600">
                      <%= post.user.username&.first&.upcase || 'U' %>
                    </div>
                  <% end %>
                </div>
                <div class="enhanced-user-details">
                  <h4><%= post.user.username %></h4>
                  <div class="enhanced-content-meta">
                    <span class="enhanced-badge enhanced-badge-secondary text-xs">
                      <i class="fas fa-user-tag mr-1"></i>
                      <%= post.user.role.humanize %>
                    </span>
                    <span class="enhanced-stat-item text-xs">
                      <i class="fas fa-envelope"></i>
                      <span><%= post.user.email %></span>
                    </span>
                  </div>
                </div>
              </div>
            </td>
            <td class="hidden lg:table-cell">
              <div class="space-y-3">
                <div class="enhanced-stats-group flex-col items-start gap-2">
                  <div class="enhanced-stat-item">
                    <i class="fas fa-comments text-blue-500"></i>
                    <span><%= post.comments.count %> Comments</span>
                  </div>
                  <div class="enhanced-stat-item">
                    <i class="fas fa-calendar-plus text-green-500"></i>
                    <span>Created <%= post.created_at.strftime('%b %d, %Y') %></span>
                  </div>
                  <% if post.updated_at != post.created_at %>
                    <div class="enhanced-stat-item">
                      <i class="fas fa-edit text-yellow-500"></i>
                      <span>Updated <%= time_ago_in_words(post.updated_at) %> ago</span>
                    </div>
                  <% end %>
                </div>
                <div class="mt-3">
                  <div class="text-xs text-gray-500 mb-1">Publishing Status</div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-<%= post.published? ? 'green' : 'yellow' %>-500 h-2 rounded-full transition-all duration-300" style="width: <%= post.published? ? '100' : '50' %>%"></div>
                  </div>
                </div>
              </div>
            </td>
            <td class="text-right">
              <div class="enhanced-action-buttons">
                <%= link_to admin_post_path(post), class: "enhanced-action-btn enhanced-action-btn-view", title: "View post" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
                
                <%= link_to edit_admin_post_path(post), class: "enhanced-action-btn enhanced-action-btn-edit", title: "Edit post" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                
                <%= link_to toggle_published_admin_post_path(post), method: :patch, 
                      class: "enhanced-action-btn enhanced-action-btn-#{post.published? ? 'warning' : 'success'}",
                      title: post.published? ? 'Unpublish' : 'Publish',
                      data: { confirm: "Are you sure you want to #{post.published? ? 'unpublish' : 'publish'} this post?" } do %>
                  <% if post.published? %>
                    <i class="fas fa-eye-slash"></i>
                  <% else %>
                    <i class="fas fa-check"></i>
                  <% end %>
                <% end %>
                
                <%= link_to admin_post_path(post), method: :delete, 
                      class: "enhanced-action-btn enhanced-action-btn-danger",
                      title: "Delete post",
                      data: { confirm: "Are you sure you want to delete this post? This action cannot be undone." } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
  
    </div>
    
    <!-- Enhanced Table Footer -->
    <div class="enhanced-table-footer">
      <div class="enhanced-footer-stats">
        <div class="enhanced-stat-item">
          <i class="fas fa-newspaper text-blue-500"></i>
          <span><%= @posts.respond_to?(:count) ? @posts.count : @posts.size %> Posts Displayed</span>
        </div>
        <div class="enhanced-stat-item">
          <i class="fas fa-check-circle text-green-500"></i>
          <span><%= @published_posts %> Published</span>
        </div>
        <div class="enhanced-stat-item">
          <i class="fas fa-edit text-yellow-500"></i>
          <span><%= @draft_posts %> Drafts</span>
        </div>
        <div class="enhanced-stat-item">
          <i class="fas fa-calendar-day text-purple-500"></i>
          <span><%= @posts_today %> Today</span>
        </div>
      </div>
      
      <% if @posts.respond_to?(:current_page) %>
        <div class="enhanced-pagination">
          <span class="enhanced-pagination-info">
            Page <%= @posts.current_page %> of <%= @posts.total_pages %>
          </span>
          <div class="enhanced-pagination-controls">
            <% if @posts.prev_page %>
              <%= link_to admin_posts_path(page: @posts.prev_page, search: params[:search], category_id: params[:category_id], published: params[:published]), 
                    class: "enhanced-pagination-btn enhanced-pagination-prev" do %>
                <i class="fas fa-chevron-left"></i> Previous
              <% end %>
            <% end %>
            <% if @posts.next_page %>
              <%= link_to admin_posts_path(page: @posts.next_page, search: params[:search], category_id: params[:category_id], published: params[:published]), 
                    class: "enhanced-pagination-btn enhanced-pagination-next" do %>
                Next <i class="fas fa-chevron-right"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="enhanced-pagination">
          <span class="enhanced-pagination-info">Page 1 of 1</span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @posts.empty? %>
  <div class="text-center py-12">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900">No posts found</h3>
    <p class="mt-1 text-sm text-gray-500">
      <% if params[:search].present? || params[:category_id].present? || params[:published].present? %>
        Try adjusting your filters to see more results.
      <% else %>
        There are no posts in the system yet.
      <% end %>
    </p>
  </div>
<% end %>