<% content_for :page_title do %>
  Edit User
<% end %>
<% content_for :page_subtitle do %>
  <%= @user.username %> — Update role and review status
<% end %>

<!-- Breadcrumbs -->
<div class="mb-6">
  <nav class="text-sm text-gray-500" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1">
      <li>
        <%= link_to admin_users_path, class: "hover:text-gray-700" do %>
          <span>Users</span>
        <% end %>
      </li>
      <li>
        <span class="text-gray-400">/</span>
      </li>
      <li>
        <%= link_to admin_user_path(@user), class: "hover:text-gray-700" do %>
          <span><%= @user.username %></span>
        <% end %>
      </li>
      <li>
        <span class="text-gray-400">/</span>
      </li>
      <li class="text-gray-700">Edit</li>
    </ol>
  </nav>
</div>

<!-- User Summary Card -->
<div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-sm mb-6">
  <div class="flex items-center gap-4">
    <div class="relative">
      <% if @user.avatar&.attached? %>
        <%= image_tag @user.avatar, class: "w-14 h-14 rounded-xl object-cover border-2 border-gray-200 shadow-sm" %>
      <% else %>
        <div class="w-14 h-14 bg-gradient-to-br from-green-500 to-green-700 rounded-xl flex items-center justify-center text-white font-bold text-xl shadow-sm">
          <%= @user.username.to_s.first.upcase %>
        </div>
      <% end %>
    </div>
    <div class="flex-1">
      <div class="flex flex-wrap items-center gap-2">
        <h2 class="text-xl font-bold text-gray-900"><%= @user.display_name %></h2>
        <%# Role Badge %>
        <% case @user.role %>
        <% when 'admin' %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-semibold bg-red-100 text-red-800 border border-red-200">
            <i class="fas fa-crown mr-1"></i> Admin
          </span>
        <% when 'moderator' %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-semibold bg-blue-100 text-blue-800 border border-blue-200">
            <i class="fas fa-shield-alt mr-1"></i> Moderator
          </span>
        <% else %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-gray-100 text-gray-700 border border-gray-200">
            <i class="fas fa-user mr-1"></i> User
          </span>
        <% end %>
        <%# Status Chip %>
        <% if @user.suspended? %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-semibold bg-red-50 text-red-700 border border-red-200">
            <i class="fas fa-ban mr-1"></i> Suspended
          </span>
        <% else %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-semibold bg-green-50 text-green-700 border border-green-200">
            <i class="fas fa-check-circle mr-1"></i> Active
          </span>
        <% end %>
      </div>
      <p class="text-sm text-gray-600"><%= @user.email %></p>
    </div>
  </div>
</div>

<div class="bg-white shadow-sm rounded-2xl border border-gray-200 p-8 max-w-3xl mx-auto">
    <%= form_with(model: [:admin, @user], local: true, class: "space-y-8") do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-xl p-6">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-base font-semibold text-red-800 mb-2">
                <span class="flex items-center">
                  ⚠️ <%= pluralize(@user.errors.count, "error") %> prohibited this user from being updated
                </span>
              </h3>
              <ul class="text-red-700 space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                  <li class="flex items-center">
                    <span class="w-1.5 h-1.5 bg-red-600 rounded-full mr-2"></span>
                    <%= message %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid md:grid-cols-2 gap-6">
        <div class="space-y-3">
          <label class="block text-sm font-bold text-gray-900">
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              Username
            </div>
          </label>
          <div class="bg-gray-50 border border-gray-200 rounded-xl px-4 py-3">
            <div class="flex items-center">
              <span class="text-gray-800 font-medium">@<%= @user.username %></span>
              <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-200 text-gray-800">
                🔒 Read-only
              </span>
            </div>
          </div>
          <p class="text-xs text-gray-500 mt-1">🚫 Username cannot be changed for security reasons</p>
        </div>

        <div class="space-y-3">
          <label class="block text-sm font-bold text-gray-900">
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
              </svg>
              Email Address
            </div>
          </label>
          <div class="bg-gray-50 border border-gray-200 rounded-xl px-4 py-3">
            <div class="flex items-center">
              <span class="text-gray-800 font-medium"><%= @user.email %></span>
              <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-200 text-gray-800">
                🔒 Read-only
              </span>
            </div>
          </div>
          <p class="text-xs text-gray-500 mt-1">✉️ Email changes must be done through user profile</p>
        </div>
      </div>

      <% if current_user_can?(:manage_user_roles) %>
        <div class="space-y-3">
          <%= form.label :role, class: "block text-sm font-bold text-gray-900" do %>
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              User Role
            </div>
          <% end %>
          <%= form.select :role, 
                        options_for_select([['👤 User', 'user'], ['🛡️ Admin', 'admin'], ['🔧 Moderator', 'moderator']], @user.role), 
                        {}, 
                        { class: "mt-2 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm bg-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" } %>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 mt-2">
            <div class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div class="text-xs text-blue-800">
                <p class="font-medium mb-1">🔑 Role Permissions:</p>
                <p>• <strong>User:</strong> Create posts & comments • <strong>Moderator:</strong> Moderate content • <strong>Admin:</strong> Full access</p>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <!-- Read-only role display for moderators -->
        <div class="space-y-3">
          <label class="block text-sm font-bold text-gray-900">
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              Current Role
            </div>
          </label>
          <div class="bg-gray-50 border border-gray-200 rounded-xl px-4 py-3">
            <div class="flex items-center justify-between">
              <span class="text-gray-800 font-medium">
                <% case @user.role %>
                <% when 'admin' %>
                  🛡️ Administrator
                <% when 'moderator' %>
                  🔧 Moderator  
                <% else %>
                  👤 User
                <% end %>
              </span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-200 text-gray-800">
                🔒 Read-only
              </span>
            </div>
          </div>
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3 mt-2">
            <div class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
              </svg>
              <div class="text-xs text-yellow-800">
                <p class="font-medium mb-1">⚠️ Role Management Restricted:</p>
                <p>Only administrators can modify user roles. As a moderator, you can view user information but cannot change their privileges.</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="flex flex-col sm:flex-row gap-4 pt-8 border-t border-gray-200">
        <%= link_to admin_users_path, class: "flex items-center justify-center px-6 py-3 border border-gray-300 rounded-xl text-gray-700 font-semibold hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
          </svg>
          Back to User List
        <% end %>
        <%= form.submit "💾 Save Changes",
            class: "flex items-center justify-center flex-1 px-6 py-3 border border-transparent rounded-xl text-white font-bold bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transform transition-all duration-200 hover:scale-[1.02] shadow-lg hover:shadow-xl" %>
      </div>
    <% end %>
  </div>
