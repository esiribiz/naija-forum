<% content_for :page_title, "Comment Details" %>
<% content_for :page_subtitle, "View and manage comment by #{@comment.user&.username || 'Unknown User'}" %>

<div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
  <!-- Comment Header -->
  <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <% if @comment.user&.avatar&.attached? %>
          <%= image_tag @comment.user.avatar, class: "w-10 h-10 rounded-full object-cover border-2 border-white shadow-sm" %>
        <% else %>
          <div class="w-10 h-10 bg-gray-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
            <%= @comment.user&.username&.first&.upcase || 'U' %>
          </div>
        <% end %>
        <div>
          <h3 class="text-lg font-semibold text-gray-900">
            <%= @comment.user&.username || 'Anonymous' %>
          </h3>
          <p class="text-sm text-gray-600">
            <%= @comment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </p>
        </div>
      </div>
      
      <div class="flex items-center space-x-2">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @comment.approved? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
          <%= @comment.approved? ? 'Approved' : 'Pending' %>
        </span>
      </div>
    </div>
  </div>

  <!-- Comment Content -->
  <div class="p-6">
    <div class="mb-6">
      <h4 class="text-sm font-medium text-gray-700 mb-2">Comment Content</h4>
      <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
        <div class="prose max-w-none">
          <%= simple_format(@comment.body) %>
        </div>
      </div>
    </div>

    <!-- Post Context -->
    <% if @comment.post %>
      <div class="mb-6">
        <h4 class="text-sm font-medium text-gray-700 mb-2">On Post</h4>
        <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
          <%= link_to @comment.post.title, admin_post_path(@comment.post), class: "text-blue-600 hover:text-blue-800 font-medium" %>
          <p class="text-sm text-gray-600 mt-1">
            by <%= @comment.post.user&.username || 'Anonymous' %> • 
            <%= @comment.post.created_at.strftime("%B %d, %Y") %>
          </p>
        </div>
      </div>
    <% end %>

    <!-- Parent Comment (if reply) -->
    <% if @comment.parent_id.present? && @comment.parent %>
      <div class="mb-6">
        <h4 class="text-sm font-medium text-gray-700 mb-2">Reply to</h4>
        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
          <p class="text-sm"><%= truncate(@comment.parent.body, length: 200) %></p>
          <p class="text-xs text-gray-500 mt-2">
            by <%= @comment.parent.user&.username || 'Anonymous' %>
          </p>
        </div>
      </div>
    <% end %>

    <!-- Replies -->
    <% if @comment.replies.any? %>
      <div class="mb-6">
        <h4 class="text-sm font-medium text-gray-700 mb-2">
          Replies (<%= @comment.replies.count %>)
        </h4>
        <div class="space-y-3">
          <% @comment.replies.limit(5).each do |reply| %>
            <div class="bg-gray-50 rounded-lg p-3 border border-gray-200">
              <div class="flex items-start space-x-3">
                <% if reply.user&.avatar&.attached? %>
                  <%= image_tag reply.user.avatar, class: "w-6 h-6 rounded-full object-cover" %>
                <% else %>
                  <div class="w-6 h-6 bg-gray-500 rounded-full flex items-center justify-center text-white font-bold text-xs">
                    <%= reply.user&.username&.first&.upcase || 'U' %>
                  </div>
                <% end %>
                <div class="flex-1">
                  <p class="text-sm"><%= truncate(reply.body, length: 150) %></p>
                  <p class="text-xs text-gray-500 mt-1">
                    by <%= reply.user&.username || 'Anonymous' %> • 
                    <%= time_ago_in_words(reply.created_at) %> ago
                  </p>
                </div>
              </div>
            </div>
          <% end %>
          <% if @comment.replies.count > 5 %>
            <p class="text-sm text-gray-500">And <%= @comment.replies.count - 5 %> more replies...</p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Actions Footer -->
  <div class="bg-gray-50 px-6 py-4 border-t border-gray-200 flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <%= link_to "← Back to Comments", admin_comments_path, class: "text-gray-600 hover:text-gray-800 font-medium" %>
    </div>
    
    <div class="flex items-center space-x-2">
      <% unless @comment.approved? %>
        <%= button_to "Approve", approve_admin_comment_path(@comment), method: :patch, 
            class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
      <% end %>
      
      <%= button_to "Reject", reject_admin_comment_path(@comment), method: :patch, 
          data: { confirm: "Are you sure you want to reject this comment?" },
          class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
      
      <%= button_to "Delete", admin_comment_path(@comment), method: :delete, 
          data: { confirm: "Are you sure you want to delete this comment? This action cannot be undone." },
          class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" %>
    </div>
  </div>
</div>