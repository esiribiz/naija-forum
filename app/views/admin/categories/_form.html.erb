<%= form_with model: [:admin, @category], local: true, class: "space-y-6" do |form| %>
  <% if @category.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% @category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :name, 
        class: "block w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500",
        placeholder: "Enter category name" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description, 
        class: "block w-full border-gray-300 rounded-md shadow-sm focus:border-green-500 focus:ring-green-500",
        rows: 4,
        placeholder: "Enter category description (optional)" %>
  </div>

  <div>
    <%= form.label :color, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <div class="flex items-center space-x-3">
      <%= form.color_field :color, 
          class: "h-10 w-20 border border-gray-300 rounded-md",
          value: @category.color || "#22c55e" %>
      <span class="text-sm text-gray-500">Choose a color to represent this category</span>
    </div>
  </div>

  <div class="flex items-center justify-end space-x-3 pt-6">
    <%= link_to "Cancel", admin_categories_path, 
        class: "bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500" %>
    <%= form.submit @category.new_record? ? "Create Category" : "Update Category",
        class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500" %>
  </div>
<% end %>