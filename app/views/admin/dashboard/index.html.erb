                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </div>
        <% end %>
        
        <!-- New Category Action -->
        <%= link_to new_admin_category_path, class: "group block" do %>
