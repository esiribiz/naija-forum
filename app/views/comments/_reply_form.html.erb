<%= turbo_frame_tag "reply-form-#{parent_id}" do %>
  <div class="mt-2 p-3 bg-gray-50 rounded-lg border border-gray-200">
    <%= form_with(model: [post, Comment.new], data: { turbo_frame: "_top" }) do |f| %>
      <%= f.hidden_field :parent_id, value: parent_id %>
      <%= f.text_area :content, placeholder: "Write your reply...", rows: 2,
          class: "w-full p-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500 text-sm" %>
      <div class="flex justify-end space-x-2 mt-2">
        <button type="button" onclick="this.closest('turbo-frame').innerHTML='';"
          class="px-3 py-1 text-gray-600 bg-gray-200 rounded-md text-sm">Cancel</button>
        <%= f.submit "Reply", class: "px-3 py-1 text-white bg-green-600 hover:bg-green-700 rounded-md text-sm" %>
      </div>
    <% end %>
  </div>
<% end %>
