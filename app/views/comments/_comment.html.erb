<div id="comment_<%= comment.id %>" class="bg-white p-5 rounded-xl shadow-md mb-5 border-l-4 border-l-[#008751] transition-all duration-300 hover:shadow-lg">
  <div class="flex items-start space-x-4">
    <div class="flex-shrink-0">
      <% if comment.user.avatar.attached? %>
        <%= image_tag comment.user.avatar, class: "h-12 w-12 rounded-full ring-2 ring-[#008751]/20" %>
      <% else %>
        <div class="h-12 w-12 rounded-full bg-gradient-to-br from-[#008751] to-[#00b76a] flex items-center justify-center shadow-sm">
          <span class="text-white text-sm font-semibold">
            <%= comment.user.username.first(2).upcase %>
          </span>
        </div>
      <% end %>
    </div>
    
    <div class="flex-grow">
      <div class="flex flex-wrap items-center mb-2">
        <span class="font-semibold text-gray-900 mr-2"><%= comment.user.username %></span>
        <%= online_dot(comment.user, class: 'mr-2') %>
        <span class="text-gray-500 text-xs px-2 py-1 rounded-full bg-gray-100">
          <%= time_ago_in_words(comment.created_at) %> ago
        </span>
      </div>
      
      <div class="text-gray-700 mb-3 prose prose-sm max-w-none">
        <%= simple_format(comment.content) %>
      </div>
      
      <div class="flex items-center space-x-3 text-sm mt-4 border-t border-gray-100 pt-3">
        <% if current_user == comment.user %>
          <%= link_to edit_post_comment_path(comment.post, comment), 
              class: "inline-flex items-center px-3 py-1.5 rounded-full text-[#008751] bg-[#008751]/10 hover:bg-[#008751]/20 transition-all duration-200",
              data: { turbo_frame: "comment_#{comment.id}" } do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125" />
            </svg>
            Edit
          <% end %>
              
          <%= button_to post_comment_path(comment.post, comment), 
              method: :delete, 
              class: "inline-flex items-center px-3 py-1.5 rounded-full text-red-600 bg-red-50 hover:bg-red-100 transition-all duration-200",
              form: { data: { turbo_confirm: "Are you sure you want to delete this comment?" } } do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
            Delete
          <% end %>
        <% end %>
        
        <!-- Only show reply button for top-level comments (not replies) -->
        <% unless comment.parent_id.present? %>
          <%= link_to new_post_comment_path(comment.post, parent_id: comment.id), 
              data: { turbo_stream: true },
              class: "inline-flex items-center px-3 py-1.5 rounded-full text-white bg-naija-green hover:bg-naija-green-600 transition-all duration-200 shadow-sm hover:shadow-md" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 0 1 .865-.501 48.172 48.172 0 0 0 3.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
            </svg>
            Reply
          <% end %>
        <% end %>
      </div>
      
      <!-- Reply Form Container -->
      <div id="reply-form-<%= comment.id %>" class="reply-form mt-4"></div>

      <!-- Replies Display - Only for top-level comments -->
      <% unless comment.parent_id.present? %>
        <div id="comment_<%= comment.id %>_replies" class="replies mt-5">
          <% if comment.replies.any? %>
            <% comment.replies.each do |reply| %>
              <%= render partial: 'comments/reply', locals: { reply: reply } %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
