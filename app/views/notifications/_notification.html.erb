<%
  # Set defaults for optional local variables
  small = local_assigns.fetch(:small, false)
  show_actions = local_assigns.fetch(:show_actions, true)
  show_delete = local_assigns.fetch(:show_delete, false)
  show_mark_read_icon = local_assigns.fetch(:show_mark_read_icon, false)
  section = local_assigns.fetch(:section, 'all')
%>

<div id="notification_<%= notification.id %>" 
     class="notification-item <%= notification.read? ? 'read-notification' : 'unread-notification' %> p-6 hover:bg-gradient-to-r hover:from-gray-50 hover:to-white transition-all duration-300 group">
  
  <!-- Unread Indicator -->
  <% unless notification.read? %>
    <div class="absolute left-0 top-0 bottom-0 w-1 unread-indicator rounded-r-full"></div>
  <% end %>
  
  <div class="flex items-start space-x-4 relative">
    
    <!-- Avatar Section -->
    <div class="flex-shrink-0 relative">
      <% if notification.actor && notification.actor.respond_to?(:avatar) && notification.actor.avatar.attached? %>
        <div class="relative">
          <%= image_tag notification.actor.avatar.variant(resize_to_fill: [48, 48]), 
              class: "h-12 w-12 rounded-full object-cover ring-2 ring-white shadow-lg" %>
          <!-- Online indicator could be added here if needed -->
        </div>
      <% else %>
        <div class="h-12 w-12 rounded-full bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center ring-2 ring-white shadow-lg">
          <% if notification.actor && notification.actor.respond_to?(:username) %>
            <span class="text-gray-700 text-sm font-bold">
              <%= notification.actor.username.first(2).upcase %>
            </span>
          <% else %>
            <svg class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          <% end %>
        </div>
      <% end %>
      
      <!-- Activity type icon -->
      <div class="absolute -bottom-1 -right-1 h-6 w-6 rounded-full bg-white shadow-lg flex items-center justify-center">
        <% case notification.action %>
        <% when 'commented' %>
          <svg class="w-3 h-3 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"/>
          </svg>
        <% when 'replied' %>
          <svg class="w-3 h-3 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.707 3.293a1 1 0 010 1.414L5.414 7H11a7 7 0 017 7v2a1 1 0 11-2 0v-2a5 5 0 00-5-5H5.414l2.293 2.293a1 1 0 11-1.414 1.414L2.586 8l3.707-3.707a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
        <% when 'liked' %>
          <svg class="w-3 h-3 text-red-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
          </svg>
        <% when 'mentioned' %>
          <svg class="w-3 h-3 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 3a1 1 0 00-1.447-.894L8.763 6H5a3 3 0 000 6h.28l1.771 5.316A1 1 0 008 18h1a1 1 0 001-1v-4.382l6.553 3.276A1 1 0 0018 15V3z" clip-rule="evenodd"/>
          </svg>
        <% when 'followed' %>
          <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"/>
          </svg>
        <% else %>
          <svg class="w-3 h-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
        <% end %>
      </div>
    </div>
    
    <!-- Content Section -->
    <div class="flex-1 min-w-0">
      
      <!-- Main notification text -->
      <div class="<%= small ? 'text-sm' : 'text-base' %> text-gray-900 font-medium leading-relaxed mb-2">
        <% case notification.action %>
        <% when 'commented' %>
          <span class="font-semibold text-green-600"><%= notification.actor.username if notification.actor.respond_to?(:username) %></span> 
          <span class="text-gray-700">commented on your</span>
          <%= link_to "post", post_path(notification.notifiable.post), 
              class: "font-semibold text-green-600 hover:text-green-800 hover:underline transition-colors duration-200" %>
        <% when 'replied' %>
          <span class="font-semibold text-blue-600"><%= notification.actor.username if notification.actor.respond_to?(:username) %></span> 
          <span class="text-gray-700">replied to your</span>
          <%= link_to "comment", post_path(notification.notifiable.post, anchor: "comment_#{notification.notifiable.parent.id}"), 
              class: "font-semibold text-blue-600 hover:text-blue-800 hover:underline transition-colors duration-200" %>
        <% when 'liked' %>
          <span class="font-semibold text-red-600"><%= notification.actor.username if notification.actor.respond_to?(:username) %></span> 
          <span class="text-gray-700">liked your</span>
          <%= link_to "post", post_path(notification.notifiable.likeable), 
              class: "font-semibold text-red-600 hover:text-red-800 hover:underline transition-colors duration-200" %>
        <% when 'mentioned' %>
          <span class="font-semibold text-green-600"><%= notification.actor.username if notification.actor.respond_to?(:username) %></span> 
          <span class="text-gray-700">mentioned you</span>
          <% if notification.notifiable.is_a?(Comment) %>
            <span class="text-gray-700">in a</span> <%= link_to "comment", post_path(notification.notifiable.post, anchor: "comment-#{notification.notifiable.id}"), 
                class: "font-semibold text-green-600 hover:text-green-800 hover:underline transition-colors duration-200" %>
          <% else %>
            <span class="text-gray-700">in a</span> <%= link_to "post", post_path(notification.notifiable), 
                class: "font-semibold text-green-600 hover:text-green-800 hover:underline transition-colors duration-200" %>
          <% end %>
        <% when 'followed' %>
          <span class="font-semibold text-green-600"><%= notification.actor.username if notification.actor.respond_to?(:username) %></span> 
          <span class="text-gray-700">started following you</span>
        <% else %>
          <span class="capitalize"><%= notification.action.humanize %></span>
        <% end %>
      </div>
      
      <!-- Timestamp and status -->
      <div class="flex items-center space-x-3 mb-4">
        <div class="flex items-center space-x-2 <%= small ? 'text-xs' : 'text-sm' %> text-gray-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span><%= time_ago_in_words(notification.created_at) %> ago</span>
        </div>
        
        <% unless notification.read? %>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <div class="w-2 h-2 bg-green-400 rounded-full mr-1 animate-pulse"></div>
            New
          </span>
        <% end %>
      </div>
      
      <!-- Action buttons -->
      <% if show_actions %>
        <div class="flex items-center space-x-3">
          
          <% if notification.notifiable.present? %>
            <% 
              view_path = case notification.notifiable
              when Comment
                post_path(notification.notifiable.post, anchor: "comment-#{notification.notifiable.id}")
              else
                begin
                  polymorphic_path(notification.notifiable)
                rescue
                  "#"
                end
              end
            %>
            <%= link_to view_path, 
                class: "action-button action-button-view",
                data: { 
                  notification_id: notification.id,
                  action: "mark-as-read-and-visit"
                } do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              View
            <% end %>
          <% end %>
          
          <% unless notification.read? %>
            <%= form_with url: mark_as_read_notification_path(notification), 
                method: :post, local: false, class: "inline-block" do |f| %>
              <%= f.submit "Mark as Read", 
                  class: "action-button action-button-read",
                  data: { disable_with: "Marking..." } %>
            <% end %>
          <% end %>
          
          <%= form_with url: notification_path(notification), 
              method: :delete, local: false, class: "inline-block",
              data: { confirm: "Delete this notification?" } do |f| %>
            <%= f.submit "Delete", 
                class: "action-button action-button-delete",
                data: { disable_with: "Deleting..." } %>
          <% end %>
          
        </div>
      <% end %>
    </div>
    
    <!-- Right side actions (minimal icons) -->
    <div class="flex-shrink-0 flex flex-col items-center space-y-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
      
      <% if !notification.read? && show_mark_read_icon %>
        <%= form_with url: mark_as_read_notification_path(notification), 
            method: :post, local: false, class: "inline-block" do |f| %>
          <%= f.button type: "submit", 
              class: "p-2 text-green-600 hover:bg-green-50 rounded-full transition-colors duration-200",
              title: "Mark as read" do %>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          <% end %>
        <% end %>
      <% end %>
      
      <% if show_delete %>
        <%= form_with url: notification_path(notification), 
            method: :delete, local: false, class: "inline-block",
            data: { confirm: "Delete this notification?" } do |f| %>
          <%= f.button type: "submit",
              class: "p-2 text-red-600 hover:bg-red-50 rounded-full transition-colors duration-200",
              title: "Delete notification" do %>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          <% end %>
        <% end %>
      <% end %>
      
    </div>
  </div>
</div>

