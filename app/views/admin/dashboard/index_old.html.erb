<% content_for :title, "Admin Dashboard - Naija Forum" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="border-b border-gray-700 pb-4">
    <h1 class="text-2xl font-bold text-white">Dashboard Overview</h1>
    <p class="text-gray-400 mt-1">Welcome back, <%= current_user.display_name %>. Here's what's happening on your forum.</p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Users Stats -->
    <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-white">Users</h3>
          <div class="flex items-baseline">
            <p class="text-2xl font-semibold text-white"><%= @stats[:users][:total] %></p>
            <p class="ml-2 text-sm text-green-400">+<%= @stats[:users][:new_today] %> today</p>
          </div>
          <p class="text-sm text-gray-400"><%= @stats[:users][:new_this_week] %> new this week</p>
        </div>
      </div>
    </div>

    <!-- Posts Stats -->
    <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-white">Posts</h3>
          <div class="flex items-baseline">
            <p class="text-2xl font-semibold text-white"><%= @stats[:posts][:total] %></p>
            <p class="ml-2 text-sm text-green-400">+<%= @stats[:posts][:new_today] %> today</p>
          </div>
          <p class="text-sm text-gray-400"><%= @stats[:posts][:published] %> published, <%= @stats[:posts][:draft] %> drafts</p>
        </div>
      </div>
    </div>

    <!-- Comments Stats -->
    <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-yellow-500 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-white">Comments</h3>
          <div class="flex items-baseline">
            <p class="text-2xl font-semibold text-white"><%= @stats[:comments][:total] %></p>
            <p class="ml-2 text-sm text-green-400">+<%= @stats[:comments][:new_today] %> today</p>
          </div>
          <p class="text-sm text-gray-400"><%= @stats[:comments][:new_this_week] %> new this week</p>
        </div>
      </div>
    </div>

    <!-- Categories Stats -->
    <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-purple-500 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-white">Categories</h3>
          <div class="flex items-baseline">
            <p class="text-2xl font-semibold text-white"><%= @stats[:categories][:total] %></p>
          </div>
          <p class="text-sm text-gray-400"><%= @stats[:categories][:with_posts] %> with posts</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts Row -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- User Growth Chart -->
    <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
      <h3 class="text-lg font-medium text-white mb-4">User Registration (Last 30 Days)</h3>
      <div class="relative" style="height: 300px;">
        <canvas id="userGrowthChart"></canvas>
      </div>
    </div>

    <!-- Post Activity Chart -->
    <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
      <h3 class="text-lg font-medium text-white mb-4">Post Activity (Last 30 Days)</h3>
      <div class="relative" style="height: 300px;">
        <canvas id="postActivityChart"></canvas>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Recent Users -->
    <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
      <h3 class="text-lg font-medium text-white mb-4">Recent Users</h3>
      <div class="space-y-3">
        <% @recent_users.each do |user| %>
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <% if user.avatar.attached? %>
                <%= image_tag user.avatar, class: "w-8 h-8 rounded-full object-cover" %>
              <% else %>
                <div class="w-8 h-8 bg-gray-600 rounded-full flex items-center justify-center">
                  <span class="text-xs text-white font-medium"><%= user.username&.first&.upcase || 'U' %></span>
                </div>
              <% end %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-white truncate"><%= user.username %></p>
              <p class="text-xs text-gray-400"><%= time_ago_in_words(user.created_at) %> ago</p>
            </div>
            <div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= user.admin? ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                <%= user.role.capitalize %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mt-4">
        <%= link_to "View all users", admin_users_path, class: "text-blue-400 hover:text-blue-300 text-sm font-medium" %>
      </div>
    </div>

    <!-- Recent Posts -->
    <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
      <h3 class="text-lg font-medium text-white mb-4">Recent Posts</h3>
      <div class="space-y-3">
        <% @recent_posts.each do |post| %>
          <div class="border-b border-gray-600 pb-3 last:border-b-0">
            <p class="text-sm font-medium text-white line-clamp-2"><%= truncate(post.title, length: 50) %></p>
            <div class="flex items-center space-x-2 mt-1">
              <span class="text-xs text-gray-400">by <%= post.user.username %></span>
              <span class="text-xs text-gray-500">•</span>
              <span class="text-xs text-gray-400"><%= time_ago_in_words(post.created_at) %> ago</span>
              <span class="text-xs text-gray-500">•</span>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= post.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= post.published? ? 'Published' : 'Draft' %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mt-4">
        <%= link_to "View all posts", admin_posts_path, class: "text-blue-400 hover:text-blue-300 text-sm font-medium" %>
      </div>
    </div>

    <!-- Recent Comments -->
    <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
      <h3 class="text-lg font-medium text-white mb-4">Recent Comments</h3>
      <div class="space-y-3">
        <% @recent_comments.each do |comment| %>
          <div class="border-b border-gray-600 pb-3 last:border-b-0">
            <p class="text-sm text-white line-clamp-2"><%= truncate(strip_tags(comment.content), length: 60) %></p>
            <div class="flex items-center space-x-2 mt-1">
              <span class="text-xs text-gray-400">by <%= comment.user.username %></span>
              <span class="text-xs text-gray-500">•</span>
              <span class="text-xs text-gray-400"><%= time_ago_in_words(comment.created_at) %> ago</span>
              <span class="text-xs text-gray-500">•</span>
              <span class="text-xs text-gray-400">on "<%= truncate(comment.post.title, length: 25) %>"</span>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mt-4">
        <%= link_to "View all comments", admin_comments_path, class: "text-blue-400 hover:text-blue-300 text-sm font-medium" %>
      </div>
    </div>
  </div>
</div>

<!-- Chart.js Scripts -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // User Growth Chart
  const userCtx = document.getElementById('userGrowthChart').getContext('2d');
  const userGrowthChart = new Chart(userCtx, {
    type: 'line',
    data: {
      labels: <%= raw @user_growth_data.map { |d| d[:date] }.to_json %>,
      datasets: [{
        label: 'New Users',
        data: <%= raw @user_growth_data.map { |d| d[:count] }.to_json %>,
        borderColor: 'rgb(59, 130, 246)',
        backgroundColor: 'rgba(59, 130, 246, 0.1)',
        borderWidth: 2,
        fill: true,
        tension: 0.4
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          labels: { color: '#D1D5DB' }
        }
      },
      scales: {
        x: {
          ticks: { color: '#9CA3AF' },
          grid: { color: '#374151' }
        },
        y: {
          ticks: { color: '#9CA3AF' },
          grid: { color: '#374151' },
          beginAtZero: true
        }
      }
    }
  });

  // Post Activity Chart
  const postCtx = document.getElementById('postActivityChart').getContext('2d');
  const postActivityChart = new Chart(postCtx, {
    type: 'bar',
    data: {
      labels: <%= raw @post_activity_data.map { |d| d[:date] }.to_json %>,
      datasets: [{
        label: 'New Posts',
        data: <%= raw @post_activity_data.map { |d| d[:count] }.to_json %>,
        backgroundColor: 'rgba(34, 197, 94, 0.8)',
        borderColor: 'rgb(34, 197, 94)',
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          labels: { color: '#D1D5DB' }
        }
      },
      scales: {
        x: {
          ticks: { color: '#9CA3AF' },
          grid: { color: '#374151' }
        },
        y: {
          ticks: { color: '#9CA3AF' },
          grid: { color: '#374151' },
          beginAtZero: true
        }
      }
    }
  });
});
</script>