<% content_for :title, "All Posts" %>
<div class="flex">
  <!-- Main Content -->
  <main class="flex-1 p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-semibold text-gray-800">All Posts</h1>
      <% if user_signed_in? %>
        <%= link_to "New Post", new_post_path, class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500 font-medium" %>
      <% end %>
    </div>
    <div class="space-y-4">
      <% if @posts.present? %>
        <% @posts.each do |post| %>
          <!-- Post Block -->
          <div class="bg-white shadow-sm rounded-lg p-5 border border-gray-200">
            <div class="flex items-center space-x-4">
              <% if post.user&.avatar&.attached? %>
                <%= image_tag post.user.avatar, class: "w-10 h-10 rounded-full" %>
              <% else %>
                <div class="w-10 h-10 bg-gray-300 rounded-full"></div>
              <% end %>
              <div>
                <h2 class="text-lg font-semibold text-gray-800">
                  <%= link_to post.title, post_path(post), class: "hover:text-blue-600" %>
                </h2>
                <p class="text-sm text-gray-500">
                  Created <%= time_ago_in_words(post.created_at) %> ago
                </p>
              </div>
            </div>
            <p class="mt-3 text-gray-700"><%= truncate(post.body, length: 150) %></p>
            <div class="mt-3 flex justify-between items-center text-sm text-gray-500">
              <span><%= pluralize(post.comments.count, "comment") %></span>
              <!-- Post Actions -->
              <div class="flex space-x-3">
                <% if user_signed_in? && current_user == post.user %>
                  <%= link_to "Edit", edit_post_path(post), class: "text-yellow-500 hover:text-yellow-600" %>
                  <%= button_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-600" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </main>
</div>
