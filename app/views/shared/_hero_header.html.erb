<header class="bg-gradient-to-r from-green-700 to-green-500 text-white py-20 px-6 text-center shadow-lg relative overflow-hidden">
  <!-- Nigerian-inspired decorative elements -->
  <div class="absolute top-0 left-0 w-24 h-24 rounded-full bg-green-300 opacity-20 -ml-8 -mt-8"></div>
  <div class="absolute top-1/4 right-0 w-32 h-32 rounded-full bg-green-400 opacity-15 -mr-10"></div>
  <div class="absolute bottom-1/4 left-1/4 w-16 h-16 rounded-full bg-yellow-400 opacity-20"></div>
  
  <!-- Nigerian flag-inspired decorative lines -->
  <div class="absolute top-0 right-0 w-16 h-full">
    <div class="h-full w-4 bg-gradient-to-b from-green-600 to-green-400 opacity-30 transform -skew-x-12"></div>
  </div>
  <div class="absolute top-0 right-12 w-16 h-full">
    <div class="h-full w-4 bg-gradient-to-b from-white to-gray-200 opacity-20 transform -skew-x-12"></div>
  </div>
  
  <div class="max-w-3xl mx-auto relative z-10">
    <div class="flex flex-col items-center">
      <svg class="w-16 h-16 mb-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 1L3 5V11C3 16.55 6.84 21.74 12 23C17.16 21.74 21 16.55 21 11V5L12 1Z" fill="#006600" stroke="#ffffff" stroke-width="0.5" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M12 11C13.1 11 14 10.1 14 9C14 7.9 13.1 7 12 7C10.9 7 10 7.9 10 9C10 10.1 10.9 11 12 11Z" fill="#ffffff"/>
        <path d="M12 14C9.33 14 4 15.34 4 18V20H20V18C20 15.34 14.67 14 12 14Z" fill="#ffffff"/>
      </svg>
      
      <h1 class="text-5xl font-extrabold tracking-tight leading-tight text-white drop-shadow-lg">
        Welcome to <span class="relative inline-block">
          <span class="relative z-10">Naija Forum</span>
          <span class="absolute bottom-1 left-0 w-full h-3 bg-gradient-to-r from-yellow-400 to-yellow-300 opacity-50 rounded-lg -z-0"></span>
        </span>
      </h1>
      
      <p class="mt-4 text-xl font-light text-white max-w-2xl">
        A vibrant community to discuss, share, and connect with like-minded Nigerians across the globe.
      </p>
    </div>

    <!-- Search Form -->
    <div class="mt-8 relative">
      <%= form_with url: search_path, method: :get, local: true, class: "relative max-w-lg mx-auto" do |f| %>
        <div class="flex items-center bg-white rounded-lg shadow-xl overflow-hidden border-2 border-green-100 transition-all duration-300 hover:shadow-2xl">
          <%= f.text_field :query, placeholder: "Search topics, categories, or users...", 
            class: "w-full px-4 py-4 text-gray-800 focus:outline-none focus:ring-2 focus:ring-green-500 text-lg" %>
          <button type="submit" class="bg-gradient-to-r from-green-600 to-green-500 hover:from-green-500 hover:to-green-400 text-white px-6 py-4 transition-all duration-300 flex items-center justify-center group">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transform group-hover:scale-110 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
      <% end %>
      
      <!-- Decorative search hints -->
      <div class="mt-3 flex justify-center space-x-3 text-sm text-green-100">
        <span class="hover:text-white transition-colors duration-200">#trending</span>
        <span class="hover:text-white transition-colors duration-200">#lagos</span>
        <span class="hover:text-white transition-colors duration-200">#community</span>
      </div>
    </div>
  </div>

  <!-- Curved bottom edge with Nigerian-inspired pattern -->
  <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none" class="w-full h-12">
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" fill="#ffffff"></path>
    </svg>
  </div>
</header>
