<div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
      </svg>
      <%= category.new_record? ? "üè∑Ô∏è Create Category" : "‚úèÔ∏è Edit Category" %>
    </h2>
    <p class="text-gray-600 mt-2">Categories help organize posts and make them easier to find</p>
  </div>

  <%= form_with(model: category, class: "space-y-6", multipart: true) do |form| %>
    <% if category.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-xl p-6">
        <div class="flex items-center mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
          <h3 class="font-semibold text-red-800"><%= pluralize(category.errors.count, "error") %> prevented this category from being saved:</h3>
        </div>
        <ul class="list-disc list-inside text-red-700 space-y-1">
          <% category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-3">
      <%= form.label :name, class: "block text-sm font-semibold text-gray-900" do %>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
          Category Name
        </div>
      <% end %>
      <%= form.text_field :name, 
            placeholder: "Enter category name (e.g., Technology, Discussion)",
            class: "mt-2 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
    </div>

    <div class="space-y-3">
      <%= form.label :description, class: "block text-sm font-semibold text-gray-900" do %>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
          </svg>
          Description
        </div>
      <% end %>
      <%= form.text_area :description, rows: 4,
            placeholder: "Describe what this category is for and what kind of posts belong here...",
            class: "mt-2 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 resize-y" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-3">
        <%= form.label :color, class: "block text-sm font-semibold text-gray-900" do %>
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 21h10a2 2 0 002-2v-4a2 2 0 00-2-2H7M7 21V9a2 2 0 012-2h10a2 2 0 012 2v4M7 21V5a2 2 0 012-2h4a2 2 0 012 2v4" />
            </svg>
            Category Color
          </div>
        <% end %>
        <%= form.color_field :color, value: category.color || "#3B82F6",
              class: "mt-2 block w-full h-12 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
        <p class="text-xs text-gray-500">üé® This color will be used for category badges and highlighting</p>
      </div>

      <div class="space-y-3">
        <%= form.label :image, class: "block text-sm font-semibold text-gray-900" do %>
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Category Icon (Optional)
          </div>
        <% end %>
        <div class="mt-2 border-2 border-dashed border-gray-300 rounded-xl p-4 text-center hover:border-blue-400 hover:bg-blue-50 transition-all duration-200 group">
          <div class="space-y-2">
            <div class="mx-auto h-8 w-8 bg-gray-100 rounded-full flex items-center justify-center group-hover:bg-blue-100 transition-colors">
              <svg class="h-4 w-4 text-gray-400 group-hover:text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <label for="category_image" class="cursor-pointer">
                <span class="text-sm font-medium text-blue-600 hover:text-blue-500">Upload icon</span>
                <span class="block text-xs text-gray-500 mt-1">PNG, JPG up to 1MB</span>
                <%= form.file_field :image, class: "sr-only", id: "category_image", accept: "image/*" %>
              </label>
            </div>
          </div>
        </div>
        
        <% if category.persisted? && category.image.attached? %>
          <div class="mt-4 p-3 bg-gray-50 rounded-lg">
            <p class="text-xs font-medium text-gray-600 mb-2">üñºÔ∏è Current Icon:</p>
            <%= image_tag category.image, class: "w-12 h-12 rounded-lg shadow-sm" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
      <%= link_to categories_path, class: "flex items-center justify-center px-6 py-3 border border-gray-300 rounded-xl text-gray-700 font-medium hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
        Cancel
      <% end %>
      
      <%= form.submit category.new_record? ? "üè∑Ô∏è Create Category" : "üíæ Update Category",
            class: "flex items-center justify-center flex-1 px-6 py-3 border border-transparent rounded-xl text-white font-semibold bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transform transition-all duration-200 hover:scale-[1.02] shadow-lg hover:shadow-xl" %>
    </div>
  <% end %>
</div>
