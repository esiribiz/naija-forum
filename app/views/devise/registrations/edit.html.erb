<div class="max-w-lg mx-auto bg-white p-8 shadow-lg rounded-lg mt-10">
  <h2 class="text-3xl font-semibold text-center text-gray-700 mb-6">Update <%= resource_name.to_s.humanize %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <!-- Email Field -->
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <!-- Avatar Upload -->
    <div>
      <%= f.label :avatar, class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :avatar, class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <!-- Pending Email Confirmation -->
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-600">
        Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
      </div>
    <% end %>
    
    <!-- Security Questions -->
    <div class="border-t pt-4 mt-4">
      <h3 class="text-lg font-medium text-gray-700 mb-3">Security Questions</h3>
      <p class="text-sm text-gray-600 mb-4">Please set up or update your security questions. These questions help secure your account.</p>
      <%= render "devise/shared/security_questions", f: f %>
    </div>
    
    <!-- Password Field -->
    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <p class="text-xs text-gray-500">Leave blank if you don't want to change it</p>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mt-1"><%= @minimum_password_length %> characters minimum</p>
      <% end %>
    </div>
    <!-- Password Confirmation -->
    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <!-- Current Password -->
    <div>
      <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
      <p class="text-xs text-gray-500">We need your current password to confirm your changes</p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full px-4 py-2 border rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <!-- Submit Button -->
    <div>
      <%= f.submit "Update", class: "w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-500 transition duration-200 shadow-md" %>
    </div>
  <% end %>
  <!-- Cancel Account Section -->
  <div class="mt-6 text-center">
    <h3 class="text-lg font-medium text-red-600">Cancel My Account</h3>
    <p class="text-sm text-gray-600">Unhappy? You can delete your account below.</p>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "mt-3 bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-500 transition duration-200 shadow-md" %>
  </div>
  <!-- Back Link -->
  <div class="text-center mt-4">
    <%= link_to "Back", :back, class: "text-blue-600 hover:underline" %>
  </div>
</div>
