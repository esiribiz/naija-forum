<% content_for :page_title, @tag.name %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 mr-4">
        <%= @tag.name %>
      </span>
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Tag: <%= @tag.name %></h1>
        <p class="mt-1 text-sm text-gray-600">Tag details and associated posts</p>
      </div>
    </div>
    <div class="flex space-x-2">
      <%= link_to "← Back to Tags", admin_tags_path, 
          class: "bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      <%= link_to "Edit Tag", edit_admin_tag_path(@tag), 
          class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <!-- Tag Info -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Tag Information</h3>
      
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-lg text-gray-900">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              <%= @tag.name %>
            </span>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Total Posts</dt>
          <dd class="mt-1 text-lg text-gray-900"><%= @tag.posts.count %></dd>
        </div>

        <% if @tag.description.present? %>
          <div class="md:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-gray-900"><%= simple_format(@tag.description) %></dd>
          </div>
        <% end %>

        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-gray-900"><%= @tag.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
          <dd class="mt-1 text-gray-900"><%= @tag.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Recent Posts -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Posts with this Tag</h3>
      
      <% if @posts.any? %>
        <div class="space-y-4">
          <% @posts.each do |post| %>
            <div class="border-b border-gray-200 pb-4 last:border-b-0 last:pb-0">
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                  <h4 class="text-sm font-medium text-gray-900 truncate">
                    <%= link_to post.title, admin_post_path(post), class: "hover:text-blue-600" %>
                  </h4>
                  <p class="mt-1 text-sm text-gray-500">
                    By <%= post.user.username %> • <%= post.created_at.strftime("%b %d, %Y") %> • 
                    <%= pluralize(post.comments.count, 'comment') %> •
                    in <%= link_to post.category.name, admin_category_path(post.category), class: "text-green-600 hover:text-green-500" %>
                  </p>
                </div>
                <div class="flex-shrink-0 ml-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= post.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= post.published? ? 'Published' : 'Draft' %>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <% if @tag.posts.count > 10 %>
          <div class="mt-6 text-center">
            <p class="text-sm text-gray-500">
              Showing 10 of <%= @tag.posts.count %> posts.
              <%= link_to "View all posts →", admin_posts_path(tag: @tag.id), 
                  class: "text-blue-600 hover:text-blue-500 font-medium" %>
            </p>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
          <h4 class="mt-2 text-sm font-medium text-gray-900">No posts yet</h4>
          <p class="mt-1 text-sm text-gray-500">This tag hasn't been used on any posts yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>