                <div class="enhanced-user-details">
                  <h4><%= user.username || 'Unknown User' %></h4>
                  <p><%= "#{user.first_name} #{user.last_name}".strip.presence || 'No name set' %></p>
                  <div class="enhanced-content-meta mt-1">
                    <span class="enhanced-badge enhanced-badge-secondary text-xs">
                      <i class="fas fa-user-circle mr-1"></i>
                      ID: <%= user.id %>
                    </span>
                  </div>
                </div>
              </div>
            </td>
            <td>
              <div class="space-y-3">
                <div class="enhanced-content-preview">
                  <div class="enhanced-content-title text-sm"><%= user.email %></div>
                  <div class="enhanced-content-excerpt text-xs">
                    <% if user.last_sign_in_at.present? %>
                      <span class="text-green-600">Last active <%= time_ago_in_words(user.last_sign_in_at) %> ago</span>
                    <% else %>
                      <span class="text-gray-400">Never logged in</span>
                    <% end %>
