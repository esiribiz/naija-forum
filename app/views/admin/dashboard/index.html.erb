        </div>
        <%= link_to admin_categories_path, class: "inline-flex items-center text-xs font-medium text-purple-600 hover:text-purple-800 transition-colors group" do %>
          <span class="mr-1">Manage</span>
          <svg class="w-3 h-3 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
