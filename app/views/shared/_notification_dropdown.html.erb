<div class="relative" data-controller="notifications">
  <button 
    class="relative h-10 w-10 rounded-full text-gray-500 hover:bg-gray-100 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 flex items-center justify-center"
    data-action="click->notifications#toggle"
    aria-expanded="false"
    aria-haspopup="true"
  >
    <span class="sr-only">View notifications</span>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
    </svg>
    
    <% unread_count = current_user.notifications.unread.count %>
    <% if unread_count > 0 %>
      <span class="absolute top-1 right-1 h-5 w-5 rounded-full bg-red-500 text-white text-xs flex items-center justify-center" data-notifications-target="badge">
        <%= unread_count > 99 ? "99+" : unread_count %>
      </span>
    <% end %>
  </button>

  <div 
    class="absolute right-0 mt-2 w-80 bg-white shadow-lg rounded-md ring-1 ring-black ring-opacity-5 py-1 focus:outline-none z-10 max-h-96 overflow-y-auto"
    data-notifications-target="panel"
  >
    <div class="px-4 py-2 border-b border-gray-100 flex justify-between items-center">
      <h3 class="text-sm font-semibold text-gray-700">Notifications</h3>
      <% if unread_count > 0 %>
        <%= button_to mark_all_as_read_notifications_path, 
                    method: :post, 
                    class: "text-xs text-blue-600 hover:text-blue-800",
                    data: { action: "click->notifications#markAllAsRead" } do %>
          Mark all as read
        <% end %>
      <% end %>
    </div>

    <div class="notifications-list" data-notifications-target="list">
      <% if current_user.notifications.unread.recent.exists? %>
        <% current_user.notifications.unread.recent.limit(5).each do |notification| %>
          <div class="notification-item px-4 py-3 hover:bg-gray-50 border-b border-gray-100 last:border-b-0 <%= notification.read? ? 'read' : 'unread' %>"
               data-notification-id="<%= notification.id %>"
               data-action="click->notifications#markAsRead">
            <div class="flex items-start">
              <div class="flex-shrink-0 mr-3">
                <% if notification.actor && notification.actor.respond_to?(:avatar) && notification.actor.avatar.attached? %>
                  <%= image_tag notification.actor.avatar.variant(resize_to_fill: [40, 40]), class: "h-10 w-10 rounded-full" %>
                <% else %>
                  <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                    <svg class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm text-gray-800">
                  <% case notification.action %>
                  <% when 'commented' %>
                    <span class="font-medium"><%= notification.actor.username %></span> commented on your post
                  <% when 'liked' %>
                    <span class="font-medium"><%= notification.actor.username %></span> liked your post
                  <% when 'mentioned' %>
                    <span class="font-medium"><%= notification.actor.username %></span> mentioned you in a comment
                  <% when 'followed' %>
                    <span class="font-medium"><%= notification.actor.username %></span> started following you
                  <% else %>
                    <%= notification.action %>
                  <% end %>
                </p>
                <p class="text-xs text-gray-500 mt-1">
                  <%= time_ago_in_words(notification.created_at) %> ago
                </p>
                <div class="flex mt-2">
                  <% if notification.notifiable.present? %>
                    <% 
                      view_path = case notification.notifiable
                      when Comment
                        post_path(notification.notifiable.post)
                      else
                        begin
                          polymorphic_path(notification.notifiable)
                        rescue
                          "#"
                        end
                      end
                    %>
                    <%= link_to "View", 
                                view_path, 
                                class: "text-xs text-blue-600 hover:text-blue-800 mr-3" %>
                  <% end %>
                  <%= button_to "Mark as read", 
                              mark_as_read_notification_path(notification), 
                              method: :post, 
                              class: "text-xs text-gray-500 hover:text-gray-700" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="px-4 py-6 text-center text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
          </svg>
          <p class="mt-1">No unread notifications</p>
        </div>
      <% end %>
    </div>

    <div class="px-4 py-2 border-t border-gray-100">
      <%= link_to notifications_path, class: "block text-center text-sm text-blue-600 hover:text-blue-800" do %>
        View all notifications
      <% end %>
    </div>
  </div>
</div>

