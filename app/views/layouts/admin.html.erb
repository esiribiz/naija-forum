                  end
                }" do %>
              <i class="fas fa-tachometer-alt mr-3 text-lg transition-transform duration-200 group-hover:scale-110"></i>
              <span>Dashboard</span>
              <% if controller_name == 'dashboard' %>
                <div class="ml-2 w-2 h-2 bg-white rounded-full animate-pulse"></div>
              <% end %>
            <% end %>
            
            <!-- Users -->
            <%= link_to admin_users_path, 
                class: "group flex items-center px-4 py-2.5 text-sm font-semibold rounded-xl transition-all duration-200 #{
                  if controller_name == 'users'
                    'bg-gradient-to-r from-green-500 to-emerald-600 text-white shadow-lg shadow-green-500/25 transform scale-105'
                  else
                    'text-slate-300 hover:text-white hover:bg-slate-700/50'
                  end
                }" do %>
              <i class="fas fa-users mr-3 text-lg transition-transform duration-200 group-hover:scale-110"></i>
              <span>Users</span>
              <% if controller_name == 'users' %>
                <div class="ml-2 w-2 h-2 bg-white rounded-full animate-pulse"></div>
              <% end %>
            <% end %>
            
            <!-- Posts -->
            <%= link_to admin_posts_path, 
                class: "group flex items-center px-4 py-2.5 text-sm font-semibold rounded-xl transition-all duration-200 #{
                  if controller_name == 'posts'
                    'bg-gradient-to-r from-purple-500 to-purple-600 text-white shadow-lg shadow-purple-500/25 transform scale-105'
                  else
                    'text-slate-300 hover:text-white hover:bg-slate-700/50'
                  end
                }" do %>
              <i class="fas fa-newspaper mr-3 text-lg transition-transform duration-200 group-hover:scale-110"></i>
              <span>Posts</span>
              <% if controller_name == 'posts' %>
                <div class="ml-2 w-2 h-2 bg-white rounded-full animate-pulse"></div>
