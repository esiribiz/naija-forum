<% content_for :page_title, "Posts Management" %>
<% content_for :page_subtitle, "Manage forum posts, publications, and content moderation" %>

<!-- Enhanced Stats Cards - Column Layout -->
<div class="flex flex-col lg:flex-row gap-6 mb-8">
  <!-- Left Column - Content Overview -->
  <div class="flex-1 space-y-4">
    <!-- Total Posts -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #1e40af);">
          <i class="fas fa-newspaper"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@total_posts) %></div>
          <div class="stat-label">Total Posts</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-arrow-up mr-1"></i>
            +<%= @posts_today %> today
          </div>
        </div>
        <div class="flex-shrink-0 flex flex-col items-end space-y-2">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-blue-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@posts_today.to_f / [@total_posts, 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
          <%= link_to new_admin_post_path, class: "btn btn-primary btn-sm group-hover:shadow-lg transition-all" do %>
            <i class="fas fa-plus mr-1"></i> New Post
          <% end %>
        </div>
      </div>
    </div>

    <!-- Today's Posts -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
          <i class="fas fa-calendar-day"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@posts_today) %></div>
          <div class="stat-label">Today</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-clock mr-1"></i>
            Last 24 hours
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-purple-500 h-2 rounded-full transition-all duration-1000" style="width: <%= @posts_today > 0 ? 100 : 5 %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Column - Publication Status -->
  <div class="flex-1 space-y-4">
    <!-- Published Posts -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
          <i class="fas fa-check-circle"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@published_posts) %></div>
          <div class="stat-label">Published</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-eye mr-1"></i>
            <%= ((@published_posts.to_f / [@total_posts, 1].max) * 100).round(1) %>% of total
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-green-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@published_posts.to_f / [@total_posts, 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Draft Posts -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
          <i class="fas fa-edit"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@draft_posts) %></div>
          <div class="stat-label">Drafts</div>
          <div class="stat-change mt-1 text-sm" style="color: #6b7280;">
            <i class="fas fa-clock mr-1"></i>
            Need review
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-yellow-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@draft_posts.to_f / [@total_posts, 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Enhanced Search and Filter Section -->
<div class="enhanced-search-container">
  <div class="enhanced-search-header">
    <h3 class="enhanced-search-title">
      <i class="fas fa-filter text-blue-500"></i>
      Advanced Post Search & Filters
    </h3>
    <p class="enhanced-search-subtitle">Find posts by title, content, author, category, publication status, and engagement metrics</p>
  </div>
  <div class="enhanced-search-body">
    <%= form_with url: admin_posts_path, method: :get, local: true, class: "enhanced-search-form" do |form| %>
      <!-- Main search row -->
      <div class="enhanced-search-row">
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-search mr-2 text-blue-500"></i>
            Search Posts
          </label>
          <%= form.text_field :search, 
              placeholder: "Search by title, content, author, or keywords...", 
              value: params[:search],
              class: "enhanced-form-input" %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-layer-group mr-2 text-green-500"></i>
            Category
          </label>
          <%= form.select :category_id, 
                options_from_collection_for_select(@categories, :id, :name, params[:category_id]),
                { prompt: "All Categories" },
                { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-toggle-on mr-2 text-purple-500"></i>
            Publication Status
          </label>
          <%= form.select :published, 
                options_for_select([
                  ['All Posts', ''],
                  ['âœ… Published Posts', 'true'], 
                  ['ðŸ“ Draft Posts', 'false']
                ], params[:published]),
                {},
                { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-calendar-range mr-2 text-orange-500"></i>
            Date Range
          </label>
          <%= form.select :date_range, 
                options_for_select([
                  ['All Time', ''],
                  ['Today', 'today'],
                  ['This Week', 'week'],
                  ['This Month', 'month'],
                  ['Last 3 Months', '3months'],
                  ['This Year', 'year']
                ], params[:date_range]),
                {},
                { class: "enhanced-form-select" } %>
        </div>
      </div>
      
      <!-- Advanced filters row -->
      <div class="enhanced-search-row" style="opacity: 0.9;">
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-sort-amount-down mr-2 text-cyan-500"></i>
            Sort By
          </label>
          <%= form.select :sort, 
                options_for_select([
                  ['Recently Published', 'newest'],
                  ['Oldest First', 'oldest'],
                  ['Most Comments', 'most_comments'],
                  ['Most Recent Activity', 'recent_activity'],
                  ['Alphabetical A-Z', 'alpha_asc'],
                  ['Alphabetical Z-A', 'alpha_desc']
                ], params[:sort] || 'newest'),
                {},
                { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-list-ol mr-2 text-pink-500"></i>
            Results Per Page
          </label>
          <%= form.select :per_page, 
                options_for_select([
                  ['10 posts', '10'],
                  ['25 posts', '25'],
                  ['50 posts', '50'],
                  ['100 posts', '100']
                ], params[:per_page] || '25'),
                {},
                { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-comments mr-2 text-indigo-500"></i>
            Min Comments
          </label>
          <%= form.number_field :min_comments, 
                placeholder: "0", 
                value: params[:min_comments],
                min: 0,
                class: "enhanced-form-input" %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-user-edit mr-2 text-teal-500"></i>
            Author
          </label>
          <%= form.text_field :author, 
                placeholder: "Filter by author...", 
                value: params[:author],
                class: "enhanced-form-input" %>
        </div>
      </div>
      
      <!-- Search actions -->
      <div class="enhanced-search-actions">
        <div class="enhanced-search-buttons">
          <%= form.submit "ðŸ” Apply Filters", class: "enhanced-search-btn enhanced-search-btn-primary" %>
          <%= link_to "ðŸ—‘ï¸ Clear All", admin_posts_path, class: "enhanced-search-btn enhanced-search-btn-secondary" %>
          <button type="button" id="advanced-toggle" class="enhanced-search-btn enhanced-search-btn-secondary">
            <i class="fas fa-sliders-h mr-2"></i>
            Advanced Options
          </button>
        </div>
        
        <div class="enhanced-search-results">
          <% filter_params = ['search', 'category_id', 'published', 'date_range', 'sort', 'min_comments', 'author'] %>
          <% has_filters = filter_params.any? { |key| params[key].present? } %>
          <% if has_filters %>
            <div class="flex items-center space-x-2 text-sm">
              <i class="fas fa-filter text-blue-500"></i>
              <span class="text-slate-600">Active filters:</span>
              <div class="flex items-center space-x-1 flex-wrap">
                <% if params[:search].present? %>
                  <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium">
                    Search: "<%= params[:search] %>"
                  </span>
                <% end %>
                <% if params[:category_id].present? %>
                  <span class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">
                    Category: <%= @categories.find_by(id: params[:category_id])&.name || params[:category_id] %>
                  </span>
                <% end %>
                <% if params[:published].present? %>
                  <span class="px-2 py-1 bg-purple-100 text-purple-700 rounded-full text-xs font-medium">
                    Status: <%= params[:published] == 'true' ? 'Published' : 'Draft' %>
                  </span>
                <% end %>
                <% if params[:date_range].present? %>
                  <span class="px-2 py-1 bg-orange-100 text-orange-700 rounded-full text-xs font-medium">
                    Date: <%= params[:date_range].humanize %>
                  </span>
                <% end %>
                <% if params[:sort].present? %>
                  <span class="px-2 py-1 bg-indigo-100 text-indigo-700 rounded-full text-xs font-medium">
                    Sort: <%= params[:sort].humanize %>
                  </span>
                <% end %>
                <% if params[:min_comments].present? %>
                  <span class="px-2 py-1 bg-cyan-100 text-cyan-700 rounded-full text-xs font-medium">
                    Min Comments: <%= params[:min_comments] %>
                  </span>
                <% end %>
                <% if params[:author].present? %>
                  <span class="px-2 py-1 bg-teal-100 text-teal-700 rounded-full text-xs font-medium">
                    Author: <%= params[:author] %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <div class="text-slate-500">
            <i class="fas fa-newspaper mr-1"></i>
            Showing <%= @posts.respond_to?(:count) ? @posts.count : @posts.size %> posts
            <% if ['search', 'category_id', 'published', 'date_range', 'author'].any? { |key| params[key].present? } %>
              <span class="text-blue-600 font-medium">(filtered)</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

  <!-- Include Enhanced Table Styles (if not already included) -->
  <%= render 'shared/enhanced_table_styles' unless @enhanced_styles_included %>
  <% @enhanced_styles_included = true %>

<!-- Enhanced Posts Table -->
<div class="enhanced-table-container mb-8 enhanced-fade-in">
  <div class="enhanced-table-header">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="enhanced-table-title">
          <i class="fas fa-newspaper" style="color: #3b82f6;"></i>
          Posts & Content Management
        </h2>
        <p class="enhanced-table-subtitle">Manage forum posts, publications, and content moderation - track engagement, status, and author activity</p>
      </div>
      <div class="flex items-center space-x-4">
        <div class="enhanced-stats-group">
          <div class="enhanced-stat-item">
            <i class="fas fa-newspaper"></i>
            <span><%= @total_posts %> Total Posts</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-check-circle text-green-500"></i>
            <span><%= @published_posts %> Published</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-edit text-yellow-500"></i>
            <span><%= @draft_posts %> Drafts</span>
          </div>
        </div>
        <%= link_to new_admin_post_path, class: "btn btn-primary hover:scale-105 transition-transform" do %>
          <i class="fas fa-plus mr-2"></i> New Post
        <% end %>
      </div>
    </div>
  </div>
    
    <div class="overflow-x-auto">
      <table class="enhanced-table">
        <thead>
          <tr>
            <th><i class="fas fa-newspaper mr-2"></i>Post Details & Content</th>
            <th><i class="fas fa-user mr-2"></i>Author & Info</th>
            <th class="hidden lg:table-cell"><i class="fas fa-chart-bar mr-2"></i>Engagement & Stats</th>
            <th class="text-right"><i class="fas fa-cogs mr-2"></i>Management</th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
          <tr class="enhanced-fade-in">
            <td>
              <div class="enhanced-content-preview">
                <div class="enhanced-content-title">
                  <%= link_to post.title, admin_post_path(post.id), class: "hover:text-blue-600 transition-colors" %>
                </div>
                <div class="enhanced-content-excerpt">
                  <%= truncate(strip_tags(post.body), length: 120) %>
                </div>
                <div class="enhanced-content-meta">
                  <span class="enhanced-badge <%= post.published? ? 'enhanced-badge-success' : 'enhanced-badge-warning' %>">
                    <i class="fas fa-<%= post.published? ? 'check-circle' : 'edit' %> mr-1"></i>
                    <%= post.published? ? 'Published' : 'Draft' %>
                  </span>
                  <span class="enhanced-badge enhanced-badge-info">
                    <i class="fas fa-layer-group mr-1"></i>
                    <%= post.category.name %>
                  </span>
                  <span class="enhanced-stat-item">
                    <i class="fas fa-calendar-alt"></i>
                    <span><%= time_ago_in_words(post.created_at) %> ago</span>
                  </span>
                  <span class="enhanced-stat-item">
                    <i class="fas fa-comments"></i>
                    <span><%= post.comments.count %> comments</span>
                  </span>
                </div>
              </div>
            </td>
            <td>
              <div class="enhanced-user-info">
                <div class="flex-shrink-0">
                  <% if post.user.avatar.attached? %>
                    <%= image_tag post.user.avatar, class: "enhanced-avatar", alt: post.user.username %>
                  <% else %>
                    <div class="enhanced-avatar-placeholder bg-gradient-to-br from-blue-500 to-purple-600">
                      <%= post.user.username&.first&.upcase || 'U' %>
                    </div>
                  <% end %>
                </div>
                <div class="enhanced-user-details">
                  <h4><%= post.user.username %></h4>
                  <div class="enhanced-content-meta">
                    <span class="enhanced-badge enhanced-badge-secondary text-xs">
                      <i class="fas fa-user-tag mr-1"></i>
                      <%= post.user.role.humanize %>
                    </span>
                    <span class="enhanced-stat-item text-xs">
                      <i class="fas fa-envelope"></i>
                      <span><%= post.user.email %></span>
                    </span>
                  </div>
                </div>
              </div>
            </td>
            <td class="hidden lg:table-cell">
              <div class="space-y-3">
                <div class="enhanced-stats-group flex-col items-start gap-2">
                  <div class="enhanced-stat-item">
                    <i class="fas fa-comments text-blue-500"></i>
                    <span><%= post.comments.count %> Comments</span>
                  </div>
                  <div class="enhanced-stat-item">
                    <i class="fas fa-calendar-plus text-green-500"></i>
                    <span>Created <%= post.created_at.strftime('%b %d, %Y') %></span>
                  </div>
                  <% if post.updated_at != post.created_at %>
                    <div class="enhanced-stat-item">
                      <i class="fas fa-edit text-yellow-500"></i>
                      <span>Updated <%= time_ago_in_words(post.updated_at) %> ago</span>
                    </div>
                  <% end %>
                </div>
                <div class="mt-3">
                  <div class="text-xs text-gray-500 mb-1">Publishing Status</div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-<%= post.published? ? 'green' : 'yellow' %>-500 h-2 rounded-full transition-all duration-300" style="width: <%= post.published? ? '100' : '50' %>%"></div>
                  </div>
                </div>
              </div>
            </td>
            <td class="text-right">
              <div class="enhanced-action-buttons">
                <%= link_to admin_post_path(post.id), class: "enhanced-action-btn enhanced-action-btn-view", title: "View post" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
                
                <%= link_to edit_admin_post_path(post.id), class: "enhanced-action-btn enhanced-action-btn-edit", title: "Edit post" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                
                <%= link_to toggle_published_admin_post_path(post.id), method: :patch,
                      class: "enhanced-action-btn enhanced-action-btn-#{post.published? ? 'warning' : 'success'}",
                      title: post.published? ? 'Unpublish' : 'Publish',
                      data: { confirm: "Are you sure you want to #{post.published? ? 'unpublish' : 'publish'} this post?" } do %>
                  <% if post.published? %>
                    <i class="fas fa-eye-slash"></i>
                  <% else %>
                    <i class="fas fa-check"></i>
                  <% end %>
                <% end %>
                
                <%= link_to admin_post_path(post.id), method: :delete,
                      class: "enhanced-action-btn enhanced-action-btn-danger",
                      title: "Delete post",
                      data: { confirm: "Are you sure you want to delete this post? This action cannot be undone." } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
  
    </div>
    
    <!-- Enhanced Table Footer -->
    <div class="enhanced-table-footer">
      <div class="enhanced-footer-stats">
        <div class="enhanced-stat-item">
          <i class="fas fa-newspaper text-blue-500"></i>
          <span><%= @posts.respond_to?(:count) ? @posts.count : @posts.size %> Posts Displayed</span>
        </div>
        <div class="enhanced-stat-item">
          <i class="fas fa-check-circle text-green-500"></i>
          <span><%= @published_posts %> Published</span>
        </div>
        <div class="enhanced-stat-item">
          <i class="fas fa-edit text-yellow-500"></i>
          <span><%= @draft_posts %> Drafts</span>
        </div>
        <div class="enhanced-stat-item">
          <i class="fas fa-calendar-day text-purple-500"></i>
          <span><%= @posts_today %> Today</span>
        </div>
      </div>
      
      <% if @posts.respond_to?(:current_page) %>
        <div class="enhanced-pagination">
          <span class="enhanced-pagination-info">
            Page <%= @posts.current_page %> of <%= @posts.total_pages %>
          </span>
          <div class="enhanced-pagination-controls">
            <% if @posts.prev_page %>
              <%= link_to admin_posts_path(page: @posts.prev_page, search: params[:search], category_id: params[:category_id], published: params[:published]), 
                    class: "enhanced-pagination-btn enhanced-pagination-prev" do %>
                <i class="fas fa-chevron-left"></i> Previous
              <% end %>
            <% end %>
            <% if @posts.next_page %>
              <%= link_to admin_posts_path(page: @posts.next_page, search: params[:search], category_id: params[:category_id], published: params[:published]), 
                    class: "enhanced-pagination-btn enhanced-pagination-next" do %>
                Next <i class="fas fa-chevron-right"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="enhanced-pagination">
          <span class="enhanced-pagination-info">Page 1 of 1</span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @posts.empty? %>
  <div class="text-center py-12">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900">No posts found</h3>
    <p class="mt-1 text-sm text-gray-500">
      <% if params[:search].present? || params[:category_id].present? || params[:published].present? %>
        Try adjusting your filters to see more results.
      <% else %>
        There are no posts in the system yet.
      <% end %>
    </p>
  </div>
<% end %>