<% content_for :page_title, "Comments Management" %>
<% content_for :page_subtitle, "Manage and moderate forum comments" %>

<!-- Enhanced Stats Cards - Column Layout -->
<div class="flex flex-col lg:flex-row gap-6 mb-8">
  <!-- Left Column - Overall Stats -->
  <div class="flex-1 space-y-4">
    <!-- Total Comments -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
          <i class="fas fa-comments"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:total]) %></div>
          <div class="stat-label">Total Comments</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-arrow-up mr-1"></i>
            +<%= @stats[:today] %> today
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-yellow-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@stats[:today].to_f / [@stats[:total], 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- This Week -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #1e40af);">
          <i class="fas fa-chart-line"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:this_week]) %></div>
          <div class="stat-label">This Week</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-trending-up mr-1"></i>
            Weekly activity
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-blue-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@stats[:this_week].to_f / [@stats[:total], 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Column - Recent Activity -->
  <div class="flex-1 space-y-4">
    <!-- Today's Comments -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
          <i class="fas fa-calendar-day"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:today]) %></div>
          <div class="stat-label">Today</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-clock mr-1"></i>
            Last 24 hours
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-green-500 h-2 rounded-full transition-all duration-1000" style="width: <%= @stats[:today] > 0 ? 100 : 5 %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Engagement Rate Card -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
          <i class="fas fa-chart-pie"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= ((@stats[:this_week].to_f / 7).round(1)) %></div>
          <div class="stat-label">Daily Average</div>
          <div class="stat-change mt-1 text-sm" style="color: #6b7280;">
            <i class="fas fa-calculator mr-1"></i>
            Comments per day
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-purple-500 h-2 rounded-full transition-all duration-1000" style="width: <%= [(@stats[:this_week].to_f / 7 * 10).round(1), 100].min %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Enhanced Search and Filter Section -->
<div class="enhanced-search-container">
  <div class="enhanced-search-header">
    <h3 class="enhanced-search-title">
      <i class="fas fa-search text-yellow-500"></i>
      Advanced Comment Search & Filters
    </h3>
    <p class="enhanced-search-subtitle">Find comments by content, author, post title, date range, and moderation status</p>
  </div>
  <div class="enhanced-search-body">
    <%= form_with url: admin_comments_path, method: :get, local: true, class: "enhanced-search-form" do |form| %>
      <!-- Main search row -->
      <div class="enhanced-search-row">
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-search mr-2 text-blue-500"></i>
            Search Comments
          </label>
          <%= form.text_field :search, 
              placeholder: "Search by content, author, or post title...", 
              value: params[:search],
              class: "enhanced-form-input" %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-user mr-2 text-green-500"></i>
            Author
          </label>
          <%= form.text_field :author, 
              placeholder: "Filter by comment author...", 
              value: params[:author],
              class: "enhanced-form-input" %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-newspaper mr-2 text-purple-500"></i>
            Post Title
          </label>
          <%= form.text_field :post_title, 
              placeholder: "Filter by post title...", 
              value: params[:post_title],
              class: "enhanced-form-input" %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-calendar-alt mr-2 text-orange-500"></i>
            Date Range
          </label>
          <%= form.select :date_range, 
                options_for_select([
                  ['All Time', ''],
                  ['Today', 'today'],
                  ['This Week', 'week'],
                  ['This Month', 'month'],
                  ['Last 3 Months', '3months'],
                  ['This Year', 'year']
                ], params[:date_range]),
                {},
                { class: "enhanced-form-select" } %>
        </div>
      </div>
      
      <!-- Advanced filters row -->
      <div class="enhanced-search-row" style="opacity: 0.9;">
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-sort-amount-down mr-2 text-cyan-500"></i>
            Sort By
          </label>
          <%= form.select :sort, 
                options_for_select([
                  ['Newest First', 'newest'],
                  ['Oldest First', 'oldest'],
                  ['Most Recent Activity', 'recent_activity'],
                  ['By Post Title A-Z', 'post_title_asc'],
                  ['By Post Title Z-A', 'post_title_desc'],
                  ['By Author A-Z', 'author_asc'],
                  ['By Author Z-A', 'author_desc']
                ], params[:sort] || 'newest'),
                {},
                { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-list-ol mr-2 text-pink-500"></i>
            Results Per Page
          </label>
          <%= form.select :per_page, 
                options_for_select([
                  ['10 comments', '10'],
                  ['25 comments', '25'],
                  ['50 comments', '50'],
                  ['100 comments', '100']
                ], params[:per_page] || '25'),
                {},
                { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-layer-group mr-2 text-indigo-500"></i>
            Category
          </label>
          <%= form.select :category, 
                options_for_select([
                  ['All Categories', ''],
                  ['Technology', 'technology'],
                  ['General Discussion', 'general'],
                  ['Help & Support', 'support']
                ], params[:category]),
                {},
                { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-text-height mr-2 text-teal-500"></i>
            Content Length
          </label>
          <%= form.select :content_length, 
                options_for_select([
                  ['Any Length', ''],
                  ['Short (< 100 chars)', 'short'],
                  ['Medium (100-500 chars)', 'medium'],
                  ['Long (> 500 chars)', 'long']
                ], params[:content_length]),
                {},
                { class: "enhanced-form-select" } %>
        </div>
      </div>
      
      <!-- Search actions -->
      <div class="enhanced-search-actions">
        <div class="enhanced-search-buttons">
          <%= form.submit "ðŸ” Apply Filters", class: "enhanced-search-btn enhanced-search-btn-primary" %>
          <%= link_to "ðŸ—‘ï¸ Clear All", admin_comments_path, class: "enhanced-search-btn enhanced-search-btn-secondary" %>
          <button type="button" id="advanced-toggle" class="enhanced-search-btn enhanced-search-btn-secondary">
            <i class="fas fa-sliders-h mr-2"></i>
            Advanced Options
          </button>
        </div>
        
        <div class="enhanced-search-results">
          <% filter_params = ['search', 'author', 'post_title', 'date_range', 'sort', 'category', 'content_length'] %>
          <% has_filters = filter_params.any? { |key| params[key].present? } %>
          <% if has_filters %>
            <div class="flex items-center space-x-2 text-sm">
              <i class="fas fa-filter text-yellow-500"></i>
              <span class="text-slate-600">Active filters:</span>
              <div class="flex items-center space-x-1 flex-wrap">
                <% if params[:search].present? %>
                  <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium">
                    Search: "<%= params[:search] %>"
                  </span>
                <% end %>
                <% if params[:author].present? %>
                  <span class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">
                    Author: <%= params[:author] %>
                  </span>
                <% end %>
                <% if params[:post_title].present? %>
                  <span class="px-2 py-1 bg-purple-100 text-purple-700 rounded-full text-xs font-medium">
                    Post: <%= params[:post_title] %>
                  </span>
                <% end %>
                <% if params[:date_range].present? %>
                  <span class="px-2 py-1 bg-orange-100 text-orange-700 rounded-full text-xs font-medium">
                    Date: <%= params[:date_range].humanize %>
                  </span>
                <% end %>
                <% if params[:sort].present? %>
                  <span class="px-2 py-1 bg-indigo-100 text-indigo-700 rounded-full text-xs font-medium">
                    Sort: <%= params[:sort].humanize %>
                  </span>
                <% end %>
                <% if params[:category].present? %>
                  <span class="px-2 py-1 bg-cyan-100 text-cyan-700 rounded-full text-xs font-medium">
                    Category: <%= params[:category].humanize %>
                  </span>
                <% end %>
                <% if params[:content_length].present? %>
                  <span class="px-2 py-1 bg-teal-100 text-teal-700 rounded-full text-xs font-medium">
                    Length: <%= params[:content_length].humanize %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <div class="text-slate-500">
            <i class="fas fa-comments mr-1"></i>
            Showing <%= @comments.respond_to?(:count) ? @comments.count : @comments.size %> comments
            <% if ['search', 'author', 'post_title', 'date_range', 'category'].any? { |key| params[key].present? } %>
              <span class="text-blue-600 font-medium">(filtered)</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

  <!-- Include Enhanced Table Styles (if not already included) -->
  <%= render 'shared/enhanced_table_styles' unless @enhanced_styles_included %>
  <% @enhanced_styles_included = true %>

<!-- Enhanced Comments Table -->
<div class="enhanced-table-container mb-8 enhanced-fade-in">
  <div class="enhanced-table-header">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="enhanced-table-title">
          <i class="fas fa-comments" style="color: #f59e0b;"></i>
          Comments & Discussion Management
        </h2>
        <p class="enhanced-table-subtitle">Moderate forum discussions and community interactions - monitor content quality and user engagement</p>
      </div>
      <div class="flex items-center space-x-4">
        <div class="enhanced-stats-group">
          <div class="enhanced-stat-item">
            <i class="fas fa-comments"></i>
            <span><%= @stats[:total] %> Total Comments</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-calendar-day text-green-500"></i>
            <span><%= @stats[:today] %> Today</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-chart-line text-blue-500"></i>
            <span><%= @stats[:this_week] %> This Week</span>
          </div>
        </div>
      </div>
    </div>
  </div>
    
    <div class="overflow-x-auto">
      <table class="enhanced-table">
        <thead>
          <tr>
            <th><i class="fas fa-comment mr-2"></i>Comment Content & Details</th>
            <th><i class="fas fa-user mr-2"></i>Author & Info</th>
            <th class="hidden lg:table-cell"><i class="fas fa-newspaper mr-2"></i>Post & Context</th>
            <th class="text-right"><i class="fas fa-cogs mr-2"></i>Moderation</th>
          </tr>
        </thead>
        <tbody>
        <% @comments.each do |comment| %>
          <tr class="enhanced-fade-in">
            <td>
              <div class="enhanced-content-preview">
                <div class="enhanced-content-excerpt">
                  <%= truncate(strip_tags(comment.content), length: 150) %>
                </div>
                <div class="enhanced-content-meta">
                  <span class="enhanced-badge enhanced-badge-warning">
                    <i class="fas fa-comment mr-1"></i>
                    Comment
                  </span>
                  <span class="enhanced-stat-item">
                    <i class="fas fa-calendar-alt"></i>
                    <span><%= time_ago_in_words(comment.created_at) %> ago</span>
                  </span>
                  <span class="enhanced-stat-item">
                    <i class="fas fa-clock"></i>
                    <span><%= comment.created_at.strftime('%b %d, %Y') %></span>
                  </span>
                  <div class="md:hidden mt-2">
                    <span class="enhanced-badge enhanced-badge-info text-xs">
                      <i class="fas fa-newspaper mr-1"></i>
                      <%= link_to truncate(comment.post.title, length: 25), comment.post, 
                          class: "text-blue-600 hover:text-blue-800", target: "_blank" %>
                    </span>
                  </div>
                </div>
              </div>
            </td>
            <td>
              <div class="enhanced-user-info">
                <div class="flex-shrink-0">
                  <% if comment.user.avatar.attached? %>
                    <%= image_tag comment.user.avatar, class: "enhanced-avatar", alt: comment.user.username %>
                  <% else %>
                    <div class="enhanced-avatar-placeholder bg-gradient-to-br from-yellow-500 to-orange-600">
                      <%= comment.user.username&.first&.upcase || 'U' %>
                    </div>
                  <% end %>
                </div>
                <div class="enhanced-user-details">
                  <h4><%= comment.user.username %></h4>
                  <div class="enhanced-content-meta">
                    <span class="enhanced-badge enhanced-badge-secondary text-xs">
                      <i class="fas fa-user-tag mr-1"></i>
                      <%= comment.user.role.humanize %>
                    </span>
                    <span class="enhanced-stat-item text-xs">
                      <i class="fas fa-envelope"></i>
                      <span><%= comment.user.email %></span>
                    </span>
                  </div>
                </div>
              </div>
            </td>
            <td class="hidden lg:table-cell">
              <div class="enhanced-content-preview">
                <div class="enhanced-content-title">
                  <%= link_to comment.post, 
                      class: "text-blue-600 hover:text-blue-800 transition-colors", target: "_blank" do %>
                    <%= truncate(comment.post.title, length: 50) %>
                  <% end %>
                </div>
                <div class="enhanced-content-meta">
                  <span class="enhanced-badge enhanced-badge-info">
                    <i class="fas fa-layer-group mr-1"></i>
                    <%= comment.post.category.name %>
                  </span>
                  <span class="enhanced-stat-item">
                    <i class="fas fa-user"></i>
                    <span>by <%= comment.post.user.username %></span>
                  </span>
                  <span class="enhanced-stat-item">
                    <i class="fas fa-comments"></i>
                    <span><%= comment.post.comments.count %> comments</span>
                  </span>
                </div>
              </div>
            </td>
            <td class="text-right">
              <div class="enhanced-action-buttons">
                <%= link_to comment.post, class: "enhanced-action-btn enhanced-action-btn-view", target: "_blank", title: "View post" do %>
                  <i class="fas fa-external-link-alt"></i>
                <% end %>
                
                <%= link_to admin_comment_path(comment), method: :delete,
                    data: { confirm: "Are you sure you want to delete this comment?" },
                    class: "enhanced-action-btn enhanced-action-btn-danger",
                    title: "Delete comment" do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    
    <!-- Enhanced Table Footer -->
    <div class="enhanced-table-footer">
      <div class="enhanced-footer-stats">
        <div class="enhanced-stat-item">
          <i class="fas fa-comments text-yellow-500"></i>
          <span><%= @comments.respond_to?(:count) ? @comments.count : @comments.size %> Comments Displayed</span>
        </div>
        <div class="enhanced-stat-item">
          <i class="fas fa-calendar-day text-green-500"></i>
          <span><%= @stats[:today] %> Today</span>
        </div>
        <div class="enhanced-stat-item">
          <i class="fas fa-chart-line text-blue-500"></i>
          <span><%= @stats[:this_week] %> This Week</span>
        </div>
        <div class="enhanced-stat-item">
          <i class="fas fa-database text-gray-500"></i>
          <span><%= @stats[:total] %> Total</span>
        </div>
      </div>
      
      <% if @comments.respond_to?(:current_page) %>
        <div class="enhanced-pagination">
          <span class="enhanced-pagination-info">
            Page <%= @comments.current_page %> of <%= @comments.total_pages %>
          </span>
          <div class="enhanced-pagination-controls">
            <% if @comments.prev_page %>
              <%= link_to admin_comments_path(page: @comments.prev_page, search: params[:search]), 
                    class: "enhanced-pagination-btn enhanced-pagination-prev" do %>
                <i class="fas fa-chevron-left"></i> Previous
              <% end %>
            <% end %>
            <% if @comments.next_page %>
              <%= link_to admin_comments_path(page: @comments.next_page, search: params[:search]), 
                    class: "enhanced-pagination-btn enhanced-pagination-next" do %>
                Next <i class="fas fa-chevron-right"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="enhanced-pagination">
          <span class="enhanced-pagination-info">Page 1 of 1</span>
        </div>
      <% end %>
    </div>
  </div>
  </div>
</div>

<% if @comments.empty? %>
  <div class="text-center py-12">
    <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
      <i class="fas fa-comments text-gray-400 text-3xl"></i>
    </div>
    <h3 class="text-lg font-medium text-gray-900 mb-2">No comments found</h3>
    <p class="text-gray-500 mb-6">
      <% if params[:search].present? %>
        Try adjusting your search to see more results.
      <% else %>
        There are no comments in the system yet.
      <% end %>
    </p>
    <% unless params[:search].present? %>
      <%= link_to "View Posts", admin_posts_path, class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
