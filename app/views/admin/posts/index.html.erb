<% content_for :page_title, "Posts Management" %>
<% content_for :page_subtitle, "Manage forum posts, publications, and content moderation" %>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow-sm p-6 border">
    <div class="flex items-center">
      <div class="p-2 bg-blue-100 rounded-lg">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Total Posts</p>
        <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@total_posts) %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm p-6 border">
    <div class="flex items-center">
      <div class="p-2 bg-green-100 rounded-lg">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Published</p>
        <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@published_posts) %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm p-6 border">
    <div class="flex items-center">
      <div class="p-2 bg-yellow-100 rounded-lg">
        <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Drafts</p>
        <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@draft_posts) %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm p-6 border">
    <div class="flex items-center">
      <div class="p-2 bg-purple-100 rounded-lg">
        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Today</p>
        <p class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@posts_today) %></p>
      </div>
    </div>
  </div>
</div>

<!-- Filters and Search -->
<div class="admin-card mb-8">
  <div class="px-6 py-4 border-b border-gray-100">
    <h3 class="text-lg font-bold text-gray-900">Filter Posts</h3>
    <p class="text-sm text-gray-600">Search and filter posts by various criteria</p>
  </div>
  <div class="p-6">
    <%= form_with url: admin_posts_path, method: :get, local: true, class: "space-y-6" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Search -->
        <div class="admin-form-group">
          <label class="admin-form-label">Search Posts</label>
          <%= form.text_field :search, 
                placeholder: "Search by author, title, or content...", 
                value: params[:search],
                class: "admin-form-input" %>
        </div>
        
        <!-- Category Filter -->
        <div class="admin-form-group">
          <label class="admin-form-label">Category</label>
          <%= form.select :category_id, 
                options_from_collection_for_select(@categories, :id, :name, params[:category_id]),
                { prompt: "All Categories" },
                { class: "admin-form-input" } %>
        </div>
        
        <!-- Status Filter -->
        <div class="admin-form-group">
          <label class="admin-form-label">Status</label>
          <%= form.select :published, 
                options_for_select([["All Posts", ""], ["Published", "true"], ["Drafts", "false"]], params[:published]),
                {},
                { class: "admin-form-input" } %>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="flex items-center space-x-3 pt-4 border-t border-gray-100">
        <%= form.submit "Apply Filters", class: "admin-btn admin-btn-primary" %>
        <%= link_to "Clear All", admin_posts_path, class: "admin-btn admin-btn-secondary" %>
        <div class="flex-1"></div>
        <span class="text-sm text-gray-500">Showing <%= @posts.count %> posts</span>
      </div>
    <% end %>
  </div>
</div>

<!-- Posts Table -->
<div class="admin-table">
  <div class="px-6 py-4 border-b border-gray-200">
    <h3 class="text-lg font-medium text-gray-900">Posts</h3>
  </div>
  
  <table>
    <thead>
      <tr>
        <th>Post</th>
        <th>Author</th>
        <th>Category</th>
        <th>Status</th>
        <th>Comments</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <div class="max-w-xs">
              <p class="text-sm font-medium text-gray-900 truncate"><%= post.title %></p>
              <p class="text-sm text-gray-500 truncate"><%= truncate(strip_tags(post.body), length: 60) %></p>
            </div>
          </td>
          <td>
            <div class="flex items-center">
              <div class="flex-shrink-0 h-8 w-8">
                <% if post.user.avatar.present? %>
                  <%= image_tag post.user.avatar, class: "h-8 w-8 rounded-full object-cover" %>
                <% else %>
                  <div class="h-8 w-8 rounded-full bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
                    <span class="text-xs font-medium text-white"><%= post.user.username.first.upcase %></span>
                  </div>
                <% end %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900"><%= post.user.username %></p>
                <p class="text-sm text-gray-500"><%= post.user.role.humanize %></p>
              </div>
            </div>
          </td>
          <td>
            <span class="admin-badge admin-badge-info">
              <%= post.category.name %>
            </span>
          </td>
          <td>
            <% if post.published? %>
              <span class="admin-badge admin-badge-success">
                Published
              </span>
            <% else %>
              <span class="admin-badge admin-badge-warning">
                Draft
              </span>
            <% end %>
          </td>
          <td>
            <div class="text-sm text-gray-900"><%= post.comments.count %></div>
          </td>
          <td>
            <div class="text-sm text-gray-500"><%= time_ago_in_words(post.created_at) %> ago</div>
          </td>
          <td>
            <div class="flex items-center space-x-2">
              <%= link_to admin_post_path(post), class: "text-blue-600 hover:text-blue-900 transition-colors" do %>
                <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
              <% end %>
              
              <%= link_to edit_admin_post_path(post), class: "text-indigo-600 hover:text-indigo-900 transition-colors" do %>
                <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
              
              <%= link_to toggle_published_admin_post_path(post), method: :patch, 
                    class: "text-#{post.published? ? 'yellow' : 'green'}-600 hover:text-#{post.published? ? 'yellow' : 'green'}-900 transition-colors",
                    title: post.published? ? 'Unpublish' : 'Publish',
                    data: { confirm: "Are you sure you want to #{post.published? ? 'unpublish' : 'publish'} this post?" } do %>
                <% if post.published? %>
                  <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
                  </svg>
                <% else %>
                  <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                <% end %>
              <% end %>
              
              <%= link_to admin_post_path(post), method: :delete, 
                    class: "text-red-600 hover:text-red-900 transition-colors",
                    data: { confirm: "Are you sure you want to delete this post? This action cannot be undone." } do %>
                <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <!-- Pagination -->
  <div class="px-6 py-4 border-t border-gray-200">
    <%= paginate @posts %>
  </div>
</div>

<% if @posts.empty? %>
  <div class="text-center py-12">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900">No posts found</h3>
    <p class="mt-1 text-sm text-gray-500">
      <% if params[:search].present? || params[:category_id].present? || params[:published].present? %>
        Try adjusting your filters to see more results.
      <% else %>
        There are no posts in the system yet.
      <% end %>
    </p>
  </div>
<% end %>