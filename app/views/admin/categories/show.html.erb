<% content_for :page_title, @category.name %>

<div class="space-y-8">
  <!-- Modern Page Header -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-6">
        <% if @category.image.attached? %>
          <%= image_tag @category.image, class: "w-20 h-20 rounded-2xl object-cover shadow-lg" %>
        <% elsif @category.color.present? %>
          <div class="w-20 h-20 rounded-2xl shadow-lg flex items-center justify-center" style="background: linear-gradient(135deg, <%= @category.color %>, <%= @category.color %>dd);">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
          </div>
        <% else %>
          <div class="w-20 h-20 rounded-2xl shadow-lg bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
          </div>
        <% end %>
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @category.name %></h1>
          <p class="text-gray-600 text-lg">Category overview and management</p>
          <div class="flex items-center space-x-4 mt-3">
            <div class="flex items-center text-sm text-green-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
              <%= pluralize(@category.posts.count, 'post') %>
            </div>
            <div class="flex items-center text-sm text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Created <%= time_ago_in_words(@category.created_at) %> ago
            </div>
          </div>
        </div>
      </div>
      <div class="flex space-x-3">
        <%= link_to admin_categories_path, class: "flex items-center px-4 py-2 text-gray-600 bg-gray-100 hover:bg-gray-200 rounded-xl transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Categories
        <% end %>
        <%= link_to edit_admin_category_path(@category), class: "flex items-center px-4 py-2 text-white bg-green-600 hover:bg-green-700 rounded-xl transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit Category
        <% end %>
      </div>
    </div>
  </div>

  <!-- Category Information Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Statistics Cards -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm text-gray-600">Total Posts</p>
          <p class="text-2xl font-bold text-gray-900"><%= @category.posts.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-gradient-to-br from-green-600 to-green-700 rounded-xl flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm text-gray-600">Total Comments</p>
          <p class="text-2xl font-bold text-gray-900"><%= @category.posts.joins(:comments).count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm text-gray-600">Last Activity</p>
          <p class="text-sm font-semibold text-gray-900">
            <% latest_post = @category.posts.order(created_at: :desc).first %>
            <% if latest_post %>
              <%= time_ago_in_words(latest_post.created_at) %> ago
            <% else %>
              No activity
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Category Details -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="px-8 py-6 border-b border-gray-100">
      <h3 class="text-xl font-bold text-gray-900 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Category Details
      </h3>
    </div>
    <div class="p-8">
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Category Name</dt>
          <dd class="mt-2 text-lg text-gray-900 font-medium"><%= @category.name %></dd>
        </div>

        <% if @category.color.present? %>
          <div>
            <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Theme Color</dt>
            <dd class="mt-2 flex items-center">
              <div class="w-6 h-6 rounded-full mr-3 border-2 border-gray-200" style="background-color: <%= @category.color %>"></div>
              <span class="text-gray-900 font-mono"><%= @category.color %></span>
            </dd>
          </div>
        <% end %>

        <% if @category.description.present? %>
          <div class="md:col-span-2">
            <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Description</dt>
            <dd class="mt-2 text-gray-900 leading-relaxed"><%= simple_format(@category.description) %></dd>
          </div>
        <% end %>

        <div>
          <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Created Date</dt>
          <dd class="mt-2 text-gray-900"><%= @category.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>

        <div>
          <dt class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Last Updated</dt>
          <dd class="mt-2 text-gray-900"><%= @category.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Recent Posts Section -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="px-8 py-6 border-b border-gray-100">
      <div class="flex items-center justify-between">
        <h3 class="text-xl font-bold text-gray-900 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          Recent Posts in this Category
        </h3>
        <% if @category.posts.count > 10 %>
          <%= link_to admin_posts_path(category: @category.id), class: "text-sm text-green-600 hover:text-green-700 font-medium" do %>
            View all <%= @category.posts.count %> posts â†’
          <% end %>
        <% end %>
      </div>
    </div>
    
    <% if @posts.any? %>
      <div class="divide-y divide-gray-100">
        <% @posts.each do |post| %>
          <div class="p-6 hover:bg-gray-50 transition-colors">
            <div class="flex items-start justify-between">
              <div class="flex-1 min-w-0">
                <div class="flex items-center space-x-3 mb-2">
                  <% if post.user.avatar.attached? %>
                    <%= image_tag post.user.avatar, class: "w-8 h-8 rounded-full object-cover" %>
                  <% else %>
                    <div class="w-8 h-8 rounded-full bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center">
                      <span class="text-xs font-bold text-white"><%= post.user.username&.first&.upcase || 'U' %></span>
                    </div>
                  <% end %>
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= post.user.username %></p>
                    <p class="text-xs text-gray-500"><%= post.created_at.strftime("%b %d, %Y at %I:%M %p") %></p>
                  </div>
                </div>
                <h4 class="text-lg font-semibold text-gray-900 mb-2">
                  <%= link_to post.title, admin_post_path(post.id), class: "hover:text-green-600 transition-colors" %>
                </h4>
                <div class="flex items-center space-x-4 text-sm text-gray-500">
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                    <%= pluralize(post.comments.count, 'comment') %>
                  </div>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <%= time_ago_in_words(post.created_at) %> ago
                  </div>
                </div>
              </div>
              <div class="flex-shrink-0 ml-6">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold
                  <%= post.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= post.published? ? 'âœ… Published' : 'ðŸŸ¡ Draft' %>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 rounded-2xl flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
        </div>
        <h4 class="text-lg font-semibold text-gray-900 mb-2">No posts yet</h4>
        <p class="text-gray-600 mb-6">This category doesn't have any posts yet. Posts will appear here once they're created.</p>
        <%= link_to new_admin_post_path, class: "inline-flex items-center px-4 py-2 text-white bg-green-600 hover:bg-green-700 rounded-xl transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Create First Post
        <% end %>
      </div>
    <% end %>
  </div>
</div>