<!-- Profile Dashboard Sidebar -->
<div class="w-64 bg-gradient-to-b from-green-50 to-green-100 shadow-lg rounded-2xl border border-green-200 p-6 sticky top-6">
  <!-- Profile Header -->
  <div class="text-center mb-6 pb-4 border-b border-green-200">
    <% avatar_url = safe_avatar_url(@user) %>
    <% if avatar_url.present? %>
      <%= image_tag avatar_url, class: "w-16 h-16 rounded-full border-4 border-green-400 shadow-lg mx-auto mb-3 object-cover", style: "width: 64px; height: 64px; max-width: 64px; max-height: 64px;" %>
    <% else %>
      <div class="w-16 h-16 rounded-full bg-green-600 flex items-center justify-center mx-auto mb-3 shadow-lg">
        <span class="text-white font-bold text-lg"><%= @user.username&.first&.upcase || 'U' %></span>
      </div>
    <% end %>
    <h3 class="font-semibold text-gray-800 text-lg"><%= @user.username || "User" %></h3>
    <p class="text-sm text-gray-600"><%= truncate(@user.email, length: 25) %></p>
  </div>

  <!-- Navigation Menu -->
  <nav class="space-y-1">
    <!-- Dashboard Overview -->
    <div class="mb-4">
      <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Dashboard</h4>
      
      <%= link_to user_path(@user), class: "flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-colors duration-200 #{'bg-green-200 text-green-800' if controller_name == 'users' && action_name == 'show'} hover:bg-green-200 hover:text-green-800 group" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <span>Profile Overview</span>
      <% end %>
    </div>

    <!-- Content Management -->
    <div class="mb-4">
      <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Content</h4>
      
      <%= link_to posts_path(user: @user), class: "flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-colors duration-200 #{'bg-green-200 text-green-800' if controller_name == 'posts' && action_name == 'index' && params[:user].present?} hover:bg-green-200 hover:text-green-800 group" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <span>My Posts</span>
        <% if @user == current_user && @user.persisted? && @user.posts.count > 0 %>
          <span class="ml-auto bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded-full"><%= @user.posts.count %></span>
        <% end %>
      <% end %>
      
      <%= link_to new_post_path, class: "flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-colors duration-200 #{'bg-green-200 text-green-800' if controller_name == 'posts' && ['new', 'create', 'edit', 'update'].include?(action_name)} hover:bg-green-200 hover:text-green-800 group" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <span>Create New Post</span>
      <% end %>
    </div>

    <!-- Notifications & Activity -->
    <div class="mb-4">
      <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Activity</h4>
      
      <%= link_to notifications_path, class: "flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-colors duration-200 #{'bg-green-200 text-green-800' if controller_name == 'notifications'} hover:bg-green-200 hover:text-green-800 group" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
        <span>Notifications</span>
        <% if @user == current_user && @user.persisted? %>
          <% unread_count = current_user.notifications&.unread&.count || 0 %>
          <% if unread_count > 0 %>
            <span id="sidebar-notification-badge" class="ml-auto bg-red-100 text-red-800 text-xs font-medium px-2 py-1 rounded-full"><%= unread_count %></span>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <!-- Settings & Account -->
    <% if @user == current_user %>
      <div class="mb-4">
        <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Settings</h4>
        
        <%= link_to edit_user_registration_path, class: "flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-colors duration-200 #{'bg-green-200 text-green-800' if controller_name == 'registrations' && ['edit', 'update'].include?(action_name)} hover:bg-green-200 hover:text-green-800 group" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>Account Settings</span>
        <% end %>

        <% if @user.staff? %>
          <%= link_to admin_users_path, class: "flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-green-200 hover:text-green-800 transition-colors duration-200 group" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <span>Admin Panel</span>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <!-- Quick Stats -->
    <div class="mt-6 pt-4 border-t border-green-200">
      <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Quick Stats</h4>
      
      <div class="space-y-2">
        <div class="flex justify-between text-sm">
          <span class="text-gray-600">Posts</span>
          <span class="font-semibold text-green-800"><%= @user.persisted? ? @user.posts.count : 0 %></span>
        </div>
        
        <div class="flex justify-between text-sm">
          <span class="text-gray-600">Comments</span>
          <span class="font-semibold text-green-800"><%= @user.persisted? ? (@user.comments.count rescue 0) : 0 %></span>
        </div>
        
        <div class="flex justify-between text-sm">
          <span class="text-gray-600">Joined</span>
          <span class="font-semibold text-green-800"><%= @user.created_at ? @user.created_at.strftime("%b %Y") : "Recently" %></span>
        </div>
      </div>
    </div>

    <!-- Sign Out (for current user only) -->
    <% if @user == current_user %>
      <div class="mt-6 pt-4 border-t border-red-200">
        <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex items-center justify-center px-3 py-2 text-sm font-medium text-red-600 bg-red-50 rounded-lg hover:bg-red-100 hover:text-red-700 transition-colors duration-200 group" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-red-500 group-hover:text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
          <span>Sign Out</span>
        <% end %>
      </div>
    <% end %>
  </nav>
</div>