<div class="flex justify-center items-center min-h-screen bg-gray-50">
  <div class="w-full max-w-2xl bg-white p-8 rounded-xl shadow-lg border border-gray-100">
    <h2 class="text-2xl font-heading font-bold mb-6 text-gray-800 border-b pb-3 border-naija-green/20">
      <%= post.new_record? ? "Create a New Post" : "Edit Your Post" %>
    </h2>
    <%= form_with(model: post, class: "space-y-5", multipart: true) do |form| %>
      <% if post.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 rounded-md mb-6">
          <h2 class="font-semibold"><%= pluralize(post.errors.count, "error") %> prevented this post from being saved:</h2>
          <ul class="mt-2 list-disc list-inside">
            <% post.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-4">
        <%= form.label :title, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.text_field :title, class: "mt-1 block w-full rounded-md border border-gray-300 px-4 py-3 shadow-sm focus:border-naija-green focus:ring focus:ring-naija-green/20 transition-colors duration-200" %>
      </div>
      <div class="mb-4">
        <%= form.label :body, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.text_area :body, rows: 6, class: "mt-1 block w-full rounded-md border border-gray-300 px-4 py-3 shadow-sm focus:border-naija-green focus:ring focus:ring-naija-green/20 transition-colors duration-200" %>
        <p class="text-xs text-gray-500 mt-1">Share your thoughts, ideas or questions with the community</p>
      </div>
      <div class="mb-4">
        <%= form.label :category_id, "Category", class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.collection_select :category_id, Category.all, :id, :name, 
            { prompt: "Select a Category" }, 
            { class: "mt-1 block w-full rounded-md border border-gray-300 px-4 py-3 shadow-sm focus:border-naija-green focus:ring focus:ring-naija-green/20 transition-colors duration-200" } %>
      </div>
      <div class="mb-4">
        <label for="post_tag_list" class="block text-gray-700 font-semibold mb-2">Tags (comma-separated)</label>
        <input type="text" name="post[tag_list]" id="post_tag_list" value="<%= @post.tag_list %>" 
               class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-3 shadow-sm focus:border-naija-green focus:ring focus:ring-naija-green/20 transition-colors duration-200">
        <p class="text-xs text-gray-500 mt-1">Example: technology, question, discussion</p>
      </div>
      <div class="mb-6">
        <%= form.label :images, class: "block text-gray-700 font-semibold mb-2" %>
        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md hover:border-naija-green/60 transition-colors duration-200">
          <div class="space-y-1 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
              <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <div class="flex justify-center text-sm text-gray-600">
              <label for="post_images" class="relative cursor-pointer bg-white rounded-md font-medium text-naija-green hover:text-naija-green/80 focus-within:outline-none">
                <span>Add images to your post</span>
                <%= form.file_field :images, multiple: true, class: "sr-only", id: "post_images" %>
              </label>
            </div>
            <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
          </div>
        </div>
      </div>
      <div class="flex items-center justify-between gap-4">
        <a href="<%= posts_path %>" class="py-3 px-6 rounded-md border border-gray-300 text-green-700 font-medium hover:bg-gray-50 transition-colors duration-200">
          Cancel
        </a>
        <%= form.submit post.new_record? ? "Create Post" : "Update Post", 
            class: "flex-1 bg-naija-green hover:bg-naija-green/90 text-green font-semibold py-3 px-6 rounded-md shadow-md hover:shadow-lg transform transition-all duration-200 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
