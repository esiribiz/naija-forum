<% content_for :page_title, "Comments Management" %>
<% content_for :page_subtitle, "Manage and moderate forum comments" %>

<!-- Enhanced Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <!-- Total Comments -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
      <i class="fas fa-comments"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@stats[:total]) %></div>
    <div class="stat-label">Total Comments</div>
    <div class="stat-change positive mt-2">
      <i class="fas fa-arrow-up mr-1"></i>
      +<%= @stats[:today] %> today
    </div>
    <div class="stat-trend mt-2">
      <div class="w-full bg-gray-200 rounded-full h-1.5">
        <div class="bg-yellow-500 h-1.5 rounded-full transition-all duration-1000" style="width: <%= (@stats[:today].to_f / [@stats[:total], 1].max * 100).round(1) %>%"></div>
      </div>
    </div>
  </div>

  <!-- Today's Comments -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
      <i class="fas fa-calendar-day"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@stats[:today]) %></div>
    <div class="stat-label">Today</div>
    <div class="stat-change positive mt-2">
      <i class="fas fa-clock mr-1"></i>
      Last 24 hours
    </div>
  </div>

  <!-- This Week -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #1e40af);">
      <i class="fas fa-chart-line"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@stats[:this_week]) %></div>
    <div class="stat-label">This Week</div>
    <div class="stat-change positive mt-2">
      <i class="fas fa-trending-up mr-1"></i>
      Weekly activity
    </div>
    <div class="stat-trend mt-2">
      <div class="w-full bg-gray-200 rounded-full h-1.5">
        <div class="bg-blue-500 h-1.5 rounded-full transition-all duration-1000" style="width: <%= (@stats[:this_week].to_f / [@stats[:total], 1].max * 100).round(1) %>%"></div>
      </div>
    </div>
  </div>
</div>

<!-- Search and Filters -->
<div class="card mb-8">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-search mr-2" style="color: #f59e0b;"></i>
      Search Comments
    </h3>
    <p class="card-subtitle">Find comments by content, author, or post</p>
  </div>
  <div class="card-body">
    <%= form_with url: admin_comments_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
      <div class="flex-1 min-w-0">
        <%= form.text_field :search, placeholder: "Search by content, author, or post...", value: params[:search], 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-all" %>
      </div>
      <div class="flex gap-2">
        <%= form.submit "Search", class: "btn btn-primary btn-sm" %>
        <%= link_to "Clear", admin_comments_path, class: "btn btn-secondary btn-sm" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Comments Table -->
<div class="table-container mb-8">
  <div class="card-header">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="card-title">
          <i class="fas fa-comments mr-2" style="color: #f59e0b;"></i>
          All Comments
        </h3>
        <p class="card-subtitle mt-1">Manage and moderate forum discussions</p>
      </div>
    </div>
  </div>
  
  <div class="overflow-x-auto">
    <table class="table admin-table">
      <thead>
        <tr>
          <th>Comment Content</th>
          <th>Author</th>
          <th class="hidden md:table-cell">Post</th>
          <th class="hidden lg:table-cell">Date</th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td>
              <div class="space-y-2">
                <div class="text-gray-900 line-clamp-3">
                  <%= truncate(strip_tags(comment.content), length: 120) %>
                </div>
                <div class="md:hidden flex items-center space-x-2">
                  <span class="text-xs text-gray-500">on</span>
                  <%= link_to truncate(comment.post.title, length: 30), comment.post, 
                      class: "text-blue-600 hover:text-blue-800 text-xs font-medium", target: "_blank" %>
                </div>
              </div>
            </td>
            <td>
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <% if comment.user.avatar.attached? %>
                    <%= image_tag comment.user.avatar, class: "admin-avatar" %>
                  <% else %>
                    <div class="admin-avatar bg-gradient-to-br from-yellow-500 to-orange-600 flex items-center justify-center">
                      <span class="text-sm font-bold text-white"><%= comment.user.username&.first&.upcase || 'U' %></span>
                    </div>
                  <% end %>
                </div>
                <div>
                  <div class="font-medium text-gray-900"><%= comment.user.username %></div>
                  <div class="text-sm text-gray-500"><%= comment.user.role.humanize %></div>
                </div>
              </div>
            </td>
            <td class="hidden md:table-cell">
              <div class="space-y-1">
                <%= link_to comment.post, 
                    class: "text-blue-600 hover:text-blue-800 font-medium line-clamp-2", target: "_blank" do %>
                  <%= truncate(comment.post.title, length: 60) %>
                <% end %>
                <div class="text-xs text-gray-500">
                  in <span class="font-medium"><%= comment.post.category.name %></span>
                </div>
              </div>
            </td>
            <td class="hidden lg:table-cell">
              <div class="text-sm text-gray-900"><%= time_ago_in_words(comment.created_at) %> ago</div>
              <div class="text-xs text-gray-500"><%= comment.created_at.strftime('%b %d, %Y') %></div>
            </td>
            <td class="text-right">
              <div class="flex items-center justify-end space-x-2">
                <%= link_to comment.post, class: "btn btn-secondary btn-sm", target: "_blank", title: "View post" do %>
                  <i class="fas fa-external-link-alt"></i>
                <% end %>
                <%= link_to admin_comment_path(comment), method: :delete,
                    data: { confirm: "Are you sure you want to delete this comment?" },
                    class: "btn btn-danger btn-sm",
                    title: "Delete comment" do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  
    <!-- Table Footer -->
    <div class="card-footer">
      <div class="flex items-center justify-between">
        <div class="flex items-center text-sm text-gray-600">
          <span>Showing <%= @comments.respond_to?(:count) ? @comments.count : @comments.size %> comments</span>
        </div>
        <div class="flex items-center space-x-2">
          <% if @comments.respond_to?(:current_page) %>
            <div class="pagination-info text-sm text-gray-500">
              Page <%= @comments.current_page %> of <%= @comments.total_pages %>
            </div>
            <div class="pagination-controls flex space-x-2">
              <% if @comments.prev_page %>
                <%= link_to "Previous", admin_comments_path(page: @comments.prev_page, search: params[:search]), 
                      class: "btn btn-secondary btn-sm" %>
              <% end %>
              <% if @comments.next_page %>
                <%= link_to "Next", admin_comments_path(page: @comments.next_page, search: params[:search]), 
                      class: "btn btn-primary btn-sm" %>
              <% end %>
            </div>
          <% else %>
            <span class="text-sm text-gray-500">Page 1 of 1</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @comments.empty? %>
  <div class="text-center py-12">
    <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
      <i class="fas fa-comments text-gray-400 text-3xl"></i>
    </div>
    <h3 class="text-lg font-medium text-gray-900 mb-2">No comments found</h3>
    <p class="text-gray-500 mb-6">
      <% if params[:search].present? %>
        Try adjusting your search to see more results.
      <% else %>
        There are no comments in the system yet.
      <% end %>
    </p>
    <% unless params[:search].present? %>
      <%= link_to "View Posts", admin_posts_path, class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
