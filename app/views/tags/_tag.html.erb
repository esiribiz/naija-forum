<div id="<%= dom_id tag %>" class="tag-item">
  <div class="tag-name">
    <strong>Name:</strong>
    <%= tag.name %>
  </div>

  <div class="tag-actions">
    <%= link_to "Show this tag", tag, class: "btn btn-info" %>
    <%= link_to "Edit this tag", edit_tag_path(tag), class: "btn btn-warning" %>
    <%= button_to "Delete this tag", tag, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
  </div>
</div>

