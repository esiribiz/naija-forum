<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-4 border-b flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-800">Notifications</h1>
      <div class="space-x-2">
        <% if @notifications.unread.any? %>
          <%= button_to mark_all_as_read_notifications_path, 
              method: :patch, 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            Mark all as read
          <% end %>
        <% end %>
        <%= button_to clear_notifications_path, 
            method: :delete, 
            data: { confirm: "Are you sure you want to clear all notifications?" },
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
          Clear all
        <% end %>
      </div>
    </div>
    
    <div class="divide-y divide-gray-200">
      <div class="p-4">
        <div class="mb-4">
          <h2 class="text-lg font-semibold text-gray-800">Unread Notifications</h2>
        </div>
        <%= render 'notifications/notifications', notifications: @notifications.unread %>
      </div>
      
      <div class="p-4">
        <div class="mb-4">
          <h2 class="text-lg font-semibold text-gray-800">Read Notifications</h2>
        </div>
        <%= render 'notifications/notifications', notifications: @notifications.read %>
      </div>
    </div>
    
    <% if @notifications.any? %>
      <div class="p-4 border-t text-center">
        <%= paginate @notifications, window: 2 %>
      </div>
    <% end %>
  </div>
</div>
