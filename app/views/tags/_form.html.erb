<div class="max-w-lg mx-auto bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
      </svg>
      <%= tag.new_record? ? "🏷️ Create Tag" : "✏️ Edit Tag" %>
    </h2>
    <p class="text-gray-600 mt-2">Tags help users find and organize related content</p>
  </div>

  <%= form_with(model: tag, class: "space-y-6") do |form| %>
    <% if tag.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-xl p-6">
        <div class="flex items-center mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
          <h3 class="font-semibold text-red-800"><%= pluralize(tag.errors.count, "error") %> prevented this tag from being saved:</h3>
        </div>
        <ul class="list-disc list-inside text-red-700 space-y-1">
          <% tag.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-3">
      <%= form.label :name, class: "block text-sm font-semibold text-gray-900" do %>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
          Tag Name
        </div>
      <% end %>
      <%= form.text_field :name,
            placeholder: "Enter tag name (e.g., javascript, tutorial, beginner)",
            class: "mt-2 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" %>
      <div class="bg-green-50 border border-green-200 rounded-lg p-3 mt-2">
        <div class="flex items-start">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-green-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="text-xs text-green-800">
            <p class="font-medium mb-1">📌 Tag Guidelines:</p>
            <ul class="space-y-0.5">
              <li>• Use lowercase letters and hyphens</li>
              <li>• Be specific and descriptive</li>
              <li>• Avoid duplicating existing tags</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
      <%= link_to tags_path, class: "flex items-center justify-center px-6 py-3 border border-gray-300 rounded-xl text-gray-700 font-medium hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
        Cancel
      <% end %>
      
      <%= form.submit tag.new_record? ? "🏷️ Create Tag" : "💾 Update Tag",
            class: "flex items-center justify-center flex-1 px-6 py-3 border border-transparent rounded-xl text-white font-semibold bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transform transition-all duration-200 hover:scale-[1.02] shadow-lg hover:shadow-xl" %>
    </div>
  <% end %>
</div>

