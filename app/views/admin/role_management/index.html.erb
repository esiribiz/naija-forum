<!-- Search and Filter Section -->
<div class="card mb-8">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-search mr-2" style="color: #ef4444;"></i>
      Search & Filter Users
    </h3>
    <p class="card-subtitle">Find users by name, email, role, or other criteria</p>
  </div>
  <div class="card-body">
    <form method="get" action="<%= admin_role_management_path %>" class="space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4">
        <div class="lg:col-span-2">
          <input type="text" name="search" value="<%= params[:search] %>" placeholder="Search users..." 
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all">
        </div>
        <div>
          <select name="role" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all">
            <option value="">All Roles</option>
            <option value="admin" <%= 'selected' if params[:role] == 'admin' %>>Admin</option>
            <option value="moderator" <%= 'selected' if params[:role] == 'moderator' %>>Moderator</option>
            <option value="user" <%= 'selected' if params[:role] == 'user' %>>User</option>
          </select>
        </div>
        <div>
          <select name="date_range" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all">
            <option value="">All Time</option>
            <option value="week" <%= 'selected' if params[:date_range] == 'week' %>>Last 7 days</option>
            <option value="month" <%= 'selected' if params[:date_range] == 'month' %>>Last 30 days</option>
            <option value="quarter" <%= 'selected' if params[:date_range] == 'quarter' %>>Last 3 months</option>
            <option value="year" <%= 'selected' if params[:date_range] == 'year' %>>Last year</option>
          </select>
        </div>
        <div class="flex space-x-2">
          <button type="submit" class="btn btn-primary btn-sm">Search</button>
          <%= link_to "Clear", admin_role_management_path, class: "btn btn-secondary btn-sm" %>
        </div>
      </div>
    </form>
  </div>
</div>

