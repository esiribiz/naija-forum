                      <i class="fas fa-flag text-lg mr-3"></i>
                      <span class="font-medium">Moderate</span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- User profile menu -->
            <div class="relative">
              <button id="user-menu-toggle" class="flex items-center space-x-3 p-2 text-slate-300 hover:text-white hover:bg-slate-700 rounded-lg transition-all duration-200">
                <% if current_user&.avatar&.attached? %>
                  <%= image_tag current_user.avatar, class: "w-8 h-8 rounded-lg object-cover border-2 border-slate-600" %>
                <% else %>
                  <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center border-2 border-slate-600">
                    <span class="text-white font-bold text-sm"><%= current_user&.username&.first&.upcase || 'A' %></span>
                  </div>
                <% end %>
                <div class="hidden sm:block text-left">
                  <p class="text-sm font-semibold text-white"><%= current_user&.username || 'Admin' %></p>
                  <p class="text-xs text-slate-300">Administrator</p>
                </div>
                <i class="fas fa-chevron-down text-xs ml-2"></i>
              </button>
              
              <!-- User dropdown menu -->
              <div id="user-menu" class="absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-2xl border border-slate-200 z-50 transform opacity-0 scale-95 transition-all duration-200 pointer-events-none">
                <div class="p-2">
