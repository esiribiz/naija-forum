<% content_for :page_title do %>
  Edit User
<% end %>
<% content_for :page_subtitle do %>
  Manage role and status for <%= @user.username %>
<% end %>

<div class="min-h-[60vh] bg-gradient-to-br from-gray-50 to-gray-100 py-8 px-4 sm:px-6 lg:px-8 rounded-2xl">
  <div class="max-w-4xl mx-auto">
    <!-- Header Section (mirrors Create Post) -->
    <div class="text-center mb-8">
      <div class="mx-auto h-16 w-16 bg-gradient-to-r from-green-500 to-green-600 rounded-full flex items-center justify-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Edit User</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Update user details and manage roles. Ensure changes align with your moderation policies.
      </p>
    </div>

    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8 lg:p-10">
      <%= form_with(model: [:admin, @user], local: true, class: "space-y-8") do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-xl p-6 mb-2">
            <div class="flex items-center mb-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
              </svg>
              <h3 class="font-semibold text-red-800"><%= pluralize(@user.errors.count, "error") %> prevented this user from being saved:</h3>
            </div>
            <ul class="list-disc list-inside text-red-700 space-y-1">
              <% @user.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Username & Email (read-only) -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div class="space-y-3">
            <label class="block text-sm font-semibold text-gray-900">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Username
              </div>
            </label>
            <div class="bg-gray-50 border border-gray-200 rounded-xl px-4 py-3">
              <div class="flex items-center">
                <span class="text-gray-800 font-medium">@<%= @user.username %></span>
                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-200 text-gray-800">ğŸ”’ Read-only</span>
              </div>
            </div>
            <p class="text-xs text-gray-500 mt-1">ğŸš« Username cannot be changed for security reasons</p>
          </div>

          <div class="space-y-3">
            <label class="block text-sm font-semibold text-gray-900">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                </svg>
                Email Address
              </div>
            </label>
            <div class="bg-gray-50 border border-gray-200 rounded-xl px-4 py-3">
              <div class="flex items-center">
                <span class="text-gray-800 font-medium"><%= @user.email %></span>
                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-200 text-gray-800">ğŸ”’ Read-only</span>
              </div>
            </div>
            <p class="text-xs text-gray-500 mt-1">âœ‰ï¸ Email changes must be done through user profile</p>
          </div>
        </div>

        <!-- Role Selection -->
        <% if current_user_can?(:manage_user_roles) %>
          <div class="space-y-3">
            <%= form.label :role, class: "block text-sm font-semibold text-gray-900" do %>
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
                User Role
              </div>
            <% end %>
            <%= form.select :role,
                          options_for_select([["ğŸ‘¤ User", "user"], ["ğŸ›¡ï¸ Admin", "admin"], ["ğŸ”§ Moderator", "moderator"]], @user.role),
                          {},
                          { class: "mt-2 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm bg-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" } %>
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 mt-2">
              <div class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="text-xs text-blue-800">
                  <p class="font-medium mb-1">ğŸ”‘ Role Permissions:</p>
                  <p>â€¢ <strong>User:</strong> Create posts & comments â€¢ <strong>Moderator:</strong> Moderate content â€¢ <strong>Admin:</strong> Full access</p>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <div class="space-y-3">
            <label class="block text-sm font-semibold text-gray-900">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              Current Role
            </div>
            </label>
            <div class="bg-gray-50 border border-gray-200 rounded-xl px-4 py-3">
              <div class="flex items-center justify-between">
                <span class="text-gray-800 font-medium">
                  <% case @user.role %>
                  <% when 'admin' %>
                    ğŸ›¡ï¸ Administrator
                  <% when 'moderator' %>
                    ğŸ”§ Moderator  
                  <% else %>
                    ğŸ‘¤ User
                  <% end %>
                </span>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-200 text-gray-800">ğŸ”’ Read-only</span>
              </div>
            </div>
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3 mt-2">
              <div class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
                </svg>
                <div class="text-xs text-yellow-800">
                  <p class="font-medium mb-1">âš ï¸ Role Management Restricted:</p>
                  <p>Only administrators can modify user roles. As a moderator, you can view user information but cannot change their privileges.</p>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-8 border-t border-gray-200">
          <%= link_to admin_users_path, class: "flex items-center justify-center px-6 py-3 border border-gray-300 rounded-xl text-gray-700 font-medium hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Cancel
          <% end %>

          <%= form.submit "Save Changes",
                class: "flex items-center justify-center flex-1 px-6 py-3 border border-transparent rounded-xl text-white font-semibold bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transform transition-all duration-200 hover:scale-[1.02] shadow-lg hover:shadow-xl" %>
        </div>
      <% end %>
    </div>

    <!-- Guidance Section -->
    <div class="mt-8 bg-gradient-to-r from-green-50 to-green-100 border border-green-200 rounded-xl p-6">
      <h3 class="text-lg font-semibold text-green-900 mb-4 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
        </svg>
        ğŸ’¡ Role & Access Tips
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-green-800">
        <div class="space-y-2">
          <p>â€¢ <strong>Principle of least privilege:</strong> Grant the minimal role required.</p>
          <p>â€¢ <strong>Audit regularly:</strong> Review admin and moderator roles periodically.</p>
          <p>â€¢ <strong>Suspensions:</strong> Use suspend/ban actions for policy violations.</p>
        </div>
        <div class="space-y-2">
          <p>â€¢ <strong>Transparency:</strong> Document role changes for accountability.</p>
          <p>â€¢ <strong>Security:</strong> Encourage strong passwords and 2FA where possible.</p>
          <p>â€¢ <strong>Communication:</strong> Notify users when their role changes.</p>
        </div>
      </div>
    </div>
  </div>
</div>
