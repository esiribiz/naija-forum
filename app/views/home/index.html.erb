<div class="flex min-h-screen p-6 gap-6 bg-gray-50">

  <div class="w-full">
    <!-- Enhanced Nigerian Themed Header with Flag Colors -->
    <div class="bg-gradient-to-r from-green-600 via-green-700 to-green-800 text-white p-8 rounded-xl mb-8 shadow-lg relative overflow-hidden border border-green-400">
      <!-- Nigerian flag-inspired decorative elements -->
      <div class="absolute top-0 right-0 w-40 h-40 bg-white opacity-10 rounded-full -mr-10 -mt-10"></div>
      <div class="absolute bottom-0 left-0 w-32 h-32 bg-white opacity-10 rounded-full -ml-8 -mb-8"></div>
      <div class="absolute bottom-20 right-20 w-16 h-16 bg-white opacity-10 rounded-full"></div>
      
      <div class="relative z-10 flex justify-between items-center">
        <div>
          <h1 class="text-4xl font-bold mb-3 flex items-center">
            <span class="text-white text-opacity-90">You are welcome to</span>
            <span class="text-white ml-2 relative">
              This Forum
              <span class="absolute bottom-0 left-0 h-1 w-full bg-white bg-opacity-50 rounded"></span>
            </span>
          </h1>
          <p class="text-green-100 text-lg max-w-2xl">Let us discussions, share ideas, and connect with our vibrant community across the world</p>
        </div>
        
        <% if user_signed_in? %>
          <%= link_to new_post_path, class: "px-5 py-3 bg-white text-green-700 rounded-lg hover:bg-green-50 font-medium shadow-sm transition duration-300 flex items-center space-x-2 hover:shadow-md transform hover:-translate-y-1" do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
              <path fill-rule="evenodd" d="M12 3.75a.75.75 0 01.75.75v6.75h6.75a.75.75 0 010 1.5h-6.75v6.75a.75.75 0 01-1.5 0v-6.75H4.5a.75.75 0 010-1.5h6.75V4.5a.75.75 0 01.75-.75z" clip-rule="evenodd" />
            </svg>
            <span>Create Post</span>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "px-5 py-3 bg-white text-green-700 rounded-lg hover:bg-green-50 font-medium shadow-sm transition duration-300 flex items-center space-x-2 hover:shadow-md transform hover:-translate-y-1" do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
              <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM3.751 20.105a8.25 8.25 0 0116.498 0 .75.75 0 01-.437.695A18.683 18.683 0 0112 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 01-.437-.695z" clip-rule="evenodd" />
            </svg>
            <span>Sign In</span>
          <% end %>
        <% end %>
      </div>
    </div>
    
    <!-- Enhanced Navigation Menu with Nigerian-inspired styling -->
    <div class="mb-8 p-5 bg-white shadow-lg rounded-xl border-b-4 border-green-500">
      <div class="flex flex-wrap gap-3 justify-start">
        <%= link_to categories_path, class: "px-5 py-3 text-green-700 rounded-lg hover:bg-green-50 font-medium transition duration-300 flex items-center space-x-2 hover:shadow-md border border-gray-100 hover:border-green-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
            <path fill-rule="evenodd" d="M5.25 2.25a3 3 0 00-3 3v4.318a3 3 0 00.879 2.121l9.58 9.581c.92.92 2.39.92 3.31 0l4.23-4.231a2.25 2.25 0 000-3.182L11.693 5.33a3 3 0 00-2.122-.879H5.25zM7.5 12a4.5 4.5 0 110-9 4.5 4.5 0 010 9z" clip-rule="evenodd" />
          </svg>
          <span>Categories</span>
        <% end %>
        
        <%= link_to tags_path, class: "px-5 py-3 text-green-700 rounded-lg hover:bg-green-50 font-medium transition duration-300 flex items-center space-x-2 hover:shadow-md border border-gray-100 hover:border-green-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
            <path fill-rule="evenodd" d="M5.25 2.25a3 3 0 00-3 3v4.318a3 3 0 00.879 2.121l9.58 9.581c.92.92 2.39.92 3.31 0l4.23-4.231a2.25 2.25 0 000-3.182L11.693 5.33a3 3 0 00-2.122-.879H5.25zM7.5 12a4.5 4.5 0 110-9 4.5 4.5 0 010 9z" clip-rule="evenodd" />
          </svg>
          <span>Tags</span>
        <% end %>
        
        <%= link_to categories_path, class: "px-5 py-3 text-green-700 rounded-lg hover:bg-green-50 font-medium transition duration-300 flex items-center space-x-2 hover:shadow-md border border-gray-100 hover:border-green-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
            <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 6a.75.75 0 00-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 000-1.5h-3.75V6z" clip-rule="evenodd" />
          </svg>
          <span>Latest</span>
        <% end %>
        
        <%= link_to tags_path, class: "px-5 py-3 text-green-700 rounded-lg hover:bg-green-50 font-medium transition duration-300 flex items-center space-x-2 hover:shadow-md border border-gray-100 hover:border-green-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
            <path fill-rule="evenodd" d="M15.22 6.268a.75.75 0 01.44.44l2.883 8.648a.75.75 0 01-.476.944l-8.649 2.883a.75.75 0 01-.944-.476l-2.883-8.648a.75.75 0 01.476-.944l8.649-2.883a.75.75 0 01.484.036z" clip-rule="evenodd" />
            <path d="M15.919 11.121l.634 1.373a.75.75 0 01-1.368.618l-.634-1.373a.75.75 0 111.368-.618z" />
          </svg>
          <span>Popular</span>
        <% end %>
        
        <% if user_signed_in? %>
          <%= link_to user_path(current_user), class: "px-5 py-3 text-green-700 rounded-lg hover:bg-green-50 font-medium transition duration-300 flex items-center space-x-2 hover:shadow-md border border-gray-100 hover:border-green-200" do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
              <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM3.751 20.105a8.25 8.25 0 0116.498 0 .75.75 0 01-.437.695A18.683 18.683 0 0112 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 01-.437-.695z" clip-rule="evenodd" />
            </svg>
            <span>My Profile</span>
          <% end %>
        <% end %>
      </div>
    </div>
    
    <!-- Posts List -->
    <table class="w-full table-auto border-collapse overflow-hidden rounded-xl">
      <!-- Table Headers -->
      <thead>
        <tr class="bg-gradient-to-r from-green-600 via-green-700 to-green-800 text-white">
          <th class="px-6 py-4 text-left text-sm font-semibold tracking-wider rounded-tl-xl">Topics</th>
          <th class="px-6 py-4 text-center text-sm font-semibold tracking-wider">Replies</th>
          <th class="px-6 py-4 text-center text-sm font-semibold tracking-wider rounded-tr-xl">Activity</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <% @posts.each do |post| %>
          <tr class="hover:bg-green-50 transition-colors duration-200 group">
            <td class="px-6 py-5 w-2/3">
              <div class="bg-white p-5 flex flex-col md:flex-row items-start md:items-center space-y-4 md:space-x-6 w-full rounded-lg shadow-sm group-hover:shadow-md transition-all duration-200">
                
                <!-- Avatar -->
                <div class="flex-shrink-0">
                  <% if post.user&.avatar&.attached? %>
                    <%= image_tag post.user.avatar, class: "w-14 h-14 rounded-lg bg-gray-200 object-cover shadow-sm border-2 border-green-100 group-hover:border-green-300 transition-all" %>
                  <% else %>
                    <div class="w-14 h-14 bg-gradient-to-br from-green-500 to-green-700 rounded-lg flex items-center justify-center text-white font-bold text-xl shadow-sm">
                      <%= post.user&.email.to_s[0].upcase || 'U' %>
                    </div>
                  <% end %>
                </div>

                <!-- Post Content -->
                <div class="flex-1">
                  <a href="<%= post_path(post) %>" class="text-xl font-semibold text-gray-800 transition duration-200 hover:text-green-700 group-hover:text-green-700 inline-block">
                    <%= post.title %>
                  </a>
                  <p class="text-sm text-gray-500 mt-1">
                    Posted by <span class="font-medium text-green-700"><%= post.user&.email.to_s.split('@').first || 'Anonymous' %></span>
                  </p>

                  <% if post.category || post.tags.any? %>
                  <div class="text-sm font-medium mt-3 flex flex-wrap items-center gap-2">
                    <% if post.category %>
                      <a href="<%= category_path(post.category) %>" class="text-gray-700 hover:text-green-700 flex items-center gap-2 bg-green-50 px-3 py-1.5 rounded-full transition-colors hover:bg-green-100">
                        
                        <!-- Category Image with background color -->
                        <% if post.category.image.attached? %>
                          <div class="w-6 h-6 rounded-full overflow-hidden bg-green-600 shadow-sm">
                            <%= image_tag post.category.image, class: "w-full h-full object-cover" %>
                          </div>
                        <% else %>
                          <!-- If no image, show category name initials in a circle with color -->
                          <span class="w-6 h-6 flex items-center justify-center rounded-full text-xs font-bold text-white shadow-sm"
                            style="background-color: <%= post.category.color || '#16a34a' %>;">
                            <%= post.category.name.split.first[0].upcase + (post.category.name.split.second.present? ? post.category.name.split.second[0].upcase : '') %>
                          </span>
                        <% end %>

        <!-- Category Name -->
        <span><%= post.category.name %></span>
      </a>
    <% end %>

    <!-- Tags Section -->
        <% if post.tags.any? %>
          <% post.tags.each do |tag| %>
            <a href="<%= tag_path(tag) %>" class="inline-block text-gray-600 hover:text-green-700 text-xs px-3 py-1.5 rounded-full bg-gray-100 hover:bg-green-100 transition-all duration-200 border border-gray-200 hover:border-green-200">
              #<%= tag.name %>
            </a>
          <% end %>
        <% end %>
        </div>
      <% end %>

            <div class="text-base text-gray-600 mt-4 line-clamp-2 group-hover:text-gray-800 transition-colors duration-200">
              <a href="<%= post_path(post) %>" class="hover:text-green-700">
                <%= truncate(post.body, length: 200) %>
              </a>
            </div>
            </div>

          </div>
        </td>

            <!-- Replies Count -->
            <td class="px-6 py-4 text-center w-1/6">
              <a href="<%= post_path(post) %>" class="flex flex-col items-center justify-center gap-1 text-green-600 hover:text-green-800 transition-colors p-3 rounded-full hover:bg-green-50 group-hover:bg-green-50">
                <span class="text-xl">💬</span>
                <span class="font-semibold text-lg"><%= post.comments.count %></span>
                <span class="text-xs text-gray-500">replies</span>
              </a>
            </td>

            <!-- Post Time Ago - Enhanced -->
            <td class="px-6 py-4 w-1/6">
              <div class="flex flex-col items-center justify-center">
                <div class="relative group cursor-help" title="<%= post.created_at.strftime('%b %d, %Y %I:%M %p') %>">
                  <div class="bg-gradient-to-r from-green-50 to-white px-4 py-2 rounded-full shadow-sm border border-green-100 group-hover:shadow-md group-hover:border-green-200 transition-all duration-300 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-sm font-medium text-gray-700 group-hover:text-green-700 transition-colors">
                      <%= time_ago_in_words(post.created_at).gsub("about ", "") %> ago
                    </span>
                  </div>
                  <div class="absolute -bottom-1 left-0 right-0 h-0.5 bg-green-300 transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left duration-300"></div>
                </div>
                <div class="text-xs text-gray-400 mt-1 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <%= post.created_at.strftime('%b %d, %Y') %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
    </table>
    <!-- Enhanced Pagination with Nigerian theme -->
    <div class="mt-8 flex justify-center">
      <div class="bg-white rounded-xl shadow-md p-4 border border-green-100">
        <nav class="pagination flex items-center space-x-1" role="navigation" aria-label="Pagination Navigation">
          <%= paginate @posts do |paginator| %>
            <% if paginator.prev_page %>
              <%= link_to paginator.prev_page_url, class: "relative inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-green-700 bg-white border border-gray-200 hover:bg-green-50 hover:border-green-300 transition-colors duration-200" do %>
                <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Previous
              <% end %>
            <% else %>
              <span class="relative inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-gray-400 bg-gray-50 border border-gray-200 cursor-not-allowed">
                <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Previous
              </span>
            <% end %>

            <% paginator.page_numbers.each do |number| %>
              <% if number == paginator.current_page %>
                <span class="relative inline-flex items-center px-4 py-2 text-sm font-bold rounded-md text-white bg-gradient-to-r from-green-600 to-green-700 border border-green-600 shadow-sm">
                  <%= number %>
                </span>
              <% else %>
                <%= link_to number, paginator.url_for_number(number), class: "relative inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-gray-700 bg-white border border-gray-200 hover:bg-green-50 hover:text-green-700 hover:border-green-300 transition-colors duration-200" %>
              <% end %>
            <% end %>

            <% if paginator.next_page %>
              <%= link_to paginator.next_page_url, class: "relative inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-green-700 bg-white border border-gray-200 hover:bg-green-50 hover:border-green-300 transition-colors duration-200" do %>
                Next
                <svg class="h-5 w-5 ml-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              <% end %>
            <% else %>
              <span class="relative inline-flex items-center px-4 py-2 text-sm font-medium rounded-md text-gray-400 bg-gray-50 border border-gray-200 cursor-not-allowed">
                Next
                <svg class="h-5 w-5 ml-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              </span>
            <% end %>
          <% end %>
        </nav>
      </div>
    </div>
    </div>
</div>
