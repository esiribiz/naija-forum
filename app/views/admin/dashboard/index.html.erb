<% content_for :page_title, "Dashboard" %>
<% content_for :page_subtitle, "Welcome back! Here's what's happening on your forum today." %>

<!-- Enhanced Dashboard Header -->
<div class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-700 rounded-2xl shadow-xl mb-8 overflow-hidden relative">
  <!-- Animated background elements -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute top-0 left-1/4 w-32 h-32 bg-white rounded-full mix-blend-overlay animate-pulse"></div>
    <div class="absolute bottom-0 right-1/4 w-24 h-24 bg-white rounded-full mix-blend-overlay animate-pulse" style="animation-delay: 1s;"></div>
  </div>
  
  <div class="relative px-8 py-6">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
      <!-- Welcome Message -->
      <div class="mb-6 lg:mb-0">
        <h1 class="text-3xl font-bold text-white mb-2">
          Welcome back, <span class="text-yellow-300"><%= current_user&.display_name || 'Admin' %></span>! ðŸ‘‹
        </h1>
        <p class="text-blue-100 text-lg">
          Here's your forum overview for <span class="font-semibold"><%= Date.current.strftime('%B %d, %Y') %></span>
        </p>
      </div>
      
      <!-- Quick Action Buttons -->
      <div class="flex flex-wrap gap-3">
        <%= link_to new_admin_user_path, class: "inline-flex items-center px-4 py-2 bg-white/20 hover:bg-white/30 text-white font-semibold rounded-lg transition-all duration-200 backdrop-blur-sm border border-white/30 hover:border-white/50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
          </svg>
          Add User
        <% end %>
        
        <%= link_to new_admin_category_path, class: "inline-flex items-center px-4 py-2 bg-white/20 hover:bg-white/30 text-white font-semibold rounded-lg transition-all duration-200 backdrop-blur-sm border border-white/30 hover:border-white/50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          New Category
        <% end %>
        
        <%= link_to admin_comments_path, class: "inline-flex items-center px-4 py-2 bg-yellow-500 hover:bg-yellow-400 text-yellow-900 font-semibold rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          Moderate
        <% end %>
      </div>
    </div>
    
    <!-- Quick Stats Bar -->
    <div class="mt-6 pt-6 border-t border-white/20">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="text-center">
          <div class="text-2xl font-bold text-white"><%= number_with_delimiter(@stats[:users][:total]) %></div>
          <div class="text-blue-100 text-sm">Total Users</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-white"><%= number_with_delimiter(@stats[:posts][:total]) %></div>
          <div class="text-blue-100 text-sm">Total Posts</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-white"><%= number_with_delimiter(@stats[:comments][:total]) %></div>
          <div class="text-blue-100 text-sm">Comments</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-white"><%= number_with_delimiter(@stats[:categories][:total]) %></div>
          <div class="text-blue-100 text-sm">Categories</div>
        </div>
      </div>
    </div>
  </div>
</div>

