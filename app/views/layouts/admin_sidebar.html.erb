<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for(:title) || "Admin Dashboard - Naija Forum" %></title>
    <meta name="description" content="Naija Forum Admin Dashboard - Manage users, posts, comments, and site settings">
    
    <!-- Security and SEO -->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!-- Icons -->
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    
    <!-- Stylesheets -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
    
    <!-- JavaScript -->
    <%= javascript_importmap_tags %>
    
    <!-- Chart.js for dashboard charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <%= yield :head %>
  </head>
  <body class="admin-body bg-gray-50 font-sans antialiased overflow-hidden">
    <!-- Flash Messages -->
    <div id="flash-container" class="fixed top-4 right-4 space-y-2" style="z-index: 999;">
      <% if notice %>
        <div class="flash-message flash-success animate-slide-in">
          <div class="flex items-center p-4 rounded-lg bg-green-50 border border-green-200 shadow-lg">
            <i class="fas fa-check-circle text-green-500 mr-3"></i>
            <span class="text-green-800 font-medium"><%= notice %></span>
            <button onclick="this.parentElement.parentElement.remove()" class="ml-auto text-green-600 hover:text-green-800">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
      <% end %>
      <% if alert %>
        <div class="flash-message flash-error animate-slide-in">
          <div class="flex items-center p-4 rounded-lg bg-red-50 border border-red-200 shadow-lg">
            <i class="fas fa-exclamation-triangle text-red-500 mr-3"></i>
            <span class="text-red-800 font-medium"><%= alert %></span>
            <button onclick="this.parentElement.parentElement.remove()" class="ml-auto text-red-600 hover:text-red-800">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Admin Dashboard Layout -->
    <div class="admin-layout flex h-screen">
      <!-- Sidebar -->
      <aside id="admin-sidebar" class="admin-sidebar w-64 bg-gradient-to-b from-slate-800 via-slate-900 to-slate-800 text-white shadow-2xl transition-all duration-300 ease-in-out flex flex-col" style="position: fixed; z-index: 1000; height: 100vh; left: 0; top: 0; display: flex !important;">
        <!-- Sidebar Header -->
        <div class="sidebar-header p-6 border-b border-slate-700">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center shadow-lg">
              <i class="fas fa-crown text-white"></i>
            </div>
            <div>
              <h1 class="text-xl font-bold text-white">Admin Panel</h1>
              <p class="text-xs text-slate-400">Naija Forum</p>
            </div>
          </div>
        </div>

        <!-- Navigation Menu -->
        <nav class="sidebar-nav flex-1 py-6 px-4 space-y-2 overflow-y-auto">
          <!-- Dashboard -->
          <div class="nav-section">
            <%= link_to admin_root_path, class: "nav-item #{'active' if controller_name == 'dashboard'}" do %>
              <i class="fas fa-tachometer-alt nav-icon"></i>
              <span>Dashboard</span>
            <% end %>
          </div>

          <!-- Content Management -->
          <div class="nav-section mt-8">
            <h3 class="nav-section-title">Content Management</h3>
            
            <%= link_to admin_users_path, class: "nav-item #{'active' if controller_name == 'users'}" do %>
              <i class="fas fa-users nav-icon"></i>
              <span>Users</span>
              <span class="badge bg-blue-500"><%= User.count %></span>
            <% end %>
            
            <%= link_to admin_posts_path, class: "nav-item #{'active' if controller_name == 'posts'}" do %>
              <i class="fas fa-newspaper nav-icon"></i>
              <span>Posts</span>
              <span class="badge bg-green-500"><%= Post.count %></span>
            <% end %>
            
            <%= link_to admin_comments_path, class: "nav-item #{'active' if controller_name == 'comments'}" do %>
              <i class="fas fa-comments nav-icon"></i>
              <span>Comments</span>
              <span class="badge bg-yellow-500"><%= Comment.count %></span>
            <% end %>
            
            <%= link_to admin_categories_path, class: "nav-item #{'active' if controller_name == 'categories'}" do %>
              <i class="fas fa-tags nav-icon"></i>
              <span>Categories</span>
              <span class="badge bg-purple-500"><%= Category.count %></span>
            <% end %>
            
            <%= link_to admin_tags_path, class: "nav-item #{'active' if controller_name == 'tags'}" do %>
              <i class="fas fa-tag nav-icon"></i>
              <span>Tags</span>
            <% end %>
          </div>

          <!-- System Management -->
          <% if current_user&.admin? %>
            <div class="nav-section mt-8">
              <h3 class="nav-section-title">System</h3>
              
              <%= link_to admin_role_management_path, class: "nav-item #{'active' if controller_name == 'role_management'}" do %>
                <i class="fas fa-shield-alt nav-icon"></i>
                <span>Role Management</span>
              <% end %>
            </div>
          <% end %>
        </nav>

        <!-- User Profile Footer -->
        <div class="sidebar-footer p-4 border-t border-slate-700">
          <div class="flex items-center justify-between mb-3">
            <div class="flex items-center space-x-3">
              <% if current_user&.avatar&.attached? %>
                <%= image_tag current_user.avatar, class: "admin-avatar rounded-full object-cover border-2 border-slate-600" %>
              <% else %>
                <div class="admin-avatar bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center border-2 border-slate-600">
                  <span class="text-sm font-bold text-white"><%= current_user&.username&.first&.upcase %></span>
                </div>
              <% end %>
              <div>
                <p class="text-sm font-semibold text-white"><%= current_user&.display_name %></p>
                <p class="text-xs text-slate-400"><%= current_user&.role&.capitalize %></p>
              </div>
            </div>
            <div class="dropdown">
              <button class="text-slate-400 hover:text-white transition-colors">
                <i class="fas fa-ellipsis-v"></i>
              </button>
            </div>
          </div>
          
          <div class="flex space-x-2">
            <%= link_to root_path, class: "flex-1 btn btn-secondary btn-sm" do %>
              <i class="fas fa-home mr-1"></i>
              <span>Site</span>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: "flex-1 btn btn-danger btn-sm" do %>
              <i class="fas fa-sign-out-alt mr-1"></i>
              <span>Logout</span>
            <% end %>
          </div>
        </div>
      </aside>

      <!-- Mobile Sidebar Overlay -->
      <div id="mobile-sidebar" class="fixed inset-0 z-50 lg:hidden" style="display: none; z-index: 1001;">
        <div class="fixed inset-0 bg-slate-600 bg-opacity-75" id="mobile-sidebar-overlay" style="z-index: 1000;"></div>
        <div class="relative flex-1 flex flex-col max-w-xs w-full bg-gradient-to-b from-slate-800 to-slate-900 text-white shadow-2xl">
          <!-- Mobile Close Button -->
          <div class="absolute top-0 right-0 -mr-12 pt-2">
            <button id="mobile-sidebar-close" class="ml-1 flex items-center justify-center h-10 w-10 rounded-full bg-slate-600 focus:outline-none focus:ring-2 focus:ring-white hover:bg-slate-500 transition-colors">
              <i class="fas fa-times text-white"></i>
            </button>
          </div>
          
          <!-- Mobile Sidebar Content -->
          <div class="flex-1 h-0 pt-5 pb-4 overflow-y-auto">
            <!-- Mobile Header -->
            <div class="flex-shrink-0 flex items-center px-4 mb-6">
              <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center shadow-lg">
                <i class="fas fa-crown text-white"></i>
              </div>
              <div class="ml-3">
                <h1 class="text-xl font-bold text-white">Admin Panel</h1>
                <p class="text-xs text-slate-400">Naija Forum</p>
              </div>
            </div>
            
            <!-- Mobile Navigation -->
            <nav class="px-4 space-y-2">
              <%= link_to admin_root_path, class: "nav-item mobile #{'active' if controller_name == 'dashboard'}" do %>
                <i class="fas fa-tachometer-alt nav-icon"></i>
                <span>Dashboard</span>
              <% end %>
              
              <%= link_to admin_users_path, class: "nav-item mobile #{'active' if controller_name == 'users'}" do %>
                <i class="fas fa-users nav-icon"></i>
                <span>Users</span>
                <span class="badge bg-blue-500"><%= User.count %></span>
              <% end %>
              
              <%= link_to admin_posts_path, class: "nav-item mobile #{'active' if controller_name == 'posts'}" do %>
                <i class="fas fa-newspaper nav-icon"></i>
                <span>Posts</span>
                <span class="badge bg-green-500"><%= Post.count %></span>
              <% end %>
              
              <%= link_to admin_comments_path, class: "nav-item mobile #{'active' if controller_name == 'comments'}" do %>
                <i class="fas fa-comments nav-icon"></i>
                <span>Comments</span>
                <span class="badge bg-yellow-500"><%= Comment.count %></span>
              <% end %>
              
              <%= link_to admin_categories_path, class: "nav-item mobile #{'active' if controller_name == 'categories'}" do %>
                <i class="fas fa-tags nav-icon"></i>
                <span>Categories</span>
                <span class="badge bg-purple-500"><%= Category.count %></span>
              <% end %>
            </nav>
          </div>
          
          <!-- Mobile User Profile -->
          <div class="flex-shrink-0 p-4 border-t border-slate-700">
            <div class="flex items-center space-x-3 mb-3">
              <% if current_user&.avatar&.attached? %>
                <%= image_tag current_user.avatar, class: "admin-avatar rounded-full object-cover border-2 border-slate-600" %>
              <% else %>
                <div class="admin-avatar bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center border-2 border-slate-600">
                  <span class="text-sm font-bold text-white"><%= current_user&.username&.first&.upcase %></span>
                </div>
              <% end %>
              <div>
                <p class="text-sm font-semibold text-white"><%= current_user&.display_name %></p>
                <p class="text-xs text-slate-400"><%= current_user&.role&.capitalize %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Main Content Area -->
      <main class="main-content flex-1 flex flex-col overflow-hidden lg:ml-0">
        <!-- Top Navigation Bar -->
        <header class="top-nav bg-white shadow-sm border-b border-gray-200 h-16 flex items-center justify-between px-6">
          <!-- Left side - Mobile menu button and page title -->
          <div class="flex items-center space-x-4">
            <button id="sidebar-toggle" class="lg:hidden p-2 rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900 transition-all">
              <i class="fas fa-bars"></i>
            </button>
            <div>
              <% if content_for?(:page_title) %>
                <h1 class="text-2xl font-bold text-gray-900"><%= yield :page_title %></h1>
              <% else %>
                <h1 class="text-2xl font-bold text-gray-900">Admin Dashboard</h1>
              <% end %>
              <% if content_for?(:page_subtitle) %>
                <p class="text-sm text-gray-600"><%= yield :page_subtitle %></p>
              <% end %>
            </div>
          </div>
          
          <!-- Right side - User info and actions -->
          <div class="flex items-center space-x-4">
            <!-- Notifications -->
            <div class="relative">
              <button class="p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-all">
                <i class="fas fa-bell"></i>
                <span class="absolute -top-1 -right-1 h-4 w-4 bg-red-500 text-white text-xs rounded-full flex items-center justify-center">3</span>
              </button>
            </div>
            
            <!-- User Profile -->
            <div class="flex items-center space-x-3 pl-4 border-l border-gray-200">
              <div class="text-right hidden sm:block">
                <p class="text-sm font-semibold text-gray-900"><%= current_user&.display_name %></p>
                <p class="text-xs text-gray-600"><%= current_user&.role&.humanize %></p>
              </div>
              <% if current_user&.avatar&.attached? %>
                <%= image_tag current_user.avatar, class: "admin-avatar rounded-full object-cover border-2 border-gray-200" %>
              <% else %>
                <div class="admin-avatar bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center border-2 border-gray-200">
                  <span class="text-sm font-bold text-white"><%= current_user&.username&.first&.upcase %></span>
                </div>
              <% end %>
            </div>
          </div>
        </header>
        
        <!-- Page Content -->
        <div class="page-content flex-1 overflow-y-auto bg-gradient-to-br from-gray-50 via-white to-gray-100">
          <div class="p-6">
            <%= yield %>
          </div>
        </div>
      </main>
    </div>
    
    <!-- Admin JavaScript -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Mobile sidebar toggle
        const sidebarToggle = document.getElementById('sidebar-toggle');
        const mobileSidebar = document.getElementById('mobile-sidebar');
        const mobileSidebarClose = document.getElementById('mobile-sidebar-close');
        const mobileSidebarOverlay = document.getElementById('mobile-sidebar-overlay');
        const desktopSidebar = document.getElementById('admin-sidebar');
        
        // Show mobile sidebar
        function showMobileSidebar() {
          if (mobileSidebar) {
            mobileSidebar.style.display = 'flex';
            document.body.style.overflow = 'hidden';
          }
        }
        
        // Hide mobile sidebar
        function hideMobileSidebar() {
          if (mobileSidebar) {
            mobileSidebar.style.display = 'none';
            document.body.style.overflow = '';
          }
        }
        
        // Event listeners
        if (sidebarToggle) {
          sidebarToggle.addEventListener('click', showMobileSidebar);
        }
        
        if (mobileSidebarClose) {
          mobileSidebarClose.addEventListener('click', hideMobileSidebar);
        }
        
        if (mobileSidebarOverlay) {
          mobileSidebarOverlay.addEventListener('click', hideMobileSidebar);
        }
        
        // Handle window resize
        window.addEventListener('resize', function() {
          if (window.innerWidth >= 1024) {
            hideMobileSidebar();
            if (desktopSidebar) {
              desktopSidebar.classList.remove('hidden');
              desktopSidebar.classList.add('lg:flex');
            }
          } else {
            if (desktopSidebar) {
              desktopSidebar.classList.add('hidden');
            }
          }
        });
        
        // Show desktop sidebar on large screens
        if (window.innerWidth >= 1024 && desktopSidebar) {
          desktopSidebar.classList.remove('hidden');
          desktopSidebar.classList.add('flex');
        }
        
        // Auto-hide flash messages
        const flashMessages = document.querySelectorAll('.flash-message');
        flashMessages.forEach(function(message) {
          setTimeout(function() {
            message.style.opacity = '0';
            message.style.transform = 'translateX(100%)';
            setTimeout(function() {
              message.remove();
            }, 300);
          }, 5000);
        });
      });
    </script>

    <script>
      // Sidebar toggle functionality
      document.addEventListener('DOMContentLoaded', function() {
        const sidebarToggle = document.getElementById('sidebar-toggle');
        const mobileSidebar = document.getElementById('mobile-sidebar');
        const mobileSidebarClose = document.getElementById('mobile-sidebar-close');
        const mobileSidebarOverlay = document.getElementById('mobile-sidebar-overlay');

        function showSidebar() {
          if (mobileSidebar) {
            mobileSidebar.style.display = 'flex';
          }
        }

        function hideSidebar() {
          if (mobileSidebar) {
            mobileSidebar.style.display = 'none';
          }
        }

        if (sidebarToggle) {
          sidebarToggle.addEventListener('click', showSidebar);
        }

        if (mobileSidebarClose) {
          mobileSidebarClose.addEventListener('click', hideSidebar);
        }

        if (mobileSidebarOverlay) {
          mobileSidebarOverlay.addEventListener('click', hideSidebar);
        }

        // Close sidebar on window resize if large screen
        window.addEventListener('resize', function() {
          if (window.innerWidth >= 1024) {
            hideSidebar();
          }
        });
      });
    </script>
  </body>
</html>