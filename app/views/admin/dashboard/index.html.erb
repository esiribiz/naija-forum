<% content_for :page_title, "Dashboard" %>
<% content_for :page_subtitle, "" %>

<!-- Full-width Dashboard Container with Professional Spacing -->
<div class="min-h-screen bg-gradient-to-br from-green-50 via-white to-green-50 -m-6 p-6">
  <div class="max-w-7xl mx-auto space-y-8">

    <!-- Professional Dashboard Welcome Section -->
    <div class="bg-gradient-to-br from-green-800 via-green-700 to-green-900 rounded-3xl shadow-2xl overflow-hidden relative border border-green-600">
  <!-- Nigerian Flag Inspired Animated Elements -->
  <div class="absolute inset-0 opacity-15">
    <div class="absolute top-0 left-1/4 w-40 h-40 bg-gradient-to-br from-green-400 to-green-500 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-1/4 w-32 h-32 bg-gradient-to-br from-white to-green-100 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 left-1/2 w-24 h-24 bg-gradient-to-br from-green-300 to-green-400 rounded-full blur-2xl animate-pulse" style="animation-delay: 1s;"></div>
  </div>
  
  <!-- Main Content Container -->
  <div class="relative p-8 lg:p-12">
    <div class="max-w-7xl mx-auto">
      
      <!-- Top Section: Avatar + Main Info -->
      <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-8 mb-8">
        
        <!-- Left: Avatar + Primary Info -->
        <div class="flex items-start gap-6">
          <!-- Enhanced Avatar -->
          <div class="relative flex-shrink-0">
            <div class="w-24 h-24 lg:w-28 lg:h-28 relative">
              <% if current_user&.avatar&.attached? %>
                <%= image_tag current_user.avatar, class: "w-full h-full rounded-2xl object-cover border-4 border-green-400 shadow-2xl" %>
              <% else %>
                <div class="w-full h-full bg-gradient-to-br from-green-500 via-green-600 to-green-700 rounded-2xl flex items-center justify-center border-4 border-green-400 shadow-2xl">
                  <span class="text-2xl lg:text-3xl font-bold text-white"><%= current_user&.username&.first&.upcase || 'A' %></span>
                </div>
              <% end %>
              
              <!-- Enhanced Online Status -->
              <div class="absolute -bottom-1 -right-1">
                <% if current_user&.online? %>
                  <div class="relative">
                    <div class="w-7 h-7 bg-green-400 border-4 border-green-800 rounded-full shadow-lg flex items-center justify-center">
                      <div class="w-3 h-3 bg-green-200 rounded-full animate-ping absolute"></div>
                      <div class="w-3 h-3 bg-green-300 rounded-full relative"></div>
                    </div>
                  </div>
                <% elsif current_user&.recently_active? %>
                  <div class="w-7 h-7 bg-yellow-400 border-4 border-green-800 rounded-full shadow-lg"></div>
                <% else %>
                  <div class="w-7 h-7 bg-gray-400 border-4 border-green-800 rounded-full shadow-lg"></div>
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- Welcome Message + Role -->
          <div class="flex-1 min-w-0">
            <!-- Main Greeting -->
            <div class="mb-4">
              <h1 class="text-2xl lg:text-3xl font-bold text-green-100 mb-2 leading-tight">
                <span class="text-green-200"><%= time_based_greeting %>,</span>
                <span class="bg-gradient-to-r from-green-200 via-green-100 to-green-300 bg-clip-text text-transparent font-extrabold">
                  <%= current_user&.display_name || current_user&.username || 'Admin' %>
                </span>! ðŸ‘‹
              </h1>
            </div>
            
            <!-- Role Badge + Time -->
            <div class="flex flex-wrap items-center gap-3 mb-4">
              <!-- Enhanced Role Badge -->
              <% case current_user&.role %>
              <% when 'admin' %>
                <div class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-bold bg-gradient-to-r from-green-600 to-green-800 text-green-100 border border-green-500/50 shadow-lg">
                  <i class="fas fa-crown mr-2 text-yellow-300"></i>
                  System Administrator
                </div>
              <% when 'moderator' %>
                <div class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-bold bg-gradient-to-r from-green-500 to-green-700 text-green-100 border border-green-400/50 shadow-lg">
                  <i class="fas fa-shield-alt mr-2 text-green-200"></i>
                  Forum Moderator
                </div>
              <% else %>
                <div class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-medium bg-gradient-to-r from-green-400 to-green-600 text-green-100 border border-green-300/50 shadow-lg">
                  <i class="fas fa-user mr-2 text-green-200"></i>
                  <%= current_user&.role&.humanize || 'User' %>
                </div>
              <% end %>
              
              <!-- Enhanced Time Display -->
              <div class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-medium bg-green-900/80 text-green-100 border border-green-600/50 backdrop-blur-sm shadow-lg">
                <i class="fas fa-clock mr-2 text-green-300"></i>
                <span id="dashboard-current-time" class="font-mono"><%= formatted_current_time %></span>
              </div>
            </div>
            
            <!-- Description -->
            <p class="text-green-100 text-lg leading-relaxed mb-4">
              Here's your comprehensive forum overview for 
              <span class="text-green-200 font-semibold"><%= Date.current.strftime('%B %d, %Y') %></span>
            </p>
          </div>
        </div>
        
        <!-- Right: Enhanced Quick Actions -->
        <div class="flex flex-wrap gap-4 lg:flex-col lg:w-auto lg:min-w-[200px]">
          <%= link_to new_admin_user_path, class: "group relative inline-flex items-center px-6 py-4 bg-gradient-to-r from-green-100 via-green-200 to-green-300 hover:from-green-200 hover:via-green-300 hover:to-green-400 text-gray-800 font-semibold rounded-xl transition-all duration-300 shadow-2xl hover:shadow-green-500/30 transform hover:-translate-y-2 hover:scale-105 border-2 border-green-400/50 hover:border-green-500/80 overflow-hidden" do %>
            <!-- Animated background glow -->
            <div class="absolute inset-0 bg-gradient-to-r from-green-300/0 via-green-200/30 to-green-300/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative w-10 h-10 bg-gradient-to-br from-green-500/20 to-green-600/30 rounded-xl flex items-center justify-center mr-4 group-hover:bg-gradient-to-br group-hover:from-green-500/30 group-hover:to-green-600/40 transition-all duration-300 shadow-lg">
              <svg class="w-5 h-5 text-green-700 drop-shadow-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
              </svg>
            </div>
            <div class="relative text-left">
              <div class="font-bold text-sm text-gray-800 drop-shadow-sm">Add User</div>
              <div class="text-xs text-gray-600 font-medium">Create new account</div>
            </div>
            <!-- Hover arrow -->
            <div class="absolute right-3 opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0 transition-all duration-300">
              <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          <% end %>
          
          <%= link_to new_admin_category_path, class: "group relative inline-flex items-center px-6 py-4 bg-gradient-to-r from-green-100 via-green-200 to-green-300 hover:from-green-200 hover:via-green-300 hover:to-green-400 text-gray-800 font-semibold rounded-xl transition-all duration-300 shadow-2xl hover:shadow-green-400/30 transform hover:-translate-y-2 hover:scale-105 border-2 border-green-400/50 hover:border-green-500/80 overflow-hidden" do %>
            <!-- Animated background glow -->
            <div class="absolute inset-0 bg-gradient-to-r from-green-300/0 via-green-200/30 to-green-300/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative w-10 h-10 bg-gradient-to-br from-green-500/20 to-green-600/30 rounded-xl flex items-center justify-center mr-4 group-hover:bg-gradient-to-br group-hover:from-green-500/30 group-hover:to-green-600/40 transition-all duration-300 shadow-lg">
              <svg class="w-5 h-5 text-green-700 drop-shadow-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
            </div>
            <div class="relative text-left">
              <div class="font-bold text-sm text-gray-800 drop-shadow-sm">New Category</div>
              <div class="text-xs text-gray-600 font-medium">Organize content</div>
            </div>
            <!-- Hover arrow -->
            <div class="absolute right-3 opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0 transition-all duration-300">
              <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          <% end %>
          
          <%= link_to admin_comments_path, class: "group relative inline-flex items-center px-6 py-4 bg-gradient-to-r from-orange-100 via-yellow-100 to-orange-200 hover:from-orange-200 hover:via-yellow-200 hover:to-orange-300 text-gray-800 font-semibold rounded-xl transition-all duration-300 shadow-2xl hover:shadow-orange-400/30 transform hover:-translate-y-2 hover:scale-105 border-2 border-orange-400/50 hover:border-orange-500/80 overflow-hidden" do %>
            <!-- Animated background glow -->
            <div class="absolute inset-0 bg-gradient-to-r from-orange-300/0 via-yellow-200/30 to-orange-300/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative w-10 h-10 bg-gradient-to-br from-orange-500/20 to-yellow-500/30 rounded-xl flex items-center justify-center mr-4 group-hover:bg-gradient-to-br group-hover:from-orange-500/30 group-hover:to-yellow-500/40 transition-all duration-300 shadow-lg">
              <svg class="w-5 h-5 text-orange-700 drop-shadow-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
            </div>
            <div class="relative text-left">
              <div class="font-bold text-sm text-gray-800 drop-shadow-sm">Moderate</div>
              <div class="text-xs text-gray-600 font-medium">Review content</div>
            </div>
            <!-- Hover arrow -->
            <div class="absolute right-3 opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0 transition-all duration-300">
              <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Bottom Section: User Details + Stats -->
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
        
        <!-- User Details -->
        <div class="flex flex-wrap items-center gap-6 text-sm">
          <div class="flex items-center text-green-200">
            <div class="w-8 h-8 bg-green-800/50 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-user-clock text-green-300"></i>
            </div>
            <div>
              <div class="text-xs text-green-300 uppercase tracking-wide font-medium">Last Login</div>
              <div class="text-green-100 font-medium">
                <% if current_user&.last_sign_in_at %>
                  <%= time_ago_in_words(current_user.last_sign_in_at) %> ago
                <% else %>
                  First time logging in
                <% end %>
              </div>
            </div>
          </div>
          
          <div class="flex items-center text-green-200">
            <div class="w-8 h-8 bg-green-800/50 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-calendar-plus text-green-300"></i>
            </div>
            <div>
              <div class="text-xs text-green-300 uppercase tracking-wide font-medium">Member Since</div>
              <div class="text-green-100 font-medium"><%= current_user&.created_at&.strftime('%B %Y') %></div>
            </div>
          </div>
          
          <% if current_user&.online? %>
            <div class="flex items-center text-green-300">
              <div class="w-8 h-8 bg-green-700/30 rounded-lg flex items-center justify-center mr-3">
                <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
              </div>
              <div>
                <div class="text-xs text-green-200 uppercase tracking-wide font-medium">Status</div>
                <div class="text-green-100 font-medium">Currently Online</div>
              </div>
            </div>
          <% elsif current_user&.recently_active? %>
            <div class="flex items-center text-yellow-400">
              <div class="w-8 h-8 bg-yellow-900/30 rounded-lg flex items-center justify-center mr-3">
                <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
              </div>
              <div>
                <div class="text-xs text-yellow-300 uppercase tracking-wide font-medium">Status</div>
                <div class="text-yellow-200 font-medium">Recently Active</div>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Quick Stats Summary -->
        <div class="flex items-center gap-6 text-sm">
          <div class="text-center">
            <div class="text-2xl font-bold text-green-300"><%= number_with_delimiter(@stats[:users][:total]) %></div>
            <div class="text-xs text-green-400 uppercase tracking-wide">Users</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-green-200"><%= number_with_delimiter(@stats[:posts][:total]) %></div>
            <div class="text-xs text-green-400 uppercase tracking-wide">Posts</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-yellow-300"><%= number_with_delimiter(@stats[:comments][:total]) %></div>
            <div class="text-xs text-green-400 uppercase tracking-wide">Comments</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-green-200"><%= number_with_delimiter(@stats[:categories][:total]) %></div>
            <div class="text-xs text-green-400 uppercase tracking-wide">Categories</div>
          </div>
        </div>
      </div>
    </div>
    </div>
    </div>

    <!-- Enhanced Dashboard Statistics Cards - Green Theme -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Users Stats -->
      <div class="group relative bg-white rounded-2xl shadow-lg border border-green-200 p-6 hover:shadow-2xl hover:border-green-300 transition-all duration-300 overflow-hidden">
        <!-- Background decoration -->
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-green-400/10 to-green-300/5 rounded-full transform translate-x-16 -translate-y-16 group-hover:scale-110 transition-transform duration-500"></div>
        
        <div class="relative">
          <div class="flex items-center justify-between mb-4">
            <div class="w-14 h-14 bg-gradient-to-br from-green-600 to-green-700 rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-green-500/50 transition-all duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
              </svg>
            </div>
            <div class="text-right">
              <div class="text-3xl font-extrabold text-green-700"><%= number_with_delimiter(@stats[:users][:total]) %></div>
              <div class="text-sm font-medium text-gray-600">Total Users</div>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <div class="flex items-center px-3 py-1 bg-green-100 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
              </svg>
              <span class="text-sm font-semibold text-green-700">+<%= @stats[:users][:new_today] %> today</span>
            </div>
            <%= link_to admin_users_path, class: "inline-flex items-center px-3 py-1.5 bg-green-600 hover:bg-green-700 text-white text-xs font-medium rounded-lg transition-all duration-200 transform hover:scale-105 shadow-md hover:shadow-lg" do %>
              <span class="mr-1">View all</span>
              <svg class="w-3 h-3 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Posts Stats -->
      <div class="group relative bg-white rounded-2xl shadow-lg border border-green-200 p-6 hover:shadow-2xl hover:border-green-300 transition-all duration-300 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-green-300/10 to-green-200/5 rounded-full transform translate-x-16 -translate-y-16 group-hover:scale-110 transition-transform duration-500"></div>
        <div class="relative">
          <div class="flex items-center justify-between mb-4">
            <div class="w-14 h-14 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-green-400/50 transition-all duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
            </div>
            <div class="text-right">
              <div class="text-3xl font-extrabold text-green-600"><%= number_with_delimiter(@stats[:posts][:total]) %></div>
              <div class="text-sm font-medium text-gray-600">Total Posts</div>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <div class="flex items-center px-3 py-1 bg-green-100 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
              </svg>
              <span class="text-sm font-semibold text-green-700">+<%= @stats[:posts][:new_today] %> today</span>
            </div>
            <%= link_to admin_posts_path, class: "inline-flex items-center px-3 py-1.5 bg-green-500 hover:bg-green-600 text-white text-xs font-medium rounded-lg transition-all duration-200 transform hover:scale-105 shadow-md hover:shadow-lg" do %>
              <span class="mr-1">Manage</span>
              <svg class="w-3 h-3 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Comments Stats -->
      <div class="group relative bg-white rounded-2xl shadow-lg border border-green-200 p-6 hover:shadow-2xl hover:border-green-300 transition-all duration-300 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-yellow-300/10 to-yellow-200/5 rounded-full transform translate-x-16 -translate-y-16 group-hover:scale-110 transition-transform duration-500"></div>
        <div class="relative">
          <div class="flex items-center justify-between mb-4">
            <div class="w-14 h-14 bg-gradient-to-br from-yellow-600 to-orange-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-yellow-500/50 transition-all duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            </div>
            <div class="text-right">
              <div class="text-3xl font-extrabold text-yellow-700"><%= number_with_delimiter(@stats[:comments][:total]) %></div>
              <div class="text-sm font-medium text-gray-600">Total Comments</div>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <div class="flex items-center px-3 py-1 bg-yellow-100 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
              </svg>
              <span class="text-sm font-semibold text-yellow-700">+<%= @stats[:comments][:new_today] %> today</span>
            </div>
            <%= link_to admin_comments_path, class: "inline-flex items-center px-3 py-1.5 bg-yellow-600 hover:bg-yellow-700 text-white text-xs font-medium rounded-lg transition-all duration-200 transform hover:scale-105 shadow-md hover:shadow-lg" do %>
              <span class="mr-1">Moderate</span>
              <svg class="w-3 h-3 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Categories Stats -->
      <div class="group relative bg-white rounded-2xl shadow-lg border border-green-200 p-6 hover:shadow-2xl hover:border-green-300 transition-all duration-300 overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-green-200/10 to-green-100/5 rounded-full transform translate-x-16 -translate-y-16 group-hover:scale-110 transition-transform duration-500"></div>
        <div class="relative">
          <div class="flex items-center justify-between mb-4">
