<div id="reply_<%= reply.id %>" class="comment-target ml-10 bg-white p-4 rounded-lg shadow-sm mb-3 border-l-2 border-l-[#008751]/50 transition-all duration-300 hover:shadow-md">
  <div class="flex items-start space-x-3">
    <div class="flex-shrink-0">
      <% if reply.user.avatar.attached? %>
        <%= image_tag reply.user.avatar, class: "h-8 w-8 rounded-full ring-2 ring-[#008751]/20" %>
      <% else %>
        <div class="h-8 w-8 rounded-full bg-gradient-to-br from-[#008751] to-[#00b76a] flex items-center justify-center shadow-sm">
          <span class="text-white text-xs font-semibold">
            <%= reply.user.username.first(2).upcase %>
          </span>
        </div>
      <% end %>
    </div>
    
    <div class="flex-grow">
      <div class="flex flex-wrap items-center mb-2">
        <span class="font-semibold text-gray-900 mr-2 text-sm"><%= reply.user.username %></span>
        <%= online_dot(reply.user, class: 'mr-2') %>
        <span class="text-gray-500 text-xs px-2 py-1 rounded-full bg-gray-100">
          <%= time_ago_in_words(reply.created_at) %> ago
        </span>
      </div>
      
      <div class="text-gray-700 text-sm prose prose-sm max-w-none">
        <%= linkify_content(reply.content) %>
      </div>
      
      <% if reply.can_be_edited_by?(current_user) || reply.can_be_deleted_by?(current_user) %>
        <div class="flex items-center space-x-2 text-xs mt-3 pt-2 border-t border-gray-100">
          <% if reply.can_be_edited_by?(current_user) %>
            <%= link_to edit_post_comment_path(reply.post, reply), 
                class: "inline-flex items-center px-2 py-1 rounded-full text-[#008751] bg-[#008751]/10 hover:bg-[#008751]/20 transition-all duration-200",
                data: { turbo_stream: true } do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 mr-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125" />
              </svg>
              Edit
            <% end %>
          <% end %>
              
          <% if reply.can_be_deleted_by?(current_user) %>
            <%= button_to post_comment_path(reply.post, reply), 
                method: :delete, 
                class: "inline-flex items-center px-2 py-1 rounded-full text-red-600 bg-red-50 hover:bg-red-100 transition-all duration-200",
                form: { 
                  data: { 
                    turbo_confirm: "Are you sure you want to delete this reply?",
                    turbo_stream: true
                  }
                } do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 mr-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
              </svg>
              Delete
            <% end %>
          <% end %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>
