<% content_for :page_title, @post.title %>
<% content_for :page_subtitle, "Post Details and Management" %>

<!-- Main Content Container -->
<div class="max-w-6xl mx-auto">
  <!-- Header Section -->
  <div class="bg-gradient-to-r from-blue-50 via-white to-indigo-50 rounded-2xl border border-blue-200 p-8 mb-8">
    <div class="flex items-center justify-between">
      <div class="flex-1">
        <div class="flex items-center space-x-4 mb-4">
          <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <div class="flex-1">
            <h1 class="text-3xl font-bold text-slate-800 line-clamp-2">
              <%= @post.title %>
            </h1>
            <div class="flex items-center space-x-4 mt-2 text-slate-600">
              <span class="flex items-center">
                <i class="fas fa-user mr-2"></i>
                By <%= @post.user.display_name %>
              </span>
              <span class="flex items-center">
                <i class="fas fa-calendar mr-2"></i>
                <%= @post.created_at.strftime("%B %d, %Y") %>
              </span>
              <span class="flex items-center">
                <i class="fas fa-folder mr-2"></i>
                <%= @post.category.name %>
              </span>
              <span class="flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @post.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= @post.published? ? '‚úÖ Published' : 'üìù Draft' %>
              </span>
            </div>
          </div>
        </div>
      </div>
      
      <div class="flex items-center space-x-3">
        <%= link_to admin_posts_path, class: "inline-flex items-center px-4 py-2 bg-slate-200 hover:bg-slate-300 text-slate-700 rounded-lg transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Posts
        <% end %>
        
        <%= link_to edit_admin_post_path(@post), class: "btn btn-primary" do %>
          <i class="fas fa-edit mr-2"></i>
          Edit Post
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Post Content -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
        <div class="p-8">
          <h2 class="text-xl font-bold text-slate-800 mb-6 flex items-center">
            <div class="w-8 h-8 bg-gradient-to-br from-green-500 to-emerald-600 rounded-lg flex items-center justify-center mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            Post Content
          </h2>
          
          <div class="prose prose-lg max-w-none">
            <%= simple_format(@post.body) %>
          </div>
        </div>
      </div>

      <!-- Comments Section -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-200">
        <div class="p-8">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-slate-800 flex items-center">
              <div class="w-8 h-8 bg-gradient-to-br from-yellow-500 to-orange-600 rounded-lg flex items-center justify-center mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              Comments (<%= @post_comments.count %>)
            </h2>
            <%= link_to admin_comments_path, class: "text-sm text-blue-600 hover:underline" do %>
              Manage Comments ‚Üí
            <% end %>
          </div>
          
          <% if @post_comments.any? %>
            <div class="space-y-6">
              <% @post_comments.each do |comment| %>
                <div class="border-l-4 border-blue-200 bg-gray-50 p-4 rounded-r-lg">
                  <div class="flex items-start justify-between">
                    <div class="flex items-start space-x-3">
                      <% if comment.user.avatar.attached? %>
                        <%= image_tag comment.user.avatar, class: "w-10 h-10 rounded-full object-cover" %>
                      <% else %>
                        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                          <span class="text-sm font-bold text-white"><%= comment.user.username.first.upcase %></span>
                        </div>
                      <% end %>
                      
                      <div class="flex-1">
                        <div class="flex items-center space-x-2 mb-2">
                          <span class="font-semibold text-gray-900"><%= comment.user.display_name %></span>
                          <span class="text-sm text-gray-500">‚Ä¢</span>
                          <span class="text-sm text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</span>
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= comment.user.role == 'admin' ? 'bg-red-100 text-red-800' : comment.user.role == 'moderator' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
                            <%= comment.user.role.capitalize %>
                          </span>
                        </div>
                        <div class="text-gray-700">
                          <%= simple_format(comment.content) %>
                        </div>
                      </div>
                    </div>
                    
                    <div class="flex items-center space-x-2">
                      <% if comment.respond_to?(:approved?) %>
                        <% if comment.approved? %>
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            ‚úÖ Approved
                          </span>
                        <% else %>
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                            ‚è≥ Pending
                          </span>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <p class="text-gray-500">No comments yet</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Post Actions -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Post Actions</h3>
        <div class="space-y-3">
          <%= link_to toggle_published_admin_post_path(@post), method: :patch, 
              class: "w-full btn #{@post.published? ? 'btn-secondary' : 'btn-primary'}" do %>
            <i class="fas <%= @post.published? ? 'fa-eye-slash' : 'fa-eye' %> mr-2"></i>
            <%= @post.published? ? 'Unpublish' : 'Publish' %>
          <% end %>
          
          <%= link_to edit_admin_post_path(@post), class: "w-full btn btn-outline" do %>
            <i class="fas fa-edit mr-2"></i>
            Edit Post
          <% end %>
          
          <%= link_to post_path(@post), target: "_blank", class: "w-full btn btn-outline" do %>
            <i class="fas fa-external-link-alt mr-2"></i>
            View Public Post
          <% end %>
        </div>
      </div>

      <!-- Post Statistics -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Post Statistics</h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Comments</span>
            <span class="font-semibold"><%= @post.comments.count %></span>
          </div>
          
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Created</span>
            <span class="font-semibold"><%= @post.created_at.strftime("%m/%d/%Y") %></span>
          </div>
          
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Last Updated</span>
            <span class="font-semibold"><%= @post.updated_at.strftime("%m/%d/%Y") %></span>
          </div>
          
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Status</span>
            <span class="font-semibold <%= @post.published? ? 'text-green-600' : 'text-yellow-600' %>">
              <%= @post.published? ? 'Published' : 'Draft' %>
            </span>
          </div>
        </div>
      </div>

      <!-- Author Information -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Author Information</h3>
        <%= link_to admin_user_path(@post.user), class: "block group" do %>
          <div class="flex items-center space-x-4">
            <% if @post.user.avatar.attached? %>
              <%= image_tag @post.user.avatar, class: "w-12 h-12 rounded-full object-cover" %>
            <% else %>
              <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                <span class="text-sm font-bold text-white"><%= @post.user.username.first.upcase %></span>
              </div>
            <% end %>
            
            <div class="flex-1">
              <p class="font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                <%= @post.user.display_name %>
              </p>
              <p class="text-sm text-gray-500">@<%= @post.user.username %></p>
              <p class="text-xs text-gray-400 mt-1">
                <%= @post.user.posts.count %> posts ‚Ä¢ 
                <%= @post.user.comments.count %> comments
              </p>
            </div>
            
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= @post.user.role == 'admin' ? 'bg-red-100 text-red-800' : @post.user.role == 'moderator' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
              <%= @post.user.role.capitalize %>
            </span>
          </div>
        <% end %>
      </div>

      <!-- Category Information -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-slate-800 mb-4">Category</h3>
        <%= link_to admin_category_path(@post.category), class: "block group" do %>
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-pink-600 rounded-lg flex items-center justify-center">
              <i class="fas fa-folder text-white text-sm"></i>
            </div>
            <div class="flex-1">
              <p class="font-semibold text-gray-900 group-hover:text-purple-600 transition-colors">
                <%= @post.category.name %>
              </p>
              <% if @post.category.description.present? %>
                <p class="text-sm text-gray-500 line-clamp-2">
                  <%= truncate(@post.category.description, length: 60) %>
                </p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>