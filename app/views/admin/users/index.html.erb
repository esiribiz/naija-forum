<% content_for :page_title, "User Management" %>
<% content_for :page_subtitle, "Manage user accounts, roles, and permissions across your forum" %>

<!-- Enhanced Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Users -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #1e40af);">
      <i class="fas fa-users"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@total_users) %></div>
    <div class="stat-label">Total Users</div>
    <div class="stat-change positive mt-2">
      <i class="fas fa-arrow-up mr-1"></i>
      +<%= @users_today %> today
    </div>
    <div class="stat-trend mt-2">
      <div class="w-full bg-gray-200 rounded-full h-1.5">
        <div class="bg-blue-500 h-1.5 rounded-full transition-all duration-1000" style="width: <%= (@users_today.to_f / [@total_users, 1].max * 100).round(1) %>%"></div>
      </div>
    </div>
  </div>

  <!-- Administrators -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #ef4444, #dc2626);">
      <i class="fas fa-shield-alt"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@admin_users) %></div>
    <div class="stat-label">Administrators</div>
    <div class="stat-change mt-2" style="color: #6b7280;">
      <i class="fas fa-crown mr-1"></i>
      <%= ((@admin_users.to_f / [@total_users, 1].max) * 100).round(1) %>% of users
    </div>
  </div>

  <!-- Moderators -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
      <i class="fas fa-user-shield"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@moderator_users) %></div>
    <div class="stat-label">Moderators</div>
    <div class="stat-change mt-2" style="color: #6b7280;">
      <i class="fas fa-gavel mr-1"></i>
      <%= ((@moderator_users.to_f / [@total_users, 1].max) * 100).round(1) %>% of users
    </div>
  </div>

  <!-- New Today -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
      <i class="fas fa-user-plus"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@users_today) %></div>
    <div class="stat-label">New Today</div>
    <div class="stat-change positive mt-2">
      <i class="fas fa-calendar-day mr-1"></i>
      Last 24 hours
    </div>
  </div>
</div>

<!-- Search and Filter Section -->
<div class="card mb-8">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-search mr-2" style="color: #3b82f6;"></i>
      Search & Filter
    </h3>
    <p class="card-subtitle">Find users by name, email, role, or other criteria</p>
  </div>
  <div class="card-body">
    <%= form_with url: admin_users_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4">
        <div class="lg:col-span-2">
          <%= form.text_field :search, placeholder: "Search users...", value: params[:search], 
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" %>
        </div>
        <div>
          <%= form.select :role, 
              options_for_select([
                ['All Roles', ''],
                ['Admin', 'admin'],
                ['Moderator', 'moderator'],
                ['User', 'user']
              ], params[:role]), 
              {}, 
              { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" } %>
        </div>
        <div class="flex space-x-2">
          <%= form.submit "Search", class: "btn btn-primary btn-sm" %>
          <%= link_to "Clear", admin_users_path, class: "btn btn-secondary btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Users Table -->
<div class="table-container mb-8">
  <div class="card-header">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="card-title">
          <i class="fas fa-users mr-2" style="color: #3b82f6;"></i>
          All Users
        </h3>
        <p class="card-subtitle mt-1">Manage user accounts and permissions</p>
      </div>
      <div class="flex space-x-2">
        <%= link_to new_admin_user_path, class: "btn btn-primary btn-sm" do %>
          <i class="fas fa-plus mr-1"></i> Add User
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="overflow-x-auto">
    <table class="table admin-table">
      <thead>
        <tr>
          <th>User</th>
          <th>Email & Activity</th>
          <th>Role</th>
          <th class="hidden md:table-cell">Statistics</th>
          <th class="hidden lg:table-cell">Joined</th>
          <th>Status</th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <% if user.avatar.attached? %>
                    <%= image_tag user.avatar, class: "admin-avatar" %>
                  <% else %>
                    <div class="admin-avatar bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
                      <span class="text-sm font-bold text-white"><%= user.username&.first&.upcase || 'U' %></span>
                    </div>
                  <% end %>
                </div>
                <div>
                  <div class="font-semibold text-gray-900"><%= user.username || 'Unknown User' %></div>
                  <div class="text-sm text-gray-500"><%= "#{user.first_name} #{user.last_name}".strip.presence || 'No name set' %></div>
                </div>
              </div>
            </td>
            <td>
              <div class="font-medium text-gray-900"><%= user.email %></div>
              <div class="text-xs text-gray-500">
                <%= user.last_sign_in_at.present? ? "Last active #{time_ago_in_words(user.last_sign_in_at)} ago" : 'Never logged in' %>
              </div>
            </td>
            <td>
              <% case user.role %>
              <% when 'admin' %>
                <span class="badge bg-red-500">
                  <i class="fas fa-crown mr-1"></i> Admin
                </span>
              <% when 'moderator' %>
                <span class="badge bg-yellow-500">
                  <i class="fas fa-shield-alt mr-1"></i> Moderator
                </span>
              <% else %>
                <span class="badge bg-blue-500">
                  <i class="fas fa-user mr-1"></i> User
                </span>
              <% end %>
            </td>
            <td class="hidden md:table-cell">
              <div class="flex flex-col space-y-1 text-sm">
                <div class="flex items-center text-gray-600">
                  <i class="fas fa-edit text-blue-500 mr-1"></i>
                  <span><%= user.posts.count %> posts</span>
                </div>
                <div class="flex items-center text-gray-600">
                  <i class="fas fa-comments text-green-500 mr-1"></i>
                  <span><%= user.comments.count %> comments</span>
                </div>
              </div>
            </td>
            <td class="hidden lg:table-cell">
              <div class="text-sm text-gray-900"><%= time_ago_in_words(user.created_at) %> ago</div>
              <div class="text-xs text-gray-500"><%= user.created_at.strftime('%b %d, %Y') %></div>
            </td>
            <td>
              <% if user.last_sign_in_at.present? && user.last_sign_in_at > 5.minutes.ago %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <div class="w-1.5 h-1.5 bg-green-400 rounded-full mr-1.5 animate-pulse"></div>
                  Online
                </span>
              <% elsif user.last_sign_in_at.present? && user.last_sign_in_at > 1.day.ago %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <div class="w-1.5 h-1.5 bg-blue-400 rounded-full mr-1.5"></div>
                  Recent
                </span>
              <% elsif user.last_sign_in_at.present? %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <div class="w-1.5 h-1.5 bg-gray-400 rounded-full mr-1.5"></div>
                  Inactive
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <div class="w-1.5 h-1.5 bg-gray-400 rounded-full mr-1.5"></div>
                  New
                </span>
              <% end %>
            </td>
            <td class="text-right">
              <div class="flex items-center justify-end space-x-2">
                <%= link_to edit_admin_user_path(user), 
                      class: "btn btn-secondary btn-sm",
                      title: "Edit user" do %>
                  <i class="fas fa-edit mr-1"></i> Edit
                <% end %>
                
                <div class="relative inline-block text-left">
                  <button type="button" class="btn btn-secondary btn-sm user-actions-toggle"
                          data-user-id="<%= user.id %>">
                    <i class="fas fa-ellipsis-v"></i>
                  </button>
                  
                  <div class="user-actions-menu hidden absolute right-0 z-10 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-gray-200 focus:outline-none"
                       data-user-id="<%= user.id %>">
                    <div class="py-1">
                      <%= link_to user_path(user), 
                            class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50", 
                            target: "_blank" do %>
                        <i class="fas fa-eye mr-2 text-blue-500"></i> View Profile
                      <% end %>
                      <% unless user == current_user %>
                        <% if user.role != 'admin' %>
                          <%= link_to toggle_admin_admin_user_path(user), 
                                method: :patch,
                                class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50",
                                data: { confirm: "Make this user an admin?" } do %>
                            <i class="fas fa-crown mr-2 text-red-500"></i> Make Admin
                          <% end %>
                        <% end %>
                        <% if user.role == 'user' %>
                          <%= link_to admin_user_path(user), 
                                method: :patch,
                                params: { user: { role: 'moderator' } },
                                class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50",
                                data: { confirm: "Make this user a moderator?" } do %>
                            <i class="fas fa-shield-alt mr-2 text-yellow-500"></i> Make Moderator
                          <% end %>
                        <% end %>
                        <div class="border-t border-gray-200"></div>
                        <%= link_to admin_user_path(user), 
                              method: :delete,
                              class: "block px-4 py-2 text-sm text-red-600 hover:bg-red-50",
                              data: { confirm: "Are you sure? This action cannot be undone." } do %>
                          <i class="fas fa-trash mr-2"></i> Delete User
                        <% end %>
                      <% else %>
                        <span class="block px-4 py-2 text-sm text-gray-500">
                          <i class="fas fa-user mr-2"></i> Your account
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <!-- Table Footer -->
  <div class="card-footer">
    <div class="flex items-center justify-between">
      <div class="flex items-center text-sm text-gray-600">
        <span>Showing <%= @users.respond_to?(:count) ? @users.count : @users.size %> of <%= @total_users %> users</span>
      </div>
      <div class="flex items-center space-x-2">
        <% if @users.respond_to?(:current_page) %>
          <div class="pagination-info text-sm text-gray-500">
            Page <%= @users.current_page %> of <%= @users.total_pages %>
          </div>
          <div class="pagination-controls flex space-x-2">
            <% if @users.prev_page %>
              <%= link_to "Previous", admin_users_path(page: @users.prev_page, search: params[:search], role: params[:role]), 
                    class: "btn btn-secondary btn-sm" %>
            <% end %>
            <% if @users.next_page %>
              <%= link_to "Next", admin_users_path(page: @users.next_page, search: params[:search], role: params[:role]), 
                    class: "btn btn-primary btn-sm" %>
            <% end %>
          </div>
        <% else %>
          <span class="text-sm text-gray-500">Page 1 of 1</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- User Actions JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle user actions dropdown
  const toggleButtons = document.querySelectorAll('.user-actions-toggle');
  const actionMenus = document.querySelectorAll('.user-actions-menu');
  
  toggleButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.stopPropagation();
      const userId = this.getAttribute('data-user-id');
      const menu = document.querySelector(`.user-actions-menu[data-user-id="${userId}"]`);
      
      // Hide all other menus
      actionMenus.forEach(m => {
        if (m !== menu) {
          m.classList.add('hidden');
        }
      });
      
      // Toggle current menu
      menu.classList.toggle('hidden');
    });
  });
  
  // Close menus when clicking outside
  document.addEventListener('click', function() {
    actionMenus.forEach(menu => {
      menu.classList.add('hidden');
    });
  });
  
  // Prevent menu from closing when clicking inside it
  actionMenus.forEach(menu => {
    menu.addEventListener('click', function(e) {
      e.stopPropagation();
    });
  });
});
</script>

<script>
// User action menus
document.addEventListener('DOMContentLoaded', function() {
  // Handle user action menus
  document.querySelectorAll('.user-actions-toggle').forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      const userId = this.dataset.userId;
      const menu = document.querySelector(`[data-user-id="${userId}"].user-actions-menu`);
      
      // Hide all other menus
      document.querySelectorAll('.user-actions-menu').forEach(m => {
        if (m !== menu) m.classList.add('hidden');
      });
      
      // Toggle current menu
      menu?.classList.toggle('hidden');
    });
  });
  
  // Close menus when clicking outside
  document.addEventListener('click', function(e) {
    if (!e.target.closest('.user-actions-toggle')) {
      document.querySelectorAll('.user-actions-menu').forEach(menu => {
        menu.classList.add('hidden');
      });
    }
  });
});
</script>
