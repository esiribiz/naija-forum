                <div class="p-2">
                  <div class="grid grid-cols-2 gap-2">
                    <%= link_to new_admin_user_path, class: "flex items-center p-3 text-slate-700 hover:bg-blue-50 hover:text-blue-700 rounded-lg transition-all duration-150" do %>
                      <i class="fas fa-user-plus text-lg mr-3"></i>
                      <span class="font-medium">Add User</span>
                    <% end %>
                    <%= link_to admin_posts_path, class: "flex items-center p-3 text-slate-700 hover:bg-green-50 hover:text-green-700 rounded-lg transition-all duration-150" do %>
