<% content_for :page_title, "Posts Management" %>
<% content_for :page_subtitle, "Manage forum posts, publications, and content moderation" %>

<!-- Enhanced Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Posts -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #1e40af);">
      <i class="fas fa-newspaper"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@total_posts) %></div>
    <div class="stat-label">Total Posts</div>
    <div class="stat-change positive mt-2">
      <i class="fas fa-arrow-up mr-1"></i>
      +<%= @posts_today %> today
    </div>
    <div class="stat-trend mt-2">
      <div class="w-full bg-gray-200 rounded-full h-1.5">
        <div class="bg-blue-500 h-1.5 rounded-full transition-all duration-1000" style="width: <%= (@posts_today.to_f / [@total_posts, 1].max * 100).round(1) %>%"></div>
      </div>
    </div>
    <div class="mt-3">
      <%= link_to new_admin_post_path, class: "btn btn-primary btn-sm group-hover:shadow-lg transition-all" do %>
        <i class="fas fa-plus mr-1"></i> New Post
      <% end %>
    </div>
  </div>

  <!-- Published Posts -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
      <i class="fas fa-check-circle"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@published_posts) %></div>
    <div class="stat-label">Published</div>
    <div class="stat-change positive mt-2">
      <i class="fas fa-eye mr-1"></i>
      <%= ((@published_posts.to_f / [@total_posts, 1].max) * 100).round(1) %>% of total
    </div>
    <div class="stat-trend mt-2">
      <div class="w-full bg-gray-200 rounded-full h-1.5">
        <div class="bg-green-500 h-1.5 rounded-full transition-all duration-1000" style="width: <%= (@published_posts.to_f / [@total_posts, 1].max * 100).round(1) %>%"></div>
      </div>
    </div>
  </div>

  <!-- Draft Posts -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
      <i class="fas fa-edit"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@draft_posts) %></div>
    <div class="stat-label">Drafts</div>
    <div class="stat-change mt-2" style="color: #6b7280;">
      <i class="fas fa-clock mr-1"></i>
      Need review
    </div>
    <div class="stat-trend mt-2">
      <div class="w-full bg-gray-200 rounded-full h-1.5">
        <div class="bg-yellow-500 h-1.5 rounded-full transition-all duration-1000" style="width: <%= (@draft_posts.to_f / [@total_posts, 1].max * 100).round(1) %>%"></div>
      </div>
    </div>
  </div>

  <!-- Today's Posts -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
      <i class="fas fa-calendar-day"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@posts_today) %></div>
    <div class="stat-label">Today</div>
    <div class="stat-change positive mt-2">
      <i class="fas fa-today mr-1"></i>
      Last 24 hours
    </div>
  </div>
</div>

<!-- Filters and Search -->
<div class="card mb-8">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-filter mr-2" style="color: #3b82f6;"></i>
      Filter Posts
    </h3>
    <p class="card-subtitle">Search and filter posts by various criteria</p>
  </div>
  <div class="card-body">
    <%= form_with url: admin_posts_path, method: :get, local: true, class: "space-y-6" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Search -->
        <div>
          <label class="form-label">Search Posts</label>
          <%= form.text_field :search, 
                placeholder: "Search by author, title, or content...", 
                value: params[:search],
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" %>
        </div>
        
        <!-- Category Filter -->
        <div>
          <label class="form-label">Category</label>
          <%= form.select :category_id, 
                options_from_collection_for_select(@categories, :id, :name, params[:category_id]),
                { prompt: "All Categories" },
                { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" } %>
        </div>
        
        <!-- Status Filter -->
        <div>
          <label class="form-label">Status</label>
          <%= form.select :published, 
                options_for_select([["All Posts", ""], ["Published", "true"], ["Drafts", "false"]], params[:published]),
                {},
                { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" } %>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="flex items-center space-x-3 pt-6 border-t border-gray-200">
        <%= form.submit "Apply Filters", class: "btn btn-primary" %>
        <%= link_to "Clear All", admin_posts_path, class: "btn btn-secondary" %>
        <div class="flex-1"></div>
        <span class="text-sm text-gray-500">Showing <%= @posts.count %> posts</span>
      </div>
    <% end %>
  </div>
</div>

<!-- Posts Table -->
<div class="table-container mb-8">
  <div class="card-header">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="card-title">
          <i class="fas fa-newspaper mr-2" style="color: #3b82f6;"></i>
          All Posts
        </h3>
        <p class="card-subtitle mt-1">Manage forum posts and content</p>
      </div>
      <div class="flex space-x-2">
        <%= link_to new_admin_post_path, class: "btn btn-primary btn-sm" do %>
          <i class="fas fa-plus mr-1"></i> New Post
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="overflow-x-auto">
    <table class="table admin-table">
      <thead>
        <tr>
          <th>Post Details</th>
          <th>Author</th>
          <th class="hidden md:table-cell">Category</th>
          <th>Status</th>
          <th class="hidden lg:table-cell">Engagement</th>
          <th class="hidden lg:table-cell">Created</th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <div class="space-y-1">
              <div class="font-semibold text-gray-900 line-clamp-2">
                <%= link_to post.title, admin_post_path(post), class: "hover:text-blue-600 transition-colors" %>
              </div>
              <div class="text-sm text-gray-500 line-clamp-2">
                <%= truncate(strip_tags(post.body), length: 80) %>
              </div>
              <div class="md:hidden flex items-center space-x-2 mt-2">
                <span class="badge bg-blue-500"><%= post.category.name %></span>
                <% if post.published? %>
                  <span class="badge bg-green-500">Published</span>
                <% else %>
                  <span class="badge bg-yellow-500">Draft</span>
                <% end %>
              </div>
            </div>
          </td>
          <td>
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <% if post.user.avatar.attached? %>
                  <%= image_tag post.user.avatar, class: "admin-avatar" %>
                <% else %>
                  <div class="admin-avatar bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
                    <span class="text-sm font-bold text-white"><%= post.user.username&.first&.upcase || 'U' %></span>
                  </div>
                <% end %>
              </div>
              <div>
                <div class="font-medium text-gray-900"><%= post.user.username %></div>
                <div class="text-sm text-gray-500"><%= post.user.role.humanize %></div>
              </div>
            </div>
          </td>
          <td class="hidden md:table-cell">
            <span class="badge bg-purple-500">
              <i class="fas fa-tag mr-1"></i> <%= post.category.name %>
            </span>
          </td>
          <td>
            <% if post.published? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <i class="fas fa-check-circle mr-1"></i> Published
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                <i class="fas fa-edit mr-1"></i> Draft
              </span>
            <% end %>
          </td>
          <td class="hidden lg:table-cell">
            <div class="flex items-center space-x-3 text-sm">
              <div class="flex items-center text-gray-600">
                <i class="fas fa-comments mr-1 text-blue-500"></i>
                <span><%= post.comments.count %></span>
              </div>
            </div>
          </td>
          <td class="hidden lg:table-cell">
            <div class="text-sm text-gray-900"><%= time_ago_in_words(post.created_at) %> ago</div>
            <div class="text-xs text-gray-500"><%= post.created_at.strftime('%b %d, %Y') %></div>
          </td>
          <td class="text-right">
            <div class="flex items-center justify-end space-x-2">
              <%= link_to admin_post_path(post), class: "btn btn-secondary btn-sm", title: "View post" do %>
                <i class="fas fa-eye"></i>
              <% end %>
              
              <%= link_to edit_admin_post_path(post), class: "btn btn-primary btn-sm", title: "Edit post" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              
              <%= link_to toggle_published_admin_post_path(post), method: :patch, 
                    class: "btn btn-#{post.published? ? 'warning' : 'success'} btn-sm",
                    title: post.published? ? 'Unpublish' : 'Publish',
                    data: { confirm: "Are you sure you want to #{post.published? ? 'unpublish' : 'publish'} this post?" } do %>
                <% if post.published? %>
                  <i class="fas fa-eye-slash"></i>
                <% else %>
                  <i class="fas fa-eye"></i>
                <% end %>
              <% end %>
              
              <%= link_to admin_post_path(post), method: :delete, 
                    class: "btn btn-danger btn-sm",
                    title: "Delete post",
                    data: { confirm: "Are you sure you want to delete this post? This action cannot be undone." } do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <!-- Table Footer -->
  <div class="card-footer">
    <div class="flex items-center justify-between">
      <div class="flex items-center text-sm text-gray-600">
        <span>Showing <%= @posts.respond_to?(:count) ? @posts.count : @posts.size %> posts</span>
      </div>
      <div class="flex items-center space-x-2">
        <% if @posts.respond_to?(:current_page) %>
          <div class="pagination-info text-sm text-gray-500">
            Page <%= @posts.current_page %> of <%= @posts.total_pages %>
          </div>
          <div class="pagination-controls flex space-x-2">
            <% if @posts.prev_page %>
              <%= link_to "Previous", admin_posts_path(page: @posts.prev_page, search: params[:search], category_id: params[:category_id], published: params[:published]), 
                    class: "btn btn-secondary btn-sm" %>
            <% end %>
            <% if @posts.next_page %>
              <%= link_to "Next", admin_posts_path(page: @posts.next_page, search: params[:search], category_id: params[:category_id], published: params[:published]), 
                    class: "btn btn-primary btn-sm" %>
            <% end %>
          </div>
        <% else %>
          <span class="text-sm text-gray-500">Page 1 of 1</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if @posts.empty? %>
  <div class="text-center py-12">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900">No posts found</h3>
    <p class="mt-1 text-sm text-gray-500">
      <% if params[:search].present? || params[:category_id].present? || params[:published].present? %>
        Try adjusting your filters to see more results.
      <% else %>
        There are no posts in the system yet.
      <% end %>
    </p>
  </div>
<% end %>