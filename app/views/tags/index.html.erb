<% content_for :title, "All Tags" %>

<div class="max-w-5xl mx-auto px-6 py-16 bg-gray-50 min-h-screen">
  <h1 class="text-5xl font-extrabold text-gray-900 mb-10 text-center tracking-wide">
    ğŸ”– All Tags
  </h1>

  <% if @tags.any? %>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% @tags.sort_by(&:name).each do |tag| %>
        <div class="relative bg-white p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 border border-gray-200 overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-blue-100 to-purple-200 opacity-30"></div>
          <h3 class="text-2xl font-semibold text-gray-900 mb-2 relative">
            <%= link_to tag.name, tag_path(tag), class: "text-blue-600 hover:text-blue-800 transition duration-200" %>
          </h3>
          <p class="text-gray-700 text-lg relative">ğŸ“Œ Posts: <strong><%= tag.posts.count %></strong></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center mt-16">
      <p class="text-gray-500 text-xl">âŒ No tags found.</p>
    </div>
  <% end %>
</div>
