<% content_for :page_title, "Edit Post" %>
<% content_for :page_subtitle, "Update post content and settings" %>

<!-- Main Content Container -->
<div class="max-w-4xl mx-auto">
  <!-- Header Section -->
  <div class="bg-gradient-to-r from-blue-50 via-white to-indigo-50 rounded-2xl border border-blue-200 p-8 mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-slate-800 flex items-center mb-4">
          <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center mr-4 shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
          </div>
          Edit Post
        </h1>
        <p class="text-slate-600">Update your post content and settings</p>
      </div>
      <div class="flex items-center space-x-3">
        <%= link_to admin_post_path(@post), class: "inline-flex items-center px-4 py-2 bg-slate-200 hover:bg-slate-300 text-slate-700 rounded-lg transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Post
        <% end %>
        <%= link_to admin_posts_path, class: "inline-flex items-center px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
          </svg>
          All Posts
        <% end %>
      </div>
    </div>
  </div>

  <!-- Form Section -->
  <div class="bg-white rounded-2xl shadow-lg border border-gray-200">
    <div class="p-8">
      <%= form_with model: [:admin, @post], local: true, class: "space-y-8" do |form| %>
        
        <!-- Display Errors -->
        <% if @post.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-xl p-6">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Please correct the following errors:</h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @post.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Post Details Section -->
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-6 border border-blue-200">
          <h2 class="text-xl font-bold text-slate-800 mb-6 flex items-center">
            <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-lg flex items-center justify-center mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            Post Details
          </h2>
          
          <!-- Title -->
          <div class="form-group mb-6">
            <%= form.label :title, class: "form-label required" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              Post Title
            <% end %>
            <%= form.text_field :title, class: "form-input", placeholder: "Enter a compelling title for your post", required: true %>
            <p class="form-help">This will be the main headline that users see when browsing posts</p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Category -->
            <div class="form-group">
              <%= form.label :category_id, class: "form-label required" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
                Category
              <% end %>
              <%= form.select :category_id, 
                  options_from_collection_for_select(@categories, :id, :name, @post.category_id),
                  { prompt: "Select a category" },
                  { class: "form-select", required: true } %>
              <p class="form-help">Choose the most appropriate category for this post</p>
            </div>

            <!-- Publication Status -->
            <div class="form-group">
              <%= form.label :published, class: "form-label" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Publication Status
              <% end %>
              <%= form.select :published, 
                  options_for_select([
                    ['📝 Save as Draft', false],
                    ['✅ Publish Immediately', true]
                  ], @post.published), 
                  {}, 
                  { class: "form-select" } %>
              <p class="form-help">Published posts are immediately visible to users</p>
            </div>
          </div>

          <!-- Tags -->
          <div class="form-group">
            <%= form.label :tag_list, class: "form-label" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              Tags
            <% end %>
            <%= form.text_field :tag_list, class: "form-input", placeholder: "Enter tags separated by commas (e.g., rails, programming, tutorial)", value: @post.tag_list %>
            <p class="form-help">Tags help users find related content. Separate multiple tags with commas</p>
          </div>
        </div>

        <!-- Content Section -->
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl p-6 border border-green-200">
          <h2 class="text-xl font-bold text-slate-800 mb-6 flex items-center">
            <div class="w-8 h-8 bg-gradient-to-br from-green-500 to-emerald-600 rounded-lg flex items-center justify-center mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            </div>
            Post Content
          </h2>
          
          <!-- Body -->
          <div class="form-group">
            <%= form.label :body, class: "form-label required" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Content
            <% end %>
            <%= form.text_area :body, rows: 12, class: "form-input", placeholder: "Write your post content here. You can use Markdown formatting.", required: true %>
            <p class="form-help">Write engaging content for your post. Markdown formatting is supported for rich text.</p>
          </div>
        </div>

        <!-- Post Information -->
        <div class="bg-gradient-to-r from-gray-50 to-slate-50 rounded-2xl p-6 border border-gray-200">
          <h2 class="text-xl font-bold text-slate-800 mb-4 flex items-center">
            <div class="w-8 h-8 bg-gradient-to-br from-gray-500 to-slate-600 rounded-lg flex items-center justify-center mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            Post Information
          </h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
            <div>
              <p class="text-gray-500">Author</p>
              <p class="font-semibold"><%= @post.user.display_name %></p>
            </div>
            <div>
              <p class="text-gray-500">Created</p>
              <p class="font-semibold"><%= @post.created_at.strftime("%m/%d/%Y") %></p>
            </div>
            <div>
              <p class="text-gray-500">Last Updated</p>
              <p class="font-semibold"><%= @post.updated_at.strftime("%m/%d/%Y") %></p>
            </div>
            <div>
              <p class="text-gray-500">Comments</p>
              <p class="font-semibold"><%= @post.comments.count %></p>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex items-center justify-between pt-8 border-t border-gray-200">
          <div class="flex items-center space-x-4 text-sm text-slate-600">
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Last updated: <%= time_ago_in_words(@post.updated_at) %> ago
            </div>
          </div>
          <div class="flex space-x-4">
            <%= link_to admin_post_path(@post), class: "btn btn-secondary" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              Cancel
            <% end %>
            <%= form.submit "Update Post", class: "btn btn-primary" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>