<%= form_with(
  model: [@post, comment],
  class: "comment-form space-y-4 #{comment.parent_id.present? ? 'reply-form bg-green-50/50 p-4 rounded-lg' : ''}",
  data: {
    controller: "reset-form comments",
    action: "turbo:submit-end->reset-form#reset turbo:submit-end->comments#formSuccess turbo:submit-error->comments#formError",
    comments_target: "form"
  }
) do |f| %>

  <% if comment.errors.any? %>
    <div class="error-messages bg-red-50 text-red-700 p-4 rounded-lg mb-4 border-l-4 border-red-500 shadow-sm">
      <h2 class="font-semibold">
        <%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:
      </h2>
      <ul class="list-disc ml-5 mt-2">
        <% comment.errors.full_messages.each do |message| %>
          <li class="text-sm"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="relative">
    <%= f.text_area :content, 
      rows: 3,
      class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-naija-green focus:border-naija-green transition duration-200",
      placeholder: comment.parent_id.present? ? "Write a reply..." : "Write a comment..." %>
    
    <div class="absolute bottom-2 right-2 text-xs text-gray-400" 
         data-controller="character-count" 
         data-character-count-target="counter"></div>
  </div>

  <%# Ensure hidden parent_id field is present for replies %>
  <%= f.hidden_field :parent_id if comment.parent_id.present? %>

  <div class="flex justify-end space-x-3 mt-3">
    <% if comment.parent_id.present? %>
      <button type="button"
              class="px-4 py-2 text-gray-700 bg-gray-100 rounded-md border border-gray-200 hover:bg-gray-200 transition-all duration-200 shadow-sm flex items-center gap-1 text-sm font-medium"
              data-action="comments#toggleReplyForm"
              data-comments-comment-id-param="<%= comment.parent_id %>">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
        Cancel
      </button>
    <% end %>

    <%= f.submit comment.parent_id.present? ? "Reply" : "Post Comment", 
      class: "px-5 py-2 bg-naija-green text-green rounded-md hover:bg-naija-green/90 transition-all duration-200 shadow-sm flex items-center gap-1 text-sm font-medium" %>
  </div>

<% end %>
