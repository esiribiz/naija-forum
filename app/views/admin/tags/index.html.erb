<% content_for :page_title, "Tags Management" %>
<% content_for :page_subtitle, "Manage forum tags, labels, and content organization" %>

<!-- Enhanced Stats Cards - Column Layout -->
<div class="flex flex-col lg:flex-row gap-6 mb-8">
  <!-- Left Column - Tag Overview -->
  <div class="flex-1 space-y-4">
    <!-- Total Tags -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
          <i class="fas fa-tags"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:total]) %></div>
          <div class="stat-label">Total Tags</div>
          <div class="stat-change mt-1 text-sm" style="color: #6b7280;">
            <i class="fas fa-list mr-1"></i>
            Organizing content
          </div>
        </div>
        <div class="flex-shrink-0 flex flex-col items-end space-y-2">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-purple-500 h-2 rounded-full transition-all duration-1000" style="width: 100%"></div>
            </div>
          </div>
          <% if current_user_can?(:manage_categories_and_tags) %>
            <%= link_to new_admin_tag_path, class: "btn btn-primary btn-sm group-hover:shadow-lg transition-all" do %>
              <i class="fas fa-plus mr-1"></i> Add New
            <% end %>
          <% else %>
            <div class="text-xs text-gray-500 px-2 py-1 bg-gray-100 rounded">
              <i class="fas fa-lock mr-1"></i> Admin only
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Column - Tag Status -->
  <div class="flex-1 space-y-4">
    <!-- Active Tags with Posts -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
          <i class="fas fa-file-alt"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:with_posts]) %></div>
          <div class="stat-label">With Posts</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-check mr-1"></i>
            <%= ((@stats[:with_posts].to_f / [@stats[:total], 1].max) * 100).round(1) %>% active
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-green-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@stats[:with_posts].to_f / [@stats[:total], 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Unused Tags -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
          <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:unused]) %></div>
          <div class="stat-label">Unused Tags</div>
          <div class="stat-change mt-1 text-sm" style="color: #6b7280;">
            <i class="fas fa-warning mr-1"></i>
            Need content
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-yellow-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@stats[:unused].to_f / [@stats[:total], 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Enhanced Search and Filter Section -->
<div class="enhanced-search-container">
  <div class="enhanced-search-header">
    <h3 class="enhanced-search-title">
      <i class="fas fa-search text-purple-500"></i>
      Advanced Tag Search & Filters
    </h3>
    <p class="enhanced-search-subtitle">Find tags by name, description, usage count, popularity, or creation date with powerful filtering options</p>
  </div>
  <div class="enhanced-search-body">
    <%= form_with url: admin_tags_path, method: :get, local: true, class: "enhanced-search-form" do |form| %>
      <!-- Main search row -->
      <div class="enhanced-search-row">
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-search mr-2 text-purple-500"></i>
            Search Tags
          </label>
          <%= form.text_field :search, 
              placeholder: "Search by tag name, description, or other details...", 
              value: params[:search],
              class: "enhanced-form-input",
              data: { 
                search_target: "input",
                search_delay: "300"
              } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-tags mr-2 text-blue-500"></i>
            Tag Status
          </label>
          <%= form.select :filter, 
              options_for_select([
                ['All Tags', ''],
                ['âœ… Used Tags', 'used'],
                ['âšª Unused Tags', 'unused'],
                ['ðŸ”¥ Popular Tags (10+)', 'popular'],
                ['â­ Trending Tags', 'trending']
              ], params[:filter]), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-sort-amount-down mr-2 text-green-500"></i>
            Sort By
          </label>
          <%= form.select :sort, 
              options_for_select([
                ['Name A-Z', 'name_asc'],
                ['Name Z-A', 'name_desc'],
                ['Most Used', 'usage_desc'],
                ['Least Used', 'usage_asc'],
                ['Newest First', 'created_desc'],
                ['Oldest First', 'created_asc']
              ], params[:sort] || 'name_asc'), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-calendar-plus mr-2 text-orange-500"></i>
            Created Period
          </label>
          <%= form.select :created_period, 
              options_for_select([
                ['All Time', ''],
                ['Today', 'today'],
                ['This Week', 'week'],
                ['This Month', 'month'],
                ['Last 3 Months', '3months'],
                ['This Year', 'year']
              ], params[:created_period]), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
      </div>
      
      <!-- Advanced filters row -->
      <div class="enhanced-search-row" style="opacity: 0.9;">
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-chart-bar mr-2 text-indigo-500"></i>
            Min Usage Count
          </label>
          <%= form.number_field :min_usage, 
              placeholder: "0", 
              value: params[:min_usage],
              min: 0,
              class: "enhanced-form-input" %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-file-alt mr-2 text-teal-500"></i>
            Min Posts Count
          </label>
          <%= form.number_field :min_posts, 
              placeholder: "0", 
              value: params[:min_posts],
              min: 0,
              class: "enhanced-form-input" %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-list-ol mr-2 text-pink-500"></i>
            Results Per Page
          </label>
          <%= form.select :per_page, 
              options_for_select([
                ['10 tags', '10'],
                ['25 tags', '25'],
                ['50 tags', '50'],
                ['All tags', 'all']
              ], params[:per_page] || '25'), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-calendar mr-2 text-cyan-500"></i>
            Created After Date
          </label>
          <%= form.date_field :created_after, 
              value: params[:created_after],
              class: "enhanced-form-input" %>
        </div>
      </div>
      
      <!-- Search actions -->
      <div class="enhanced-search-actions">
        <div class="enhanced-search-buttons">
          <%= form.submit "ðŸ” Apply Filters", class: "enhanced-search-btn enhanced-search-btn-primary" %>
          <%= link_to "ðŸ—‘ï¸ Clear All", admin_tags_path, class: "enhanced-search-btn enhanced-search-btn-secondary" %>
          <button type="button" id="advanced-toggle" class="enhanced-search-btn enhanced-search-btn-secondary">
            <i class="fas fa-sliders-h mr-2"></i>
            Advanced Options
          </button>
        </div>
        
        <div class="enhanced-search-results">
          <% filter_params = ['search', 'filter', 'sort', 'created_period', 'min_usage', 'min_posts', 'created_after'] %>
          <% has_filters = filter_params.any? { |key| params[key].present? } %>
          <% if has_filters %>
            <div class="flex items-center space-x-2 text-sm">
              <i class="fas fa-filter text-purple-500"></i>
              <span class="text-slate-600">Active filters:</span>
              <div class="flex items-center space-x-1 flex-wrap">
                <% if params[:search].present? %>
                  <span class="px-2 py-1 bg-purple-100 text-purple-700 rounded-full text-xs font-medium">
                    Search: "<%= params[:search] %>"
                  </span>
                <% end %>
                <% if params[:filter].present? %>
                  <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium">
                    Filter: <%= params[:filter].humanize %>
                  </span>
                <% end %>
                <% if params[:sort].present? %>
                  <span class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">
                    Sort: <%= params[:sort].humanize %>
                  </span>
                <% end %>
                <% if params[:created_period].present? %>
                  <span class="px-2 py-1 bg-orange-100 text-orange-700 rounded-full text-xs font-medium">
                    Period: <%= params[:created_period].humanize %>
                  </span>
                <% end %>
                <% if params[:min_usage].present? %>
                  <span class="px-2 py-1 bg-indigo-100 text-indigo-700 rounded-full text-xs font-medium">
                    Min Usage: <%= params[:min_usage] %>
                  </span>
                <% end %>
                <% if params[:min_posts].present? %>
                  <span class="px-2 py-1 bg-teal-100 text-teal-700 rounded-full text-xs font-medium">
                    Min Posts: <%= params[:min_posts] %>
                  </span>
                <% end %>
                <% if params[:created_after].present? %>
                  <span class="px-2 py-1 bg-cyan-100 text-cyan-700 rounded-full text-xs font-medium">
                    After: <%= Date.parse(params[:created_after]).strftime('%m/%d/%Y') rescue params[:created_after] %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <div class="text-slate-500">
            <i class="fas fa-tags mr-1"></i>
            Showing <%= @tags.respond_to?(:count) ? @tags.count : @tags.size %> of <%= @stats[:total] %> tags
            <% if filter_params.any? { |key| params[key].present? } %>
              <span class="text-purple-600 font-medium">(filtered)</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Include Enhanced Table Styles (if not already included) -->
<%= render 'shared/enhanced_table_styles' unless @enhanced_styles_included %>
<% @enhanced_styles_included = true %>

<!-- Enhanced Tags Table -->
<div class="enhanced-table-container mb-8 enhanced-fade-in">
  <div class="enhanced-table-header">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="enhanced-table-title">
          <i class="fas fa-tags" style="color: #8b5cf6;"></i>
          Tags Management & Organization
        </h2>
        <p class="enhanced-table-subtitle">Organize and manage forum content with professional tag system - track usage, popularity, and content organization</p>
      </div>
      <div class="flex items-center space-x-4">
        <div class="enhanced-stats-group">
          <div class="enhanced-stat-item">
            <i class="fas fa-tags"></i>
            <span><%= @stats[:total] %> Total Tags</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-check-circle text-green-500"></i>
            <span><%= @stats[:with_posts] %> Active</span>
          </div>
        </div>
        <button class="btn btn-primary hover:scale-105 transition-transform">
          <i class="fas fa-plus mr-2"></i> Create New Tag
        </button>
      </div>
    </div>
  </div>
  
  <div class="overflow-x-auto">
    <table class="enhanced-table">
      <thead>
        <tr>
          <th><i class="fas fa-tag mr-2"></i>Tag Information</th>
          <th class="hidden md:table-cell"><i class="fas fa-align-left mr-2"></i>Description & Details</th>
          <th><i class="fas fa-chart-bar mr-2"></i>Usage Analytics</th>
          <th class="hidden lg:table-cell"><i class="fas fa-calendar-plus mr-2"></i>Creation Date</th>
          <th class="text-right"><i class="fas fa-cogs mr-2"></i>Manage</th>
        </tr>
      </thead>
      <tbody>
        <% @tags.each do |tag| %>
          <tr class="enhanced-fade-in">
            <td>
              <div class="enhanced-user-info">
                <div class="flex-shrink-0">
                  <% tag_icon_class = case
                                       when tag.posts.count > 10 then 'enhanced-avatar-placeholder bg-gradient-to-br from-green-500 to-emerald-600'
                                       when tag.posts.count > 0 then 'enhanced-avatar-placeholder bg-gradient-to-br from-blue-500 to-indigo-600'
                                       else 'enhanced-avatar-placeholder bg-gradient-to-br from-gray-400 to-gray-500'
                                     end %>
                  <div class="<%= tag_icon_class %>" style="width: 56px; height: 56px; font-size: 1.25rem;">
                    <i class="fas fa-tag"></i>
                  </div>
                </div>
                <div class="enhanced-user-details">
                  <h4 class="text-lg">#<%= tag.name %></h4>
                  <div class="enhanced-content-meta">
                    <% if tag.posts.count > 10 %>
                      <span class="enhanced-badge enhanced-badge-success text-xs">
                        <i class="fas fa-fire mr-1"></i> Popular Tag
                      </span>
                    <% elsif tag.posts.count > 0 %>
                      <span class="enhanced-badge enhanced-badge-primary text-xs">
                        <i class="fas fa-check-circle mr-1"></i> Active
                      </span>
                    <% else %>
                      <span class="enhanced-badge enhanced-badge-secondary text-xs">
                        <i class="fas fa-clock mr-1"></i> Unused
                      </span>
                    <% end %>
                    <span class="enhanced-stat-item text-xs">
                      <i class="fas fa-hashtag"></i>
                      <span>ID: <%= tag.id %></span>
                    </span>
                  </div>
                  <% if tag.description.present? %>
                    <p class="text-xs text-gray-500 md:hidden mt-2"><%= truncate(tag.description, length: 50) %></p>
                  <% end %>
                </div>
              </div>
            </td>
            <td class="hidden md:table-cell">
              <div class="enhanced-content-preview">
                <% if tag.description.present? %>
                  <div class="enhanced-content-title">Description</div>
                  <div class="enhanced-content-excerpt"><%= truncate(tag.description, length: 120) %></div>
                <% else %>
                  <div class="enhanced-content-excerpt text-gray-400 italic">No description provided for this tag</div>
                <% end %>
                <div class="enhanced-content-meta mt-3">
                  <span class="enhanced-stat-item">
                    <i class="fas fa-clock"></i>
                    <span>Created <%= time_ago_in_words(tag.created_at) %> ago</span>
                  </span>
                </div>
              </div>
            </td>
            <td>
              <div class="space-y-3">
                <div class="enhanced-stats-group flex-col items-start gap-2">
                  <div class="enhanced-stat-item">
                    <i class="fas fa-file-alt text-purple-500"></i>
                    <span><%= pluralize(tag.posts.count, 'post') %></span>
                  </div>
                  <% if tag.posts.count > 0 %>
                    <div class="enhanced-stat-item">
                      <i class="fas fa-percentage text-green-500"></i>
                      <span><%= (tag.posts.count.to_f / [@tags.map{|t| t.posts.count}.sum, 1].max * 100).round(1) %>% of content</span>
                    </div>
                  <% end %>
                </div>
                <% if tag.posts.count > 0 %>
                  <div class="w-full">
                    <div class="flex justify-between items-center text-xs text-gray-500 mb-1">
                      <span>Usage Level</span>
                      <span><%= tag.posts.count %> / <%= @tags.map{|t| t.posts.count}.max %></span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                      <div class="bg-gradient-to-r from-purple-500 to-pink-500 h-2 rounded-full transition-all duration-300" 
                           style="width: <%= [tag.posts.count.to_f / [@tags.map{|t| t.posts.count}.max, 1].max * 100, 8].max %>%"></div>
                    </div>
                  </div>
                <% else %>
                  <div class="text-center py-2">
                    <div class="enhanced-badge enhanced-badge-secondary text-xs">
                      <i class="fas fa-exclamation-circle mr-1"></i>
                      No Usage Yet
                    </div>
                  </div>
                <% end %>
              </div>
            </td>
            <td class="hidden lg:table-cell">
              <div class="space-y-2">
                <div class="enhanced-content-title text-sm"><%= tag.created_at.strftime('%B %d, %Y') %></div>
                <div class="enhanced-content-excerpt text-xs">Added <%= time_ago_in_words(tag.created_at) %> ago</div>
                <div class="enhanced-stat-item">
                  <i class="fas fa-user-plus"></i>
                  <span>Tag #<%= tag.id %></span>
                </div>
              </div>
            </td>
            <td class="text-right">
              <div class="enhanced-action-group">
                <%= link_to admin_tag_path(tag), class: "enhanced-action-btn enhanced-action-btn-secondary", title: "View tag details" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
                <%= link_to edit_admin_tag_path(tag), class: "enhanced-action-btn enhanced-action-btn-primary", title: "Edit tag" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <% if tag.posts.count > 0 %>
                  <%= link_to "#", class: "enhanced-action-btn enhanced-action-btn-success", title: "View #{tag.posts.count} posts with this tag", onclick: "alert('View posts with tag: #{tag.name}')" do %>
                    <i class="fas fa-list"></i>
                  <% end %>
                <% end %>
                <%= link_to admin_tag_path(tag), method: :delete,
                      data: { confirm: "Are you sure? This will remove '#{tag.name}' from all #{tag.posts.count} posts." },
                      class: "enhanced-action-btn enhanced-action-btn-danger",
                      title: "Delete tag" do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <!-- Enhanced Table Footer -->
  <div class="enhanced-table-footer">
    <div class="enhanced-pagination-info">
      <div class="flex items-center space-x-4">
        <span>Showing <%= @tags.respond_to?(:count) ? @tags.count : @tags.size %> tags</span>
        <div class="enhanced-stats-group">
          <div class="enhanced-stat-item">
            <i class="fas fa-check-circle text-green-500"></i>
            <span><%= @stats[:with_posts] %> Active</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-clock text-yellow-500"></i>
            <span><%= @stats[:unused] %> Unused</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-fire text-red-500"></i>
            <span><%= @tags.select { |t| t.posts.count > 10 }.count %> Popular</span>
          </div>
        </div>
      </div>
    </div>
    <div class="enhanced-pagination-controls">
      <% if @tags.respond_to?(:current_page) %>
        <div class="flex items-center space-x-2 text-sm text-gray-500 mr-4">
          <span>Page <%= @tags.current_page %> of <%= @tags.total_pages %></span>
        </div>
        <div class="flex space-x-2">
          <% if @tags.prev_page %>
            <%= link_to admin_tags_path(page: @tags.prev_page, search: params[:search], filter: params[:filter], sort: params[:sort]), 
                  class: "btn btn-secondary btn-sm" do %>
              <i class="fas fa-chevron-left mr-1"></i> Previous
            <% end %>
          <% end %>
          <% if @tags.next_page %>
            <%= link_to admin_tags_path(page: @tags.next_page, search: params[:search], filter: params[:filter], sort: params[:sort]), 
                  class: "btn btn-primary btn-sm" do %>
              Next <i class="fas fa-chevron-right ml-1"></i>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="flex items-center space-x-3">
          <span class="text-sm text-gray-500">Single page view</span>
          <button class="btn btn-primary btn-sm" onclick="location.reload()">
            <i class="fas fa-sync-alt mr-1"></i> Refresh
          </button>
        </div>
      <% end %>
    </div>
  </div>
  
  <% if @tags.empty? %>
    <div class="text-center py-16">
      <div class="mx-auto w-24 h-24 bg-gradient-to-br from-purple-100 to-pink-100 rounded-2xl flex items-center justify-center mb-6">
        <i class="fas fa-tags text-4xl text-purple-500"></i>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mb-2">No tags found</h3>
      <p class="text-gray-500 mb-8 max-w-md mx-auto">
        <% if params[:search].present? || params[:filter].present? %>
          Try adjusting your search filters to see more results, or create a new tag to get started.
        <% else %>
          Get started by creating your first tag to organize and categorize forum content effectively.
        <% end %>
      </p>
      <div class="flex items-center justify-center space-x-4">
        <%= link_to new_admin_tag_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus mr-2"></i> Create Your First Tag
        <% end %>
        <% if params[:search].present? || params[:filter].present? %>
          <%= link_to admin_tags_path, class: "btn btn-secondary" do %>
            <i class="fas fa-times mr-2"></i> Clear Filters
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<script>
// Enhanced search functionality for tags
document.addEventListener('DOMContentLoaded', function() {
  // Advanced toggle functionality
  const advancedToggle = document.getElementById('advanced-toggle');
  const advancedRow = document.querySelector('.enhanced-search-row[style*="opacity"]');
  
  if (advancedToggle && advancedRow) {
    advancedToggle.addEventListener('click', function() {
      const isHidden = advancedRow.style.display === 'none';
      
      if (isHidden) {
        advancedRow.style.display = 'grid';
        advancedRow.style.opacity = '0.9';
        this.innerHTML = '<i class="fas fa-eye-slash mr-2"></i>Hide Advanced';
        this.classList.remove('enhanced-search-btn-secondary');
        this.classList.add('enhanced-search-btn-primary');
      } else {
        advancedRow.style.display = 'none';
        this.innerHTML = '<i class="fas fa-sliders-h mr-2"></i>Advanced Options';
        this.classList.remove('enhanced-search-btn-primary');
        this.classList.add('enhanced-search-btn-secondary');
      }
    });
    
    // Initially hide advanced row
    advancedRow.style.display = 'none';
  }
  
  // Enhanced form interactions
  const formInputs = document.querySelectorAll('.enhanced-form-input, .enhanced-form-select');
  
  formInputs.forEach(input => {
    input.addEventListener('focus', function() {
      this.closest('.enhanced-form-group').classList.add('focused');
    });
    
    input.addEventListener('blur', function() {
