<% content_for :page_title, "Dashboard" %>
<% content_for :page_subtitle, "Welcome back! Here's what's happening on your forum today." %>

<!-- Enhanced Dashboard Statistics Cards - Modern Grid Layout -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Users Stats -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-lg transition-all duration-300 group">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
        </svg>
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@stats[:users][:total]) %></div>
        <div class="text-sm text-gray-500">Total Users</div>
      </div>
    </div>
    <div class="flex items-center justify-between">
      <div class="flex items-center text-sm text-green-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
        </svg>
        +<%= @stats[:users][:new_today] %> today
      </div>
      <%= link_to admin_users_path, class: "text-xs text-gray-400 hover:text-green-600 transition-colors" do %>
        View all →
      <% end %>
    </div>
  </div>

  <!-- Posts Stats -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-lg transition-all duration-300 group">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-gradient-to-br from-green-600 to-green-700 rounded-xl flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@stats[:posts][:total]) %></div>
        <div class="text-sm text-gray-500">Total Posts</div>
      </div>
    </div>
    <div class="flex items-center justify-between">
      <div class="flex items-center text-sm text-green-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
        </svg>
        +<%= @stats[:posts][:new_today] %> today
      </div>
      <%= link_to admin_posts_path, class: "text-xs text-gray-400 hover:text-green-600 transition-colors" do %>
        Manage →
      <% end %>
    </div>
  </div>

  <!-- Comments Stats -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-lg transition-all duration-300 group">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@stats[:comments][:total]) %></div>
        <div class="text-sm text-gray-500">Total Comments</div>
      </div>
    </div>
    <div class="flex items-center justify-between">
      <div class="flex items-center text-sm text-green-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
        </svg>
        +<%= @stats[:comments][:new_today] %> today
      </div>
      <%= link_to admin_comments_path, class: "text-xs text-gray-400 hover:text-green-600 transition-colors" do %>
        Moderate →
      <% end %>
    </div>
  </div>

  <!-- Categories Stats -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-lg transition-all duration-300 group">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-gradient-to-br from-green-600 to-green-700 rounded-xl flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@stats[:categories][:total]) %></div>
        <div class="text-sm text-gray-500">Categories</div>
      </div>
    </div>
    <div class="flex items-center justify-between">
      <div class="flex items-center text-sm text-green-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" />
        </svg>
        <%= @stats[:categories][:with_posts] %> active
      </div>
      <%= link_to admin_categories_path, class: "text-xs text-gray-400 hover:text-green-600 transition-colors" do %>
        Manage →
      <% end %>
    </div>
  </div>
</div>

<!-- Quick Actions Section -->
<div class="bg-white rounded-2xl shadow-sm border border-gray-100 mb-8 overflow-hidden">
  <div class="px-8 py-6 border-b border-gray-100">
    <h3 class="text-xl font-bold text-gray-900 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
      </svg>
      Quick Actions
    </h3>
    <p class="text-sm text-gray-600 mt-2">Perform common admin tasks quickly and efficiently</p>
  </div>
  <div class="p-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <%= link_to new_admin_user_path, class: "group" do %>
        <div class="p-6 text-center border-2 border-dashed border-gray-200 rounded-xl hover:border-green-400 hover:bg-green-50 transition-all duration-300">
          <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-green-100 to-green-200 rounded-xl flex items-center justify-center group-hover:from-green-200 group-hover:to-green-300 transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
          </div>
          <p class="font-semibold text-gray-700 group-hover:text-green-700 transition-colors">Add User</p>
          <p class="text-xs text-gray-500 mt-1">Create new account</p>
        </div>
      <% end %>
      
      <%= link_to admin_posts_path(published: false), class: "group" do %>
        <div class="p-6 text-center border-2 border-dashed border-gray-200 rounded-xl hover:border-green-400 hover:bg-green-50 transition-all duration-300">
          <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-green-100 to-green-200 rounded-xl flex items-center justify-center group-hover:from-green-200 group-hover:to-green-300 transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
            </svg>
          </div>
          <p class="font-semibold text-gray-700 group-hover:text-green-700 transition-colors">Draft Posts</p>
          <p class="text-xs text-gray-500 mt-1">Review pending</p>
        </div>
      <% end %>
      
      <%= link_to new_admin_category_path, class: "group" do %>
        <div class="p-6 text-center border-2 border-dashed border-gray-200 rounded-xl hover:border-green-400 hover:bg-green-50 transition-all duration-300">
          <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-green-100 to-green-200 rounded-xl flex items-center justify-center group-hover:from-green-200 group-hover:to-green-300 transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
          </div>
          <p class="font-semibold text-gray-700 group-hover:text-green-700 transition-colors">New Category</p>
          <p class="text-xs text-gray-500 mt-1">Organize content</p>
        </div>
      <% end %>
      
      <%= link_to admin_comments_path, class: "group" do %>
        <div class="p-6 text-center border-2 border-dashed border-gray-200 rounded-xl hover:border-green-400 hover:bg-green-50 transition-all duration-300">
          <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-green-100 to-green-200 rounded-xl flex items-center justify-center group-hover:from-green-200 group-hover:to-green-300 transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
          </div>
          <p class="font-semibold text-gray-700 group-hover:text-green-700 transition-colors">Moderate</p>
          <p class="text-xs text-gray-500 mt-1">Review content</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Charts Section -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
  <!-- User Growth Chart -->
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">
        <i class="fas fa-chart-line mr-2" style="color: #3b82f6;"></i>
        User Growth
      </h3>
      <p class="card-subtitle">New user registrations over the last 30 days</p>
    </div>
    <div class="card-body">
      <div style="position: relative; height: 300px;">
        <canvas id="userGrowthChart"></canvas>
      </div>
    </div>
  </div>

  <!-- Content Activity Chart -->
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">
        <i class="fas fa-chart-area mr-2" style="color: #10b981;"></i>
        Content Activity
      </h3>
      <p class="card-subtitle">Posts and comments created over the last 30 days</p>
    </div>
    <div class="card-body">
      <div style="position: relative; height: 300px;">
        <canvas id="contentActivityChart"></canvas>
      </div>
    </div>
  </div>
</div>

<!-- Recent Activity Section -->
<div class="mb-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h2 class="text-3xl font-bold text-gray-900 flex items-center mb-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-3 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Recent Activity
      </h2>
      <p class="text-gray-600">Stay updated with the latest forum activities and member engagement</p>
    </div>
    <div class="flex space-x-3">
      <button class="px-4 py-2 text-sm font-medium text-gray-600 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
        Last 24h
      </button>
      <button class="px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-lg hover:bg-green-700 transition-colors">
        Last Week
      </button>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Recent Users -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 hover:shadow-lg transition-all duration-300 group overflow-hidden">
    <div class="px-6 py-5 bg-gradient-to-r from-green-50 to-green-100 border-b border-green-200">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-lg font-bold text-gray-900 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
            Recent Users
          </h3>
          <p class="text-sm text-gray-600 mt-1">Latest member registrations</p>
        </div>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-600 text-white">
          <%= @recent_users.count %> new
        </span>
      </div>
    </div>
    <div class="p-0">
      <div class="divide-y divide-gray-100">
        <% @recent_users.each do |user| %>
          <div class="p-5 hover:bg-gray-50 transition-colors">
            <div class="flex items-center space-x-4">
              <% if user.avatar.attached? %>
                <%= image_tag user.avatar, class: "w-12 h-12 rounded-full object-cover border-2 border-gray-200" %>
              <% else %>
                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center border-2 border-gray-200">
                  <span class="text-sm font-bold text-white"><%= user.username&.first&.upcase || 'U' %></span>
                </div>
              <% end %>
              <div class="flex-1 min-w-0">
                <p class="font-semibold text-gray-900"><%= user.display_name %></p>
                <p class="text-gray-500 text-sm">@<%= user.username %></p>
                <p class="text-gray-400 text-xs flex items-center mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <%= time_ago_in_words(user.created_at) %> ago
                </p>
              </div>
              <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium <%= case user.role
                when 'admin' then 'bg-green-100 text-green-800'
                when 'moderator' then 'bg-yellow-100 text-yellow-800'
                else 'bg-gray-100 text-gray-800'
              end %>">
                <%= user.role.capitalize %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
      <%= link_to admin_users_path, class: "flex items-center justify-center w-full px-4 py-2 text-sm font-medium text-green-600 hover:text-green-700 hover:bg-green-50 rounded-lg transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
        </svg>
        View All Users
      <% end %>
    </div>
  </div>

  <!-- Recent Posts -->
  <div class="card group hover:shadow-xl transition-all duration-300">
    <div class="card-header bg-gradient-to-r from-green-50 to-emerald-50 border-b border-green-100">
      <h3 class="card-title">
        <i class="fas fa-newspaper mr-2" style="color: #10b981;"></i>
        Recent Posts
      </h3>
      <p class="card-subtitle">Latest forum posts</p>
      <div class="absolute top-4 right-4">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          <%= @recent_posts.count %> new
        </span>
      </div>
    </div>
    <div class="card-body" style="padding: 0;">
      <div class="divide-y divide-gray-200">
        <% @recent_posts.each do |post| %>
          <div class="p-4 hover:bg-gray-50 transition-colors">
            <div class="space-y-2">
              <h4 class="font-semibold text-gray-900 text-sm line-clamp-2">
                <%= link_to truncate(post.title, length: 60), post_path(post), class: "hover:text-blue-600 transition-colors" %>
              </h4>
              <div class="flex items-center space-x-2 text-xs text-gray-500">
                <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full">
                  <%= post.category.name %>
                </span>
                <span>by <%= post.user.display_name %></span>
              </div>
              <div class="flex items-center justify-between text-xs text-gray-400">
                <span><%= time_ago_in_words(post.created_at) %> ago</span>
                <span class="flex items-center">
                  <i class="fas fa-comments mr-1"></i>
                  <%= post.comments.count %>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-footer text-center">
      <%= link_to admin_posts_path, class: "btn btn-success btn-sm" do %>
        <i class="fas fa-newspaper mr-1"></i> Manage Posts
      <% end %>
    </div>
  </div>

  <!-- Recent Comments -->
  <div class="card group hover:shadow-xl transition-all duration-300">
    <div class="card-header bg-gradient-to-r from-yellow-50 to-orange-50 border-b border-yellow-100">
      <h3 class="card-title">
        <i class="fas fa-comments mr-2" style="color: #f59e0b;"></i>
        Recent Comments
      </h3>
      <p class="card-subtitle">Latest forum discussions</p>
      <div class="absolute top-4 right-4">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
          <%= @recent_comments.count %> new
        </span>
      </div>
    </div>
    <div class="card-body" style="padding: 0;">
      <div class="divide-y divide-gray-200">
        <% @recent_comments.each do |comment| %>
          <div class="p-4 hover:bg-gray-50 transition-colors">
            <div class="space-y-2">
              <p class="text-gray-900 text-sm line-clamp-3">
                <%= truncate(strip_tags(comment.content), length: 80) %>
              </p>
              <div class="flex items-center space-x-2 text-xs">
                <span class="text-gray-600">
                  by <span class="font-medium"><%= comment.user.display_name %></span>
                </span>
                <span class="text-gray-400">•</span>
                <span class="text-gray-500">
                  on <%= link_to truncate(comment.post.title, length: 30), post_path(comment.post), class: "text-blue-600 hover:text-blue-800" %>
                </span>
              </div>
              <p class="text-xs text-gray-400"><%= time_ago_in_words(comment.created_at) %> ago</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-footer text-center">
      <%= link_to admin_comments_path, class: "btn btn-warning btn-sm" do %>
        <i class="fas fa-comments mr-1"></i> Moderate Comments
      <% end %>
    </div>
  </div>
</div>

<!-- Dashboard Charts JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // User Growth Chart
  const userGrowthCtx = document.getElementById('userGrowthChart');
  if (userGrowthCtx) {
    const userGrowthChart = new Chart(userGrowthCtx, {
      type: 'line',
      data: {
        labels: <%= raw @user_growth_data.keys.to_json %>,
        datasets: [{
          label: 'New Users',
          data: <%= raw @user_growth_data.values.to_json %>,
          borderColor: '#3b82f6',
          backgroundColor: 'rgba(59, 130, 246, 0.1)',
          borderWidth: 3,
          fill: true,
          tension: 0.4,
          pointBackgroundColor: '#3b82f6',
          pointBorderColor: '#ffffff',
          pointBorderWidth: 2,
          pointRadius: 6,
          pointHoverRadius: 8
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: {
              color: 'rgba(0, 0, 0, 0.05)'
            },
            ticks: {
              color: '#6b7280'
            }
          },
          x: {
            grid: {
              display: false
            },
            ticks: {
              color: '#6b7280'
            }
          }
        }
      }
    });
  }

  // Content Activity Chart
  const contentActivityCtx = document.getElementById('contentActivityChart');
  if (contentActivityCtx) {
    const contentActivityChart = new Chart(contentActivityCtx, {
      type: 'bar',
      data: {
        labels: <%= raw @post_activity_data.keys.to_json %>,
        datasets: [{
          label: 'Posts',
          data: <%= raw @post_activity_data.values.to_json %>,
          backgroundColor: 'rgba(16, 185, 129, 0.8)',
          borderColor: '#10b981',
          borderWidth: 1,
          borderRadius: 4,
        }, {
          label: 'Comments',
          data: <%= raw @comment_activity_data.values.to_json %>,
          backgroundColor: 'rgba(245, 158, 11, 0.8)',
          borderColor: '#f59e0b',
          borderWidth: 1,
          borderRadius: 4,
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'top',
            labels: {
              usePointStyle: true,
              pointStyle: 'circle',
              color: '#6b7280'
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: {
              color: 'rgba(0, 0, 0, 0.05)'
            },
            ticks: {
              color: '#6b7280'
            }
          },
          x: {
            grid: {
              display: false
            },
            ticks: {
              color: '#6b7280'
            }
          }
        }
      }
    });
  }

  // Animate stat cards on page load
  const statCards = document.querySelectorAll('.stat-card');
  statCards.forEach((card, index) => {
    setTimeout(() => {
      card.style.opacity = '0';
      card.style.transform = 'translateY(20px)';
      card.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
      
      setTimeout(() => {
        card.style.opacity = '1';
        card.style.transform = 'translateY(0)';
      }, 100);
    }, index * 150);
  });
});
</script>

