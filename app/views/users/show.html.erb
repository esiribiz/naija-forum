<% content_for :title, @user.username %>

<div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg p-8 border border-gray-200">
  <div class="flex items-center space-x-6">
    <% if @user.avatar.attached? %>
      <%= image_tag url_for(@user.avatar), class: "w-24 h-24 rounded-full border-4 border-blue-500 shadow-lg" %>
    <% else %>
      <img src="https://via.placeholder.com/100" class="w-24 h-24 rounded-full border-4 border-gray-300 shadow-lg" alt="Default avatar">
    <% end %>
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @user.name.presence || "Anonymous" %></h1>
      <p class="text-gray-600 text-lg">@<%= @user.username %></p>
    </div>
  </div>

  <% if @user.bio.present? %>
    <p class="mt-4 text-gray-700 text-lg border-l-4 border-blue-500 pl-4 italic"><%= @user.bio %></p>
  <% end %>

  <div class="mt-6 space-y-3 text-gray-700 text-lg">
    <% if @user.location.present? %>
      <p>📍 <strong>Location:</strong> <%= @user.location %></p>
    <% end %>
    <p>📧 <strong>Email:</strong> <%= @user.email %></p>
    <p>📅 <strong>Joined:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>

    <% if @user.website.present? %>
      <p>🌍 <strong>Website:</strong> 
        <a href="<%= @user.website %>" target="_blank" class="text-blue-600 hover:underline"><%= @user.website %></a>
      </p>
    <% end %>

    <% if @user.twitter.present? %>
      <p>🐦 <strong>Twitter:</strong> 
        <a href="<%= @user.twitter %>" target="_blank" class="text-blue-600 hover:underline">@<%= @user.twitter.split('/').last %></a>
      </p>
    <% end %>

    <% if @user.linkedin.present? %>
      <p>💼 <strong>LinkedIn:</strong> 
        <a href="<%= @user.linkedin %>" target="_blank" class="text-blue-600 hover:underline">View Profile</a>
      </p>
    <% end %>

    <% if @user.facebook.present? %>
      <p>📘 <strong>Facebook:</strong> 
        <a href="<%= @user.facebook %>" target="_blank" class="text-blue-600 hover:underline">
          <%= @user.facebook.split('/').last %>
        </a>
      </p>
    <% end %>
  </div>

  <% if current_user == @user %>
    <div class="mt-6 text-center">
      <%= link_to "Edit Profile", edit_user_path(@user), class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-500 font-medium transition shadow-md" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
   <%= link_to "Back to Posts", posts_path, class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium transition" %>
  </div>
</div>
