              <button id="quick-actions-toggle" class="p-2 text-slate-300 hover:text-white hover:bg-slate-700 rounded-lg transition-all duration-200">
                <i class="fas fa-plus text-lg"></i>
              </button>
              
              <!-- Quick actions dropdown -->
