        <div class="text-right">
          <div class="text-3xl font-extrabold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent"><%= number_with_delimiter(@stats[:posts][:total]) %></div>
          <div class="text-sm font-medium text-gray-600">Total Posts</div>
