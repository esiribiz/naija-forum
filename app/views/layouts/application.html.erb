<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Naija Forum" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <% unless Rails.env.development? %>
      <%= csp_meta_tag %>
    <% end %>
    <%= yield :head %>
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
<%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="bg-gray-100 font-sans">
    <!-- Flash Messages -->
    <% if notice || alert %>
    <div data-controller="flash" 
        data-flash-timeout-value="5000"
        class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50 w-full max-w-xl transition-opacity duration-300 ease-in-out"
        data-transition-enter="opacity-0"
        data-transition-enter-start="opacity-0"
        data-transition-enter-end="opacity-100"
        data-transition-leave="opacity-100"
        data-transition-leave-start="opacity-100"
        data-transition-leave-end="opacity-0">
        <div class="flex items-center p-4 gap-3 rounded-lg shadow-lg border <%= notice ? 'bg-green-50 border-green-200 text-green-800' : 'bg-orange-50 border-orange-200 text-orange-800' %>">
        <div class="flex-shrink-0">
            <% if notice %>
            <svg class="w-5 h-5 text-green-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <% else %>
            <svg class="w-5 h-5 text-orange-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <% end %>
        </div>
        <p class="flex-1"><%= notice || alert %></p>
        <button data-action="click->flash#close" class="text-gray-400 hover:text-gray-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
        </div>
    </div>
    <% end %>
    <!-- Navbar -->
    <%= render "shared/navbar" %>
    <%= render "shared/hero_header" %>
    <!-- Main Layout -->
    <div class="container mx-auto px-4">
      <!-- Content Wrapper -->
      <% 
        # Determine if we should show a sidebar
        show_sidebar = false
        if user_signed_in?
          if (controller_name == "users" && action_name == "show") ||
             (controller_name == "posts" && ["new", "create", "edit", "update"].include?(action_name)) ||
             (controller_name == "notifications") ||
             (controller_name == "registrations" && ["edit", "update"].include?(action_name)) ||
             (controller_name == "posts" && action_name == "index" && params[:user].present? && (User.find_by(id: params[:user]) == current_user))
            show_sidebar = true
          end
        end
        
        # Show main sidebar on homepage only for logged-in users (hidden for guests)
        if user_signed_in? && controller_name == "home" && action_name == "index"
          show_sidebar = true
        end
      %>
      
      <div class="<%= show_sidebar ? 'flex flex-col md:flex-row gap-6' : 'flex justify-center' %> min-h-screen mb-6">
        <% if show_sidebar %>
          <!-- Sidebar -->
          <% if user_signed_in? && (controller_name == "users" && action_name == "show") %>
            <!-- Profile Dashboard Sidebar -->
            <%= render "shared/profile_sidebar" %>
          <% elsif user_signed_in? && controller_name == "posts" && ["new", "create", "edit", "update"].include?(action_name) %>
            <!-- Profile Dashboard Sidebar -->
            <%= render "shared/profile_sidebar" %>
          <% elsif user_signed_in? && controller_name == "notifications" %>
            <!-- Profile Dashboard Sidebar -->
            <%= render "shared/profile_sidebar" %>
          <% elsif user_signed_in? && controller_name == "registrations" && ["edit", "update"].include?(action_name) %>
            <!-- Profile Dashboard Sidebar -->
            <%= render "shared/profile_sidebar" %>
          <% elsif user_signed_in? && controller_name == "posts" && action_name == "index" && params[:user].present? && (User.find_by(id: params[:user]) == current_user) %>
            <!-- Profile Dashboard Sidebar -->
            <%= render "shared/profile_sidebar" %>
          <% elsif user_signed_in? && controller_name == "home" && action_name == "index" %>
            <!-- Main Site Sidebar - On homepage for logged-in users only -->
            <%= render "shared/sidebar" %>
          <% end %>
        <% end %>
        
        <!-- Main Content -->
        <div class="<%= show_sidebar ? 'flex-1' : 'w-full max-w-6xl' %> p-6 bg-white shadow-md border border-gray-300 rounded-2xl">
          <%= yield %>
        </div>
      </div>
      <!-- Footer -->
      <%= render "shared/footer" %>
    </div>
  </body>
</html>
