<!-- Quick Actions Section - Modern Design -->
<div class="bg-gradient-to-br from-slate-50 via-white to-blue-50 rounded-2xl shadow-xl border border-slate-200 mb-8 overflow-hidden relative">
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-blue-400 to-purple-400 rounded-full transform translate-x-20 -translate-y-20 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-tr from-indigo-400 to-cyan-400 rounded-full transform -translate-x-16 translate-y-16 blur-3xl"></div>
  </div>
  
  <div class="relative">
    <div class="px-8 py-6 border-b border-slate-200/50 bg-gradient-to-r from-transparent via-white/50 to-transparent backdrop-blur-sm">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-2xl font-bold text-slate-800 flex items-center">
            <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center mr-3 shadow-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            Quick Actions
          </h3>
          <p class="text-slate-600 mt-2 ml-13">Streamline your workflow with these essential admin tools</p>
        </div>
        <div class="hidden lg:flex items-center space-x-2">
          <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
          <span class="text-xs text-slate-500 font-medium">Live</span>
        </div>
      </div>
    </div>
    
    <div class="p-8">
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6">
        <!-- Add User Action -->
        <%= link_to new_admin_user_path, class: "group block" do %>
          <div class="relative bg-white/80 backdrop-blur-sm p-6 rounded-2xl border border-white/50 shadow-lg hover:shadow-2xl hover:scale-105 transition-all duration-300 overflow-hidden">
