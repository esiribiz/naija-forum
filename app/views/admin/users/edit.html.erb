<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-gray-100">Edit User Role</h1>
</div>

<div class="bg-gray-800 shadow-md rounded-lg overflow-hidden p-6 max-w-2xl mx-auto border border-gray-700">
    <%= form_with(model: [:admin, @user], local: true, class: "space-y-6") do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-900 text-red-200 p-4 rounded mb-6">
          <h2 class="font-semibold"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul class="list-disc pl-5 mt-2">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <div class="flex flex-col">
          <span class="font-medium text-gray-300 mb-1">Username</span>
          <div class="bg-gray-700 p-2 rounded text-gray-200">
            <%= @user.username %>
          </div>
          <p class="text-gray-400 text-xs mt-1">Username cannot be changed</p>
        </div>
      </div>

      <div>
        <div class="flex flex-col">
          <span class="font-medium text-gray-300 mb-1">Email</span>
          <div class="bg-gray-700 p-2 rounded text-gray-200">
            <%= @user.email %>
          </div>
          <p class="text-gray-400 text-xs mt-1">Email cannot be changed here</p>
        </div>
      </div>

      <div>
        <%= form.label :role, class: "block font-medium text-gray-300 mb-1" %>
        <%= form.select :role, 
                      options_for_select(['user', 'admin', 'moderator'], @user.role), 
                      {}, 
                      { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base bg-gray-700 border-gray-600 text-gray-200 focus:outline-none focus:ring-indigo-400 focus:border-indigo-400 sm:text-sm rounded-md" } %>
      </div>

      <div class="flex items-center justify-between pt-4">
        <%= link_to "Back to User List", admin_users_path, class: "text-indigo-400 hover:text-indigo-300" %>
        <%= form.submit "Save Changes", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-400" %>
      </div>
    <% end %>
  </div>
