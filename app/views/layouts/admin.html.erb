    <!-- Main Layout -->
    <div class="container mx-auto my-6 px-4 max-w-full overflow-x-hidden">
      <div class="bg-gray-800 border border-gray-700 rounded-lg shadow-xl p-6 w-full max-w-full box-border">
        <div class="w-full max-w-full overflow-x-hidden">
          <%= yield %>
