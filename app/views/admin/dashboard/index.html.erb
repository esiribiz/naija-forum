        <div class="text-right">
          <div class="text-3xl font-extrabold bg-gradient-to-r from-orange-600 to-red-600 bg-clip-text text-transparent"><%= number_with_delimiter(@stats[:comments][:total]) %></div>
          <div class="text-sm font-medium text-gray-600">Total Comments</div>
