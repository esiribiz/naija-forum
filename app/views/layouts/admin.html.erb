<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin Dashboard - Naija Forum" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="bg-gray-900 font-sans text-gray-200">
    <!-- Flash Messages - Same as application layout -->
    <% if notice || alert %>
    <div data-controller="flash" 
        data-flash-timeout-value="5000"
        class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50 w-full max-w-xl transition-opacity duration-300 ease-in-out"
        data-transition-enter="opacity-0"
        data-transition-enter-start="opacity-0"
        data-transition-enter-end="opacity-100"
        data-transition-leave="opacity-100"
        data-transition-leave-start="opacity-100"
        data-transition-leave-end="opacity-0">
        <div class="flex items-center p-4 gap-3 rounded-lg shadow-lg border <%= notice ? 'bg-blue-900 border-blue-700 text-blue-100' : 'bg-red-900 border-red-700 text-red-100' %>">
        <div class="flex-shrink-0">
            <% if notice %>
            <svg class="w-5 h-5 text-blue-300" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <% else %>
            <svg class="w-5 h-5 text-red-300" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <% end %>
        </div>
        <p class="flex-1"><%= notice || alert %></p>
        <button data-action="click->flash#close" class="text-gray-400 hover:text-gray-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
        </div>
    </div>
    <% end %>

    <!-- Admin Header -->
    <header class="bg-gray-800 border-b border-gray-700 shadow-lg">
      <div class="container mx-auto px-4 py-3">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <h1 class="text-xl font-bold text-white mr-4">Admin Dashboard</h1>
          </div>
          <div>
            <%= link_to "Back to Site", root_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
          </div>
        </div>
      </div>
    </header>

    <!-- Admin Navigation -->
    <nav class="bg-gray-800 py-3 border-b border-gray-700">
      <div class="container mx-auto px-4">
        <div class="flex space-x-4 overflow-x-auto">
          <%= link_to "Users", admin_users_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium whitespace-nowrap #{'bg-gray-700 text-white' if controller_name == 'users'}" %>
          <%= link_to "Categories", "#", class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium whitespace-nowrap #{'bg-gray-700 text-white' if controller_name == 'categories'}" %>
          <%= link_to "Posts", "#", class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium whitespace-nowrap #{'bg-gray-700 text-white' if controller_name == 'posts'}" %>
          <%= link_to "Comments", "#", class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium whitespace-nowrap #{'bg-gray-700 text-white' if controller_name == 'comments'}" %>
          <%= link_to "Tags", "#", class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium whitespace-nowrap #{'bg-gray-700 text-white' if controller_name == 'tags'}" %>
          <%= link_to "Settings", "#", class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium whitespace-nowrap #{'bg-gray-700 text-white' if controller_name == 'settings'}" %>
        </div>
      </div>
    </nav>

    <!-- Main Layout -->
    <div class="container mx-auto my-6 px-4">
      <div class="bg-gray-800 border border-gray-700 rounded-lg shadow-xl p-6">
        <%= yield %>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 border-t border-gray-700 py-4 mt-8">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="mb-4 md:mb-0">
            <p class="text-gray-400 text-sm">
              &copy; <%= Date.current.year %> Naija Forum - Admin Area
            </p>
          </div>
          <div>
            <a href="<%= root_path %>" class="text-blue-400 hover:text-blue-300 text-sm">Return to Main Site</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

