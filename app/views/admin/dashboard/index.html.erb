<% content_for :page_title, "Dashboard" %>
<% content_for :page_subtitle, "Welcome back! Here's what's happening on your forum today." %>

<!-- Enhanced Dashboard Statistics Cards - Column Layout -->
<div class="flex flex-col lg:flex-row gap-6 mb-8">
  <!-- Left Column - User & Content Stats -->
  <div class="flex-1 space-y-4">
    <!-- Users Stats -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #1e40af);">
          <i class="fas fa-users"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:users][:total]) %></div>
          <div class="stat-label">Total Users</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-arrow-up mr-1"></i>
            +<%= @stats[:users][:new_today] %> today
          </div>
        </div>
        <div class="flex-shrink-0 flex flex-col items-end space-y-2">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-blue-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@stats[:users][:new_today].to_f / [@stats[:users][:total], 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
          <%= link_to admin_users_path, class: "btn btn-primary btn-sm group-hover:shadow-lg transition-all" do %>
            <i class="fas fa-eye mr-1"></i> View All
          <% end %>
        </div>
      </div>
    </div>

    <!-- Posts Stats -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
          <i class="fas fa-newspaper"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:posts][:total]) %></div>
          <div class="stat-label">Total Posts</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-arrow-up mr-1"></i>
            +<%= @stats[:posts][:new_today] %> today
          </div>
        </div>
        <div class="flex-shrink-0 flex flex-col items-end space-y-2">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-green-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@stats[:posts][:new_today].to_f / [@stats[:posts][:total], 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
          <%= link_to admin_posts_path, class: "btn btn-success btn-sm group-hover:shadow-lg transition-all" do %>
            <i class="fas fa-cog mr-1"></i> Manage
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Column - Engagement & Organization -->
  <div class="flex-1 space-y-4">
    <!-- Comments Stats -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
          <i class="fas fa-comments"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:comments][:total]) %></div>
          <div class="stat-label">Total Comments</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-arrow-up mr-1"></i>
            +<%= @stats[:comments][:new_today] %> today
          </div>
        </div>
        <div class="flex-shrink-0 flex flex-col items-end space-y-2">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-yellow-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@stats[:comments][:new_today].to_f / [@stats[:comments][:total], 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
          <%= link_to admin_comments_path, class: "btn btn-warning btn-sm group-hover:shadow-lg transition-all" do %>
            <i class="fas fa-shield-alt mr-1"></i> Moderate
          <% end %>
        </div>
      </div>
    </div>

    <!-- Categories Stats -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
          <i class="fas fa-tags"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:categories][:total]) %></div>
          <div class="stat-label">Categories</div>
          <div class="stat-change mt-1 text-sm" style="color: #6b7280;">
            <i class="fas fa-check mr-1"></i>
            <%= @stats[:categories][:with_posts] %> active
          </div>
        </div>
        <div class="flex-shrink-0 flex flex-col items-end space-y-2">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-purple-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@stats[:categories][:with_posts].to_f / [@stats[:categories][:total], 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
          <%= link_to admin_categories_path, class: "btn btn-secondary btn-sm group-hover:shadow-lg transition-all" do %>
            <i class="fas fa-list mr-1"></i> Manage
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Quick Actions Section -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 mb-8 overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-100">
    <h3 class="text-lg font-bold text-gray-900 flex items-center">
      <i class="fas fa-bolt mr-2 text-yellow-500"></i>
      Quick Actions
    </h3>
    <p class="text-sm text-gray-600 mt-1">Perform common admin tasks quickly</p>
  </div>
  <div class="p-6">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <%= link_to new_admin_user_path, class: "quick-action-card group" do %>
        <div class="p-4 text-center border-2 border-dashed border-gray-200 rounded-lg hover:border-blue-400 hover:bg-blue-50 transition-all">
          <div class="w-12 h-12 mx-auto mb-3 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-200">
            <i class="fas fa-user-plus text-blue-600"></i>
          </div>
          <p class="text-sm font-medium text-gray-700">Add User</p>
        </div>
      <% end %>
      
      <%= link_to admin_posts_path(published: false), class: "quick-action-card group" do %>
        <div class="p-4 text-center border-2 border-dashed border-gray-200 rounded-lg hover:border-green-400 hover:bg-green-50 transition-all">
          <div class="w-12 h-12 mx-auto mb-3 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-200">
            <i class="fas fa-edit text-green-600"></i>
          </div>
          <p class="text-sm font-medium text-gray-700">Draft Posts</p>
        </div>
      <% end %>
      
      <%= link_to new_admin_category_path, class: "quick-action-card group" do %>
        <div class="p-4 text-center border-2 border-dashed border-gray-200 rounded-lg hover:border-purple-400 hover:bg-purple-50 transition-all">
          <div class="w-12 h-12 mx-auto mb-3 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-200">
            <i class="fas fa-tags text-purple-600"></i>
          </div>
          <p class="text-sm font-medium text-gray-700">New Category</p>
        </div>
      <% end %>
      
      <%= link_to admin_comments_path, class: "quick-action-card group" do %>
        <div class="p-4 text-center border-2 border-dashed border-gray-200 rounded-lg hover:border-orange-400 hover:bg-orange-50 transition-all">
          <div class="w-12 h-12 mx-auto mb-3 bg-orange-100 rounded-lg flex items-center justify-center group-hover:bg-orange-200">
            <i class="fas fa-flag text-orange-600"></i>
          </div>
          <p class="text-sm font-medium text-gray-700">Moderate</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Charts Section -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
  <!-- User Growth Chart -->
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">
        <i class="fas fa-chart-line mr-2" style="color: #3b82f6;"></i>
        User Growth
      </h3>
      <p class="card-subtitle">New user registrations over the last 30 days</p>
    </div>
    <div class="card-body">
      <div style="position: relative; height: 300px;">
        <canvas id="userGrowthChart"></canvas>
      </div>
    </div>
  </div>

  <!-- Content Activity Chart -->
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">
        <i class="fas fa-chart-area mr-2" style="color: #10b981;"></i>
        Content Activity
      </h3>
      <p class="card-subtitle">Posts and comments created over the last 30 days</p>
    </div>
    <div class="card-body">
      <div style="position: relative; height: 300px;">
        <canvas id="contentActivityChart"></canvas>
      </div>
    </div>
  </div>
</div>

<!-- Recent Activity Section -->
<div class="mb-6">
  <div class="flex items-center justify-between">
    <h2 class="text-2xl font-bold text-gray-900 flex items-center">
      <i class="fas fa-clock mr-3 text-blue-500"></i>
      Recent Activity
    </h2>
    <div class="flex space-x-2">
      <button class="px-3 py-1.5 text-xs font-medium text-gray-600 bg-gray-100 rounded-full hover:bg-gray-200 transition-colors">
        Last 24h
      </button>
      <button class="px-3 py-1.5 text-xs font-medium text-blue-600 bg-blue-100 rounded-full hover:bg-blue-200 transition-colors">
        Last Week
      </button>
    </div>
  </div>
  <p class="text-gray-600 mt-1">Stay updated with the latest forum activities and member engagement</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Recent Users -->
  <div class="card group hover:shadow-xl transition-all duration-300">
    <div class="card-header bg-gradient-to-r from-purple-50 to-blue-50 border-b border-purple-100">
      <h3 class="card-title">
        <i class="fas fa-user-plus mr-2" style="color: #8b5cf6;"></i>
        Recent Users
      </h3>
      <p class="card-subtitle">Latest member registrations</p>
      <div class="absolute top-4 right-4">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
          <%= @recent_users.count %> new
        </span>
      </div>
    </div>
    <div class="card-body" style="padding: 0;">
      <div class="divide-y divide-gray-200">
        <% @recent_users.each do |user| %>
          <div class="p-4 hover:bg-gray-50 transition-colors">
            <div class="flex items-center space-x-3">
              <% if user.avatar.attached? %>
                <%= image_tag user.avatar, class: "admin-avatar rounded-full object-cover border-2 border-gray-200" %>
              <% else %>
                <div class="admin-avatar rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center border-2 border-gray-200">
                  <span class="text-sm font-bold text-white"><%= user.username&.first&.upcase || 'U' %></span>
                </div>
              <% end %>
              <div class="flex-1">
                <p class="font-semibold text-gray-900 text-sm"><%= user.display_name %></p>
                <p class="text-gray-500 text-xs">@<%= user.username %></p>
                <p class="text-gray-400 text-xs"><%= time_ago_in_words(user.created_at) %> ago</p>
              </div>
              <span class="badge <%= case user.role
                when 'admin' then 'bg-green-500'
                when 'moderator' then 'bg-yellow-500'
                else 'bg-gray-400'
              end %>">
                <%= user.role.capitalize %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-footer text-center">
      <%= link_to admin_users_path, class: "btn btn-primary btn-sm" do %>
        <i class="fas fa-users mr-1"></i> View All Users
      <% end %>
    </div>
  </div>

  <!-- Recent Posts -->
  <div class="card group hover:shadow-xl transition-all duration-300">
    <div class="card-header bg-gradient-to-r from-green-50 to-emerald-50 border-b border-green-100">
      <h3 class="card-title">
        <i class="fas fa-newspaper mr-2" style="color: #10b981;"></i>
        Recent Posts
      </h3>
      <p class="card-subtitle">Latest forum posts</p>
      <div class="absolute top-4 right-4">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          <%= @recent_posts.count %> new
        </span>
      </div>
    </div>
    <div class="card-body" style="padding: 0;">
      <div class="divide-y divide-gray-200">
        <% @recent_posts.each do |post| %>
          <div class="p-4 hover:bg-gray-50 transition-colors">
            <div class="space-y-2">
              <h4 class="font-semibold text-gray-900 text-sm line-clamp-2">
                <%= link_to truncate(post.title, length: 60), post_path(post), class: "hover:text-blue-600 transition-colors" %>
              </h4>
              <div class="flex items-center space-x-2 text-xs text-gray-500">
                <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full">
                  <%= post.category.name %>
                </span>
                <span>by <%= post.user.display_name %></span>
              </div>
              <div class="flex items-center justify-between text-xs text-gray-400">
                <span><%= time_ago_in_words(post.created_at) %> ago</span>
                <span class="flex items-center">
                  <i class="fas fa-comments mr-1"></i>
                  <%= post.comments.count %>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-footer text-center">
      <%= link_to admin_posts_path, class: "btn btn-success btn-sm" do %>
        <i class="fas fa-newspaper mr-1"></i> Manage Posts
      <% end %>
    </div>
  </div>

  <!-- Recent Comments -->
  <div class="card group hover:shadow-xl transition-all duration-300">
    <div class="card-header bg-gradient-to-r from-yellow-50 to-orange-50 border-b border-yellow-100">
      <h3 class="card-title">
        <i class="fas fa-comments mr-2" style="color: #f59e0b;"></i>
        Recent Comments
      </h3>
      <p class="card-subtitle">Latest forum discussions</p>
      <div class="absolute top-4 right-4">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
          <%= @recent_comments.count %> new
        </span>
      </div>
    </div>
    <div class="card-body" style="padding: 0;">
      <div class="divide-y divide-gray-200">
        <% @recent_comments.each do |comment| %>
          <div class="p-4 hover:bg-gray-50 transition-colors">
            <div class="space-y-2">
              <p class="text-gray-900 text-sm line-clamp-3">
                <%= truncate(strip_tags(comment.content), length: 80) %>
              </p>
              <div class="flex items-center space-x-2 text-xs">
                <span class="text-gray-600">
                  by <span class="font-medium"><%= comment.user.display_name %></span>
                </span>
                <span class="text-gray-400">•</span>
                <span class="text-gray-500">
                  on <%= link_to truncate(comment.post.title, length: 30), post_path(comment.post), class: "text-blue-600 hover:text-blue-800" %>
                </span>
              </div>
              <p class="text-xs text-gray-400"><%= time_ago_in_words(comment.created_at) %> ago</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-footer text-center">
      <%= link_to admin_comments_path, class: "btn btn-warning btn-sm" do %>
        <i class="fas fa-comments mr-1"></i> Moderate Comments
      <% end %>
    </div>
  </div>
</div>

<!-- Dashboard Charts JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // User Growth Chart
  const userGrowthCtx = document.getElementById('userGrowthChart');
  if (userGrowthCtx) {
    const userGrowthChart = new Chart(userGrowthCtx, {
      type: 'line',
      data: {
        labels: <%= raw @user_growth_data.keys.to_json %>,
        datasets: [{
          label: 'New Users',
          data: <%= raw @user_growth_data.values.to_json %>,
          borderColor: '#3b82f6',
          backgroundColor: 'rgba(59, 130, 246, 0.1)',
          borderWidth: 3,
          fill: true,
          tension: 0.4,
          pointBackgroundColor: '#3b82f6',
          pointBorderColor: '#ffffff',
          pointBorderWidth: 2,
          pointRadius: 6,
          pointHoverRadius: 8
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: {
              color: 'rgba(0, 0, 0, 0.05)'
            },
            ticks: {
              color: '#6b7280'
            }
          },
          x: {
            grid: {
              display: false
            },
            ticks: {
              color: '#6b7280'
            }
          }
        }
      }
    });
  }

  // Content Activity Chart
  const contentActivityCtx = document.getElementById('contentActivityChart');
  if (contentActivityCtx) {
    const contentActivityChart = new Chart(contentActivityCtx, {
      type: 'bar',
      data: {
        labels: <%= raw @post_activity_data.keys.to_json %>,
        datasets: [{
          label: 'Posts',
          data: <%= raw @post_activity_data.values.to_json %>,
          backgroundColor: 'rgba(16, 185, 129, 0.8)',
          borderColor: '#10b981',
          borderWidth: 1,
          borderRadius: 4,
        }, {
          label: 'Comments',
          data: <%= raw @comment_activity_data.values.to_json %>,
          backgroundColor: 'rgba(245, 158, 11, 0.8)',
          borderColor: '#f59e0b',
          borderWidth: 1,
          borderRadius: 4,
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'top',
            labels: {
              usePointStyle: true,
              pointStyle: 'circle',
              color: '#6b7280'
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            grid: {
              color: 'rgba(0, 0, 0, 0.05)'
            },
            ticks: {
              color: '#6b7280'
            }
          },
          x: {
            grid: {
              display: false
            },
            ticks: {
              color: '#6b7280'
            }
          }
        }
      }
    });
  }

  // Animate stat cards on page load
  const statCards = document.querySelectorAll('.stat-card');
  statCards.forEach((card, index) => {
    setTimeout(() => {
      card.style.opacity = '0';
      card.style.transform = 'translateY(20px)';
      card.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
      
      setTimeout(() => {
        card.style.opacity = '1';
        card.style.transform = 'translateY(0)';
      }, 100);
    }, index * 150);
  });
});
</script>

<style>
/* Line clamp utility */
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Custom hover effects */
.hover\\:bg-gray-50:hover {
  background-color: #f9fafb;
}

.transition-colors {
  transition-property: color, background-color, border-color, text-decoration-color, fill, stroke;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  transition-duration: 150ms;
}
</style>