<% content_for :title, "Edit Tag: #{@tag.name}" %>

<%= render 'shared/navigation_menu' %>

<!-- Header -->
<div class="relative overflow-hidden mb-8 bg-gradient-to-br from-green-600 via-green-700 to-green-800 py-12 px-6 shadow-xl rounded-2xl">
  <div class="relative z-10 text-center">
    <h1 class="text-4xl font-extrabold text-white mb-2">
      üè∑Ô∏è Edit Tag
    </h1>
    <p class="text-green-100 text-lg">
      Update tag properties and categorization
    </p>
  </div>
</div>

<div class="max-w-4xl mx-auto px-6 pb-16">
  <!-- Back link -->
  <div class="mb-6">
    <%= link_to @tag, class: "inline-flex items-center text-green-600 hover:text-green-800 transition-colors duration-200" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Tag
    <% end %>
  </div>

  <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
    <%= form_with(model: @tag, class: "space-y-6") do |form| %>
      <% if @tag.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-xl p-6">
          <div class="flex items-center mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
            <h3 class="font-semibold text-red-800"><%= pluralize(@tag.errors.count, "error") %> prevented this tag from being saved:</h3>
          </div>
          <ul class="list-disc list-inside text-red-700 space-y-1">
            <% @tag.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Name Field -->
      <div class="space-y-3">
        <%= form.label :name, class: "block text-sm font-semibold text-gray-900" do %>
          Tag Name
        <% end %>
        <%= form.text_field :name, 
              placeholder: "e.g., Technology, Lagos, BuildNaija",
              class: "mt-2 block w-full px-4 py-3 text-lg border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" %>
      </div>

      <!-- Category Field -->
      <div class="space-y-3">
        <%= form.label :category, class: "block text-sm font-semibold text-gray-900" do %>
          Category
        <% end %>
        <%= form.select :category, 
              options_from_collection_for_select(Tag::CATEGORIES.map { |k,v| [k, v] }, :first, :last, @tag.category),
              { prompt: "Select a category" },
              { class: "mt-2 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" } %>
        <p class="text-xs text-gray-500 mt-1">
          Geographic: Nigerian states ‚Ä¢ Professional: Work/interests ‚Ä¢ Country/Region: Diaspora locations ‚Ä¢ Special Project: Community initiatives
        </p>
      </div>

      <!-- Description Field -->
      <div class="space-y-3">
        <%= form.label :description, class: "block text-sm font-semibold text-gray-900" do %>
          Description (Optional)
        <% end %>
        <%= form.text_area :description, rows: 3, 
              placeholder: "Brief description of what this tag represents...",
              class: "mt-2 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 resize-y" %>
      </div>

      <!-- Admin Options -->
      <% if user_signed_in? && current_user.admin? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Official Status -->
          <div class="space-y-3">
            <label class="flex items-center space-x-3 cursor-pointer p-4 bg-green-50 border border-green-200 rounded-xl hover:bg-green-100 transition-colors duration-200">
              <%= form.check_box :is_official, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
              <div>
                <span class="text-sm font-semibold text-gray-900">Official Tag</span>
                <p class="text-xs text-gray-600">Mark this as an officially recognized tag</p>
              </div>
            </label>
          </div>

          <!-- Featured Status -->
          <div class="space-y-3">
            <label class="flex items-center space-x-3 cursor-pointer p-4 bg-yellow-50 border border-yellow-200 rounded-xl hover:bg-yellow-100 transition-colors duration-200">
              <%= form.check_box :is_featured, class: "h-4 w-4 text-yellow-600 focus:ring-yellow-500 border-gray-300 rounded" %>
              <div>
                <span class="text-sm font-semibold text-gray-900">Featured Tag</span>
                <p class="text-xs text-gray-600">Show this tag prominently on the homepage</p>
              </div>
            </label>
          </div>
        </div>
      <% end %>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 pt-8 border-t border-gray-200">
        <%= link_to @tag, class: "flex items-center justify-center px-6 py-3 border border-gray-300 rounded-xl text-gray-700 font-medium hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
          Cancel
        <% end %>
        
        <%= form.submit "Update Tag", 
              class: "flex items-center justify-center flex-1 px-6 py-3 border border-transparent rounded-xl text-white font-semibold bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transform transition-all duration-200 hover:scale-[1.02] shadow-lg hover:shadow-xl" %>
      </div>
    <% end %>
  </div>

  <!-- Tag Statistics -->
  <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-gradient-to-r from-blue-500 to-blue-600 text-white p-6 rounded-xl text-center shadow-lg">
      <div class="text-3xl font-bold"><%= @tag.posts.count %></div>
      <div class="text-sm opacity-90">Total Posts</div>
    </div>
    <div class="bg-gradient-to-r from-green-500 to-green-600 text-white p-6 rounded-xl text-center shadow-lg">
      <div class="text-3xl font-bold"><%= @tag.category&.humanize || "N/A" %></div>
      <div class="text-sm opacity-90">Category</div>
    </div>
    <div class="bg-gradient-to-r from-purple-500 to-purple-600 text-white p-6 rounded-xl text-center shadow-lg">
      <div class="text-3xl font-bold"><%= @tag.is_official? ? "Yes" : "No" %></div>
      <div class="text-sm opacity-90">Official Status</div>
    </div>
  </div>
</div>