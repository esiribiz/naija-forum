<% content_for :page_title, "Categories Management" %>
<% content_for :page_subtitle, "Manage forum categories and organization" %>

<!-- Enhanced Stats Cards - Column Layout -->
<div class="flex flex-col lg:flex-row gap-6 mb-8">
  <!-- Left Column - Category Overview -->
  <div class="flex-1 space-y-4">
    <!-- Total Categories -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
          <i class="fas fa-tags"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:total]) %></div>
          <div class="stat-label">Total Categories</div>
          <div class="stat-change mt-1 text-sm" style="color: #6b7280;">
            <i class="fas fa-list mr-1"></i>
            Organizing content
          </div>
        </div>
        <div class="flex-shrink-0 flex flex-col items-end space-y-2">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-green-500 h-2 rounded-full transition-all duration-1000" style="width: 100%"></div>
            </div>
          </div>
          <% if current_user_can?(:manage_categories_and_tags) %>
            <%= link_to new_admin_category_path, class: "btn btn-success btn-sm group-hover:shadow-lg transition-all" do %>
              <i class="fas fa-plus mr-1"></i> Add New
            <% end %>
          <% else %>
            <div class="text-xs text-gray-500 px-2 py-1 bg-gray-100 rounded">
              <i class="fas fa-lock mr-1"></i> Admin only
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Column - Category Status -->
  <div class="flex-1 space-y-4">
    <!-- Categories with Posts -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #1e40af);">
          <i class="fas fa-newspaper"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:with_posts]) %></div>
          <div class="stat-label">With Posts</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-check mr-1"></i>
            <%= ((@stats[:with_posts].to_f / [@stats[:total], 1].max) * 100).round(1) %>% active
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-blue-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@stats[:with_posts].to_f / [@stats[:total], 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Empty Categories -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
          <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@stats[:empty]) %></div>
          <div class="stat-label">Empty Categories</div>
          <div class="stat-change mt-1 text-sm" style="color: #6b7280;">
            <i class="fas fa-warning mr-1"></i>
            Need content
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-yellow-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@stats[:empty].to_f / [@stats[:total], 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Enhanced Search and Filter Section -->
<div class="enhanced-search-container">
  <div class="enhanced-search-header">
    <h3 class="enhanced-search-title">
      <i class="fas fa-search text-green-500"></i>
      Advanced Category Search & Filters
    </h3>
    <p class="enhanced-search-subtitle">Find categories by name, description, post count, status, or creation date with powerful filtering options</p>
  </div>
  <div class="enhanced-search-body">
    <%= form_with url: admin_categories_path, method: :get, local: true, class: "enhanced-search-form" do |form| %>
      <!-- Main search row -->
      <div class="enhanced-search-row">
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-search mr-2 text-green-500"></i>
            Search Categories
          </label>
          <%= form.text_field :search, 
              placeholder: "Search by category name, description, or other details...", 
              value: params[:search],
              class: "enhanced-form-input",
              data: { 
                search_target: "input",
                search_delay: "300"
              } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-layer-group mr-2 text-blue-500"></i>
            Category Status
          </label>
          <%= form.select :status, 
              options_for_select([
                ['All Categories', ''],
                ['âœ… Active (with posts)', 'active'],
                ['âšª Empty (no posts)', 'empty'],
                ['ðŸ”¥ Popular (10+ posts)', 'popular']
              ], params[:status]), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-sort-amount-down mr-2 text-purple-500"></i>
            Sort By
          </label>
          <%= form.select :sort, 
              options_for_select([
                ['Name A-Z', 'name_asc'],
                ['Name Z-A', 'name_desc'],
                ['Most Posts', 'posts_desc'],
                ['Fewest Posts', 'posts_asc'],
                ['Newest First', 'created_desc'],
                ['Oldest First', 'created_asc']
              ], params[:sort] || 'name_asc'), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-calendar-plus mr-2 text-orange-500"></i>
            Created Period
          </label>
          <%= form.select :created_period, 
              options_for_select([
                ['All Time', ''],
                ['Today', 'today'],
                ['This Week', 'week'],
                ['This Month', 'month'],
                ['Last 3 Months', '3months'],
                ['This Year', 'year']
              ], params[:created_period]), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
      </div>
      
      <!-- Advanced filters row -->
      <div class="enhanced-search-row" style="opacity: 0.9;">
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-file-alt mr-2 text-indigo-500"></i>
            Min Posts Count
          </label>
          <%= form.number_field :min_posts, 
              placeholder: "0", 
              value: params[:min_posts],
              min: 0,
              class: "enhanced-form-input" %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-comments mr-2 text-teal-500"></i>
            Min Comments Count
          </label>
          <%= form.number_field :min_comments, 
              placeholder: "0", 
              value: params[:min_comments],
              min: 0,
              class: "enhanced-form-input" %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-list-ol mr-2 text-pink-500"></i>
            Results Per Page
          </label>
          <%= form.select :per_page, 
              options_for_select([
                ['10 categories', '10'],
                ['25 categories', '25'],
                ['50 categories', '50'],
                ['All categories', 'all']
              ], params[:per_page] || '25'), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-calendar mr-2 text-cyan-500"></i>
            Created After Date
          </label>
          <%= form.date_field :created_after, 
              value: params[:created_after],
              class: "enhanced-form-input" %>
        </div>
      </div>
      
      <!-- Search actions -->
      <div class="enhanced-search-actions">
        <div class="enhanced-search-buttons">
          <%= form.submit "ðŸ” Apply Filters", class: "enhanced-search-btn enhanced-search-btn-primary" %>
          <%= link_to "ðŸ—‘ï¸ Clear All", admin_categories_path, class: "enhanced-search-btn enhanced-search-btn-secondary" %>
          <button type="button" id="advanced-toggle" class="enhanced-search-btn enhanced-search-btn-secondary">
            <i class="fas fa-sliders-h mr-2"></i>
            Advanced Options
          </button>
        </div>
        
        <div class="enhanced-search-results">
          <% filter_params = ['search', 'status', 'sort', 'created_period', 'min_posts', 'min_comments', 'created_after'] %>
          <% has_filters = filter_params.any? { |key| params[key].present? } %>
          <% if has_filters %>
            <div class="flex items-center space-x-2 text-sm">
              <i class="fas fa-filter text-green-500"></i>
              <span class="text-slate-600">Active filters:</span>
              <div class="flex items-center space-x-1 flex-wrap">
                <% if params[:search].present? %>
                  <span class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">
                    Search: "<%= params[:search] %>"
                  </span>
                <% end %>
                <% if params[:status].present? %>
                  <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium">
                    Status: <%= params[:status].humanize %>
                  </span>
                <% end %>
                <% if params[:sort].present? %>
                  <span class="px-2 py-1 bg-purple-100 text-purple-700 rounded-full text-xs font-medium">
                    Sort: <%= params[:sort].humanize %>
                  </span>
                <% end %>
                <% if params[:created_period].present? %>
                  <span class="px-2 py-1 bg-orange-100 text-orange-700 rounded-full text-xs font-medium">
                    Period: <%= params[:created_period].humanize %>
                  </span>
                <% end %>
                <% if params[:min_posts].present? %>
                  <span class="px-2 py-1 bg-indigo-100 text-indigo-700 rounded-full text-xs font-medium">
                    Min Posts: <%= params[:min_posts] %>
                  </span>
                <% end %>
                <% if params[:min_comments].present? %>
                  <span class="px-2 py-1 bg-teal-100 text-teal-700 rounded-full text-xs font-medium">
                    Min Comments: <%= params[:min_comments] %>
                  </span>
                <% end %>
                <% if params[:created_after].present? %>
                  <span class="px-2 py-1 bg-cyan-100 text-cyan-700 rounded-full text-xs font-medium">
                    After: <%= Date.parse(params[:created_after]).strftime('%m/%d/%Y') rescue params[:created_after] %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <div class="text-slate-500">
            <i class="fas fa-layer-group mr-1"></i>
            Showing <%= @categories.respond_to?(:count) ? @categories.count : @categories.size %> of <%= @stats[:total] %> categories
            <% if filter_params.any? { |key| params[key].present? } %>
              <span class="text-green-600 font-medium">(filtered)</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

  <!-- Include Enhanced Table Styles (if not already included) -->
  <%= render 'shared/enhanced_table_styles' unless @enhanced_styles_included %>
  <% @enhanced_styles_included = true %>

  <!-- Enhanced Categories Table -->
  <div class="enhanced-table-container mb-8 enhanced-fade-in">
    <div class="enhanced-table-header">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="enhanced-table-title">
            <i class="fas fa-layer-group" style="color: #10b981;"></i>
            Categories & Content Organization
          </h2>
          <p class="enhanced-table-subtitle">Organize forum discussions with structured categories - manage hierarchy, content flow, and user navigation</p>
        </div>
        <div class="flex items-center space-x-4">
          <div class="enhanced-stats-group">
            <div class="enhanced-stat-item">
              <i class="fas fa-layer-group"></i>
              <span><%= @stats[:total] %> Total Categories</span>
            </div>
            <div class="enhanced-stat-item">
              <i class="fas fa-file-alt text-green-500"></i>
              <span><%= @stats[:with_posts] %> With Content</span>
            </div>
          </div>
          <%= link_to new_admin_category_path, class: "btn btn-success hover:scale-105 transition-transform" do %>
            <i class="fas fa-plus mr-2"></i> New Category
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="overflow-x-auto">
      <table class="enhanced-table">
        <thead>
          <tr>
            <th><i class="fas fa-layer-group mr-2"></i>Category Details</th>
            <th class="hidden md:table-cell"><i class="fas fa-align-left mr-2"></i>Description & Info</th>
            <th><i class="fas fa-chart-bar mr-2"></i>Content & Activity</th>
            <th class="text-right"><i class="fas fa-cogs mr-2"></i>Management</th>
          </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr class="enhanced-fade-in">
            <td>
              <div class="enhanced-user-info">
                <div class="flex-shrink-0">
                  <% if category.image.attached? %>
                    <%= image_tag category.image, class: "enhanced-avatar rounded-lg object-cover", alt: category.name %>
                  <% elsif category.color.present? %>
                    <div class="enhanced-avatar-placeholder rounded-lg" style="background-color: <%= category.color %>; width: 56px; height: 56px; font-size: 1.25rem;">
                      <%= category.name.first.upcase %>
                    </div>
                  <% else %>
                    <div class="enhanced-avatar-placeholder bg-gradient-to-br from-green-500 to-emerald-600 rounded-lg" style="width: 56px; height: 56px; font-size: 1.25rem;">
                      <%= category.name.first.upcase %>
                    </div>
                  <% end %>
                </div>
                <div class="enhanced-user-details">
                  <h4 class="text-lg"><%= category.name %></h4>
                  <div class="enhanced-content-meta">
                    <span class="enhanced-badge enhanced-badge-success text-xs">
                      <i class="fas fa-layer-group mr-1"></i>
                      Category
                    </span>
                    <span class="enhanced-stat-item text-xs">
                      <i class="fas fa-hashtag"></i>
                      <span>ID: <%= category.id %></span>
                    </span>
                    <% if category.color.present? %>
                      <div class="flex items-center text-xs">
                        <div class="w-3 h-3 rounded-full mr-2" style="background-color: <%= category.color %>"></div>
                        <span class="text-gray-500"><%= category.color %></span>
                      </div>
                    <% end %>
                  </div>
                  <% if category.description.present? %>
                    <p class="text-xs text-gray-500 md:hidden mt-2"><%= truncate(category.description, length: 60) %></p>
                  <% end %>
                </div>
              </div>
            </td>
            <td class="hidden md:table-cell">
              <div class="enhanced-content-preview">
                <% if category.description.present? %>
                  <div class="enhanced-content-title">Description</div>
                  <div class="enhanced-content-excerpt"><%= truncate(category.description, length: 150) %></div>
                <% else %>
                  <div class="enhanced-content-excerpt text-gray-400 italic">No description provided for this category</div>
                <% end %>
                <div class="enhanced-content-meta mt-3">
                  <span class="enhanced-stat-item">
                    <i class="fas fa-calendar-plus"></i>
                    <span>Created <%= time_ago_in_words(category.created_at) %> ago</span>
                  </span>
                  <% if category.image.attached? %>
                    <span class="enhanced-stat-item">
                      <i class="fas fa-image text-blue-500"></i>
                      <span>Has custom image</span>
                    </span>
                  <% end %>
                </div>
              </div>
            </td>
            <td>
              <div class="space-y-3">
                <div class="enhanced-stats-group flex-col items-start gap-2">
                  <div class="enhanced-stat-item">
                    <i class="fas fa-file-alt text-green-500"></i>
                    <span><%= pluralize(category.posts.count, 'post') %></span>
                  </div>
                  <% if category.posts.count > 0 %>
                    <div class="enhanced-stat-item">
                      <i class="fas fa-comments text-blue-500"></i>
                      <span><%= category.posts.sum { |p| p.comments.count } %> comments</span>
                    </div>
                    <div class="enhanced-stat-item">
                      <i class="fas fa-percentage text-purple-500"></i>
                      <span><%= (category.posts.count.to_f / @categories.map{|c| c.posts.count}.sum.to_f * 100).round(1) %>% of content</span>
                    </div>
                  <% end %>
                </div>
                
                <% if category.posts.count > 0 %>
                  <div class="w-full">
                    <div class="flex justify-between items-center text-xs text-gray-500 mb-1">
                      <span>Activity Level</span>
                      <span><%= category.posts.count %> / <%= @categories.map{|c| c.posts.count}.max %></span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                      <div class="bg-gradient-to-r from-green-500 to-emerald-500 h-2 rounded-full transition-all duration-300" 
                           style="width: <%= [category.posts.count.to_f / [@categories.map{|c| c.posts.count}.max, 1].max * 100, 8].max %>%"></div>
                    </div>
                    <div class="text-xs text-gray-500 mt-1">
                      Last post <%= time_ago_in_words(category.posts.order(:created_at).last.created_at) %> ago
                    </div>
                  </div>
                <% else %>
                  <div class="text-center py-2">
                    <div class="enhanced-badge enhanced-badge-secondary text-xs">
                      <i class="fas fa-plus-circle mr-1"></i>
                      No Posts Yet
                    </div>
                    <p class="text-xs text-gray-500 mt-1">Waiting for content</p>
                  </div>
                <% end %>
              </div>
            </td>
            <td class="text-right">
              <div class="enhanced-action-group">
                <%= link_to admin_category_path(category), class: "enhanced-action-btn enhanced-action-btn-secondary", title: "View category details" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
                <%= link_to edit_admin_category_path(category), class: "enhanced-action-btn enhanced-action-btn-primary", title: "Edit category" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <% if category.posts.count > 0 %>
                  <%= link_to "#", class: "enhanced-action-btn enhanced-action-btn-success", 
                        title: "View #{category.posts.count} posts in this category", 
                        onclick: "alert('View posts in category: #{category.name}')" do %>
                    <i class="fas fa-list"></i>
                  <% end %>
                <% end %>
                
                <% if category.posts.count == 0 %>
                  <%= link_to admin_category_path(category), method: :delete,
                        data: { confirm: "Are you sure you want to delete '#{category.name}'?" },
                        class: "enhanced-action-btn enhanced-action-btn-danger",
                        title: "Delete empty category" do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                <% else %>
                  <div class="relative inline-block">
                    <button type="button" class="enhanced-action-btn enhanced-action-btn-warning category-delete-toggle" 
                            data-category-id="<%= category.id %>" title="Delete category (has posts)">
                      <i class="fas fa-exclamation-triangle"></i>
                    </button>
                    <div id="delete-menu-<%= category.id %>" class="hidden absolute right-0 z-20 mt-2 w-64 rounded-lg shadow-xl bg-white ring-1 ring-gray-200 focus:outline-none">
                      <div class="py-2">
                        <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider border-b border-gray-100">
                          <i class="fas fa-warning mr-1 text-yellow-500"></i>
                          Category has content
                        </div>
                        <div class="px-4 py-2 text-sm text-gray-700">
                          This category contains <strong><%= category.posts.count %> posts</strong>
                        </div>
                        <%= link_to admin_category_path(category, force: true), 
                              method: :delete,
                              data: { confirm: "This will unassign #{category.posts.count} posts from '#{category.name}'. Continue?" },
                              class: "block w-full text-left px-4 py-3 text-sm text-red-600 hover:bg-red-50 transition-colors" do %>
                          <i class="fas fa-exclamation-triangle mr-2"></i> Force Delete Category
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <!-- Enhanced Table Footer -->
  <div class="enhanced-table-footer">
    <div class="enhanced-pagination-info">
      <div class="flex items-center space-x-4">
        <span>Showing <%= @categories.respond_to?(:count) ? @categories.count : @categories.size %> categories</span>
        <div class="enhanced-stats-group">
          <div class="enhanced-stat-item">
            <i class="fas fa-file-alt text-green-500"></i>
            <span><%= @stats[:with_posts] %> With Posts</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-plus-circle text-yellow-500"></i>
            <span><%= @stats[:empty] %> Empty</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-comments text-blue-500"></i>
            <span><%= @categories.sum { |c| c.posts.sum { |p| p.comments.count } } %> Total Comments</span>
          </div>
        </div>
      </div>
    </div>
    <div class="enhanced-pagination-controls">
      <% if @categories.respond_to?(:current_page) %>
        <div class="flex items-center space-x-2 text-sm text-gray-500 mr-4">
          <span>Page <%= @categories.current_page %> of <%= @categories.total_pages %></span>
        </div>
        <div class="flex space-x-2">
          <% if @categories.prev_page %>
            <%= link_to admin_categories_path(page: @categories.prev_page, search: params[:search]), 
                  class: "btn btn-secondary btn-sm" do %>
              <i class="fas fa-chevron-left mr-1"></i> Previous
            <% end %>
          <% end %>
          <% if @categories.next_page %>
            <%= link_to admin_categories_path(page: @categories.next_page, search: params[:search]), 
                  class: "btn btn-primary btn-sm" do %>
              Next <i class="fas fa-chevron-right ml-1"></i>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="flex items-center space-x-3">
          <span class="text-sm text-gray-500">All categories displayed</span>
          <button class="btn btn-success btn-sm" onclick="location.reload()">
            <i class="fas fa-sync-alt mr-1"></i> Refresh
          </button>
        </div>
      <% end %>
    </div>
  </div>
  
  <% if @categories.empty? %>
    <div class="text-center py-16">
      <div class="mx-auto w-24 h-24 bg-gradient-to-br from-green-100 to-emerald-100 rounded-2xl flex items-center justify-center mb-6">
        <i class="fas fa-layer-group text-4xl text-green-500"></i>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mb-2">No categories found</h3>
      <p class="text-gray-500 mb-8 max-w-md mx-auto">
        <% if params[:search].present? %>
          Try adjusting your search to see more results, or create a new category to organize your content.
        <% else %>
          Categories help organize your forum content and make it easier for users to find relevant discussions.
        <% end %>
      </p>
      <div class="flex items-center justify-center space-x-4">
        <%= link_to new_admin_category_path, class: "btn btn-success" do %>
          <i class="fas fa-plus mr-2"></i> Create Your First Category
        <% end %>
        <% if params[:search].present? %>
          <%= link_to admin_categories_path, class: "btn btn-secondary" do %>
            <i class="fas fa-times mr-2"></i> Clear Search
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle category delete dropdown
  const deleteToggleButtons = document.querySelectorAll('.category-delete-toggle');
  const deleteMenus = document.querySelectorAll('[id^="delete-menu-"]');
  
  deleteToggleButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.stopPropagation();
      const categoryId = this.getAttribute('data-category-id');
      const menu = document.getElementById(`delete-menu-${categoryId}`);
      
      // Hide all other menus
      deleteMenus.forEach(m => {
        if (m !== menu) {
          m.classList.add('hidden');
        }
      });
      
      // Toggle current menu
      menu.classList.toggle('hidden');
    });
  });
  
  // Close menus when clicking outside
  document.addEventListener('click', function() {
    deleteMenus.forEach(menu => {
      menu.classList.add('hidden');
    });
  });
  
  // Prevent menu from closing when clicking inside it
  deleteMenus.forEach(menu => {
    menu.addEventListener('click', function(e) {
      e.stopPropagation();
    });
  });
});

// Enhanced search functionality for categories
document.addEventListener('DOMContentLoaded', function() {
  // Advanced toggle functionality
  const advancedToggle = document.getElementById('advanced-toggle');
  const advancedRow = document.querySelector('.enhanced-search-row[style*="opacity"]');
  
  if (advancedToggle && advancedRow) {
    advancedToggle.addEventListener('click', function() {
      const isHidden = advancedRow.style.display === 'none';
      
      if (isHidden) {
        advancedRow.style.display = 'grid';
        advancedRow.style.opacity = '0.9';
        this.innerHTML = '<i class="fas fa-eye-slash mr-2"></i>Hide Advanced';
        this.classList.remove('enhanced-search-btn-secondary');
        this.classList.add('enhanced-search-btn-primary');
      } else {
        advancedRow.style.display = 'none';
        this.innerHTML = '<i class="fas fa-sliders-h mr-2"></i>Advanced Options';
        this.classList.remove('enhanced-search-btn-primary');
        this.classList.add('enhanced-search-btn-secondary');
      }
    });
    
    // Initially hide advanced row
    advancedRow.style.display = 'none';
  }
  
  // Enhanced form interactions
  const formInputs = document.querySelectorAll('.enhanced-form-input, .enhanced-form-select');
  
  formInputs.forEach(input => {
    input.addEventListener('focus', function() {
      this.closest('.enhanced-form-group').classList.add('focused');
    });
    
    input.addEventListener('blur', function() {
      this.closest('.enhanced-form-group').classList.remove('focused');
    });
    
    input.addEventListener('change', function() {
      if (this.value) {
        this.closest('.enhanced-form-group').classList.add('has-value');
      } else {
        this.closest('.enhanced-form-group').classList.remove('has-value');
      }
    });
    
    // Initialize state
    if (input.value) {
      input.closest('.enhanced-form-group').classList.add('has-value');
    }
  });
  
  // Real-time search feedback
  const searchInput = document.querySelector('input[name="search"]');
  if (searchInput) {
    let searchTimeout;
    searchInput.addEventListener('input', function() {
      clearTimeout(searchTimeout);
      const value = this.value;
      
      searchTimeout = setTimeout(() => {
        if (value.length > 0) {
          this.classList.add('border-green-500', 'shadow-green-100');
        } else {
          this.classList.remove('border-green-500', 'shadow-green-100');
        }
      }, 300);
    });
  }
});
</script>
