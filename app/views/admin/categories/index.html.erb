<% content_for :page_title, "Categories Management" %>
<% content_for :page_subtitle, "Manage forum categories and organization" %>

<!-- Enhanced Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <!-- Total Categories -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
      <i class="fas fa-tags"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@stats[:total]) %></div>
    <div class="stat-label">Total Categories</div>
    <div class="stat-change mt-2" style="color: #6b7280;">
      <i class="fas fa-list mr-1"></i>
      Organizing content
    </div>
    <div class="stat-trend mt-2">
      <div class="w-full bg-gray-200 rounded-full h-1.5">
        <div class="bg-green-500 h-1.5 rounded-full transition-all duration-1000" style="width: 100%"></div>
      </div>
    </div>
    <div class="mt-3">
      <%= link_to new_admin_category_path, class: "btn btn-success btn-sm group-hover:shadow-lg transition-all" do %>
        <i class="fas fa-plus mr-1"></i> Add New
      <% end %>
    </div>
  </div>

  <!-- Categories with Posts -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #1e40af);">
      <i class="fas fa-newspaper"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@stats[:with_posts]) %></div>
    <div class="stat-label">With Posts</div>
    <div class="stat-change positive mt-2">
      <i class="fas fa-check mr-1"></i>
      <%= ((@stats[:with_posts].to_f / [@stats[:total], 1].max) * 100).round(1) %>% active
    </div>
    <div class="stat-trend mt-2">
      <div class="w-full bg-gray-200 rounded-full h-1.5">
        <div class="bg-blue-500 h-1.5 rounded-full transition-all duration-1000" style="width: <%= (@stats[:with_posts].to_f / [@stats[:total], 1].max * 100).round(1) %>%"></div>
      </div>
    </div>
  </div>

  <!-- Empty Categories -->
  <div class="stat-card group hover:scale-105 transition-all duration-300">
    <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
      <i class="fas fa-exclamation-triangle"></i>
    </div>
    <div class="stat-number"><%= number_with_delimiter(@stats[:empty]) %></div>
    <div class="stat-label">Empty Categories</div>
    <div class="stat-change mt-2" style="color: #6b7280;">
      <i class="fas fa-warning mr-1"></i>
      Need content
    </div>
    <div class="stat-trend mt-2">
      <div class="w-full bg-gray-200 rounded-full h-1.5">
        <div class="bg-yellow-500 h-1.5 rounded-full transition-all duration-1000" style="width: <%= (@stats[:empty].to_f / [@stats[:total], 1].max * 100).round(1) %>%"></div>
      </div>
    </div>
  </div>
</div>

<!-- Search/Filter Bar -->
<div class="card mb-8">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-search mr-2" style="color: #10b981;"></i>
      Search Categories
    </h3>
    <p class="card-subtitle">Find categories by name or description</p>
  </div>
  <div class="card-body">
    <%= form_with url: admin_categories_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
      <div class="flex-1 min-w-0">
        <%= form.text_field :search, placeholder: "Search categories...", 
            value: params[:search],
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all" %>
      </div>
      <div class="flex gap-2">
        <%= form.submit "Search", class: "btn btn-primary btn-sm" %>
        <%= link_to "Clear", admin_categories_path, class: "btn btn-secondary btn-sm" %>
      </div>
    <% end %>
  </div>
</div>

  <!-- Include Enhanced Table Styles (if not already included) -->
  <%= render 'shared/enhanced_table_styles' unless @enhanced_styles_included %>
  <% @enhanced_styles_included = true %>

  <!-- Enhanced Categories Table -->
  <div class="enhanced-table-container mb-8 enhanced-fade-in">
    <div class="enhanced-table-header">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="enhanced-table-title">
            <i class="fas fa-layer-group" style="color: #10b981;"></i>
            Categories & Content Organization
          </h2>
          <p class="enhanced-table-subtitle">Organize forum discussions with structured categories - manage hierarchy, content flow, and user navigation</p>
        </div>
        <div class="flex items-center space-x-4">
          <div class="enhanced-stats-group">
            <div class="enhanced-stat-item">
              <i class="fas fa-layer-group"></i>
              <span><%= @stats[:total] %> Total Categories</span>
            </div>
            <div class="enhanced-stat-item">
              <i class="fas fa-file-alt text-green-500"></i>
              <span><%= @stats[:with_posts] %> With Content</span>
            </div>
          </div>
          <%= link_to new_admin_category_path, class: "btn btn-success hover:scale-105 transition-transform" do %>
            <i class="fas fa-plus mr-2"></i> New Category
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="overflow-x-auto">
      <table class="enhanced-table">
        <thead>
          <tr>
            <th><i class="fas fa-layer-group mr-2"></i>Category Details</th>
            <th class="hidden md:table-cell"><i class="fas fa-align-left mr-2"></i>Description & Info</th>
            <th><i class="fas fa-chart-bar mr-2"></i>Content & Activity</th>
            <th class="text-right"><i class="fas fa-cogs mr-2"></i>Management</th>
          </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr class="enhanced-fade-in">
            <td>
              <div class="enhanced-user-info">
                <div class="flex-shrink-0">
                  <% if category.image.attached? %>
                    <%= image_tag category.image, class: "enhanced-avatar rounded-lg object-cover", alt: category.name %>
                  <% elsif category.color.present? %>
                    <div class="enhanced-avatar-placeholder rounded-lg" style="background-color: <%= category.color %>; width: 56px; height: 56px; font-size: 1.25rem;">
                      <%= category.name.first.upcase %>
                    </div>
                  <% else %>
                    <div class="enhanced-avatar-placeholder bg-gradient-to-br from-green-500 to-emerald-600 rounded-lg" style="width: 56px; height: 56px; font-size: 1.25rem;">
                      <%= category.name.first.upcase %>
                    </div>
                  <% end %>
                </div>
                <div class="enhanced-user-details">
                  <h4 class="text-lg"><%= category.name %></h4>
                  <div class="enhanced-content-meta">
                    <span class="enhanced-badge enhanced-badge-success text-xs">
                      <i class="fas fa-layer-group mr-1"></i>
                      Category
                    </span>
                    <span class="enhanced-stat-item text-xs">
                      <i class="fas fa-hashtag"></i>
                      <span>ID: <%= category.id %></span>
                    </span>
                    <% if category.color.present? %>
                      <div class="flex items-center text-xs">
                        <div class="w-3 h-3 rounded-full mr-2" style="background-color: <%= category.color %>"></div>
                        <span class="text-gray-500"><%= category.color %></span>
                      </div>
                    <% end %>
                  </div>
                  <% if category.description.present? %>
                    <p class="text-xs text-gray-500 md:hidden mt-2"><%= truncate(category.description, length: 60) %></p>
                  <% end %>
                </div>
              </div>
            </td>
            <td class="hidden md:table-cell">
              <div class="enhanced-content-preview">
                <% if category.description.present? %>
                  <div class="enhanced-content-title">Description</div>
                  <div class="enhanced-content-excerpt"><%= truncate(category.description, length: 150) %></div>
                <% else %>
                  <div class="enhanced-content-excerpt text-gray-400 italic">No description provided for this category</div>
                <% end %>
                <div class="enhanced-content-meta mt-3">
                  <span class="enhanced-stat-item">
                    <i class="fas fa-calendar-plus"></i>
                    <span>Created <%= time_ago_in_words(category.created_at) %> ago</span>
                  </span>
                  <% if category.image.attached? %>
                    <span class="enhanced-stat-item">
                      <i class="fas fa-image text-blue-500"></i>
                      <span>Has custom image</span>
                    </span>
                  <% end %>
                </div>
              </div>
            </td>
            <td>
              <div class="space-y-3">
                <div class="enhanced-stats-group flex-col items-start gap-2">
                  <div class="enhanced-stat-item">
                    <i class="fas fa-file-alt text-green-500"></i>
                    <span><%= pluralize(category.posts.count, 'post') %></span>
                  </div>
                  <% if category.posts.count > 0 %>
                    <div class="enhanced-stat-item">
                      <i class="fas fa-comments text-blue-500"></i>
                      <span><%= category.posts.sum { |p| p.comments.count } %> comments</span>
                    </div>
                    <div class="enhanced-stat-item">
                      <i class="fas fa-percentage text-purple-500"></i>
                      <span><%= (category.posts.count.to_f / @categories.map{|c| c.posts.count}.sum.to_f * 100).round(1) %>% of content</span>
                    </div>
                  <% end %>
                </div>
                
                <% if category.posts.count > 0 %>
                  <div class="w-full">
                    <div class="flex justify-between items-center text-xs text-gray-500 mb-1">
                      <span>Activity Level</span>
                      <span><%= category.posts.count %> / <%= @categories.map{|c| c.posts.count}.max %></span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                      <div class="bg-gradient-to-r from-green-500 to-emerald-500 h-2 rounded-full transition-all duration-300" 
                           style="width: <%= [category.posts.count.to_f / [@categories.map{|c| c.posts.count}.max, 1].max * 100, 8].max %>%"></div>
                    </div>
                    <div class="text-xs text-gray-500 mt-1">
                      Last post <%= time_ago_in_words(category.posts.order(:created_at).last.created_at) %> ago
                    </div>
                  </div>
                <% else %>
                  <div class="text-center py-2">
                    <div class="enhanced-badge enhanced-badge-secondary text-xs">
                      <i class="fas fa-plus-circle mr-1"></i>
                      No Posts Yet
                    </div>
                    <p class="text-xs text-gray-500 mt-1">Waiting for content</p>
                  </div>
                <% end %>
              </div>
            </td>
            <td class="text-right">
              <div class="enhanced-action-group">
                <%= link_to admin_category_path(category), class: "enhanced-action-btn enhanced-action-btn-secondary", title: "View category details" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
                <%= link_to edit_admin_category_path(category), class: "enhanced-action-btn enhanced-action-btn-primary", title: "Edit category" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <% if category.posts.count > 0 %>
                  <%= link_to "#", class: "enhanced-action-btn enhanced-action-btn-success", 
                        title: "View #{category.posts.count} posts in this category", 
                        onclick: "alert('View posts in category: #{category.name}')" do %>
                    <i class="fas fa-list"></i>
                  <% end %>
                <% end %>
                
                <% if category.posts.count == 0 %>
                  <%= link_to admin_category_path(category), method: :delete,
                        data: { confirm: "Are you sure you want to delete '#{category.name}'?" },
                        class: "enhanced-action-btn enhanced-action-btn-danger",
                        title: "Delete empty category" do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                <% else %>
                  <div class="relative inline-block">
                    <button type="button" class="enhanced-action-btn enhanced-action-btn-warning category-delete-toggle" 
                            data-category-id="<%= category.id %>" title="Delete category (has posts)">
                      <i class="fas fa-exclamation-triangle"></i>
                    </button>
                    <div id="delete-menu-<%= category.id %>" class="hidden absolute right-0 z-20 mt-2 w-64 rounded-lg shadow-xl bg-white ring-1 ring-gray-200 focus:outline-none">
                      <div class="py-2">
                        <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider border-b border-gray-100">
                          <i class="fas fa-warning mr-1 text-yellow-500"></i>
                          Category has content
                        </div>
                        <div class="px-4 py-2 text-sm text-gray-700">
                          This category contains <strong><%= category.posts.count %> posts</strong>
                        </div>
                        <%= link_to admin_category_path(category, force: true), 
                              method: :delete,
                              data: { confirm: "This will unassign #{category.posts.count} posts from '#{category.name}'. Continue?" },
                              class: "block w-full text-left px-4 py-3 text-sm text-red-600 hover:bg-red-50 transition-colors" do %>
                          <i class="fas fa-exclamation-triangle mr-2"></i> Force Delete Category
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <!-- Enhanced Table Footer -->
  <div class="enhanced-table-footer">
    <div class="enhanced-pagination-info">
      <div class="flex items-center space-x-4">
        <span>Showing <%= @categories.respond_to?(:count) ? @categories.count : @categories.size %> categories</span>
        <div class="enhanced-stats-group">
          <div class="enhanced-stat-item">
            <i class="fas fa-file-alt text-green-500"></i>
            <span><%= @stats[:with_posts] %> With Posts</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-plus-circle text-yellow-500"></i>
            <span><%= @stats[:empty] %> Empty</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-comments text-blue-500"></i>
            <span><%= @categories.sum { |c| c.posts.sum { |p| p.comments.count } } %> Total Comments</span>
          </div>
        </div>
      </div>
    </div>
    <div class="enhanced-pagination-controls">
      <% if @categories.respond_to?(:current_page) %>
        <div class="flex items-center space-x-2 text-sm text-gray-500 mr-4">
          <span>Page <%= @categories.current_page %> of <%= @categories.total_pages %></span>
        </div>
        <div class="flex space-x-2">
          <% if @categories.prev_page %>
            <%= link_to admin_categories_path(page: @categories.prev_page, search: params[:search]), 
                  class: "btn btn-secondary btn-sm" do %>
              <i class="fas fa-chevron-left mr-1"></i> Previous
            <% end %>
          <% end %>
          <% if @categories.next_page %>
            <%= link_to admin_categories_path(page: @categories.next_page, search: params[:search]), 
                  class: "btn btn-primary btn-sm" do %>
              Next <i class="fas fa-chevron-right ml-1"></i>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="flex items-center space-x-3">
          <span class="text-sm text-gray-500">All categories displayed</span>
          <button class="btn btn-success btn-sm" onclick="location.reload()">
            <i class="fas fa-sync-alt mr-1"></i> Refresh
          </button>
        </div>
      <% end %>
    </div>
  </div>
  
  <% if @categories.empty? %>
    <div class="text-center py-16">
      <div class="mx-auto w-24 h-24 bg-gradient-to-br from-green-100 to-emerald-100 rounded-2xl flex items-center justify-center mb-6">
        <i class="fas fa-layer-group text-4xl text-green-500"></i>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mb-2">No categories found</h3>
      <p class="text-gray-500 mb-8 max-w-md mx-auto">
        <% if params[:search].present? %>
          Try adjusting your search to see more results, or create a new category to organize your content.
        <% else %>
          Categories help organize your forum content and make it easier for users to find relevant discussions.
        <% end %>
      </p>
      <div class="flex items-center justify-center space-x-4">
        <%= link_to new_admin_category_path, class: "btn btn-success" do %>
          <i class="fas fa-plus mr-2"></i> Create Your First Category
        <% end %>
        <% if params[:search].present? %>
          <%= link_to admin_categories_path, class: "btn btn-secondary" do %>
            <i class="fas fa-times mr-2"></i> Clear Search
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle category delete dropdown
  const deleteToggleButtons = document.querySelectorAll('.category-delete-toggle');
  const deleteMenus = document.querySelectorAll('[id^="delete-menu-"]');
  
  deleteToggleButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.stopPropagation();
      const categoryId = this.getAttribute('data-category-id');
      const menu = document.getElementById(`delete-menu-${categoryId}`);
      
      // Hide all other menus
      deleteMenus.forEach(m => {
        if (m !== menu) {
          m.classList.add('hidden');
        }
      });
      
      // Toggle current menu
      menu.classList.toggle('hidden');
    });
  });
  
  // Close menus when clicking outside
  document.addEventListener('click', function() {
    deleteMenus.forEach(menu => {
      menu.classList.add('hidden');
    });
  });
  
  // Prevent menu from closing when clicking inside it
  deleteMenus.forEach(menu => {
    menu.addEventListener('click', function(e) {
      e.stopPropagation();
    });
  });
});
</script>
