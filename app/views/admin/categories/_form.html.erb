<%= form_with model: [:admin, @category], local: true, class: "space-y-8" do |form| %>
  <% if @category.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-xl p-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-base font-semibold text-red-800 mb-2">
            <span class="flex items-center">
              ‚ö†Ô∏è <%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved
            </span>
          </h3>
          <ul class="text-red-700 space-y-1">
            <% @category.errors.full_messages.each do |message| %>
              <li class="flex items-center">
                <span class="w-1.5 h-1.5 bg-red-600 rounded-full mr-2"></span>
                <%= message %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-3">
    <%= form.label :name, class: "block text-sm font-bold text-gray-900" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        Category Name
      </div>
    <% end %>
    <%= form.text_field :name, 
        class: "mt-2 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200",
        placeholder: "üìù Enter category name (e.g., Technology, Sports, News)" %>
  </div>

  <div class="space-y-3">
    <%= form.label :description, class: "block text-sm font-bold text-gray-900" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
        </svg>
        Description
      </div>
    <% end %>
    <%= form.text_area :description, 
        class: "mt-2 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 resize-none",
        rows: 4,
        placeholder: "‚ú® Brief description of this category (optional)" %>
  </div>

  <div class="space-y-3">
    <%= form.label :color, class: "block text-sm font-bold text-gray-900" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3H5a2 2 0 00-2 2v12a4 4 0 004 4h2a2 2 0 002-2V5a2 2 0 00-2-2z" />
        </svg>
        Category Color
      </div>
    <% end %>
    <div class="flex items-center space-x-4 mt-2">
      <%= form.color_field :color, 
          class: "h-12 w-24 border border-gray-300 rounded-xl cursor-pointer shadow-sm hover:shadow-md transition-shadow",
          value: @category.color || "#22c55e" %>
      <div class="bg-gray-50 rounded-lg px-4 py-2 flex-1">
        <p class="text-sm text-gray-600 font-medium">üé® Choose a color to represent this category</p>
        <p class="text-xs text-gray-500 mt-1">This will be used for category badges and highlights</p>
      </div>
    </div>
  </div>

  <div class="space-y-3">
    <%= form.label :image, class: "block text-sm font-bold text-gray-900" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Category Image
      </div>
    <% end %>
    <div class="mt-2">
      <%= form.file_field :image, 
          class: "block w-full text-sm text-gray-600 file:mr-4 file:py-3 file:px-6 file:rounded-xl file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100 file:cursor-pointer cursor-pointer border border-dashed border-gray-300 rounded-xl p-4 hover:border-green-400 transition-colors",
          accept: "image/*" %>
      <% if @category.image.attached? %>
        <div class="mt-4 flex items-center space-x-4 bg-gray-50 rounded-lg p-3">
          <%= image_tag @category.image, class: "h-16 w-16 object-cover rounded-lg shadow-md", alt: @category.name %>
          <div>
            <p class="text-sm font-medium text-gray-900">Current category image</p>
            <p class="text-xs text-gray-500 mt-1">Upload a new image to replace this one</p>
          </div>
        </div>
      <% end %>
      <div class="bg-green-50 border border-green-200 rounded-lg p-3 mt-3">
        <div class="flex items-start">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-green-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="text-xs text-green-800">üñºÔ∏è Upload an icon or representative image for this category (optional)</p>
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-col sm:flex-row gap-4 pt-8 border-t border-gray-200">
    <%= link_to admin_categories_path, class: "flex items-center justify-center px-6 py-3 border border-gray-300 rounded-xl text-gray-700 font-semibold hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
      Cancel
    <% end %>
    <%= form.submit @category.new_record? ? "üè∑Ô∏è Create Category" : "üíæ Update Category",
        class: "flex items-center justify-center flex-1 px-6 py-3 border border-transparent rounded-xl text-white font-bold bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transform transition-all duration-200 hover:scale-[1.02] shadow-lg hover:shadow-xl" %>
  </div>
<% end %>