<% content_for :page_title, "Dashboard Overview" %>

<div class="space-y-6">
  <!-- Welcome Section -->
  <div class="bg-gradient-to-r from-green-600 via-green-700 to-green-800 rounded-lg shadow-lg relative overflow-hidden">
    <!-- Nigerian-inspired decorative elements -->
    <div class="absolute top-0 right-0 w-16 h-16 rounded-full bg-yellow-300 opacity-10 transform translate-x-8 -translate-y-8"></div>
    <div class="absolute bottom-0 left-0 w-12 h-12 rounded-full bg-yellow-200 opacity-15 transform -translate-x-6 translate-y-6"></div>
    <div class="px-6 py-8 text-white relative z-10">
      <h1 class="text-2xl font-bold mb-2">Welcome back, <%= current_user.display_name %>!</h1>
      <p class="text-green-100">Here's what's happening on your Naija Forum today.</p>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Users Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-600 rounded-md flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @stats[:users][:total] %></div>
                <div class="ml-2 text-sm text-green-600">+<%= @stats[:users][:new_today] %> today</div>
              </dd>
            </dl>
          </div>
        </div>
        <div class="mt-4">
          <div class="text-sm text-gray-600">
            <span class="font-medium"><%= @stats[:users][:admins] %></span> admins • 
            <span class="font-medium"><%= @stats[:users][:new_this_week] %></span> new this week
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <%= link_to "View All Users", admin_users_path, class: "text-sm font-medium text-green-600 hover:text-green-700" %>
      </div>
    </div>

    <!-- Posts Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-700 rounded-md flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Posts</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @stats[:posts][:total] %></div>
                <div class="ml-2 text-sm text-green-600">+<%= @stats[:posts][:new_today] %> today</div>
              </dd>
            </dl>
          </div>
        </div>
        <div class="mt-4">
          <div class="text-sm text-gray-600">
            <span class="font-medium"><%= @stats[:posts][:published] %></span> published • 
            <span class="font-medium"><%= @stats[:posts][:draft] %></span> drafts
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <%= link_to "Manage Posts", admin_posts_path, class: "text-sm font-medium text-green-600 hover:text-green-700" %>
      </div>
    </div>

    <!-- Comments Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-yellow-600 rounded-md flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Comments</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @stats[:comments][:total] %></div>
                <div class="ml-2 text-sm text-green-600">+<%= @stats[:comments][:new_today] %> today</div>
              </dd>
            </dl>
          </div>
        </div>
        <div class="mt-4">
          <div class="text-sm text-gray-600">
            <span class="font-medium"><%= @stats[:comments][:new_this_week] %></span> new this week
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <%= link_to "Moderate Comments", admin_comments_path, class: "text-sm font-medium text-yellow-700 hover:text-yellow-800" %>
      </div>
    </div>

    <!-- Categories Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-800 rounded-md flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14-7H3a2 2 0 00-2 2v12a2 2 0 002 2h16a2 2 0 002-2V6a2 2 0 00-2-2z"/>
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Categories</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @stats[:categories][:total] %></div>
              </dd>
            </dl>
          </div>
        </div>
        <div class="mt-4">
          <div class="text-sm text-gray-600">
            <span class="font-medium"><%= @stats[:categories][:with_posts] %></span> with posts
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <%= link_to "Manage Categories", admin_categories_path, class: "text-sm font-medium text-green-600 hover:text-green-700" %>
      </div>
    </div>
  </div>

  <!-- Activity Charts -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- User Growth Chart -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">User Growth (Last 30 Days)</h3>
      </div>
      <div class="p-6">
        <div class="relative" style="height: 300px;">
          <canvas id="userGrowthChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Post Activity Chart -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Post Activity (Last 30 Days)</h3>
      </div>
      <div class="p-6">
        <div class="relative" style="height: 300px;">
          <canvas id="postActivityChart"></canvas>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Recent Users -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Recent Users</h3>
      </div>
      <div class="divide-y divide-gray-200">
        <% @recent_users.each do |user| %>
          <div class="px-6 py-4">
            <div class="flex items-center space-x-3">
              <% if user.avatar.attached? %>
                <%= image_tag user.avatar, class: "h-8 w-8 rounded-full object-cover" %>
              <% else %>
                <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                  <span class="text-xs font-medium text-gray-600"><%= user.username.first.upcase %></span>
                </div>
              <% end %>
              <div class="min-w-0 flex-1">
                <p class="text-sm font-medium text-gray-900"><%= user.display_name %></p>
                <p class="text-sm text-gray-500">@<%= user.username %></p>
              </div>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                <% case user.role %>
                  <% when 'admin' %>
                    bg-red-100 text-red-800
                  <% when 'moderator' %>
                    bg-yellow-100 text-yellow-800
                  <% else %>
                    bg-blue-100 text-blue-800
                <% end %>">
                <%= user.role.capitalize %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
      <div class="px-6 py-3 bg-gray-50">
        <%= link_to "View all users", admin_users_path, class: "text-sm font-medium text-green-600 hover:text-green-700" %>
      </div>
    </div>

    <!-- Recent Posts -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Recent Posts</h3>
      </div>
      <div class="divide-y divide-gray-200">
        <% @recent_posts.each do |post| %>
          <div class="px-6 py-4">
            <div class="space-y-2">
              <p class="text-sm font-medium text-gray-900 line-clamp-2"><%= post.title %></p>
              <div class="flex items-center space-x-2 text-xs text-gray-500">
                <span>by <%= post.user.username %></span>
                <span>•</span>
                <span><%= post.category.name %></span>
                <span>•</span>
                <span><%= post.comments_count %> comments</span>
              </div>
              <p class="text-xs text-gray-400"><%= time_ago_in_words(post.created_at) %> ago</p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="px-6 py-3 bg-gray-50">
        <%= link_to "View all posts", admin_posts_path, class: "text-sm font-medium text-green-600 hover:text-green-700" %>
      </div>
    </div>

    <!-- Recent Comments -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Recent Comments</h3>
      </div>
      <div class="divide-y divide-gray-200">
        <% @recent_comments.each do |comment| %>
          <div class="px-6 py-4">
            <div class="space-y-2">
              <p class="text-sm text-gray-900 line-clamp-2"><%= truncate(comment.content, length: 80) %></p>
              <div class="flex items-center space-x-2 text-xs text-gray-500">
                <span>by <%= comment.user.username %></span>
                <span>•</span>
                <span>on "<%= truncate(comment.post.title, length: 30) %>"</span>
              </div>
              <p class="text-xs text-gray-400"><%= time_ago_in_words(comment.created_at) %> ago</p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="px-6 py-3 bg-gray-50">
        <%= link_to "View all comments", admin_comments_path, class: "text-sm font-medium text-yellow-700 hover:text-yellow-800" %>
      </div>
    </div>
  </div>
</div>

<!-- Chart.js Scripts -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  // User Growth Chart
  const userCtx = document.getElementById('userGrowthChart').getContext('2d');
  const userGrowthChart = new Chart(userCtx, {
    type: 'line',
    data: {
      labels: <%= raw @user_growth_data.map { |d| d[:date] }.to_json %>,
      datasets: [{
        label: 'New Users',
        data: <%= raw @user_growth_data.map { |d| d[:count] }.to_json %>,
        borderColor: 'rgb(59, 130, 246)',
        backgroundColor: 'rgba(59, 130, 246, 0.1)',
        borderWidth: 2,
        fill: true,
        tension: 0.4
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          labels: { color: '#374151' }
        }
      },
      scales: {
        x: {
          ticks: { color: '#6B7280' },
          grid: { color: '#E5E7EB' }
        },
        y: {
          ticks: { color: '#6B7280' },
          grid: { color: '#E5E7EB' },
          beginAtZero: true
        }
      }
    }
  });

  // Post Activity Chart
  const postCtx = document.getElementById('postActivityChart').getContext('2d');
  const postActivityChart = new Chart(postCtx, {
    type: 'bar',
    data: {
      labels: <%= raw @post_activity_data.map { |d| d[:date] }.to_json %>,
      datasets: [{
        label: 'New Posts',
        data: <%= raw @post_activity_data.map { |d| d[:count] }.to_json %>,
        backgroundColor: 'rgba(34, 197, 94, 0.8)',
        borderColor: 'rgb(34, 197, 94)',
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          labels: { color: '#374151' }
        }
      },
      scales: {
        x: {
          ticks: { color: '#6B7280' },
          grid: { color: '#E5E7EB' }
        },
        y: {
          ticks: { color: '#6B7280' },
          grid: { color: '#E5E7EB' },
          beginAtZero: true
        }
      }
    }
  });
});
</script>