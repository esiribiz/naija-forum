<%= form_with model: [:admin, @category], local: true, class: "space-y-8" do |form| %>
  <% if @category.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-xl p-6 mb-8">
      <div class="flex items-center mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
        <h3 class="font-semibold text-red-800"><%= pluralize(@category.errors.count, "error") %> prevented this category from being saved:</h3>
      </div>
      <ul class="list-disc list-inside text-red-700 space-y-1">
        <% @category.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Category Name Field -->
  <div class="space-y-3">
    <%= form.label :name, class: "block text-sm font-semibold text-gray-900" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        Category Name
      </div>
    <% end %>
    <%= form.text_field :name, 
          placeholder: "Give your category a clear, descriptive name...",
          class: "mt-2 block w-full px-4 py-4 text-lg border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" %>
  </div>

  <!-- Description Field -->
  <div class="space-y-3">
    <%= form.label :description, class: "block text-sm font-semibold text-gray-900" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
        </svg>
        Description
      </div>
    <% end %>
    <%= form.text_area :description, rows: 4, 
          placeholder: "Describe what kind of content belongs in this category. Help users understand when to use it!",
          class: "mt-2 block w-full px-4 py-4 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 resize-y" %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Color Field -->
    <div class="space-y-3">
      <%= form.label :color, class: "block text-sm font-semibold text-gray-900" do %>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3H5a2 2 0 00-2 2v12a4 4 0 004 4h2a2 2 0 002-2V5a2 2 0 00-2-2z" />
          </svg>
          Category Color
        </div>
      <% end %>
      <div class="flex items-center space-x-4 mt-2">
        <%= form.color_field :color, 
            class: "h-12 w-24 border border-gray-300 rounded-xl cursor-pointer shadow-sm hover:shadow-md transition-shadow",
            value: @category.color || "#22c55e" %>
        <div class="bg-gray-50 rounded-lg px-4 py-2 flex-1">
          <p class="text-sm text-gray-600 font-medium">üé® Choose a visual theme</p>
          <p class="text-xs text-gray-500 mt-1">Used for badges and highlights</p>
        </div>
      </div>
    </div>

    <!-- Parent Category Field -->
    <div class="space-y-3">
      <%= form.label :parent_id, "Parent Category", class: "block text-sm font-semibold text-gray-900" do %>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 002 2h2m-6 12a2 2 0 01-2-2v-6a2 2 0 012-2h2a2 2 0 012 2v6a2 2 0 01-2 2h-2z" />
          </svg>
          Parent Category
        </div>
      <% end %>
      <%= form.collection_select :parent_id, Category.where.not(id: @category.id), :id, :name, 
          { prompt: "üîç Select a parent (optional)" }, 
          { class: "mt-2 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" } %>
      <p class="text-xs text-gray-500 mt-1">‚ú® Create a sub-category for better organization</p>
    </div>
  </div>

  <!-- Image Upload Field -->
  <div class="space-y-3">
    <%= form.label :image, class: "block text-sm font-semibold text-gray-900" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Category Image (Optional)
      </div>
    <% end %>
    <div class="mt-2 border-2 border-dashed border-gray-300 rounded-xl p-8 text-center hover:border-green-400 hover:bg-green-50 transition-all duration-200 group">
      <div class="space-y-4">
        <div class="mx-auto h-16 w-16 bg-gray-100 rounded-full flex items-center justify-center group-hover:bg-green-100 transition-colors">
          <svg class="h-8 w-8 text-gray-400 group-hover:text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <div>
          <label for="category_image" class="cursor-pointer">
            <span class="text-lg font-medium text-green-600 hover:text-green-500">Upload category icon</span>
            <span class="block text-sm text-gray-500 mt-1">or drag and drop here</span>
            <%= form.file_field :image, class: "sr-only", id: "category_image", accept: "image/*" %>
          </label>
        </div>
        <p class="text-xs text-gray-400">üñºÔ∏è PNG, JPG, GIF up to 5MB ‚Ä¢ Square images work best</p>
      </div>
    </div>
    <% if @category.image.attached? %>
      <div class="mt-4 flex items-center space-x-4 bg-gray-50 rounded-lg p-3">
        <%= image_tag @category.image, class: "h-16 w-16 object-cover rounded-lg shadow-md", alt: @category.name %>
        <div>
          <p class="text-sm font-medium text-gray-900">Current category image</p>
          <p class="text-xs text-gray-500 mt-1">Upload a new image to replace this one</p>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Action Buttons -->
  <div class="flex flex-col sm:flex-row gap-4 pt-8 border-t border-gray-200">
    <%= link_to admin_categories_path, class: "inline-flex items-center justify-center px-8 py-3 border-2 border-gray-300 rounded-xl text-gray-700 font-medium bg-white hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200 shadow-sm hover:shadow-md" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Categories
    <% end %>
    
    <%= form.submit @category.new_record? ? "Create Category" : "Update Category", 
          class: "inline-flex items-center justify-center px-8 py-3 border border-transparent rounded-xl text-white font-semibold bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transform transition-all duration-200 hover:scale-105 shadow-lg hover:shadow-xl" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <% if @category.new_record? %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        <% else %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        <% end %>
      </svg>
    <% end %>
  </div>
<% end %>