                      <span>View Profile</span>
                      <i class="fas fa-external-link-alt text-xs ml-auto text-slate-400"></i>
                    <% end %>
                    <%= link_to edit_user_registration_path, target: "_blank", class: "flex items-center px-3 py-2 text-slate-700 hover:bg-slate-50 rounded-lg transition-all duration-150" do %>
                      <i class="fas fa-cog text-slate-500 mr-3"></i>
                      <span>Account Settings</span>
                      <i class="fas fa-external-link-alt text-xs ml-auto text-slate-400"></i>
                    <% end %>
                  <% end %>
                  
                  <div class="my-2 border-t border-slate-100"></div>
                  
                  <%= link_to root_path, target: "_blank", class: "flex items-center px-3 py-2 text-slate-700 hover:bg-green-50 hover:text-green-700 rounded-lg transition-all duration-150" do %>
                    <i class="fas fa-home text-green-500 mr-3"></i>
                    <span>Visit Site</span>
                    <i class="fas fa-external-link-alt text-xs ml-auto text-slate-400"></i>
                  <% end %>
                  
