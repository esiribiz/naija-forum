<turbo-stream action="prepend" target="comment_<%= @comment.parent_id %>_replies">
  <template>
    <%= render partial: "comments/reply", locals: { reply: @comment } %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="reply-form-<%= @comment.parent_id %>">
  <template></template> <!-- Clears the reply form after submission -->
</turbo-stream>
