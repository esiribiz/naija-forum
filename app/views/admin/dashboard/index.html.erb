  <!-- Users Stats -->
  <div class="group relative bg-gradient-to-br from-emerald-50 via-white to-teal-50 rounded-2xl shadow-lg border border-emerald-100 p-6 hover:shadow-2xl hover:scale-105 transition-all duration-300 overflow-hidden">
