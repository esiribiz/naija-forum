<%= form_with model: [:admin, @tag], local: true, class: "space-y-8" do |form| %>
  <% if @tag.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-xl p-6 mb-8">
      <div class="flex items-center mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
        <h3 class="font-semibold text-red-800"><%= pluralize(@tag.errors.count, "error") %> prevented this tag from being saved:</h3>
      </div>
      <ul class="list-disc list-inside text-red-700 space-y-1">
        <% @tag.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Tag Name Field -->
  <div class="space-y-3">
    <%= form.label :name, class: "block text-sm font-semibold text-gray-900" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
        Tag Name
      </div>
    <% end %>
    <%= form.text_field :name, 
          placeholder: "Enter a clear, descriptive tag name...",
          class: "mt-2 block w-full px-4 py-4 text-lg border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-200" %>
    <div class="flex items-center justify-between text-sm text-gray-500">
      <span>ðŸ“Œ Tip: Use lowercase, no spaces (e.g., web-development, tutorial)</span>
    </div>
  </div>

  <!-- Description Field -->
  <div class="space-y-3">
    <%= form.label :description, class: "block text-sm font-semibold text-gray-900" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
        </svg>
        Description
      </div>
    <% end %>
    <%= form.text_area :description, rows: 3, 
          placeholder: "Describe what this tag represents and when it should be used (optional)...",
          class: "mt-2 block w-full px-4 py-4 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-200 resize-y" %>
  </div>


  <!-- Action Buttons -->
  <div class="flex flex-col sm:flex-row gap-4 pt-8 border-t border-gray-200">
    <%= link_to admin_tags_path, class: "inline-flex items-center justify-center px-8 py-3 border-2 border-gray-300 rounded-xl text-gray-700 font-medium bg-white hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200 shadow-sm hover:shadow-md" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Tags
    <% end %>
    
    <%= form.submit @tag.new_record? ? "Create Tag" : "Update Tag", 
          class: "inline-flex items-center justify-center px-8 py-3 border border-transparent rounded-xl text-white font-semibold bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transform transition-all duration-200 hover:scale-105 shadow-lg hover:shadow-xl" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <% if @tag.new_record? %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        <% else %>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        <% end %>
      </svg>
    <% end %>
  </div>
<% end %>