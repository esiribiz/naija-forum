<% content_for :title, "Editing Category" %>
<div class="max-w-4xl w-full mx-auto mt-12 pb-16">
  <!-- Header Section -->
  <h1 class="font-extrabold text-4xl text-gray-900 mb-6">Editing Category</h1>
  <!-- Form Section -->
  <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-200">
    <%= render "form", category: @category %>
  </div>
  <!-- Links Section -->
  <div class="mt-8 flex justify-start space-x-4">
    <%= link_to "Show this category", @category, class: "px-6 py-3 bg-gray-100 text-gray-700 hover:bg-gray-200 rounded-md font-medium transition-transform transform hover:scale-105" %>
    <%= link_to "Back to categories", categories_path, class: "px-6 py-3 bg-blue-600 text-white hover:bg-blue-500 rounded-md font-medium transition-transform transform hover:scale-105" %>
  </div>
</div>
