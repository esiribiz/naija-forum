<% content_for :title, "Reply to Comment" %>

<!-- Main Content Container -->
<div class="container max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
    <!-- Header -->
    <div class="bg-gradient-to-r from-[#008751]/10 to-[#00b76a]/10 p-6 border-b border-gray-100">
      <div class="flex items-center space-x-3 mb-4">
        <%= link_to post_path(@comment.post), class: "text-gray-600 hover:text-[#008751] transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
          </svg>
        <% end %>
        <div>
          <h1 class="text-2xl font-bold text-gray-800">Reply to Comment</h1>
          <p class="text-gray-600 mt-1">Share your thoughts on "<%= truncate(@comment.post.title, length: 60) %>"</p>
        </div>
      </div>
    </div>

    <!-- Form Container -->
    <div class="p-8">
      <% if @comment.parent_id.present? %>
        <!-- Show parent comment context -->
        <div class="mb-6 p-4 bg-gray-50 rounded-xl border border-gray-200">
          <p class="text-sm text-gray-600 mb-2 font-medium">Replying to:</p>
          <div class="flex items-start space-x-3">
            <% parent_comment = Comment.find(@comment.parent_id) %>
            <% if parent_comment.user.avatar.attached? %>
              <%= image_tag parent_comment.user.avatar, class: "h-8 w-8 rounded-full" %>
            <% else %>
              <div class="h-8 w-8 rounded-full bg-gradient-to-br from-[#008751] to-[#00b76a] flex items-center justify-center">
                <span class="text-white text-xs font-semibold">
                  <%= parent_comment.user.username.first(2).upcase %>
                </span>
              </div>
            <% end %>
            <div>
              <p class="font-semibold text-gray-800 text-sm"><%= parent_comment.user.username %></p>
              <p class="text-gray-700 text-sm mt-1"><%= truncate(parent_comment.content, length: 150) %></p>
            </div>
          </div>
        </div>
      <% end %>

      <%= form_with(model: [@comment.post, @comment]) do |f| %>
        <%= f.hidden_field :parent_id %>
        
        <div class="mb-6">
          <%= f.label :content, "Your Reply", class: "block text-sm font-semibold text-gray-700 mb-3" %>
          <%= f.text_area :content, 
              placeholder: "Write your reply here...", 
              rows: 6, 
              class: "w-full p-4 border border-gray-300 rounded-xl resize-none focus:ring-2 focus:ring-naija-green/20 focus:border-naija-green transition-all duration-200 text-gray-700 placeholder-gray-400" %>
          <% if @comment.errors[:content].any? %>
            <p class="mt-2 text-sm text-red-600"><%= @comment.errors[:content].first %></p>
          <% end %>
        </div>

        <div class="flex items-center justify-between pt-4 border-t border-gray-100">
          <div class="flex items-center space-x-2 text-sm text-gray-500">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
            </svg>
            <span>Be respectful and constructive in your reply</span>
          </div>
          <div class="flex space-x-3">
            <%= link_to "Cancel", post_path(@comment.post), 
                class: "px-4 py-2 text-gray-600 bg-gray-100 hover:bg-gray-200 rounded-lg font-medium transition-colors" %>
            <%= f.submit "ðŸ’¬ Reply", 
                class: "px-6 py-2.5 bg-naija-green hover:bg-naija-green-600 text-white font-medium rounded-xl transition-all duration-200 shadow-sm hover:shadow-md" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
