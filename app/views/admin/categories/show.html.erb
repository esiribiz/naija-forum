<% content_for :page_title, @category.name %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <% if @category.color.present? %>
        <div class="flex-shrink-0 h-8 w-8 rounded-full mr-4" style="background-color: <%= @category.color %>"></div>
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @category.name %></h1>
        <p class="mt-1 text-sm text-gray-600">Category details and associated posts</p>
      </div>
    </div>
    <div class="flex space-x-2">
      <%= link_to "← Back to Categories", admin_categories_path, 
          class: "bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      <%= link_to "Edit Category", edit_admin_category_path(@category), 
          class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <!-- Category Info -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Category Information</h3>
      
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-lg text-gray-900"><%= @category.name %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Total Posts</dt>
          <dd class="mt-1 text-lg text-gray-900"><%= @category.posts.count %></dd>
        </div>

        <% if @category.description.present? %>
          <div class="md:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-gray-900"><%= simple_format(@category.description) %></dd>
          </div>
        <% end %>

        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-gray-900"><%= @category.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
          <dd class="mt-1 text-gray-900"><%= @category.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Recent Posts -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Posts in this Category</h3>
      
      <% if @posts.any? %>
        <div class="space-y-4">
          <% @posts.each do |post| %>
            <div class="border-b border-gray-200 pb-4 last:border-b-0 last:pb-0">
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                  <h4 class="text-sm font-medium text-gray-900 truncate">
                    <%= link_to post.title, admin_post_path(post), class: "hover:text-green-600" %>
                  </h4>
                  <p class="mt-1 text-sm text-gray-500">
                    By <%= post.user.username %> • <%= post.created_at.strftime("%b %d, %Y") %> • 
                    <%= pluralize(post.comments.count, 'comment') %>
                  </p>
                </div>
                <div class="flex-shrink-0 ml-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= post.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= post.published? ? 'Published' : 'Draft' %>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <% if @category.posts.count > 10 %>
          <div class="mt-6 text-center">
            <p class="text-sm text-gray-500">
              Showing 10 of <%= @category.posts.count %> posts.
              <%= link_to "View all posts →", admin_posts_path(category: @category.id), 
                  class: "text-green-600 hover:text-green-500 font-medium" %>
            </p>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <h4 class="mt-2 text-sm font-medium text-gray-900">No posts yet</h4>
          <p class="mt-1 text-sm text-gray-500">This category doesn't have any posts yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>