<% content_for :page_title, "Dashboard" %>
<% content_for :page_subtitle, "Welcome back! Here's what's happening on your forum today." %>

<div class="space-y-8">

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6">
    <!-- Users Card -->
    <div class="admin-stat-card">
      <div class="admin-stat-icon" style="background: linear-gradient(135deg, var(--admin-secondary) 0%, var(--admin-secondary-light) 100%);">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
        </svg>
      </div>
      <div class="admin-stat-number"><%= number_with_delimiter(@stats[:users][:total]) %></div>
      <div class="admin-stat-label">Total Users</div>
      <div class="mt-4 flex items-center justify-between text-sm">
        <div class="flex items-center text-green-600">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
          +<%= @stats[:users][:new_today] %> today
        </div>
        <%= link_to admin_users_path, class: "text-blue-600 hover:text-blue-800 font-medium transition-colors" do %>
          View All →
        <% end %>
      </div>
      <div class="mt-2 text-xs text-gray-500">
        <%= @stats[:users][:admins] %> admins • <%= @stats[:users][:new_this_week] %> new this week
      </div>
    </div>

    <!-- Posts Card -->
    <div class="admin-stat-card">
      <div class="admin-stat-icon" style="background: linear-gradient(135deg, var(--admin-accent) 0%, var(--admin-accent-light) 100%);">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
        </svg>
      </div>
      <div class="admin-stat-number"><%= number_with_delimiter(@stats[:posts][:total]) %></div>
      <div class="admin-stat-label">Total Posts</div>
      <div class="mt-4 flex items-center justify-between text-sm">
        <div class="flex items-center text-green-600">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
          </svg>
          +<%= @stats[:posts][:new_today] %> today
        </div>
        <%= link_to admin_posts_path, class: "text-blue-600 hover:text-blue-800 font-medium transition-colors" do %>
          Manage →
        <% end %>
      </div>
      <div class="mt-2 text-xs text-gray-500">
        <%= @stats[:posts][:published] %> published • <%= @stats[:posts][:draft] %> drafts
      </div>
    </div>

    <!-- Comments Card -->
    <div class="admin-stat-card">
      <div class="admin-stat-icon" style="background: linear-gradient(135deg, var(--admin-info) 0%, var(--admin-info-light) 100%);">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
      </div>
      <div class="admin-stat-number"><%= number_with_delimiter(@stats[:comments][:total]) %></div>
      <div class="admin-stat-label">Total Comments</div>
      <div class="mt-4 flex items-center justify-between text-sm">
        <div class="flex items-center text-green-600">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11"/>
          </svg>
          +<%= @stats[:comments][:new_today] %> today
        </div>
        <%= link_to admin_comments_path, class: "text-blue-600 hover:text-blue-800 font-medium transition-colors" do %>
          Moderate →
        <% end %>
      </div>
      <div class="mt-2 text-xs text-gray-500">
        <%= @stats[:comments][:new_this_week] %> new this week
      </div>
    </div>

    <!-- Categories Card -->
    <div class="admin-stat-card">
      <div class="admin-stat-icon" style="background: linear-gradient(135deg, var(--admin-success) 0%, var(--admin-success-light) 100%);">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14-7H3a2 2 0 00-2 2v12a2 2 0 002 2h16a2 2 0 002-2V6a2 2 0 00-2-2z"/>
        </svg>
      </div>
      <div class="admin-stat-number"><%= number_with_delimiter(@stats[:categories][:total]) %></div>
      <div class="admin-stat-label">Categories</div>
      <div class="mt-4 flex items-center justify-between text-sm">
        <div class="flex items-center text-green-600">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
          </svg>
          <%= @stats[:categories][:with_posts] %> active
        </div>
        <%= link_to admin_categories_path, class: "text-blue-600 hover:text-blue-800 font-medium transition-colors" do %>
          Manage →
        <% end %>
      </div>
      <div class="mt-2 text-xs text-gray-500">
        <%= @stats[:categories][:with_posts] %> categories have posts
      </div>
    </div>
  </div>

  <!-- Activity Charts -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- User Growth Chart -->
    <div class="admin-card">
      <div class="px-6 py-4 border-b border-gray-100">
        <h3 class="text-lg font-bold text-gray-900">User Growth</h3>
        <p class="text-sm text-gray-600">New user registrations over the last 30 days</p>
      </div>
      <div class="p-6">
        <div class="relative" style="height: 280px;">
          <canvas id="userGrowthChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Post Activity Chart -->
    <div class="admin-card">
      <div class="px-6 py-4 border-b border-gray-100">
        <h3 class="text-lg font-bold text-gray-900">Content Activity</h3>
        <p class="text-sm text-gray-600">Posts and comments created over the last 30 days</p>
      </div>
      <div class="p-6">
        <div class="relative" style="height: 280px;">
          <canvas id="postActivityChart"></canvas>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Recent Users -->
    <div class="admin-card">
      <div class="px-6 py-4 border-b border-gray-100">
        <h3 class="text-lg font-bold text-gray-900">Recent Users</h3>
        <p class="text-sm text-gray-600">Latest member registrations</p>
      </div>
      <div class="divide-y divide-gray-200">
        <% @recent_users.each do |user| %>
          <div class="px-6 py-3">
            <div class="flex items-center space-x-3">
              <% if user.avatar.attached? %>
                <%= image_tag user.avatar, class: "h-6 w-6 rounded-full object-cover flex-shrink-0", style: "width: 24px; height: 24px; max-width: 24px; max-height: 24px;" %>
              <% else %>
                <div class="h-6 w-6 rounded-full bg-green-600 flex items-center justify-center flex-shrink-0">
                  <span class="text-xs font-medium text-white"><%= user.username&.first&.upcase || 'U' %></span>
                </div>
              <% end %>
              <div class="min-w-0 flex-1">
                <p class="text-sm font-medium text-gray-900 truncate"><%= user.display_name %></p>
                <p class="text-xs text-gray-500 truncate">@<%= user.username %></p>
              </div>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full flex-shrink-0
                <% case user.role %>
                  <% when 'admin' %>
                    bg-green-100 text-green-800
                  <% when 'moderator' %>
                    bg-yellow-100 text-yellow-800
                  <% else %>
                    bg-gray-100 text-gray-800
                <% end %>">
                <%= user.role.capitalize %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
      <div class="px-4 py-2 bg-gray-50">
        <%= link_to "View all users", admin_users_path, class: "text-sm font-medium text-green-600 hover:text-green-700" %>
      </div>
    </div>

    <!-- Recent Posts -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-3 border-b border-gray-200">
        <h3 class="text-base font-medium text-gray-900">Recent Posts</h3>
      </div>
      <div class="divide-y divide-gray-200">
        <% @recent_posts.each do |post| %>
          <div class="px-6 py-3">
            <div class="space-y-1">
              <p class="text-sm font-medium text-gray-900 line-clamp-2"><%= truncate(post.title, length: 50) %></p>
              <div class="flex items-center space-x-2 text-xs text-gray-500">
                <span class="truncate">by <%= post.user.username %></span>
                <span>•</span>
                <span class="truncate"><%= post.category.name %></span>
                <span>•</span>
                <span class="whitespace-nowrap"><%= post.comments.count %> comments</span>
              </div>
              <p class="text-xs text-gray-400"><%= time_ago_in_words(post.created_at) %> ago</p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="px-4 py-2 bg-gray-50">
        <%= link_to "View all posts", admin_posts_path, class: "text-sm font-medium text-green-600 hover:text-green-700" %>
      </div>
    </div>

    <!-- Recent Comments -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-3 border-b border-gray-200">
        <h3 class="text-base font-medium text-gray-900">Recent Comments</h3>
      </div>
      <div class="divide-y divide-gray-200">
        <% @recent_comments.each do |comment| %>
          <div class="px-6 py-3">
            <div class="space-y-1">
              <p class="text-sm text-gray-900 line-clamp-2"><%= truncate(comment.content, length: 60) %></p>
              <div class="flex items-center space-x-2 text-xs text-gray-500">
                <span class="truncate">by <%= comment.user.username %></span>
                <span>•</span>
                <span class="truncate">on "<%= truncate(comment.post.title, length: 25) %>"</span>
              </div>
              <p class="text-xs text-gray-400"><%= time_ago_in_words(comment.created_at) %> ago</p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="px-4 py-2 bg-gray-50">
        <%= link_to "View all comments", admin_comments_path, class: "text-sm font-medium text-yellow-700 hover:text-yellow-800" %>
      </div>
    </div>
  </div>
</div>

<!-- Chart.js Scripts -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  // User Growth Chart
  const userCtx = document.getElementById('userGrowthChart').getContext('2d');
  const userGrowthChart = new Chart(userCtx, {
    type: 'line',
    data: {
      labels: <%= raw @user_growth_data.map { |d| d[:date] }.to_json %>,
      datasets: [{
        label: 'New Users',
        data: <%= raw @user_growth_data.map { |d| d[:count] }.to_json %>,
        borderColor: 'rgb(59, 130, 246)',
        backgroundColor: 'rgba(59, 130, 246, 0.1)',
        borderWidth: 2,
        fill: true,
        tension: 0.4
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          labels: { color: '#374151' }
        }
      },
      scales: {
        x: {
          ticks: { color: '#6B7280' },
          grid: { color: '#E5E7EB' }
        },
        y: {
          ticks: { color: '#6B7280' },
          grid: { color: '#E5E7EB' },
          beginAtZero: true
        }
      }
    }
  });

  // Post Activity Chart
  const postCtx = document.getElementById('postActivityChart').getContext('2d');
  const postActivityChart = new Chart(postCtx, {
    type: 'bar',
    data: {
      labels: <%= raw @post_activity_data.map { |d| d[:date] }.to_json %>,
      datasets: [{
        label: 'New Posts',
        data: <%= raw @post_activity_data.map { |d| d[:count] }.to_json %>,
        backgroundColor: 'rgba(34, 197, 94, 0.8)',
        borderColor: 'rgb(34, 197, 94)',
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          labels: { color: '#374151' }
        }
      },
      scales: {
        x: {
          ticks: { color: '#6B7280' },
          grid: { color: '#E5E7EB' }
        },
        y: {
          ticks: { color: '#6B7280' },
          grid: { color: '#E5E7EB' },
          beginAtZero: true
        }
      }
    }
  });
});
</script>