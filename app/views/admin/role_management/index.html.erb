<% content_for :page_title, "Role Management" %>
<% content_for :page_subtitle, "Manage user roles, permissions, and access control across your forum" %>

<!-- Enhanced Stats Cards - Column Layout -->
<div class="flex flex-col lg:flex-row gap-6 mb-8">
  <!-- Left Column - Admin & Moderator Roles -->
  <div class="flex-1 space-y-4">
    <!-- Super Admins -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #ef4444, #dc2626);">
          <i class="fas fa-shield-alt"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@role_counts[:admin]) %></div>
          <div class="stat-label">Super Admins</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-crown mr-1"></i>
            <%= ((@role_counts[:admin].to_f / [@users.count, 1].max) * 100).round(1) %>% of users
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-red-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@role_counts[:admin].to_f / [@users.count, 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Moderators -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
          <i class="fas fa-user-tie"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@role_counts[:moderator]) %></div>
          <div class="stat-label">Moderators</div>
          <div class="stat-change mt-1 text-sm" style="color: #6b7280;">
            <i class="fas fa-gavel mr-1"></i>
            <%= ((@role_counts[:moderator].to_f / [@users.count, 1].max) * 100).round(1) %>% of users
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-yellow-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@role_counts[:moderator].to_f / [@users.count, 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Column - Regular Users & Total -->
  <div class="flex-1 space-y-4">
    <!-- Regular Users -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #1e40af);">
          <i class="fas fa-users"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@role_counts[:user]) %></div>
          <div class="stat-label">Regular Users</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-user mr-1"></i>
            <%= ((@role_counts[:user].to_f / [@users.count, 1].max) * 100).round(1) %>% of users
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-blue-500 h-2 rounded-full transition-all duration-1000" style="width: <%= (@role_counts[:user].to_f / [@users.count, 1].max * 100).round(1) %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Users -->
    <div class="stat-card group hover:scale-105 transition-all duration-300">
      <div class="flex items-center space-x-4">
        <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
          <i class="fas fa-chart-line"></i>
        </div>
        <div class="flex-1">
          <div class="stat-number text-2xl"><%= number_with_delimiter(@users.count) %></div>
          <div class="stat-label">Total Users</div>
          <div class="stat-change positive mt-1 text-sm">
            <i class="fas fa-users-cog mr-1"></i>
            All roles managed
          </div>
        </div>
        <div class="flex-shrink-0">
          <div class="stat-trend w-20">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-green-500 h-2 rounded-full transition-all duration-1000" style="width: 100%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Enhanced Search and Filter Section -->
<div class="enhanced-search-container">
  <div class="enhanced-search-header">
    <h3 class="enhanced-search-title">
      <i class="fas fa-search text-red-500"></i>
      Advanced User & Role Search
    </h3>
    <p class="enhanced-search-subtitle">Find users by name, email, role, activity, or join date with powerful filtering options to manage permissions</p>
  </div>
  <div class="enhanced-search-body">
    <%= form_with url: admin_role_management_path, method: :get, local: true, class: "enhanced-search-form" do |form| %>
      <!-- Main search row -->
      <div class="enhanced-search-row">
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-search mr-2 text-red-500"></i>
            Search Users
          </label>
          <%= form.text_field :search, 
              placeholder: "Search by name, username, email, or other details...", 
              value: params[:search],
              class: "enhanced-form-input",
              data: { 
                search_target: "input",
                search_delay: "300"
              } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-user-shield mr-2 text-yellow-500"></i>
            User Role
          </label>
          <%= form.select :role, 
              options_for_select([
                ['All Roles', ''],
                ['👑 Admin', 'admin'],
                ['🛡️ Moderator', 'moderator'],
                ['👤 Regular User', 'user']
              ], params[:role]), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-signal mr-2 text-green-500"></i>
            Activity Status
          </label>
          <%= form.select :activity_status, 
              options_for_select([
                ['All Users', ''],
                ['🟢 Online Now', 'online'],
                ['🔵 Recently Active', 'recent'],
                ['⚫ Inactive', 'inactive'],
                ['👻 Never Logged In', 'never']
              ], params[:activity_status]), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-calendar-plus mr-2 text-purple-500"></i>
            Join Period
          </label>
          <%= form.select :date_range, 
              options_for_select([
                ['All Time', ''],
                ['Today', 'today'],
                ['This Week', 'week'],
                ['This Month', 'month'],
                ['Last 3 Months', 'quarter'],
                ['This Year', 'year']
              ], params[:date_range]), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
      </div>
      
      <!-- Advanced filters row -->
      <div class="enhanced-search-row" style="opacity: 0.9;">
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-sort-amount-down mr-2 text-blue-500"></i>
            Sort By
          </label>
          <%= form.select :sort, 
              options_for_select([
                ['Recently Joined', 'created_desc'],
                ['Oldest Members', 'created_asc'],
                ['Name A-Z', 'name_asc'],
                ['Name Z-A', 'name_desc'],
                ['Most Active', 'activity_desc'],
                ['Recently Active', 'recent_desc']
              ], params[:sort] || 'created_desc'), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-list-ol mr-2 text-indigo-500"></i>
            Results Per Page
          </label>
          <%= form.select :per_page, 
              options_for_select([
                ['10 users', '10'],
                ['25 users', '25'],
                ['50 users', '50'],
                ['100 users', '100']
              ], params[:per_page] || '25'), 
              {}, 
              { class: "enhanced-form-select" } %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-file-alt mr-2 text-cyan-500"></i>
            Min Posts Count
          </label>
          <%= form.number_field :min_posts, 
              placeholder: "0", 
              value: params[:min_posts],
              min: 0,
              class: "enhanced-form-input" %>
        </div>
        
        <div class="enhanced-form-group">
          <label class="enhanced-form-label">
            <i class="fas fa-comments mr-2 text-pink-500"></i>
            Min Comments Count
          </label>
          <%= form.number_field :min_comments, 
              placeholder: "0", 
              value: params[:min_comments],
              min: 0,
              class: "enhanced-form-input" %>
        </div>
      </div>
      
      <!-- Search actions -->
      <div class="enhanced-search-actions">
        <div class="enhanced-search-buttons">
          <%= form.submit "🔍 Apply Filters", class: "enhanced-search-btn enhanced-search-btn-primary" %>
          <%= link_to "🗑️ Clear All", admin_role_management_path, class: "enhanced-search-btn enhanced-search-btn-secondary" %>
          <button type="button" id="advanced-toggle" class="enhanced-search-btn enhanced-search-btn-secondary">
            <i class="fas fa-sliders-h mr-2"></i>
            Advanced Options
          </button>
        </div>
        
        <div class="enhanced-search-results">
          <% filter_params = ['search', 'role', 'activity_status', 'date_range', 'sort', 'min_posts', 'min_comments'] %>
          <% has_filters = filter_params.any? { |key| params[key].present? } %>
          <% if has_filters %>
            <div class="flex items-center space-x-2 text-sm">
              <i class="fas fa-filter text-red-500"></i>
              <span class="text-slate-600">Active filters:</span>
              <div class="flex items-center space-x-1 flex-wrap">
                <% if params[:search].present? %>
                  <span class="px-2 py-1 bg-red-100 text-red-700 rounded-full text-xs font-medium">
                    Search: "<%= params[:search] %>"
                  </span>
                <% end %>
                <% if params[:role].present? %>
                  <span class="px-2 py-1 bg-yellow-100 text-yellow-700 rounded-full text-xs font-medium">
                    Role: <%= params[:role].humanize %>
                  </span>
                <% end %>
                <% if params[:activity_status].present? %>
                  <span class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">
                    Activity: <%= params[:activity_status].humanize %>
                  </span>
                <% end %>
                <% if params[:date_range].present? %>
                  <span class="px-2 py-1 bg-purple-100 text-purple-700 rounded-full text-xs font-medium">
                    Period: <%= params[:date_range].humanize %>
                  </span>
                <% end %>
                <% if params[:sort].present? %>
                  <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium">
                    Sort: <%= params[:sort].humanize %>
                  </span>
                <% end %>
                <% if params[:min_posts].present? %>
                  <span class="px-2 py-1 bg-cyan-100 text-cyan-700 rounded-full text-xs font-medium">
                    Min Posts: <%= params[:min_posts] %>
                  </span>
                <% end %>
                <% if params[:min_comments].present? %>
                  <span class="px-2 py-1 bg-pink-100 text-pink-700 rounded-full text-xs font-medium">
                    Min Comments: <%= params[:min_comments] %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <div class="text-slate-500">
            <i class="fas fa-users mr-1"></i>
            Showing <%= @users.respond_to?(:count) ? @users.count : @users.size %> of <%= @role_counts.values.sum %> users
            <% if filter_params.any? { |key| params[key].present? } %>
              <span class="text-red-600 font-medium">(filtered)</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Include Enhanced Table Styles -->
<%= render 'shared/enhanced_table_styles' %>

<!-- Enhanced Users Table -->
<div class="enhanced-table-container mb-8 enhanced-fade-in">
  <div class="enhanced-table-header">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="enhanced-table-title">
          <i class="fas fa-users" style="color: #ef4444;"></i>
          Users & Role Management
        </h2>
        <p class="enhanced-table-subtitle">Manage user accounts, roles, and permissions across your forum community</p>
      </div>
      <div class="flex space-x-3">
        <button class="btn btn-secondary btn-sm hover:scale-105 transition-transform" onclick="exportUserRoles()">
          <i class="fas fa-download mr-2"></i> Export Data
        </button>
        <div class="enhanced-stat-item">
          <i class="fas fa-users-cog"></i>
          <span><%= @users.count %> Total Users</span>
        </div>
      </div>
    </div>
  </div>
  
  <div class="overflow-x-auto">
    <table class="enhanced-table">
      <thead>
        <tr>
          <th><i class="fas fa-user mr-2"></i>User Profile</th>
          <th><i class="fas fa-envelope mr-2"></i>Contact & Activity</th>
          <th><i class="fas fa-user-tag mr-2"></i>Role Management</th>
          <th class="hidden md:table-cell"><i class="fas fa-chart-bar mr-2"></i>Statistics</th>
          <th class="hidden lg:table-cell"><i class="fas fa-calendar-plus mr-2"></i>Member Since</th>
          <th><i class="fas fa-signal mr-2"></i>Status</th>
          <th class="text-right"><i class="fas fa-cogs mr-2"></i>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="enhanced-fade-in">
            <td>
              <div class="enhanced-user-info">
                <div class="flex-shrink-0">
                  <% if user.avatar.attached? %>
                    <%= image_tag user.avatar, class: "enhanced-avatar" %>
                  <% else %>
                    <div class="enhanced-avatar-placeholder bg-gradient-to-br from-red-500 to-pink-600">
                      <span><%= user.username&.first&.upcase || 'U' %></span>
                    </div>
                  <% end %>
                </div>
                <div class="enhanced-user-details">
                  <h4><%= user.username || 'Unknown User' %></h4>
                  <p><%= "#{user.first_name} #{user.last_name}".strip.presence || 'No name set' %></p>
                  <div class="enhanced-content-meta mt-1">
                    <span class="enhanced-badge enhanced-badge-secondary text-xs">
                      <i class="fas fa-user-circle mr-1"></i>
                      ID: <%= user.id %>
                    </span>
                  </div>
                </div>
              </div>
            </td>
            <td>
              <div class="space-y-3">
                <div class="enhanced-content-preview">
                  <div class="enhanced-content-title text-sm"><%= user.email %></div>
                  <div class="enhanced-content-excerpt text-xs">
                    <% if user.last_sign_in_at.present? %>
                      <span class="text-green-600">Last active <%= time_ago_in_words(user.last_sign_in_at) %> ago</span>
                    <% else %>
                      <span class="text-gray-400">Never logged in</span>
                    <% end %>
                  </div>
                </div>
                <div class="enhanced-stats-group">
                  <div class="enhanced-stat-item">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Joined <%= time_ago_in_words(user.created_at) %> ago</span>
                  </div>
                </div>
              </div>
            </td>
            <td>
              <div class="space-y-2">
                <% if user != current_user %>
                  <select 
                    onchange="updateUserRole(<%= user.id %>, this.value)"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all"
                    <% if user.admin? && User.where(role: 'admin').count <= 1 %>disabled<% end %>>
                    <% ['user', 'moderator', 'admin'].each do |role| %>
                      <option value="<%= role %>" 
                              <%= 'selected' if user.role == role %>
                              <% if role == 'admin' && user.admin? && User.where(role: 'admin').count <= 1 %>disabled<% end %>>
                        <%= role.capitalize %>
                      </option>
                    <% end %>
                  </select>
                  <% if user.admin? && User.where(role: 'admin').count <= 1 %>
                    <span class="enhanced-badge enhanced-badge-danger text-xs">
                      <i class="fas fa-crown mr-1"></i>
                      Last Admin
                    </span>
                  <% end %>
                <% else %>
                  <span class="enhanced-badge enhanced-badge-<%= case user.role when 'admin' then 'danger' when 'moderator' then 'warning' else 'primary' end %>">
                    <i class="fas fa-<%= case user.role when 'admin' then 'crown' when 'moderator' then 'shield-alt' else 'user' end %> mr-1"></i>
                    <%= user.role.capitalize %>
                  </span>
                  <div class="text-xs text-gray-500 mt-1 font-medium">Your Account</div>
                <% end %>
              </div>
            </td>
            <td class="hidden md:table-cell">
              <div class="enhanced-stats-group flex-col items-start gap-3">
                <div class="enhanced-stat-item">
                  <i class="fas fa-edit text-blue-500"></i>
                  <span><%= pluralize(user.posts.count, 'post') %></span>
                </div>
                <div class="enhanced-stat-item">
                  <i class="fas fa-comments text-green-500"></i>
                  <span><%= pluralize(user.comments.count, 'comment') %></span>
                </div>
                <div class="enhanced-stat-item">
                  <i class="fas fa-chart-line text-purple-500"></i>
                  <span>Score: <%= (user.posts.count * 2 + user.comments.count) %></span>
                </div>
              </div>
            </td>
            <td class="hidden lg:table-cell">
              <div class="space-y-2">
                <div class="enhanced-content-title text-sm"><%= user.created_at.strftime('%B %d, %Y') %></div>
                <div class="enhanced-content-excerpt text-xs">
                  <%= time_ago_in_words(user.created_at) %> ago
                </div>
                <div class="enhanced-stat-item">
                  <i class="fas fa-user-plus"></i>
                  <span>Member #<%= user.id %></span>
                </div>
              </div>
            </td>
            <td>
              <% if user.last_sign_in_at.present? && user.last_sign_in_at > 5.minutes.ago %>
                <div class="enhanced-status-indicator enhanced-status-online">
                  <span>Online Now</span>
                </div>
              <% elsif user.last_sign_in_at.present? && user.last_sign_in_at > 1.day.ago %>
                <div class="enhanced-status-indicator enhanced-status-recent">
                  <span>Recently Active</span>
                </div>
              <% else %>
                <div class="enhanced-status-indicator enhanced-status-inactive">
                  <span><%= user.last_sign_in_at.present? ? 'Inactive' : 'Never Logged In' %></span>
                </div>
              <% end %>
            </td>
            <td class="text-right">
              <% if user != current_user %>
                <div class="enhanced-action-group">
                  <button class="enhanced-action-btn enhanced-action-btn-secondary" onclick="viewUserDetails(<%= user.id %>)" title="View user details">
                    <i class="fas fa-eye"></i>
                  </button>
                  <button class="enhanced-action-btn enhanced-action-btn-primary user-actions-toggle" data-user-id="<%= user.id %>" title="More actions">
                    <i class="fas fa-ellipsis-v"></i>
                  </button>
                  
                  <div class="user-actions-menu hidden absolute right-0 z-20 mt-2 w-56 rounded-lg shadow-xl bg-white ring-1 ring-gray-200 focus:outline-none"
                       data-user-id="<%= user.id %>" style="transform: translateY(10px);">
                    <div class="py-2">
                      <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider border-b border-gray-100">
                        User Actions
                      </div>
                      <button class="w-full text-left px-4 py-3 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-700 transition-colors flex items-center" onclick="sendMessage(<%= user.id %>)">
                        <i class="fas fa-envelope mr-3 text-blue-500"></i> Send Message
                      </button>
                      <button class="w-full text-left px-4 py-3 text-sm text-gray-700 hover:bg-purple-50 hover:text-purple-700 transition-colors flex items-center" onclick="viewUserDetails(<%= user.id %>)">
                        <i class="fas fa-user-circle mr-3 text-purple-500"></i> View Full Profile
                      </button>
                      <% unless user.admin? && User.where(role: 'admin').count <= 1 %>
                        <div class="border-t border-gray-100 my-1"></div>
                        <button class="w-full text-left px-4 py-3 text-sm text-red-600 hover:bg-red-50 transition-colors flex items-center" onclick="suspendUser(<%= user.id %>)">
                          <i class="fas fa-ban mr-3"></i> Suspend User
                        </button>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% else %>
                <div class="enhanced-badge enhanced-badge-primary">
                  <i class="fas fa-user-check mr-1"></i> Your Account
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <!-- Enhanced Table Footer -->
  <div class="enhanced-table-footer">
    <div class="enhanced-pagination-info">
      <div class="flex items-center space-x-4">
        <span>Showing <%= @users.respond_to?(:count) ? @users.count : @users.size %> of <%= @users.respond_to?(:total_count) ? @users.total_count : @users.count %> users</span>
        <div class="enhanced-stats-group">
          <div class="enhanced-stat-item">
            <i class="fas fa-crown text-red-500"></i>
            <span><%= @role_counts[:admin] %> Admins</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-shield-alt text-yellow-500"></i>
            <span><%= @role_counts[:moderator] %> Moderators</span>
          </div>
          <div class="enhanced-stat-item">
            <i class="fas fa-users text-blue-500"></i>
            <span><%= @role_counts[:user] %> Users</span>
          </div>
        </div>
      </div>
    </div>
    <div class="enhanced-pagination-controls">
      <% if @users.respond_to?(:current_page) %>
        <div class="flex items-center space-x-2 text-sm text-gray-500 mr-4">
          <span>Page <%= @users.current_page %> of <%= @users.total_pages %></span>
        </div>
        <div class="flex space-x-2">
          <% if @users.prev_page %>
            <%= link_to admin_role_management_path(page: @users.prev_page, search: params[:search], role: params[:role], date_range: params[:date_range]), 
                  class: "btn btn-secondary btn-sm" do %>
              <i class="fas fa-chevron-left mr-1"></i> Previous
            <% end %>
          <% end %>
          <% if @users.next_page %>
            <%= link_to admin_role_management_path(page: @users.next_page, search: params[:search], role: params[:role], date_range: params[:date_range]), 
                  class: "btn btn-primary btn-sm" do %>
              Next <i class="fas fa-chevron-right ml-1"></i>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <span class="text-sm text-gray-500">Page 1 of 1</span>
      <% end %>
    </div>
  </div>
</div>

<script>
// Enhanced search and filter functionality for role management
function toggleAdvancedFilters() {
  const advancedFilters = document.getElementById('advanced-filters');
  const toggleButton = event.target.closest('button');
  const icon = toggleButton.querySelector('i');
  
  advancedFilters.classList.toggle('hidden');
  
  if (advancedFilters.classList.contains('hidden')) {
