<!-- Sidebar -->
<aside class="w-72 p-6 bg-white shadow-md border border-gray-300 rounded-2xl hidden md:block flex-shrink-0 self-start">
  <!-- Categories Section -->
  <div class="mb-6 p-4 shadow-sm border border-gray-200 rounded-lg">
    <h2 class="text-lg font-semibold text-gray-800 mb-3 flex items-center">
      📂 Categories
    </h2>
    <ul class="space-y-2">
      <% @categories.each do |category| %>
        <li>
          <%= link_to category.name, category_posts_path(category), class: "block text-blue-600 font-medium transition duration-200 hover:text-blue-800 hover:pl-2" %>
        </li>
      <% end %>
    </ul>
    <!-- Link to All Categories -->
    <div class="mt-4 text-right">
      <%= link_to "View All Categories →", categories_path, class: "text-sm text-gray-700 hover:text-blue-600 font-medium transition" %>
    </div>
  </div>

  <!-- Tags Section -->
  <div class="p-4 shadow-sm border border-gray-200 rounded-lg">
    <h2 class="text-lg font-semibold text-gray-800 mb-3 flex items-center">
      🏷 Tags
    </h2>
    <div class="flex flex-wrap gap-2">
      <% @tags.each do |tag| %>
        <a href="<%= tag_path(tag) %>" class="bg-gray-200 text-gray-800 px-2 py-1 rounded-md hover:bg-gray-300 transition">
          <%= tag.name %>
        </a>
      <% end %>
    </div>
    <!-- Link to All Tags -->
    <div class="mt-4 text-right">
      <%= link_to "View All Tags →", tags_path, class: "text-sm text-gray-700 hover:text-blue-600 font-medium transition" %>
    </div>
  </div>
</aside>
