<!-- Page Header -->
<div class="mb-8">
  <h1 class="text-3xl font-bold text-white mb-2">User Management</h1>
  <p class="text-gray-400">Manage user accounts, roles, and permissions across your forum</p>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
  <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-blue-600 bg-opacity-20">
        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
        </svg>
      </div>
      <div class="ml-4">
        <div class="text-2xl font-bold text-white"><%= number_with_delimiter(@total_users) %></div>
        <div class="text-gray-400 text-sm">Total Users</div>
      </div>
    </div>
  </div>

  <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-red-600 bg-opacity-20">
        <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
      </div>
      <div class="ml-4">
        <div class="text-2xl font-bold text-white"><%= number_with_delimiter(@admin_users) %></div>
        <div class="text-gray-400 text-sm">Administrators</div>
      </div>
    </div>
  </div>

  <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-yellow-600 bg-opacity-20">
        <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h4.125m0-16.5h2.25c.621 0 1.125.504 1.125 1.125V4.25c0 .621-.504 1.125-1.125 1.125m-2.25 0h2.25v1.5h-2.25V2.25zm0 0h2.25"/>
        </svg>
      </div>
      <div class="ml-4">
        <div class="text-2xl font-bold text-white"><%= number_with_delimiter(@moderator_users) %></div>
        <div class="text-gray-400 text-sm">Moderators</div>
      </div>
    </div>
  </div>

  <div class="bg-gray-700 rounded-lg p-6 border border-gray-600">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-green-600 bg-opacity-20">
        <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="ml-4">
        <div class="text-2xl font-bold text-white"><%= number_with_delimiter(@users_today) %></div>
        <div class="text-gray-400 text-sm">New Today</div>
      </div>
    </div>
  </div>
</div>

<!-- Search and Filter Section -->
<div class="bg-gray-700 rounded-lg p-6 mb-8 border border-gray-600">
  <h3 class="text-lg font-semibold text-white mb-4">Search & Filter</h3>
  <%= form_with url: admin_users_path, method: :get, local: true, class: "space-y-4" do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div>
        <%= form.text_field :search, placeholder: "Search users...", value: params[:search], 
            class: "w-full px-3 py-2 bg-gray-600 border border-gray-500 rounded-md text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= form.select :role, 
            options_for_select([
              ['All Roles', ''],
              ['Admin', 'admin'],
              ['Moderator', 'moderator'],
              ['User', 'user']
            ], params[:role]), 
            {}, 
            { class: "w-full px-3 py-2 bg-gray-600 border border-gray-500 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
      </div>
      <div class="flex space-x-2">
        <%= form.submit "Search", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors" %>
        <%= link_to "Clear", admin_users_path, class: "px-4 py-2 bg-gray-600 text-gray-200 rounded-md hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-500 transition-colors" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Users Table -->
<div class="bg-gray-700 rounded-lg border border-gray-600 overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-600">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-lg font-bold text-white">All Users</h3>
        <p class="text-sm text-gray-400 mt-1">Manage user accounts and permissions</p>
      </div>
    </div>
  </div>
  
  <div class="overflow-x-auto">
    <table class="min-w-full">
      <thead class="bg-gray-800">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">User</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Role</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Activity</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Joined</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-gray-700 divide-y divide-gray-600">
        <% @users.each do |user| %>
          <tr class="hover:bg-gray-600 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <% if user.avatar.attached? %>
                    <%= image_tag user.avatar, class: "h-10 w-10 rounded-full object-cover shadow-sm" %>
                  <% else %>
                    <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center shadow-sm">
                      <span class="text-sm font-medium text-white"><%= user.username&.first&.upcase || 'U' %></span>
                    </div>
                  <% end %>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-bold text-white"><%= user.username || 'Unknown User' %></div>
                  <div class="text-sm text-gray-400"><%= "#{user.first_name} #{user.last_name}".strip.presence || 'No name set' %></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <div class="text-sm text-white"><%= user.email %></div>
              <div class="text-xs text-gray-400">
                <%= user.last_sign_in_at.present? ? "Last active #{time_ago_in_words(user.last_sign_in_at)} ago" : 'Never logged in' %>
              </div>
            </td>
            <td class="px-6 py-4">
              <% case user.role %>
              <% when 'admin' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900 bg-opacity-50 text-red-300 border border-red-700">
                  üëë Admin
                </span>
              <% when 'moderator' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-900 bg-opacity-50 text-yellow-300 border border-yellow-700">
                  üõ°Ô∏è Moderator
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-900 bg-opacity-50 text-blue-300 border border-blue-700">
                  üë§ User
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <div class="flex flex-col space-y-1 text-sm">
                <div class="flex items-center text-gray-300">
                  <span class="text-blue-400">üìù</span>
                  <span class="ml-1"><%= user.posts.count %> posts</span>
                </div>
                <div class="flex items-center text-gray-300">
                  <span class="text-green-400">üí¨</span>
                  <span class="ml-1"><%= user.comments.count %> comments</span>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <div class="text-sm text-white"><%= time_ago_in_words(user.created_at) %> ago</div>
              <div class="text-xs text-gray-400"><%= user.created_at.strftime('%b %d, %Y') %></div>
            </td>
            <td class="px-6 py-4">
              <% if user.last_sign_in_at.present? && user.last_sign_in_at > 5.minutes.ago %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-900 bg-opacity-50 text-green-300 border border-green-700">
                  <div class="w-1.5 h-1.5 bg-green-400 rounded-full mr-1.5 animate-pulse"></div>
                  Online
                </span>
              <% elsif user.last_sign_in_at.present? && user.last_sign_in_at > 1.day.ago %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-900 bg-opacity-50 text-blue-300 border border-blue-700">
                  <div class="w-1.5 h-1.5 bg-blue-400 rounded-full mr-1.5"></div>
                  Recent
                </span>
              <% elsif user.last_sign_in_at.present? %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-900 bg-opacity-50 text-gray-400 border border-gray-600">
                  <div class="w-1.5 h-1.5 bg-gray-500 rounded-full mr-1.5"></div>
                  Inactive
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-900 bg-opacity-50 text-gray-400 border border-gray-600">
                  <div class="w-1.5 h-1.5 bg-gray-500 rounded-full mr-1.5"></div>
                  New
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-right">
              <div class="flex items-center justify-end space-x-2">
                <%= link_to edit_admin_user_path(user), 
                      class: "inline-flex items-center px-3 py-1.5 border border-gray-500 shadow-sm text-xs font-medium rounded text-gray-300 bg-gray-600 hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors",
                      title: "Edit user" do %>
                  ‚úèÔ∏è Edit
                <% end %>
                
                <div class="relative inline-block text-left">
                  <button type="button" class="inline-flex items-center px-3 py-1.5 border border-gray-500 shadow-sm text-xs font-medium rounded text-gray-300 bg-gray-600 hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors user-actions-toggle"
                          data-user-id="<%= user.id %>">
                    ‚ãÆ
                  </button>
                  
                  <div class="user-actions-menu hidden absolute right-0 z-10 mt-2 w-48 rounded-md shadow-lg bg-gray-800 ring-1 ring-gray-600 focus:outline-none"
                       data-user-id="<%= user.id %>">
                    <div class="py-1">
                      <%= link_to "üëÄ View Profile", user_path(user), 
                            class: "block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700", 
                            target: "_blank" %>
                      <% unless user == current_user %>
                        <% if user.role != 'admin' %>
                          <%= link_to "üëë Make Admin", toggle_admin_admin_user_path(user), 
                                method: :patch,
                                class: "block px-4 py-2 text-sm text-yellow-300 hover:bg-gray-700",
                                data: { confirm: "Make this user an admin?" } %>
                        <% end %>
                        <% if user.role == 'user' %>
                          <%= link_to "üõ°Ô∏è Make Moderator", admin_user_path(user), 
                                method: :patch,
                                params: { user: { role: 'moderator' } },
                                class: "block px-4 py-2 text-sm text-blue-300 hover:bg-gray-700",
                                data: { confirm: "Make this user a moderator?" } %>
                        <% end %>
                        <div class="border-t border-gray-600"></div>
                        <%= link_to "üóëÔ∏è Delete User", admin_user_path(user), 
                              method: :delete,
                              class: "block px-4 py-2 text-sm text-red-400 hover:bg-gray-700",
                              data: { confirm: "Are you sure? This action cannot be undone." } %>
                      <% else %>
                        <span class="block px-4 py-2 text-sm text-gray-500">Your account</span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <!-- Table Footer -->
  <div class="px-6 py-4 border-t border-gray-600 bg-gray-800">
    <div class="flex items-center justify-between">
      <div class="flex items-center text-sm text-gray-400">
        <span>Showing <%= @users.respond_to?(:count) ? @users.count : @users.size %> of <%= @total_users %> users</span>
      </div>
      <div class="flex items-center space-x-2">
        <% if @users.respond_to?(:current_page) %>
          <div class="pagination-info text-sm text-gray-400">
            Page <%= @users.current_page %> of <%= @users.total_pages %>
          </div>
          <div class="pagination-controls flex space-x-2">
            <% if @users.prev_page %>
              <%= link_to "Previous", admin_users_path(page: @users.prev_page, search: params[:search], role: params[:role]), 
                    class: "px-3 py-1 bg-gray-600 text-gray-300 rounded hover:bg-gray-500 text-sm" %>
            <% end %>
            <% if @users.next_page %>
              <%= link_to "Next", admin_users_path(page: @users.next_page, search: params[:search], role: params[:role]), 
                    class: "px-3 py-1 bg-gray-600 text-gray-300 rounded hover:bg-gray-500 text-sm" %>
            <% end %>
          </div>
        <% else %>
          <span class="text-sm text-gray-400">Page 1 of 1</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// User action menus
document.addEventListener('DOMContentLoaded', function() {
  // Handle user action menus
  document.querySelectorAll('.user-actions-toggle').forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      const userId = this.dataset.userId;
      const menu = document.querySelector(`[data-user-id="${userId}"].user-actions-menu`);
      
      // Hide all other menus
      document.querySelectorAll('.user-actions-menu').forEach(m => {
        if (m !== menu) m.classList.add('hidden');
      });
      
      // Toggle current menu
      menu?.classList.toggle('hidden');
    });
  });
  
  // Close menus when clicking outside
  document.addEventListener('click', function(e) {
    if (!e.target.closest('.user-actions-toggle')) {
      document.querySelectorAll('.user-actions-menu').forEach(menu => {
        menu.classList.add('hidden');
      });
    }
  });
});
</script>
