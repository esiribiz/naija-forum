<% content_for :title, "#{@user.username} - Profile Dashboard" %>

<!-- Profile Dashboard -->
<div class="space-y-6" data-controller="profile-dashboard" data-profile-dashboard-active-tab-value="<%= params[:tab] || 'overview' %>">
  <!-- Welcome Header -->
  <div class="bg-gradient-to-r from-green-600 to-green-800 rounded-2xl p-6 text-white shadow-lg">
    <div class="flex items-center space-x-4">
      <% if @user.avatar.attached? %>
        <%= image_tag url_for(@user.avatar), class: "w-20 h-20 rounded-full border-4 border-white shadow-lg object-cover", style: "width: 80px; height: 80px; max-width: 80px; max-height: 80px;" %>
      <% else %>
        <div class="w-20 h-20 rounded-full bg-white bg-opacity-20 flex items-center justify-center shadow-lg">
          <span class="text-white font-bold text-xl"><%= @user.username&.first&.upcase || 'U' %></span>
        </div>
      <% end %>
      <div class="flex-1">
        <h1 class="text-3xl font-bold mb-2">Welcome back, <%= @user.username || "User" %>! üëã</h1>
        <p class="text-green-100 text-lg">Here's your profile dashboard</p>
      </div>
      <% if current_user == @user %>
        <%= link_to edit_user_registration_path, class: "bg-white bg-opacity-20 hover:bg-opacity-30 text-white px-4 py-2 rounded-lg transition-all duration-300 flex items-center space-x-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          <span>Edit Profile</span>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Tab Navigation -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden">
    <div class="border-b border-gray-200">
      <nav class="flex space-x-8 px-6" aria-label="Tabs">
        <button data-profile-dashboard-target="tab" data-tab="overview" data-action="click->profile-dashboard#switchTab" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors duration-200">
          <div class="flex items-center space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
            </svg>
            <span>Overview</span>
          </div>
        </button>
        
        <button data-profile-dashboard-target="tab" data-tab="activity" data-action="click->profile-dashboard#switchTab" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors duration-200">
          <div class="flex items-center space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Recent Activity</span>
          </div>
        </button>
        
        <% if @user == current_user %>
          <button data-profile-dashboard-target="tab" data-tab="settings" data-action="click->profile-dashboard#switchTab" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors duration-200">
            <div class="flex items-center space-x-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>Settings</span>
            </div>
          </button>
        <% end %>
      </nav>
    </div>
  </div>

  <!-- Tab Content -->
  <div>
    <!-- Overview Tab -->
    <div data-profile-dashboard-target="content" data-tab="overview" class="space-y-6">
      <!-- Quick Action Cards -->
  <% if current_user == @user %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- Create New Post -->
      <%= link_to new_post_path, class: "bg-white rounded-xl p-6 shadow-md border border-gray-200 hover:shadow-lg hover:border-green-300 transition-all duration-300 group" do %>
        <div class="flex items-center space-x-4">
          <div class="bg-green-100 p-3 rounded-lg group-hover:bg-green-200 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 group-hover:text-green-800">Create Post</h3>
            <p class="text-sm text-gray-600">Share your thoughts</p>
          </div>
        </div>
      <% end %>

      <!-- View Notifications -->
      <%= link_to notifications_path, class: "bg-white rounded-xl p-6 shadow-md border border-gray-200 hover:shadow-lg hover:border-green-300 transition-all duration-300 group" do %>
        <div class="flex items-center space-x-4">
          <div class="bg-blue-100 p-3 rounded-lg group-hover:bg-blue-200 transition-colors relative">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
            <% unread_count = current_user.notifications&.unread&.count || 0 %>
            <% if unread_count > 0 %>
              <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs w-6 h-6 rounded-full flex items-center justify-center font-bold"><%= unread_count %></span>
            <% end %>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 group-hover:text-green-800">Notifications</h3>
            <p class="text-sm text-gray-600"><%= unread_count > 0 ? "#{unread_count} unread" : "All caught up!" %></p>
          </div>
        </div>
      <% end %>

      <!-- View My Posts -->
      <%= link_to posts_path(user: @user), class: "bg-white rounded-xl p-6 shadow-md border border-gray-200 hover:shadow-lg hover:border-green-300 transition-all duration-300 group" do %>
        <div class="flex items-center space-x-4">
          <div class="bg-purple-100 p-3 rounded-lg group-hover:bg-purple-200 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 group-hover:text-green-800">My Posts</h3>
            <p class="text-sm text-gray-600"><%= @user.posts.count %> posts</p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Profile Information & Statistics -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Profile Information -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        Profile Information
      </h2>
      
      <div class="space-y-4">
        <div class="flex items-center space-x-3">
          <span class="text-2xl">üë§</span>
          <div>
            <p class="text-sm text-gray-600">Full Name</p>
            <p class="font-semibold text-gray-900"><%= @user.name.presence || "Not provided" %></p>
          </div>
        </div>
        
        <div class="flex items-center space-x-3">
          <span class="text-2xl">@</span>
          <div>
            <p class="text-sm text-gray-600">Username</p>
            <p class="font-semibold text-gray-900">@<%= @user.username %></p>
          </div>
        </div>
        
        <div class="flex items-center space-x-3">
          <span class="text-2xl">üìß</span>
          <div>
            <p class="text-sm text-gray-600">Email</p>
            <p class="font-semibold text-gray-900"><%= @user.email %></p>
          </div>
        </div>
        
        <% if @user.location.present? %>
          <div class="flex items-center space-x-3">
            <span class="text-2xl">üìç</span>
            <div>
              <p class="text-sm text-gray-600">Location</p>
              <p class="font-semibold text-gray-900"><%= @user.location %></p>
            </div>
          </div>
        <% end %>
        
        <div class="flex items-center space-x-3">
          <span class="text-2xl">üìÖ</span>
          <div>
            <p class="text-sm text-gray-600">Member Since</p>
            <p class="font-semibold text-gray-900"><%= @user.created_at.strftime("%B %d, %Y") %></p>
          </div>
        </div>
      </div>
      
      <% if @user.bio.present? %>
        <div class="mt-6 p-4 bg-green-50 rounded-lg border-l-4 border-green-400">
          <p class="text-sm text-gray-600 mb-1">Bio</p>
          <p class="text-gray-800 italic"><%= @user.bio %></p>
        </div>
      <% end %>
    </div>

    <!-- Statistics -->
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        Activity Statistics
      </h2>
      
      <div class="grid grid-cols-2 gap-4">
        <div class="text-center p-4 bg-blue-50 rounded-lg">
          <div class="text-3xl font-bold text-blue-600"><%= @user.posts.count %></div>
          <div class="text-sm text-blue-800 font-medium">Posts Created</div>
        </div>
        
        <div class="text-center p-4 bg-green-50 rounded-lg">
          <div class="text-3xl font-bold text-green-600"><%= @user.comments.count rescue 0 %></div>
          <div class="text-sm text-green-800 font-medium">Comments Made</div>
        </div>
        
        <div class="text-center p-4 bg-purple-50 rounded-lg">
          <div class="text-3xl font-bold text-purple-600"><%= ((Time.current - @user.created_at) / 1.day).to_i %></div>
          <div class="text-sm text-purple-800 font-medium">Days Active</div>
        </div>
        
        <div class="text-center p-4 bg-orange-50 rounded-lg">
          <div class="text-3xl font-bold text-orange-600"><%= @user.created_at.strftime("%b '%y") %></div>
          <div class="text-sm text-orange-800 font-medium">Joined</div>
        </div>
      </div>
      
      <div class="mt-6 p-4 bg-gray-50 rounded-lg">
        <h3 class="font-semibold text-gray-800 mb-2">Account Status</h3>
        <div class="flex items-center space-x-2">
          <span class="w-3 h-3 bg-green-500 rounded-full"></span>
          <span class="text-sm text-gray-600">Active Member</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Social Links -->
  <% if @user.website.present? || @user.twitter.present? || @user.linkedin.present? || @user.facebook.present? %>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
        </svg>
        Social Links
      </h2>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <% if @user.website.present? %>
          <%= link_to @user.website, target: "_blank", class: "flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors" do %>
            <span class="text-2xl mr-3">üåç</span>
            <div>
              <p class="font-medium text-gray-900">Website</p>
              <p class="text-xs text-gray-600 truncate"><%= @user.website %></p>
            </div>
          <% end %>
        <% end %>
        
        <% if @user.twitter.present? %>
          <%= link_to @user.twitter, target: "_blank", class: "flex items-center p-3 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors" do %>
            <span class="text-2xl mr-3">üê¶</span>
            <div>
              <p class="font-medium text-gray-900">Twitter</p>
              <p class="text-xs text-gray-600">@<%= @user.twitter.split('/').last %></p>
            </div>
          <% end %>
        <% end %>
        
        <% if @user.linkedin.present? %>
          <%= link_to @user.linkedin, target: "_blank", class: "flex items-center p-3 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors" do %>
            <span class="text-2xl mr-3">üíº</span>
            <div>
              <p class="font-medium text-gray-900">LinkedIn</p>
              <p class="text-xs text-gray-600">View Profile</p>
            </div>
          <% end %>
        <% end %>
        
        <% if @user.facebook.present? %>
          <%= link_to @user.facebook, target: "_blank", class: "flex items-center p-3 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors" do %>
            <span class="text-2xl mr-3">üìò</span>
            <div>
              <p class="font-medium text-gray-900">Facebook</p>
              <p class="text-xs text-gray-600"><%= @user.facebook.split('/').last %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Recent Posts Preview -->
  <% recent_posts = @user.posts.limit(3).order(created_at: :desc) %>
  <% if recent_posts.any? %>
    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-bold text-gray-900 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          Recent Posts
        </h2>
        <%= link_to posts_path(user: @user), class: "text-green-600 hover:text-green-800 font-medium" do %>
          View All ‚Üí
        <% end %>
      </div>
      
      <div class="space-y-3">
        <% recent_posts.each do |post| %>
          <div class="p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors relative cursor-pointer group">
            <% if user_signed_in? %>
              <%= link_to post, class: "absolute inset-0 z-10 rounded-lg" do %>
                <span class="sr-only">View <%= post.title %></span>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path, class: "absolute inset-0 z-10 rounded-lg" do %>
                <span class="sr-only">Sign in to view <%= post.title %></span>
              <% end %>
            <% end %>
            
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h4 class="font-semibold text-gray-900 group-hover:text-green-600 transition-colors">
                  <%= truncate(post.title, length: 50) %>
                  <% unless user_signed_in? %>
                    <span class="block text-xs text-green-600 font-normal mt-1">üîí Sign in to read this post</span>
                  <% end %>
                </h4>
                <p class="text-sm text-gray-600 mt-1 group-hover:text-gray-800 transition-colors"><%= truncate(post.body, length: 100) %></p>
                <div class="flex items-center space-x-4 mt-2 text-xs text-gray-500 group-hover:text-gray-600 transition-colors">
                  <span><%= post.created_at.strftime("%b %d, %Y") %></span>
                  <span><%= post.comments.count %> comments</span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
    </div>
    <!-- End Overview Tab -->

    <!-- Activity Tab -->
    <div data-profile-dashboard-target="content" data-tab="activity" class="hidden">
      <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
        <div class="mb-6">
          <h2 class="text-2xl font-bold text-gray-900 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Recent Activity Timeline
          </h2>
          <p class="text-gray-600 mt-2">A chronological timeline of recent posts and comments by <%= @user == current_user ? 'you' : @user.username %>.</p>
        </div>
        
        <%= render "shared/recent_activity" %>
      </div>
    </div>
    <!-- End Activity Tab -->

    <!-- Settings Tab (only for current user) -->
    <% if @user == current_user %>
      <div data-profile-dashboard-target="content" data-tab="settings" class="hidden">
        <div class="space-y-6">
          <!-- Account Settings -->
          <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6">
            <div class="mb-6">
              <h2 class="text-2xl font-bold text-gray-900 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Account Settings
              </h2>
              <p class="text-gray-600 mt-2">Manage your account preferences and profile information.</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <!-- Profile Settings -->
              <div class="space-y-4">
                <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2">Profile Settings</h3>
                
                <%= link_to edit_user_registration_path, class: "flex items-center p-4 bg-green-50 rounded-lg border border-green-200 hover:bg-green-100 transition-colors duration-200 group" do %>
                  <div class="bg-green-100 p-2 rounded-lg mr-4 group-hover:bg-green-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-900">Edit Profile</h4>
                    <p class="text-sm text-gray-600">Update your profile information</p>
                  </div>
                <% end %>
                
                <%= link_to notifications_path, class: "flex items-center p-4 bg-blue-50 rounded-lg border border-blue-200 hover:bg-blue-100 transition-colors duration-200 group" do %>
                  <div class="bg-blue-100 p-2 rounded-lg mr-4 group-hover:bg-blue-200 relative">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                    </svg>
                    <% unread_count = current_user.notifications&.unread&.count || 0 %>
                    <% if unread_count > 0 %>
                      <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center font-bold"><%= unread_count %></span>
                    <% end %>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-900">Notification Settings</h4>
                    <p class="text-sm text-gray-600"><%= unread_count > 0 ? "#{unread_count} unread notifications" : "All caught up!" %></p>
                  </div>
                <% end %>
              </div>
              
              <!-- Admin Settings (if applicable) -->
              <% if current_user.admin? %>
                <div class="space-y-4">
                  <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2">Admin Tools</h3>
                  
                  <%= link_to admin_users_path, class: "flex items-center p-4 bg-purple-50 rounded-lg border border-purple-200 hover:bg-purple-100 transition-colors duration-200 group" do %>
                    <div class="bg-purple-100 p-2 rounded-lg mr-4 group-hover:bg-purple-200">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-medium text-gray-900">Admin Panel</h4>
                      <p class="text-sm text-gray-600">Manage users and forum settings</p>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="space-y-4">
                  <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2">Content Management</h3>
                  
                  <%= link_to posts_path(user: current_user), class: "flex items-center p-4 bg-gray-50 rounded-lg border border-gray-200 hover:bg-gray-100 transition-colors duration-200 group" do %>
                    <div class="bg-gray-100 p-2 rounded-lg mr-4 group-hover:bg-gray-200">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-medium text-gray-900">Manage Posts</h4>
                      <p class="text-sm text-gray-600">View and edit your posts</p>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <!-- Danger Zone -->
            <div class="mt-8 pt-6 border-t border-red-200">
              <h3 class="text-lg font-semibold text-red-900 mb-4">Danger Zone</h3>
              <div class="bg-red-50 rounded-lg border border-red-200 p-4">
                <div class="flex items-start space-x-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 14.5c-.77.833.192 2.5 1.732 2.5z" />
                  </svg>
                  <div class="flex-1">
                    <h4 class="font-medium text-red-900">Sign Out</h4>
                    <p class="text-sm text-red-700 mt-1">Sign out of your current session</p>
                    <%= button_to destroy_user_session_path, method: :delete, class: "mt-3 inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 transition-colors", data: { confirm: "Are you sure you want to sign out?" } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                      </svg>
                      Sign Out
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <!-- End Settings Tab -->
  </div>
</div>
