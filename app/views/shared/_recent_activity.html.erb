<!-- Recent Activity Timeline -->
<div class="space-y-4">
  <% activities = @user.recent_activity(15) %>
  <% if activities.any? %>
    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-8 top-6 bottom-0 w-0.5 bg-gray-200"></div>
      
      <% activities.each_with_index do |activity, index| %>
        <div class="relative flex items-start space-x-4 <%= 'pb-8' unless index == activities.length - 1 %>">
          <!-- Timeline dot -->
          <div class="flex-shrink-0">
            <% if activity[:type] == 'post' %>
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
            <% else %>
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
            <% end %>
          </div>
          
          <!-- Activity content -->
          <div class="flex-1 min-w-0">
            <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm hover:shadow-md transition-shadow duration-200">
              <% if activity[:type] == 'post' %>
                <% post = activity[:object] %>
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center space-x-2 mb-2">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Created Post
                      </span>
                      <span class="text-xs text-gray-500"><%= time_ago_in_words(post.created_at) %> ago</span>
                    </div>
                    <%= link_to post, class: "block group" do %>
                      <h4 class="font-semibold text-gray-900 group-hover:text-green-600 transition-colors">
                        <%= truncate(post.title, length: 60) %>
                      </h4>
                      <p class="text-sm text-gray-600 mt-1 line-clamp-2">
                        <%= truncate(strip_tags(post.body), length: 120) %>
                      </p>
                    <% end %>
                    <div class="flex items-center space-x-4 mt-3 text-xs text-gray-500">
                      <span class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                        </svg>
                        <%= post.comments.count %> comments
                      </span>
                      <% if post.category.present? %>
                        <span class="flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                          </svg>
                          <%= post.category.name %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
                
              <% else %>
                <% comment = activity[:object] %>
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center space-x-2 mb-2">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                        </svg>
                        Commented
                      </span>
                      <span class="text-xs text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</span>
                    </div>
                    <div class="mb-2">
                      <p class="text-sm text-gray-800">
                        <%= truncate(strip_tags(comment.content), length: 150) %>
                      </p>
                    </div>
                    <div class="text-xs text-gray-500">
                      on post: 
                      <%= link_to comment.post, class: "text-green-600 hover:text-green-800 font-medium" do %>
                        "<%= truncate(comment.post.title, length: 40) %>"
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty state -->
    <div class="text-center py-12">
      <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Activity Yet</h3>
      <p class="text-gray-500 mb-4">Start by creating your first post or commenting on others' posts.</p>
      <% if @user == current_user %>
        <%= link_to new_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create Your First Post
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>